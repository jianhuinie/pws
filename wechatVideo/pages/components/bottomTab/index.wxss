.bottom-tab {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    background-color: #fff;
    padding-top: 10rpx;
}

.bottom-tab .tab-item {
    font-size: 24rpx;
    color: #6D6D6E;
    line-height: 24rpx;
    display: inline-block;
    width: 50%;
    background-color: #fff;
    text-align: center;
}

.bottom-tab .tab-item text {
    display: block;
}

.bottom-tab .tab-item.active {
    color: #ff6c00;
}

.bottom-tab .tab-item image {
    width: 23px;
    height: 23px;
    margin-bottom: 6rpx;
}