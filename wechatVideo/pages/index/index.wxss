page .index-page .tab-nav {
    display: flex;
    padding-left: 30rpx;
    font-size: 32rpx;
    color: #2d2d2e;
    margin-bottom: 10rpx;
}
page .index-page .tab-nav .tab-item {
    flex-grow: 1;
}
page .index-page .tab-nav .tab-item.active {
    color: #ff6c00;
}
page .index-page .videos-container .video-item {
    width: 92%;
    text-align: center;
    margin: 0 auto;
    padding-top: 20rpx;
    position: relative;
    border-top: 2rpx solid #ededee;
    margin-bottom: 32rpx;
}
page .index-page .videos-container .video-item .video-name {
	color: #3d3d3e;
    font-size: 28rpx;
    font-weight: bold;
    text-align: left;
    margin-bottom: 10px
}
page .index-page .videos-container .video-item image {
    width: 100%;
    height: 372rpx;
}
page .index-page .videos-container .video-item image.icon-play {
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    bottom: 36%;
    left: 42%;
}
page .index-page .videos-container .video-item .duration-label {
    position: absolute;
    font-size: 24rpx;
    right: 3%;
    bottom: 12%;
    display: inline-block;
    width: 100rpx;
    border-radius: 16rpx;
    height: 32rpx;
    line-height: 32rpx;
    text-align: center;
    background: #000;
    opacity: .5;
    color: #fff;
}
page .index-page .videos-container .video-item .hit-total {
	color: #9D9D9E;
    font-size: 24rpx;
    text-align: left;
}