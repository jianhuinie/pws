<!--index.wxml-->
<view class="index-page">
    <view class="tab-nav">
        <view 
            wx:for="{{navTabs}}" 
            wx:key="{{item.id}}"
            data-id="{{item.id}}"
            class="{{'tab-item' + (item.id === activeId ? ' active' : '')}}"
            bindtap="switchTab"
        >
            {{item.name}}
        </view>
    </view>
    <view class="videos-container">
        <view 
            class="video-item" wx:for="{{videoList}}" 
            wx:key="{{item.id}}" data-item="{{item}}"
            bindtap="jumpDetail"
        >
            <view class="video-name">{{item.title}}</view>
            <image src="{{'https://aimg.tangdou.com' + item.pic}}"></image>
            <image class="icon-play" src="/pages/resources/player.png"></image>
            <view class="duration-label">
                {{item.duration}}
            </view>
            <view class="hit-total">
                {{item.hits_total}}人气
            </view>
        </view>
    </view>
</view>
