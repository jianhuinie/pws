.teacher-item {
    display: inline-block;

    img {
        width: 36px;
        height: 36px;
        border-radius: 50%;
    }

    .img-wrapper {
        z-index: 1;
        width: 60px;

        .child-img {
            position: absolute;
            left: 15px;
            top: 0px;
            z-index: -1;
        }
    }

    & > div {
        display: inline-block;
        font-size: 13px;
        margin-left: 4px;
        position: relative;
        top: 3px;
        color: #3D3D3E;
        vertical-align: top;

        .text {
            font-size: 11px;
            color: #9D9D9E;
        }
    }

    margin-right: 15px;

    &:last-child {
        margin: 0;
    }
}