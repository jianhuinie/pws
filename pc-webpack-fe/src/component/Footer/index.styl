.website-footer {
    font-family: PingHei;
    background-color: #fff;
    border-top: 1px solid #ededee;
    // line-height: 18px;
    padding: 32px 0;
    margin-top: 30px;

    .favor-links {
        clear: both;
        border-bottom: 1px solid #ededee;
        padding-bottom: 28px;
        width: 1194px;
        margin: 0 auto;
        & > div {
            width: 100%;
            height: 165px;
            margin: 0 auto;
        }
    }

    .tel {
        text-align: center;
        margin-left: 78px;
        margin-right: 80px;
        margin-top: 13px;
        float: right;

        .icon-phone2 {
            font-size: 52px;
            margin-right: 4px;
            vertical-align: bottom;
            color: #ff6c00;
            display: block;
        }

        float: right;

        h4 {
            font-size: 30px;
            // line-height: 32px;
            color: #000;
            margin-top: 10px;
            margin-bottom: 2px;
        }
    }

    .list {
        float: right;
        border-right: 1px solid #ededee;
        padding-right: 80px;
        padding-left: 80px;
        height: 165px;
        position: relative;

        span {
            color: #6D6D6E;
        }

        .logo {
            position: relative;
            width: 188px;
            height: 100px;
            transform: translateY(-50%);
            top: 50%;
        }

        h4 {
            // font-family: MicrosoftYaHeiUI-Bold;
            font-size: 18px;
            color: #2D2D2E;
            letter-spacing: 0;
            line-height: 22px;
            margin-top: 0;
            margin-bottom: 16px;
            font-weight: 500;
        }

        ul {
            text-align: center;
            margin-bottom: 16px;
            margin: 0;
            padding: 0;
            font-size: 16px;

            li {
                list-style-type: none;
                text-align: center;
                line-height: 34px;
                a, span {
                    // font-family: MicrosoftYaHeiUI;
                    color: #6D6D6E;
                    text-decoration: none;
                    &:hover {
                        // font-family: MicrosoftYaHeiUI;
                        font-size: 16px;
                        color: #2d2d2d;
                    }
                }
            }
        }

        .show-wechat {
            cursor: pointer;
        }

        .show-wechat:hover {
            li {
                color: #2d2d2d;
            }
        }

        .show-wechat:hover + .wechat {
            display: block !important;
        }

        .wechat {
            border-radius: 8px;
            display: none;
            position: absolute;
            top: 4%;
            z-index: 8;
            padding: 14px 4px;
            background: #fff;
            border: 1px solid #ebebeb;
            -webkit-box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.08);
            box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.08);
            text-align: center;
            padding: 0;
            width: 96px;
            height: 96px;
            margin-left: 76px;

            .wechatImage {
                border-radius: 8px;
                max-width: 100%;
            }
        }

        .wechat::before {
            content: '';
            display: block;
            position: absolute;
            top: 47%;
            margin: 0px 0 0 -4px;
            -webkit-transform: rotate(45deg);
            transform: rotate(45deg);
            border-bottom: 1px solid #ebebeb;
            border-left: 1px solid #ebebeb;
            height: 4px;
            width: 4px;
            background: #fff;
        }
    }

    .friend-links {
        text-align: center;
        margin-top: 23px;
        font-size: 13px;
        color: #9D9D9E;

        li {
            border-right: 1px solid #ddddde;
            display: inline-block;
        }

        a {
            margin-left: 8px;
            margin-right: 8px;
            color: #9d9d9d;
            text-decoration: none;
        }

        ul {
            padding: 0;
            font-size: 13px;
            color: #9D9D9E;
            letter-spacing: 0;
            line-height: 14px;
            :last-child {
                border-right: 0px solid #ddddde!important;
            }
        }
    }

    .copyright {
        color: #9d9d9e;
        font-size: 12px;
        text-align: center;
        margin-top: 12px;
        a {
            color:#6d6d6e;
        }
    }
}