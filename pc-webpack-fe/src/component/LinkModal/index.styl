.link-clazz-modal {
    .ant-modal-content {
        margin: 0 auto;
        width: 500px;
        height: 585px;
        text-align: center;
        border-radius: 0;
        overflow: scroll;

        .ant-modal-body {
            padding: 0;
            margin: 0;

            .link-modal-header {
                background: #F5F5F5;
                border-bottom: 1px solid #CCCCCC;
                height: 50px;
                padding: 17px 20px;
                overflow: hidden;

                .modal-title {
                    font-size: 16px;
                    color: #6D6D6E;
                    line-height: 16px;
                }

                .close-modal {
                    cursor: pointer;
                }
            }

            .content {
                padding: 30px 20px;

                .no-discount {
                    height: 72px;

                    .circle {
                        width: 20px;
                        height: 20px;
                        border-radius: 100%;
                        margin-right: 15px;
                        border: 1px solid #6D6D6E;
                    }

                    .img {
                        width: 20px;
                        height: 20px;
                        margin-right: 15px;
                    }

                    .link-course-info {
                        text-align: left;

                        .course-title {
                            display: block;
                            font-size: 16px;
                            color: #3d3d3e;
                            line-height: 16px;
                            margin-bottom: 10px;
                            text-align: left;
                        }

                        .mony {
                            display: inline-block;
                            font-size: 14px;
                            color: #FF3C00;
                        }

                        .price {
                            display: inline-block;
                            font-size: 20px;
                            color: #FF3C00;
                            line-height: 14px;
                        }
                    }
                }

                .discount {
                    .course-title {
                        width: 460px;
                        height: 42px;
                        margin-bottom: 25px;
                        background: #F3F4F5;

                        .img {
                            width: 330px;
                            height: 40px;
                            position: relative;
                            top: 10px;
                        }

                        .price {
                            position: relative;
                            bottom: 20px;
                            font-size: 16px;
                            color: #FFFFFF;
                            line-height: 16px;
                        }
                    }

                    .course-main {
                        overflow: hidden;

                        .circle {
                            width: 20px;
                            height: 20px;
                            border-radius: 100%;
                            margin-right: 15px;
                            border: 1px solid #6D6D6E;
                        }

                        .img {
                            width: 20px;
                            height: 20px;
                            margin-right: 15px;
                        }

                        .more-link-course-info {
                            width: 405px;
                            position: relative;
                            bottom: 15px;
                        }
                    }

                    .link-button {
                        cursor: pointer;
                        width: 462px;
                        height: 53px;
                        margin-top: 15px;
                        font-size: 24px;
                        color: #FFFFFF;
                        line-height: 16px;
                        background: linear-gradient(to right, #FF3800, #FF6C00);

                        & > span {
                            display: inline-block;
                            vertical-align: middle;
                        }

                        .settlement {
                            font-size: 17px;
                            color: #FFFFFF;
                            line-height: 16px;
                            margin-right: 10px;
                        }

                        .mony {
                            font-size: 13px;
                            color: #FFFFFF;
                            line-height: 10px;
                        }

                        .price {
                            font-size: 24px;
                            color: #FFFFFF;
                            line-height: 16px;
                        }

                        .kong {
                            height: 100%;
                            width: 0;
                        }
                    }
                }
            }

            .modal-toast {
                text-align: center;
            }
        }
    }
}