
.bottom-info {
    overflow:hideen;
    .prices {
        margin-top: 60px;
        margin-bottom: 12px;
        font-size: 30px;
        color: #F14A41;
        .free {
            color: #1db954;
            font-size: 20px;
        }
        .discount-price {
            margin-left: 10px;
            font-size: 20px;
            color: #FF3C00;
            line-height: 16px;
        }
        .origin-price {
            font-size: 20px;
            color: #9D9D9E;
            text-decoration: line-through;
            margin-left: 10px;
        }
    }

    .bottom-text {
        margin-top: 15px;
    }
    .class-info-btn {
        display: inline-block;
        border-radius: 2px;
        font-size: 16px;
        color: #ff6c00;
        border: 1px solid #ff6c00;
        width: 150px;
        height: 44px;
        line-height: 44px;
        text-align: center;
        cursor: pointer;
        margin-left: 20px;
    }
    .action-btn-detail {
        display: inline-block;
        background-image: linear-gradient(-90deg,  #ff6c00 0%, #FF3800 100%);
        border-radius: 2px;
        font-size: 16px;
        color: #fff;
        width: 150px;
        height: 44px;
        line-height: 44px;
        text-align: center;
        cursor: pointer;
        &.full-clazz {
            background: #cdcdce;
        }
    }
    .enroll-count {
        font-size: 12px;
        color: #9D9D9E;
    }
    .count-down-wrape {
        display: inline-block;
        position: relative;
        margin-left: 10px;
        .time-limit-discount {
            font-size: 12px;
            color: #6D6D6E;
            line-height: 12px;
            .recovery-price {
                padding-left: 5px;
            } 
            .limit-count {
                font-size: 12px;
                color: #ff3c00;
                letter-spacing: 0;
                line-height: 12px;
            }
        }
    }
    .get-coupon {
        cursor: pointer;
        display: inline-block;
        font-size: 12px;
        color: #FF3C00;
        line-height: 12px;
        padding-top: 33px;
        .coupon-icon { 
            margin-right: 5px;
        }
    }
    
}
