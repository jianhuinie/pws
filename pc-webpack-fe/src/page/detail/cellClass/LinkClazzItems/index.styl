.link-clazz {
    background: #fff;
    min-height: 300px;

    .link-clazz-lists {
        position: relative;
        padding: 20px 0 20px 19px;

        & > div {
            display: inline-block;
        }

        .lists-out-wrap {
            width: 906px;
            height: 150px;
            padding: 20px;
            overflow-x: auto;
            overflow-Y: hidden;

            .lists-inner-wrap {
                .item-wrap {
                    display: inline-block;

                    .add-chart {
                        display: inline-block;
                        font-size: 30px;
                        color: #9d9d9e;
                        position: relative;
                        padding: 0 15px;
                        bottom: 35px;
                    }
                }
            }
        }
    }

    .link-discount-info {
        display: inline-block;
        margin-left: 50px;
        text-align: center;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);

        .price {
            margin-bottom: 15px;

            .now-price {
                margin-right: 5px;
                font-size: 12px;
                color: #FF3C00;
                line-height: 14px;

                .mony {
                    font-size: 22px;
                    color: #FF3C00;
                    line-height: 20px;
                }
            }

            .discount-price {
                border: 1px solid #FF6C00;
                border-radius: 2px;
                color: #FF6C00;
                font-size: 12px;
                padding: 2px;
            }
        }

        .action-button {
            cursor: pointer;
            width: 195px;
            height: 40px;
            padding: 11px 65px;
            color: #FFFFFF;
            margin-bottom: 10px;
            background: linear-gradient(to right, #FF3800, #FF6C00);

            &.full-clazz {
                background: #cdcdce;
            }
        }

        .time-limit-discount {
            font-size: 12px;
            color: #6D6D6E;
            line-height: 12px;

            .recovery-price {
                padding-left: 5px;
            }

            .limit-count {
                font-size: 12px;
                color: #ff3c00;
                letter-spacing: 0;
                line-height: 12px;
            }
        }
    }
}
