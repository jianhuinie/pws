.channel-nav {
    background: #FBFBFB;
    height: 52px;
    padding: 14px 0;
    position: relative;
    box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.10);
    .wrapper {
        width: 1220px;
        margin: 0 auto;
    }
    img {
        width: 120px;
        height: 38px;
        margin-right: 65px;
        position: relative;
        bottom: 5px;
    }
    .nav-item {
        position: relative;
        display inline-block;
        margin: 0 18px;
        &:hover {
            a {
                color: #ff6c00;
            }
            border-bottom: 3px solid #ff6c00;
            & > .sub-menu {
                display: block;
                a {
                    color: #3d3d3d;
                }
            }
        }
        a {
            text-decoration: none;
        }
        & > a {
            display: inline-block;
            color: #3d3d3d;
            font-size: 18px;
            font-weight: bold;
            padding-bottom: 8px;
            transition: none;
        }
        .sub-menu {
            display: none;
            background-color: #fff;
            border: 1px solid #DDDDDE;
            position: absolute;
            top: 38px;
            left: 50%;
            z-index: 999;
            min-width: 100px;
            margin-left: -50px;
            text-align: center;
            a {
                display: block;
                color: #6D6D6E;
                font-size: 14px;
                font-weight: 400;
                line-height: 43px;
                border-bottom: 1px solid #DDDDDE;
                padding: 0;
                margin-left: 18px;
                margin-right: 18px;
                &:hover {
                    color: #ff6c00;
                }
                &:last-child {
                    border: none;
                }
            }
        }
    }
}