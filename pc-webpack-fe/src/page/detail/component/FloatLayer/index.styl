.float-layer-clazz {
    position: fixed;
    top: 0;
    left: 0;
    box-shadow: 0 -2px 8px 0 rgba(0, 0, 0, 0.08);  
    height: 60px;
    width: 100%;
    background-color: #fff;
    z-index: 2;
    .wrapper {
        width: 1280px;
        margin: 0 auto;
    }
    .layer-tabs {
        display: inline-block;
        span {
            display: inline-block;
            position: relative;
            width: 170px;
            height: 60px;
            line-height: 60px;
            font-size: 16px;
            color: #6D6D6E; 
            text-align: center;
            cursor: pointer;
            &:hover, &.active {
                color: #ff6c00;
            }
        }
        .label-audition {
            position: absolute;
            background: #FF6C00;
            border-radius: 1px;
            width: 30px;
            height: 15px;
            line-height: 15px;
            color: #fff;
            font-size: 12px;
            top: 23px;
            right: 13px;
            text-align: center;
            &:before {
                border: 4px solid transparent;
                content: ' ';
                position: absolute;
                border-right-color: #ff6c00;
                left: -8px;
                top: 3px;
            }
        }
    }
    .btn-info {
        display: inline-block;
        float: right;
        margin-top: 13px;
        margin-right: 70px;
        & > div {
            display: inline-block;
        }
        .prices {
            font-size: 20px;
            color: #FF3C00;
             .free {
                color: #1db954;
                font-size: 20px;
            }
            .discount-price {
                margin-left: 10px;
                font-size: 20px;
                color: #FF3C00;
                line-height: 16px;
            }
            .origin-price {
                font-size: 14px;
                color: #9D9D9E;
                text-decoration: line-through;
                margin-left: 10px;
            }
        }
        .action-btn {
            display: inline-block;
            background-image: linear-gradient(-90deg,  #FF6C00 0%, #FF3800 100%);
            border-radius: 2px;
            font-size: 14px;
            color: #FFFFFF;
            width: 120px;
            height: 34px;
            line-height: 34px;
            text-align: center;
            cursor: pointer;
            margin-left: 20px;
            &.full-clazz {
                background: #cdcdce;
            }
        }
        .enroll-count {
            font-size: 12px;
            color: #9D9D9E;
            position: relative;
            top: 10px;
            margin-left: 20px;
        }
    }
}