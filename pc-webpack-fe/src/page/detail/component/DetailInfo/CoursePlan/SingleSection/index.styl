.single-section {
    padding: 20px 0;
    border-bottom: 1px solid #ededee;
    cursor: pointer;
    &.hide {
        display: none;
    }
    & > div {
        display: inline-block;
        font-size: 14px;
        color: #9D9D9E;
        vertical-align: middle;
    }
    .section-index {
        width: 22px;
        height: 22px;
        line-height: 22px;
        border-radius: 10px;
        background: #EDEDEE;
        margin-right: 20px;
        font-size: 14px;
        color: #2D2D2E;
        text-align: center;
    }
    .section-name {
        font-size: 16px;
        color: #2D2D2E;
    }
    .status-name {
        font-size: 14px;
        float: right;
        position: relative;
        top: 12px;
        &.audition {
            color: #ff6c00;
        }
    }
}