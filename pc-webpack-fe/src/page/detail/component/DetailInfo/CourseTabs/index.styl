.course-tabs {
    span {
        display: inline-block;
        width: 212px;
        height: 60px;
        line-height: 60px;
        font-size: 16px;
        color: #6D6D6E; 
        text-align: center;
        background: #f8f8f8;
        cursor: pointer;
        position: relative;
        &:hover, &.active {
            background: #fff;
            color: #0C0C0C;
        }
    }
     .label-audition {
        position: absolute;
        background: #FF6C00;
        border-radius: 1px;
        width: 30px;
        height: 15px;
        line-height: 15px;
        color: #fff;
        font-size: 12px;
        top: 23px;
        right: 35px;
        text-align: center;
        &:before {
            border: 4px solid transparent;
            content: ' ';
            position: absolute;
            border-right-color: #ff6c00;
            left: -8px;
            top: 3px;
        }
    }
}