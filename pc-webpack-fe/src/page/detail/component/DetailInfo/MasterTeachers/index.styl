#master-teachers {
    .master-teacher {
        margin-top: 30px;
    }
    .count {
        display: inline;
        font-size: 12px;
        color: #9D9D9E;
        margin-left: 8px;
    }
    img {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        vertical-align: top;
    }
    .teacher-detail {
        width: 708px;
        vertical-align: top;
        display: inline-block;
        margin-left: 20px;
        .name {
            font-size: 16px;
            color: #FF6C00;
            font-weight: bold;
        }
        .intro {
            font-size: 14px;
            color: #3D3D3E;
        }
    }
}