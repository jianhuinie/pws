.rich-editor {
    width: 100%;
    margin-top: 17px;
    position: relative;
    .editor-panel {
        height: 490px;
        float: left;
        margin-right: 28px;
        vertical-align: top;
        .panel-item {
            width: 90px;
            line-height: 34px;
            text-align: center;
            font-size: 14px;
            border: 1px solid transparent;
            cursor: pointer;
            background-color: #f3f3f4;
            color: #3d3d3e;
            margin-bottom: 8px;
            &:hover {
                background-color: #ff6c00;
                color: #fff;
            }
        }
    }
    .editor-list {
        border: 1px solid #e4e4e4;
        padding: 20px;
        height: 490px;
        width: 665px;
        box-sizing: border-box;
        position: relative;
        overflow: scroll;
        display: inline-block;
        background-color: #f4f4f4;
        .editor-item {
            background: #fff; 
            border: 1px solid transparent;
            position: relative;
            cursor: pointer;
            &:hover {
                border: 1px solid #ff6c00;
            }
            + .editor-item {
                margin-top: 10px;
            }
            .icon-close {
                font-size: 24px;
                position: absolute;
                right: 3%;
                top: 8px;
                color: #ccc;
                cursor: pointer;
                z-index: 1;
            }
            .icon-item {
                font-size: 24px;
                position: absolute;
                top: 10px;
                left: 10px;
                color: #ccc;
                z-index: 1; 
            }
            .media-uploader,
            .media-uploader-trigger {
                margin-left: 45px;
                width: 242px;
                height: 138px;
            }
            .photo-item {
                img {
                    width: 242px;
                    height: 138px;
                }
            }
            .media-uploader {
                display: block;
                border: 1px solid #ccc;
                cursor: pointer;
            }
            .media-uploader-trigger {
                display: table-cell;
                vertical-align: middle;
                font-size: 16px;
                color: #999;
                text-align: center;
            }
            .uploading-mask {
                background-color: #000;
                width: 100%;
                height: 100%;
                opacity: .5;
                position: absolute;
                top: 0;
                left: 0;
                z-index: 9;
                color: #fff;
                text-align: center;
                padding-top: 100px;
                &.hide {
                    display: none;
                }
            }
        }
        .text-info {
            color: #9d9d9e;
            margin-top: 10px;
            font-size: 14px;
            &.hide {
                display: none;
            }
        }
    }
    .outer-uploading-mask {
        background-color: #000;
        opacity: .5;
        position: absolute;
        top: 0;
        right: 23px;
        height: 490px;
        width: 665px;
        z-index: 9;
        color: #fff;
        text-align: center;
        line-height: 490px;
        &.hide {
            display: none;
        }
    }
    .preview-course-detail {
        background-color: #f4f4f4;
        width: 665px;
        text-align: right;
        border: 1px solid #e4e4e4;
        position: relative;
        left: 118px;
        bottom: 6px;
        padding: 10px 20px;
        border-top: none;
        font-size: 14px;
        cursor: pointer;
        &.hide {
            display: none;
        }
    }
}