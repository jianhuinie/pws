@import "../../resource/css/main.styl";

body {
    background: #555;
}
#app {
    max-width: rem(414);
    // position: absolute;
    // top: 0;
    // bottom: 0;
    // left: 0;
    // right: 0;
    margin: 0 auto;
}
.hide {
    display: none;
}

.left {
	float: left;
}

.right {
	float: right;
}

.clearfix {
	clear: both;
}

.cursor {
	cursor: pointer;
}

.blue {
	color: #37A4F5;
}

.red {
	color: red;
}

.orange {
	color: #fe943f;
}

input,
textarea,
button {
    outline: none;
    border: none;
    border-width: 0;
    &:focus {
        outline: none;
    }
}

.ws-btn {
    &-default,
    &-red {
        width: 100%;
        height: rem(46);
        text-align: center;
        border-radius: rem(5);
        font-size: rem(18);
    }
    &-default {
        background: #f8f8f8;
        border: 1px solid #dddddd;
        color: #3d3d3e;
    }
    &-red {
        background: #f95d5d;
        color: #fff;
        &:disabled {
            opacity: 0.5;
        }
    }
}

.ellipsis {
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}