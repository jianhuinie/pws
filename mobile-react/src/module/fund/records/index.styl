

@import "module/index.styl";
.withdraw-records { 
    background: #f2f3f4;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    overflow: auto;
    &-list {
        margin: 0;
        padding: 0 0 0 rem(15);
        list-style: none;  
        background: #fff; 
        &-item {
            height: rem(74);
            border-bottom: rem(1) solid #f6f6f6;
            overflow: hidden;
            padding-right: rem(15);
            &-top {
                margin-top: rem(16);
                overflow: hidden;
                display: flex;
                justify-content: space-between;
                .number {
                    font-family: PingFangSC-Semibold;
                    height: rem(18);
                    line-height: rem(18);
                    font-size: rem(15);
                    color: #3D3D3E;
                }
                .time {
                    font-size: rem(12);
                    color: #9D9D9E;
                    letter-spacing: 0;
                    line-height: rem(18);
                }
            }
            &-bottom {
                text-align: right;
                margin-top: rem(10);
                font-size: rem(12);
                color: #F95D5D;
                line-height: rem(12);
                &.success {
                    color: #9D9D9E;
                }
                &.waiting {
                    color: #1DB954;
                }
                &.fail {
                    color: #F95D5D;
                }
            }
        }
    }
    .no-more {
        font-size: rem(14);
        color: #9D9D9E;
        letter-spacing: 0;
        line-height: rem(14);
        text-align: center;
        margin-top: rem(16);
        margin-bottom: rem(10);
    }
}