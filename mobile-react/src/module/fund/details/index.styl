@import "module/index.styl";
.wallet-details {
    background: #f2f3f4;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    &-summary {
        display: flex;
        background: #fff;
        height: rem(72);
        align-items: center;
        padding: 0 rem(15);
        &-left {
            flex: 1;
            .type-text {
                font-family: PingFangSC-Semibold;
                font-size: rem(16);
                color: #3D3D3E;
                letter-spacing: 0;
                line-height: rem(16);
            }
            .detail {
                margin-top: rem(8);
                font-size: rem(15);
                color: #6D6D6E;
                letter-spacing: 0;
                line-height: rem(16);
            }
        }
        &-right {
            width: rem(48);
            height: rem(28);
            border: rem(1) solid #9D9D9E;
            border-radius: rem(3);
            line-height: rem(28);
            text-align: center;
            font-size: rem(14);
            color: #6D6D6E;
        }
    }
    &-container {
        overflow: hidden;
        padding-top: rem(6);
        border-top: rem(1) solid #EBEBEB;
        background: #fff;
        &.empty {
            padding: 0;   
            position: absolute;
            top: rem(72);
            bottom: 0;
            left: 0; 
            right: 0; 
        }
    }
    &-list {
        // -webkit-overflow-scrolling: touch;
        overflow-y: auto;
        background: #fff;
        margin: 0;
        padding: 0;
        list-style: none;
        &-item {
            padding-left: rem(15);
        }
    }
    .no-more {
        font-size: rem(14);
        color: #9D9D9E;
        letter-spacing: 0;
        line-height: rem(14);
        text-align: center;
        margin-top: rem(16);
        margin-bottom: rem(10);
    }
}