.filter-pannel {
    &-btn {
        width: rem(48);
        height: rem(28);
        border: rem(1) solid #9D9D9E;
        border-radius: rem(3);
        line-height: rem(28);
        text-align: center;
        font-size: rem(14);
        color: #6D6D6E;
    }
    .slide-mask-div {
        left: 0;
    }
    .slide-dialog-wrapper .slide-dialog-mask.on .slide-dialog-content {
        position: fixed;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 100%;
        max-width: rem(414);
    }
    .slide-dialog-content {
        
    }
    &-content {
        background: #f2f3f4;
        &-title {
            background: #fff;
            height: rem(48);
            text-align: center;
            font-size: rem(16);
            color: #3D3D3E;
            letter-spacing: 0;
            line-height: rem(48);
            border-bottom: rem(1) solid #EBEBEB;
        }
        &-option {
            background: #fff;
            padding: rem(4) rem(10) rem(26);
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            align-content: flex-start;
            .option-item {
                margin-top: rem(12);
                width: rem(105);
                height: rem(42);
                line-height: rem(42);
                background: #F3F4F5;
                border-radius: rem(5);
                text-align: center;
                font-size: rem(14);
                color: #6D6D6E;
                &.active {
                    background: #F95D5D;
                    color: #fff;
                }
                &.clear {
                    background: #fff;
                }
            }
        }
        &-close {
            background: #fff;
            margin-top: rem(4);
            height: rem(46);
            line-height: rem(46);
            text-align: center;
            font-size: rem(16);
            color: #3D3D3E;
        }
    }
    
}