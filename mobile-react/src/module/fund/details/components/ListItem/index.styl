@import 'resource/css/mixin/common.styl';
.detail-item {
    overflow: hidden;
    border-bottom: rem(1) solid #f6f6f6;
    padding: 0 rem(15) rem(12) 0;
    &-top {
        margin-top: rem(15);
        height: rem(18);
        line-height: rem(18);
        display: flex;
        justify-content: space-between;
        .remark {
            flex: 1;
            display: flex;
            font-size: rem(15);
            color: #3D3D3E;
            overflow: hidden;
            align-items: center;
            &-type {
                vertical-align: middle;
                margin-right: rem(5);
                text-align: center;
                border: rem(1) solid #9D9D9E;
                border-radius: rem(1);
                // height: rem(10);
                padding: rem(2) 0 rem(1);
                align-items: center;
                justify-content: center;
                min-width: rem(24);
                font-size: rem(10);
                line-height: 1;
                color: #000000;
            }
            &-text {
                flex: 1;
                ellipsis();
            }
        }
        .price {
            font-family: PingFangSC-Semibold;
            min-width: rem(80);
            text-align: right;
            font-size: rem(18);
            color: #F95D5D;
            &.positive:before {
                content: "+";
            }
            &.negative {
                &:before {
                    content: "-";
                }
                color: #3D3D3E;

            }
        }
    }
    &-body {
        height: rem(12);
        line-height: rem(12);
        margin-top: rem(12);
        font-size: rem(12);
        color: #9D9D9E;
    }
}