@import './resource/itemBasic.styl';
@import "module/index.styl";
.course-view {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: #fff;
    &-tab {
        display: flex;
        overflow: hidden;
        justify-content: center;
        box-shadow: inset 0 0 0 0 #EDEDEE;
        border-bottom: rem(1) solid #f6f6f6;
        &-item {
            flex: 1;
            font-size: rem(15);
            color: #6D6D6E; 
            .text {
                margin: 0 auto;
                // width: rem(90);
                height: rem(44);
                line-height: rem(44);
                text-align: center;
                &.active {
                    color: #F95D5D;
                    border-bottom: rem(2) solid #F95D5D;
                }
            }
        }    
    }
    &-content {
        position: absolute;
        top: rem(48);
        bottom: 0;
        width: 100%;
        overflow-x: hidden;
        bottom: rem(50);
    }
}