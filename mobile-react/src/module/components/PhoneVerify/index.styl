@import "module/index.styl";
.phone-vertify {
    background: #f2f3f4;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    padding: rem(13) rem(10);
    overflow: hidden;
    &-tip {
        position: absolute;
        top: 0;
        left: 0; 
        width: 100%;
        color: #fff;
        font-size: rem(14);
        line-height: rem(32);
        text-align: center;
        transition: 0.5s all ease;
        &.success {
            background:  #1db954;
        }
        &.error {
            background:  #ff5850;
        }
        &.tip-appear {
            height: rem(32);
        }
        &.tip-hidden {
            height: 0;
            opacity: 0;
        }
    }
    &-title {
        display: flex;
        align-items: center;
        font-size: rem(14);
        color: #6d6d6e;
        height: rem(15);
        margin-bottom: rem(15);
        &::before {
            display: inline-block;
            margin-right: rem(5);
            content: '';
            width: rem(4);
            height: rem(15);
            background: #f95d5d;
            border-radius: rem(100);
        }
    }
    &-number,
    &-code {
        display: flex;
        overflow: hidden;
        height: rem(46);
        line-height: rem(46);
        background: #fff;
        padding-left: rem(14);
        font-size: rem(14);
        .label {
            width: rem(58);
            color: #3d3d3e;
            line-height: rem(46);
            margin-right: rem(30);
        }
        .content {
            flex: 1;
            color: #9d9d9e;
            input {
                max-width: rem(140);
                line-height: rem(14);
            }
        }
        .get {
            height: rem(46);
            line-height: rem(14);
            width: rem(100);
            background: #fff;
            text-align: center;
            color: #f95d5d;
        }
    }
    &-code {
        border-top: rem(1) solid #f6f6f6;
    }
    &-next {
        margin-top: rem(16);
    }
}