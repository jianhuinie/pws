.follow-teacher {
    height: rem(40);
    background-color: #fff;
    padding: rem(10);
    margin-top: rem(10);
    .follow-teacher-avator {
        width: rem(40);
        height: rem(40);
        position: relative;
        .avator {
            width: 100%;
            height: 100%;
            display: block;
            border-radius: rem(40);
        }
        .auth-logo {
            position: absolute;
            right: 0;
            bottom: 0;
            width: rem(16);
            height: rem(16);
            display: block;
        }
        .hide {
            display: none;
        }
    }
    .follow-teacher-info {
        margin-left: rem(10);
        .follow-teacher-name {
            font-size: rem(14);
            color: #3D3D3E;
            height: rem(14);
            line-height: rem(14);
            margin-top: rem(4);
        }
        .follow-teacher-number {
            font-size: rem(10);
            color: #9D9D9E;
            letter-spacing: rem(0.3);
            height: rem(10);
            line-height: rem(10);
            margin: rem(6) 0;
        }
    }
    .follow-teacher-btn {
        background: #F95D5D;
        border-radius: rem(2);
        width: rem(60);
        height: rem(30);
        margin: rem(5) 0 rem(5) rem(5);
        line-height: rem(30);
        text-align: center;
        font-size: rem(14);
        color: #fff;
    }
    .has-follow-teacher {
        // background: #FFF;
        // border: rem(1) solid #F95D5D;
        // color: #F95D5D;
        letter-spacing: 0;
        width: rem(60);
        height: rem(30);
        line-height: rem(30);
        background-color: #cdcdce;
        color: #fff;
    }
}
.GSX_Dialog.GSX_Dialog_default {
    width: rem(270);
    margin-left: rem(12.5);
    img {
        width: rem(240);
        height: rem(240);
        display: block;
    }
}