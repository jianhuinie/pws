.follow-public {
    height: rem(100);
    background-color: #fff;
    margin: rem(10);
    // padding: 0 rem(25);
    box-shadow: 0 rem(2) rem(4) 0 #DDDDDE;
    border-radius: rem(6);
    position: relative;
    .follow-public-img {
        width: rem(70);
        height: rem(70);
        // text-align: center;
        // line-height: rem(76);
        // margin: rem(13) rem(18) rem(11) 0;
        box-shadow: 0 rem(2) rem(4) 0 #CDCDCE;
        position: absolute;
        top: rem(14);
        left: rem(31);
        img {
            width: rem(70);
            height: rem(70);
            display: block;
            // padding: rem(3);
        }
    }
    .follow-bg-img {
        width: 100%;
        height: 100%;
        display: block;
    }
}