
#swiper-container {
    width: 100%;
    height: rem(211);
    .swiper-pagination-bullet {
        margin: 0 rem(3);
        background-color: #fff;
        opacity: 0.4;
    }
    .swiper-pagination-bullet-active {
        // background: #FF6C00; 
        background-color: #fff;
        opacity: 1;
    }
    .swiper-pagination-bullet {
        width: rem(6);
        height: rem(6);
    }
}
.swiper-slide {
    text-align: center;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    &-img {
        height: 100%;
        width: 100%;    
    }
}