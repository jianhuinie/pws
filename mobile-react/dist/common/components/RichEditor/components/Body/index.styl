.editor-body {
    textarea {
        outline: none;
        cursor: pointer;
        font-size: 15px;
        color: #3D3D3E;
        border: none;
        height: 42px;
        border-radius: 0;
        padding-left: 45px !important;
        width: 90%;
        resize: vertical;
        padding-top: 10px;
        min-height: 42px;
        &.black {
            color: #000000;
        }
        &.grey {
            color: #999999;
        }
        &.pink {
            color: #FC5C5A;
        }
        &.yellow {
            color: #FF6C00;
        }
        &.blue {
            color: #0F86E8;
        }
        &.green {
            color: #43B244;
        }
        &.brown {
            color: #3D618A;
        }
        &.purple {
            color: #9900CC;
        }
        &.align-center {
            text-align: center;
        }
        &.font-bold {
            font-weight: bolder;
        }
        &.font-big {
            font-size: 17px;
        }
    }
    .style-toolbar {
        margin-top: 10px;
        padding-bottom: 6px;
        .toolbar-item {
            display: inline-block;
            margin-right: 15px;
            width: 40px;
            line-height: 28px;
            text-align: center;
            color: #6d6d6e;
            font-size: 16px;
            cursor: pointer;
            &:first-child {
                margin-left: 15px;
            }
        }
        .toolbar-item.active {
            background-color: #fff3df;
            border: 1px solid #ff6c00;
        }
        .color-list {
            display: inline-block;
            margin: 0;
            position: relative;
            top: 4px;
            .color-item {
                display: inline-block;
                width: 16px;
                height: 16px;
                margin-right: 10px;
                box-sizing: border-box;
                cursor: pointer;
            }
            .color-item.active {
                border: 1px solid #ff6c00;
            }
            .black {
                background-color: #000000;
            }
            .grey {
                background-color: #999999;
            }
            .pink {
                background-color: #FC5C5A;
                &.active {
                    border-color: #0F86E8
                }
            }
            .yellow {
                background-color: #FF6C00;
                &.active {
                    border-color: #0F86E8
                }
            }
            .blue {
                background-color: #0F86E8;
            }
            .green {
                background-color: #43B244;
            }
            .brown {
                background-color: #3D618A;
            }
            .purple {
                background-color: #9900CC;
            }

        }
    }
}