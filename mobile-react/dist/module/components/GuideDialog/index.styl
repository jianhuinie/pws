@import 'resource/css/mixin/position.styl';
@import "module/index.styl";

.guide-dialog {
    width: 100%;
    max-width: rem(414);
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 0;
    border: 0;
    outline: 0;
    font-size: rem(16);
    color: #fff;
    text-align: center;
    .new-guide {
        padding-bottom: rem(30);
        &-desc {
            margin: 0 auto;
            text-align: left;
            width: rem(224);
        }
        &-arrow {
            position: absolute;
            width: rem(64);
            height: rem(72);
            font-size: rem(70);
            margin-top: rem(13);
            right: rem(77);
            bottom: rem(140);
        }
        &-operate {
            position: absolute;
            width: rem(80);
            height: rem(80);
            border-radius: 50%;
            right: rem(4);
            bottom: rem(53);
            background: #fff;
            opacity: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            &-btn {
                background: #797878;
                border-radius: 50%;
                width: rem(58);
                height: rem(58);
                font-size: rem(11);
            }
            .icon-operate {
                margin-top: rem(12);
                font-size: rem(18);
            }
        }
        &-close {
            margin: rem(156) auto 0;
            width: rem(112);
            height: rem(32);
            line-height: rem(32);
            border: rem(1) solid #fff;
            border-radius: rem(5);
        }
    }
}