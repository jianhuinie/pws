@import "module/index.styl";
.empty-container {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background: #fff;
    overflow: hidden;
    .empty-content {
        position: absolute;
        top: 22%;
        left: 50%;
        transform: translate(-50%);
        text-align: center;
        &-img {
            width: rem(60);
            height: rem(62);
        }
        &-text {
            margin-top: rem(20);
            font-size: rem(14);
            color: #3D3D3E;
            line-height: rem(14);
        }
        &-btn {
            margin-top: rem(40);    
            width: rem(160);
            height: rem(44);
            line-height: rem(44);
            border-radius: rem(100);
            font-size: rem(16);
            color: #fff;
        }
    }
}