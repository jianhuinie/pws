.apply-authen-upload {
    padding: rem(17) rem(15);
    background: #fff;    
    .title {
        color: #3d3d3e;
        font-weight: 700;
    }
    .upload-area {
        display: flex;
        align-items: center;
        margin-top: rem(16);
        .upload-content {
            width: rem(120);
            height: rem(160);
            text-align: center;
            border: rem(1) solid #ebebeb;
            border-radius: rem(2);
            .icon-upload-person {
                margin: rem(55) 0 rem(8);
                font-size: rem(28);
            }   
            &-tip {
                font-size: rem(12);
                color: #9d9d9e;
            }
        }
        .upload-content-org {
            width: rem(180);
            height: rem(135);
            border: rem(1) solid #ebebeb;
            .icon-upload-org {
                margin: rem(43) 0 rem(8);
                font-size: rem(28);
            }   
        }
        .desc {
            flex: 1;
            margin-left: rem(10);
            &-item {
                color: #9d9d9e;
                margin-bottom: rem(10);
                display: flex;
                span {
                    align-self: flex-start;
                    color: #f95d5d;
                    padding-top: rem(4);
                    margin-right: rem(6);
                    line-height: rem(14);
                }
            }
        }
    }
    &-example {
        margin-top: rem(16);
        font-size: rem(12);
        color: #9d9d9e;
        .example {
            margin-top: rem(11);
            height: rem(96);
            width: 100%;
        }
    }
}
