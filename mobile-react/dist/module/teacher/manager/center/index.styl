@import "module/index.styl";
.manager-center {
    background: #f2f3f4;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    &-head {
        display: flex;
        align-items: center;
        height: rem(80);
        background: #fff;
        border: rem(1) solid #ebebeb;
        &-avatar {
            position: relative;
            display: flex;
            height: rem(80);
            width: rem(73);
            align-items: center;
            .avatar {
                margin-left: rem(15);
                .avatar-container-big {
                    width: rem(54);
                    height: rem(54);
                }
                .avatar-container-v {
                    width: rem(20);
                    height: rem(20);
                }
            }
        }
        &-detail {
            flex: 1;
            margin-left: rem(10);
            overflow: hidden;
            .room-name {
                font-size: rem(16);
                color: #3d3d3e;
                line-height: rem(16);
                text-overflow: ellipsis;
                white-space: nowrap;
                overflow: hidden;
            }
            .apply-link {
                display: block;
                width: rem(100);
            }
            .apply {
                margin-top: rem(12);
                font-size: rem(12);
                color: #4896E4;
                letter-spacing: 0;
                line-height: rem(12);
            }
        }
        &-next.icon-next {
            height: rem(80);
            line-height: rem(80);
            min-width: rem(50);
            text-align: center;
            color: #cecece;
        }
    }
    &-body {
        margin-top: rem(10);    
        background: #fff;
        &-title {
            height: rem(34);
            padding-left: rem(15);
            line-height: rem(34);
            font-size: rem(14);
            color: #3d3d3e;
            border-bottom: rem(1) solid #ebebeb;
        }
        &-content {
            display: flex;
            .data-item {
                position: relative;
                flex: 1;
                height: rem(85);
                text-align: center;
                .value {
                    font-size: rem(20);
                    line-height: rem(20);
                    color: #3d3d3e;
                    margin-top: rem(20);
                    font-weight: 500;
                }
                .highlight {
                    color: #f95d5d;
                }
                .name {
                    margin-top: rem(9);
                    line-height: rem(15);
                    font-size: rem(12);
                    color: #6d6d6e;
                }
                &:nth-child(1):after, 
                &:nth-child(2):after {
                    position: absolute;
                    right: 0;
                    top: 50%;
                    transform: translateY(-50%);
                    background: #f6f6f6;
                    content: ' ';
                    display: block;
                    width: rem(1);
                    height: rem(32);
                }
            }
        }
    }
    &-tip {
        margin-top: rem(20);
        padding: 0 rem(20);
        img {
            width: 100%;
        }    
    }
}