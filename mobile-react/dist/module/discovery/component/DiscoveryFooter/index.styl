.discovery-footer {
    display: flex;
    position: fixed;
    bottom: 0;
    width: 100%;
    max-width: rem(414);
    height: rem(50);
    box-shadow: inset 0 0 0 0 #EDEDEE;
    border-top: rem(1) solid #f5f5f5;
    background-color: #fff;
    text-align: center;
    align-items: center;
    .footer-item {
        flex: 1;
        text-align: center;
        color: #9D9D9E;
        &-icon {
            font-size: rem(18);
            display: block;
        }
        .title {
            margin-top: rem(4);
            font-size: rem(12);
            height: rem(10);
            line-height: rem(10);
        }
    }
    .current {
        color: #F95D5D;
    }
}