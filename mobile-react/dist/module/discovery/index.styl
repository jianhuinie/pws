@import "./common.styl";
.discovery-page {
    background: #f2f3f4;
    height: 100%;
    .loaded-page {
        // position: relative;
        height: 100%;
        overflow-y: auto;
        .discovery-content {
            height: 91%;
            overflow-y: scroll;
        }
        .discovery-img {
            height: rem(211);
        }
        .discovery-class-list {
            margin-top: rem(10);
            padding: 0 rem(15);
            background-color: #fff;
        }
        .no-more {
            background: #f2f3f4;
            height: rem(70);
        }
        .img-item {
            height: rem(211);
        }
    }
}
.loading-page {
    height: 100%;
}
.hide-page {
    height: 0;
    overflow: hidden;
}
