@import 'resource/css/mixin/common.styl';
@import "module/index.styl";
.student-center {
    font-family: PingFangSC-Regular;
    background: #f2f3f4;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    &-basic {
        height: rem(80);
        display: flex;
        align-items: center;
        padding: 0 rem(15);
        background: #fff;
        border-bottom: rem(1) solid #f6f6f6;
        position: relative;
        .avatar-container-big {
            width: rem(54);
            height: rem(54);
        }
        &-detail {
            flex: 1;
            overflow: hidden;
            margin-left: rem(12);
            .name {
                font-family: PingFangSC-Semibold;
                font-size: rem(16);
                color: #3d3d3e;
                line-height: rem(16);
                ellipsis();
            }
            .desc {
                ellipsis();
                font-size: rem(12);
                color: #6D6D6E;
                line-height: rem(12);
                margin-top: rem(12);
            }
        }
        .menu-list-item-next {
            // position: absolute;
            // right: rem(-1);
            text-align: right;
            line-height: 100%;
        }
    }
    &-focus {
        height: rem(68);
        display: flex;
        background: #fff;
        &-item {
            position: relative;
            flex: 1;
            text-align: center;
            font-size: rem(12);
            color: #9D9D9E;
            line-height: rem(15);
            &:nth-child(1):after {
                position: absolute;
                right: 0;
                top: 50%;
                transform: translateY(-50%);
                background: #f6f6f6;
                content: ' ';
                display: block;
                width: rem(1);
                height: rem(32);
            }
            .count {
                font-family: PingFangSC-Semibold;
                font-size: rem(20);
                color: #3D3D3E;
                line-height: rem(20);
                margin: rem(15) 0 rem(4);
            }
        }
    }
    &-room-entry.menu-list-item {
        height: rem(60);
        .student-center-room-entry-basic {
            display: flex;
            font-size: rem(16);
            color: #3D3D3E;
            line-height: rem(16);
            align-items: center;
            .avatar-container-big {
                width: rem(38);
                height: rem(38);
            }
            .avatar-container-v {
                width: rem(12);
                height: rem(12);
            }
        }
        .classroom-avatar {
            margin-right: rem(12);
        }
    }
    &-join {
        padding: rem(11) rem(15) 0;
        .entry {
            height: rem(40);
            line-height: rem(40);
            text-align: center;
            font-size: rem(14);
            color: #fff;
            background: #F95D5D;
            border-radius: rem(100);
        }
    }
}