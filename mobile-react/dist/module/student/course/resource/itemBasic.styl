@import 'resource/css/mixin/common.styl';
.course-item {
    display: flex;
    padding: rem(15) 0;
    border-bottom: rem(1) solid #f6f6f6;
    &-cover {
        width: rem(100);
        height: rem(56);
        border-radius: rem(2);
    }
    &-detail {
        position: relative;
        margin-left: rem(10);
        flex: 1;   
        overflow: hidden;
        &-top {
            mult-ellipsis(2);
            font-size: rem(14);
            color: #3D3D3E;
            letter-spacing: 0;
            line-height: rem(17);
            font-family: PingFangSC-Semibold;
        }
        &-foot {
            position: absolute;
            bottom: 0;
            left: 0;
            font-size: rem(12);
            color: #9D9D9E;
            line-height: rem(12);
        }
    }
}