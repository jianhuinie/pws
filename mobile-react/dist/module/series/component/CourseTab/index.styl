.course-tab {
    padding: 0 rem(15);
    width: 100%;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    background: #fff;
    border-bottom: rem(1) solid #DDDDDE;
    box-shadow: inset 0 0 0 0 #DDDDDE;
    .course-tab-item {
        width: 50%;
        text-align: center;
        display: inline-block;
        font-size: rem(15);
        color: #9D9D9E;
        height: rem(15);
        line-height: rem(15);
        vertical-align: top;
        padding-top: rem(12);
        padding-bottom: rem(13);
        .active {
            color: #F95D5D;
            padding-bottom: rem(10);
            border-bottom: rem(3) solid #F95D5D;
        }
    }
}