.purchase-series {
    height: rem(40);
    background-color: #fff;
    padding: rem(10) rem(15);
    margin-bottom: rem(10);
    .course-img-series {
        width: rem(70);
        height: rem(40);
        border-radius: rem(1.16);
        img {
            width: 100%;
            height: 100%;
            display: block;
        }
    }
    .purchase-btn-series {
        margin: rem(5) 0;
        width: rem(90);
        height: rem(30);
        text-align: center;
        line-height: rem(30);
        background-color: #F95D5D;
        border-radius: rem(2);
        font-size: rem(14);
        color: #FFF;
        letter-spacing: 0;
    }
    .course-info-series {
        margin: rem(4) 0 rem(4) rem(82);
        // width: 36%;
        .course-title-series {
            height: rem(15);
            font-size: rem(14);
            color: #3D3D3E;
            line-height: rem(15);
        }
        .course-lesson-series {
            margin-top: rem(6);
            height: rem(11);
            line-height: rem(11);
            font-size: rem(10);
            color: #9D9D9E;
            letter-spacing: rem(0.3);
        }
    }
}