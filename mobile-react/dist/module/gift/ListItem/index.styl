.gift-course-item {
    padding: rem(15);
    border-bottom: rem(1) solid #f6f6f6;
    display: flex;
    .course-cover {
        width: rem(120);
        height: rem(65);
        outline: rem(1) solid #f6f6f6;
    }
    .course-detail {
        flex: 1;
        padding-left: rem(10);
        font-size: rem(14);
        overflow: hidden;
        &-title {
            height: rem(35);
            line-height: rem(16);
            display: -webkit-box;
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 2;
            overflow: hidden;
            color: #3d3d3e;
            font-weight: 700;
        }
        &-time {
            height: rem(12);
            font-size: rem(12);
            color: #9d9e9e;
            line-height: rem(12);
        }
        &-name {
            margin-top: rem(4);
            line-height: rem(14);
            color: #9d9d9e;
        }
        &-foot {
            margin-top: rem(7);
            display: flex;
            justify-content: space-between;
            height: rem(11);
            line-height: rem(11);
            font-size: rem(11);
        }
        &-number {
            color: #9d9d9e;
        }
        &-price {
            color: #f95d5d;
            &.free {
                color: #43b244;
            }
        }
    }
}