.loading-more {
    display: block;
    height: rem(40);
    border: 1px solid #ededed;
    position: relative;
    &.hide {
        display: none;
    }
    .loading i {
	    display: inline-block;
	    width: rem(5);
	    height: rem(12);
	    background: #b5b5b5;
	    vertical-align: top
	}

	.loading i {
	    -webkit-animation: loading-spin 1s infinite linear;
	    -moz-animation: loading-spin 1s infinite linear;
	    animation: loading-spin 1s infinite linear
	}

	.loading i.t2 {
	    margin: 0 rem(3);
	    -webkit-animation-name: loading-spin-one;
	    -moz-animation-name: loading-spin-one;
	    animation-name: loading-spin-one
	}

	.loading i.t3 {
	    -webkit-animation-name: loading-spin-two;
	    -moz-animation-name: loading-spin-two;
	    animation-name: loading-spin-two
	}


	@-webkit-keyframes loading-spin {
	    0% {
	        opacity: 0
	    }

	    30% {
	        opacity: 1;
	        -webkit-transform: scale(1,1.2)
	    }

	    60% {
	        opacity: 0;
	        -webkit-transform: scale(1)
	    }

	    100% {
	        opacity: 0
	    }
	}

	@-webkit-keyframes loading-spin-one {
	    0% {
	        opacity: 0
	    }

	    20% {
	        opacity: 0
	    }

	    50% {
	        opacity: 1;
	        -webkit-transform: scale(1,1.2)
	    }

	    80% {
	        opacity: 0;
	        -webkit-transform: scale(1)
	    }

	    100% {
	        opacity: 0
	    }
	}

	@-webkit-keyframes loading-spin-two {
	    0% {
	        opacity: 0
	    }

	    40% {
	        opacity: 0
	    }

	    70% {
	        opacity: 1;
	        -webkit-transform: scale(1,1.2)
	    }

	    100% {
	        opacity: 0;
	        -webkit-transform: scale(1)
	    }
	}

	@-moz-keyframes loading-spin {
	    0% {
	        opacity: 0
	    }

	    30% {
	        opacity: 1;
	        -moz-transform: scale(1,1.2)
	    }

	    60% {
	        opacity: 0;
	        -moz-transform: scale(1)
	    }

	    100% {
	        opacity: 0
	    }
	}

	@-moz-keyframes loading-spin-one {
	    0% {
	        opacity: 0
	    }

	    20% {
	        opacity: 0
	    }

	    50% {
	        opacity: 1;
	        -moz-transform: scale(1,1.2)
	    }

	    80% {
	        opacity: 0;
	        -moz-transform: scale(1)
	    }

	    100% {
	        opacity: 0
	    }
	}

	@-moz-keyframes loading-spin-two {
	    0% {
	        opacity: 0
	    }

	    40% {
	        opacity: 0
	    }

	    70% {
	        opacity: 1;
	        -moz-transform: scale(1,1.2)
	    }

	    100% {
	        opacity: 0;
	        -moz-transform: scale(1)
	    }
	}

	@keyframes loading-spin {
	    0% {
	        opacity: 0
	    }

	    30% {
	        opacity: 1;
	        transform: scale(1,1.2)
	    }

	    60% {
	        opacity: 0;
	        transform: scale(1)
	    }

	    100% {
	        opacity: 0
	    }
	}

	@keyframes loading-spin-one {
	    0% {
	        opacity: 0
	    }

	    20% {
	        opacity: 0
	    }

	    50% {
	        opacity: 1;
	        transform: scale(1,1.2)
	    }

	    80% {
	        opacity: 0;
	        transform: scale(1)
	    }

	    100% {
	        opacity: 0
	    }
	}

	@keyframes loading-spin-two {
	    0% {
	        opacity: 0
	    }

	    40% {
	        opacity: 0
	    }

	    70% {
	        opacity: 1;
	        transform: scale(1,1.2)
	    }

	    100% {
	        opacity: 0;
	        transform: scale(1)
	    }
	}
	.loading {
		z-index: 110;
		position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        width: rem(24);
        height: rem(24);
        background-color: rgba(255, 255, 255, 0);
        i {
        	background: #ff8402;
        	opacity: 1;
        }
	}
}