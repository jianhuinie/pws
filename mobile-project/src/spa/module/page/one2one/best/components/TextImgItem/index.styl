.text-img-item {
	padding: rem(10) rem(15) 0 rem(15);
    .container {
        padding-bottom: rem(15);
        border-bottom: 1px solid #ddd;
        .left-text {
        	float: left;
        	width: 65.5%;
        	h3 {
        		color: #222;
			    font-size: rem(18);
			    line-height: rem(21);
			    font-weight: 400;
        	}
			.hide {
				display: none;
			}
        	.subtitle {
        		color: #999;
			    font-size: rem(12);
			    margin-top: rem(6);
			    overflow: hidden;
			    text-overflow: ellipsis;
			    white-space: nowrap;
			    line-height: rem(16);
			    height: rem(20);
			    .video {
			    	border: 1px solid #6ed1f9;
    				color: #6ed1f9;
    				padding: 0 rem(2);
    				margin-right: rem(5);
    				border-radius: rem(2);
			    }
			    .title {

			    }
        	}
        }
        .right-img {
        	float: right;
        	width: 31.5%;
        	padding-right: rem(6);
        	height: 0;
		    padding-top: 23%;
		    position: relative;
  			img {
  				display: block;
  				width: 100%;
  				height: 100%;
  				position: absolute;
			    top: 0;
			    right: 0;
  			}
        }
        .clear {
        	clear: both;
        }
    }
}