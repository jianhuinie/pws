.card {
    position: relative;
    padding: rem(10) rem(70) 0 rem(90);
    min-height: rem(120);
    border-bottom: 1px solid #ededee;
    background: white;
    .avatar {
        height: rem(60);
        width: rem(60);
        position: absolute;
        left: rem(10);
        top: rem(15);
        img {
            height: rem(60);
            width: rem(60);
            border: 1px solid #EDEDEE;
            border-radius: 50%;
        }
    }
    .name-content {
        height: rem(30);
        line-height: rem(30);
        .name {
            font-family: PingFang-SC-Regular;
            font-size: rem(17);
            color: #3D3D3E;
            display: inline-block;
            max-width: 44%;
            text-overflow: ellipsis;
            white-space: nowrap;
            overflow: hidden;
            float: left;
        }
        .icons {
            font-family: Roboto-Medium;
            font-size: rem(11);
            color: #FFFFFF;
            letter-spacing: 0;
            line-height: rem(11);
            background: #FF6C00;
            border-radius: rem(3);
            display: inline-block;
            padding: rem(4) rem(6);
            margin-left: rem(10);
            position: relative;
            top: rem(5);
            float: left;
        }
    }
    .stars {
        height: rem(24);
        line-height: rem(24);
        .hours {
            font-family: PingFang-SC-Regular;
            font-size: rem(12);
            color: #9D9D9E;
            display: inline-block;
            margin-left: rem(10);
            float: left;
            position: relative;
            top: rem(-2);
        }
    }
    .tabs {
        // margin: rem(4) 0;
        height: rem(24);
        line-height: rem(20);
        overflow: hidden;
        .tab-item {
            font-size: rem(11);
            color: #9D9D9E;
            display: inline-block;
            font-family: PingFang-SC-Regular;
            background: #FFFFFF;
            border: 1px solid #CDCDCE;
            border-radius: rem(2);
            padding: 0 rem(6);
            margin-right: rem(6);
            margin-bottom: rem(4);
        }
    }
    .remark {
        margin-top: rem(2);
        font-family: PingFang-SC-Regular;
        font-size: rem(12);
        color: #9D9D9E;
        line-height: rem(20);
        width: 90%;
    }
    .item-right-content {
        position: absolute;
        right: rem(10);
        top: rem(14);
        text-align: right;
        .price-content {
            height: rem(30);
            .price {
                font-family: PingFangSC-Semibold;
                font-size: rem(16);
                color: #000000;
                line-height: rem(14);
            }
            .texts {
                font-family: PingFang-SC-Regular;
                font-size: rem(12);
                color: #9D9D9E;
                margin-left: rem(4);
            }
        }
        .distance, .area {
            font-family: PingFang-SC-Regular;
            font-size: rem(12);
            color: #9D9D9E;
            height: rem(22);
            line-height: rem(22);
            text-align: right;
            width: rem(80);
        }
        .area {
            margin-top: rem(-3);
        }
        .distance {
            margin: rem(2) 0;
        }
        .lessonWay {
            font-family: PingFang-SC-Regular;
            font-size: rem(10);
            color: #FF9100;
            letter-spacing: 0;
            line-height: rem(20);
            height: rem(20);
            text-align: right;
        }
    }
}