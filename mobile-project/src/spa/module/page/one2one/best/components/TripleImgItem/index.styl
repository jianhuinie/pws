.triple-img-item {
	padding: rem(10) rem(15) 0 rem(15);
    section {
    	.container {
    		border-bottom: 1px solid #ddd;
    		h3 {
    			color: #222;
			    font-size: rem(18);
			    line-height: rem(21);
			    font-weight: 400;
			    overflow: hidden;
    		}
    		.list-image {
    			margin-top: rem(6);
    			margin-bottom: rem(15);
    			ul {
    				li {
    					float: left;
					    overflow: hidden;
					    width: 33.3%;
					    padding-top: 24.5%;
					    -webkit-box-sizing: border-box;
					    box-sizing: border-box;
					    position: relative;
    					img {
    						display: block;
    						position: absolute;
						    left: 0;
						    top: 0;
						    width: 95%;
						    height: 100%;
    					}
    				}
					.clear {
						clear: both;
					}
    			}
    		}
    	}
    }
}