.recruit-home-flow-item {
    position: relative;
    padding-left: rem(66);
    margin: rem(20) 0;
    text-align: left;
    .item-index {
        position: absolute;
        left: rem(20);
        text-align: center;
        span {
            font-family: SanFranciscoDisplay-Light;
            display: inline-block;
            width: rem(36);
            border-radius: rem(18);
            background-color: #f8f8f8;
            height: rem(36);
            line-height: rem(36);
            font-size: rem(34);
            color: #cdcdce;
            font-weight: 200;
        }
    }
    .title {
        font-size: rem(18);
        color: #2D2D2E;
        font-weight: 500;
        margin-bottom: rem(6);
    }
    .sub-title {
        font-size: rem(16);
        color: #6D6D6E;
        line-height: rem(21);
        padding-right: rem(35);
    }
}