.recruit-home-page {
    .body {
        text-align: center;
        .desc {
            padding: rem(15);
            font-size: rem(16);
            line-height: rem(26);
            color: #6d6d6e
            .key {
                color: #FF9100;
            }
            text-align: left;
        }
        .total-title {
            margin-top: rem(40);
            font-size: rem(20);
            color: #3D3D3E;
            line-height: rem(20);
            text-align: center;
            .num {
                color: #FF6C00;
            }
        }
        .sign-top-btn {
            width: 90%;
            border-radius: rem(2);
            margin: rem(20) auto;
        }
        .sign-bottom-btn {
            position: fixed;
            left: 0;
            bottom: 0;
        }
        .sign-bottom-btn-hidden {
            display: none
        }
        .icon-down-o {
            color: #CDCDCE;
            font-size: rem(20);
        }
        
    }
}