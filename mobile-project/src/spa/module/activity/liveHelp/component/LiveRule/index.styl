.livehelp-box-main {
    padding-top: rem(30);
    &.livehelp-box-main-rule {
        background: white;
    }
    .livehelp-rule-title {
        text-align: center;
        font-family: PingFang-SC-Medium;
        font-size: rem(20);
        color: #3C3C3C;
        line-height: rem(20);
    }
    .livehelp-rule-line {
        width: 8%;
        height: rem(3);
        background: #ff6c00;
        margin-left: 46%;
        margin-top: rem(10);
    }
    .livehelp-rule-box-sub {
        margin-top: rem(25);
        padding: 0 rem(10);
        .livehelp-rule-box-sub-title {
            font-family: PingFang-SC-Medium;
            font-size: rem(16);
            color: #3C3C3C;
            line-height: rem(16);
        }
        .livehelp-rule-box-sub-content {
            font-family: PingFangSC-Regular;
            font-size: rem(14);
            color: #6D6D6E;
            line-height: rem(22);
            margin-top: rem(5);
            margin-bottom: rem(28);
        }
        .livehelp-rule-box-sub-content-2 {
            font-family: PingFangSC-Regular;
            font-size: rem(14);
            color: #6D6D6E;
            line-height: rem(22);
            padding-left: rem(15);
            margin-top: rem(10);
            position: relative;
            .livehelp-rule-box-sub-circle {
                position: absolute;
                display: inline-block;
                width: rem(5);
                height: rem(5);
                background: #F89C1C;
                top: rem(8);
                left: rem(5);
                border-radius: 50%;
            }
        }
    }
    .livehelp-rule-pic {
        width: 80%;
        margin-left: 10%;
        margin-top: rem(20);
        &.livehelp-big-one-pic {
            min-height: rem(260);
        }
        &.livehelp-big-two-pic {
            min-height: rem(148);
        }
    }
}