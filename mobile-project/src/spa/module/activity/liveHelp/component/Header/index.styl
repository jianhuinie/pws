.livehelp-header {
    position: relative;
    .livehelp-header-img {
        width: 100%;
        min-height: rem(170);
    }
    .livehelp-logo {
        position: absolute;
        top: rem(15);
        left: rem(15);
    }
    .livehelp-text-title {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        width: 54%;
        .livehelp-text-title-main {
            border: 1px solid #FFE6A7;
            border-radius: rem(18);
            font-family: PingFang-SC-Medium;
            font-size: rem(23);
            color: #FFFFFF;
            line-height: rem(35);
            height: rem(35);
            padding: 0 rem(15);
        }
        .livehelp-text-title-sub {
            font-family: PingFang-SC-Semibold;
            font-size: rem(49);
            color: #FFFFFF;
            line-height: rem(50);
            height: rem(50);
            margin-top: rem(10);
        }
    }
}