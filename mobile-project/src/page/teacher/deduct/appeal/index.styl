@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";

.content{
  padding: 0 rem(15) rem(30) rem(15);
  position: relative;
  //.footer{
  //  position: fixed;
  //  bottom: rem(10);
  //  left: 50%;
  //  margin-left: rem(-140);
  //}
  .item{
    margin-top: rem(20);
    font-size: rem(13);
    color: #9d9e9e;
  }
  .how{
    font-size: rem(14);
    color: #6d6e6e;
    margin-top: rem(10);
  }
  .text-container {
    padding-right: rem(30);
    background-color: #fff;
    textarea {
      border: 1px solid #dcddde;
      width: 100%;
      height: rem(100);
      padding: rem(15);
      font-size: rem(14);
      color: #3c3d3d;
      resize: none;
      outline: none;
      -webkit-appearance: inherit;
    }
    ::-webkit-input-placeholder{
      color: #9d9e9e;
    }
    ::-moz-placeholder { color:#9d9e9e; }
    ::-ms-input-placeholder { color:#9d9e9e; }
    ::-moz-placeholder { color:#9d9e9e; }
  }

  #add-photo {
    margin-top: rem(10);
    .add-title {
      background-color: #fff;
      height: rem(20);
      position: relative;
      .add-photos{
        font-size: rem(14);
        color: #3fa5f2;
        .max{
          font-size: rem(12);
          color: #9d9e9e;
        }
        .remain{
          float: right;
          font-size: rem(12);
          color: #9d9e9e;
        }
        .up{
          color: red;
        }
      }
        .no-photos{
          color: #9d9e9e;
        }
      .icon {
        padding-left: rem(15);
        padding-right: rem(10);
        font-size: rem(20);
        color: #6d6d6e;
        vertical-align: middle;
      }
      span {
        font-size: rem(14);
        color: #6d6d6e;
      }
      input {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
      }
    }
    .photo-container {
      background-color: #fff;
      padding: 0 rem(5) rem(15);
      min-height: rem(150);
      margin-top: rem(20);

      li {
        list-style: none;
        display: inline-block;
        width: rem(55);
        height: rem(55);
        margin-right: rem(8);
        margin-top: rem(5);
        position: relative;
        &.add-photo {
          display:  none;
          margin-right: 0;
          margin-left: rem(-2);
        }
        .uploadding{
          position:absolute;
          display: inline-block;
          width: 100%;
          padding:rem(3) 0;
          text-align:center;
          color:#fff;
          background: #000;
          opacity: 0.6;
          font-size:rem(12);
          bottom:rem(0);
        }
        .uploadError{
          color: red;
        }
        input[type=file] {
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          opacity: 0;
        }
        .icon {

          position: absolute;
          top: 0;
          right: 0;
          color: #F85E5D;
          transform: translateY(rem(-9)) translateX(rem(8));
        }
        .icon-add {
          position: absolute;
          font-size: rem(30);
          top: 50%;
          right: 50%;
          transform: translateY(-50%) translateX(50%);
          color: #6d6d6e;
        }
        .icon-remove_circle {
          z-index: 2;
        }
        img {
          width: 100%;
          height: 100%;
        }
      }
    }
  }

  .no-photo{
      color: #9d9e9e;
    }
    .notice{
      font-size: rem(14);
      color: #9d9e9e;
      text-align: center;
    }
    .submit{
      display: block;
      margin-top: rem(15);
      border-radius: rem(5);
      overflow: hidden;
      width: 100%;
      height: rem(45);
      font-size: rem(17);
      text-align: center;
      color: rgba(255,255,255,0.5);
      line-height: rem(45);
      background-color: #3fa5f2;
    }
    .on{
      color: #fff;
    }
}