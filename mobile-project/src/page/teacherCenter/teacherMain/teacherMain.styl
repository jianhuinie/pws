body {
    margin: 0;
    background-color: #edf0f0;
}

#main {
    .head-img {
        .img-background{
            background-color: rgba(99, 31, 0, 1);
        }
        .edit-background {
            display: none;
            color: #ffffff;
            position: absolute;
            top: rem(20);
            right: rem(10);
            img {
                width: rem(100);
                height: rem(27);
            }
        }
        .common-head-bottom-shade {
            position: absolute;
            bottom: 0;
            width: 100%;
            background: rgba(0, 0, 0, 0.4);
            font-size: rem(15);
            padding: rem(5) 0;
            .item-list {
                .item-flex {
                    display: inline-block;
                    width: 33%;
                    font-size: rem(12);
                    color: #ffffff;
                    margin: 0 auto;
                    text-align: center;
                    float: left;
                }
                .item-height {
                    line-height: rem(36);
                }
                .line {
                    float: left;
                    display: inline-block;
                    border-right: 1px solid rgba(255, 255, 255, 0.5);
                }
            }
        }
    }
    .display-none {
        display: none !important;
    }
    .change-tab {
        background: #ffffff;
    }
    .main-tab-title {
        margin-top: rem(10);
        background: #ffffff;
        padding: 0 rem(15);
        border-bottom: 1px solid #ebeced;
        li {
            display: inline-block;
            width: 25%;
            text-align: center;
            font-size: rem(14);
            span {
                width: 80%;
                display: block;
                margin: 0 auto;
                padding: rem(10) 0;
                padding-bottom: rem(9);
            }
            .active {
                color: #ff6c00;
                border-bottom: 2px solid #ff6c00;
            }
        }
    }
    .tab-title-red {
        li {
            .active {
                color: #f95e5e;
                border-bottom: 2px solid #f95e5e;
            }
        }
    }
    .tab_fixed {
        margin-top: 0;
        position: fixed;
        top: 0;
        z-index: 30;
        width: 100%;
    }
    .tab-container {
        //min-height: rem(560);
        background: #ffffff;
    }
    .fix-top {
        padding-top: rem(40);
    }
    .teacher-comment {
        background: #ffffff;
        .comments-filter {
            padding-right: rem(10);
        }
    }
    .teacher-article {
        .home-news {
            padding: 0 rem(10);
            .item-content {
                padding: rem(10) 0;
                .news-teacher-name {
                    span {
                        display: inline-block;
                        margin-right: rem(10);
                    }
                }
            }
            .child-content {
                > h3 {
                    text-overflow: ellipsis;
                    white-space: normal!important;
                    overflow: hidden;
                    -webkit-box-orient: vertical;
                    -webkit-line-clamp: 2;
                    display: -webkit-box;
                }
            }
        }
        .right-img-content-more {
            >li {
                width: 31.3%;
            }
        }
    }
    .no-article,
    .none-content {
        background: #ffffff;
        margin: 0 auto;
        text-align: center;
        line-height: rem(560);
        height: rem(560);
        color: #9d9d9e;
    }
    .comments-more {
        border-top: 1px solid #dcddde;
    }
    .fsdlg-container {
        bottom: rem(50);
    }
    .try-container {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        z-index: 5;
        .mask {
            position: absolute;
            height: 100%;
            width: 100%;
            background-color: #000;
            opacity: 0.5;
        }
        .front {
            position: absolute;
            left: 50%;
            top: 50%;
            width: rem(250);
            -webkit-transform: translate3d(-50%, -50%, 0);
            transform: translate3d(-50%, -50%, 0);
            background-color: #fff;
            border-radius: rem(3.008);
            text-align: center;
            .cancel {
                font-size: rem(22);
                font-weight: bold;
                position: absolute;
                right: rem(9.008);
                top: rem(9.008);
                color: #9d9d9d;
                z-index: 1;
            }
            > h3 {
                font-size: rem(16);
                line-height: rem(34);
                margin-top: rem(10);
            }
            > p {
                font-size: rem(13);
                line-height: rem(34);
                margin-top: rem(10);
            }
            .btn {
                overflow: hidden;
                clearfix();
                margin-top: rem(10);
                > div {
                    width: 50%;
                    font-size: rem(13);
                    line-height: rem(36);
                    border-left: 1px solid #ccc;
                    border-top: 1px solid #ccc;
                    margin-left: rem(-1);
                    float: left;
                }
                .pay {
                    > a {
                        color: #ff9100;
                    }
                }
            }
        }
    }
    .share-qrCode {
        background-color: #fff;
        margin-top: rem(10);
        color: #6d6d6e;
        font-size: rem(13);
        padding-top: rem(10);
        padding-bottom: rem(20);
        margin-bottom: rem(60);
        .app-qrCode {
            display: none;
            ul {
                width: 100%;
                // display: flex;
                // justify-content: center;
                height: rem(50);
                line-height: rem(50);
                text-align: center;
            }
            li {
                //flex: 1;
                text-align: center;
                display: inline-block;
                margin: 0 rem(5);
            }
            .friends,
            .weixin,
            .qrcode,
            .m-qrcode {
                border: 1px solid #dcddde;
                text-align: center;
                border-radius: rem(20);
                margin-top: rem(10);
                padding: 0 rem(10);
                height: rem(32);
                line-height: rem(32);
            }
            .friends {
                img {
                    margin-top: rem(-3);
                }
            }
            .icon,
            img {
                padding-right: rem(3);
            }
            img {
                vertical-align: middle;
            }
            .icon-wechat {
                color: #61c765;
                font-size: rem(14);
                vertical-align: middle;
                padding-right: rem(5);
            }
            .icon-qrcode {
                color: #6d6d6e;
                font-size: rem(13);
            }
            .tip,
            .course-id {
                font-size: rem(13);
                color: #9d9e9e;
                width: 100%;
                text-align: center;
                border: 0;
            }
            .tip {
                margin-top: rem(8);
            }
        }
        .m-qrCode {
            display: none;
            .qrCode {
                margin: rem(10) auto;
                width: rem(80);
                height: rem(32.5);
                line-height: rem(32.5);
                text-align: center;
                border: 1px solid #dcddde;
                border-radius: rem(14);
            }
            .qrCode-desc {
                font-size: rem(12);
                color: #9d9e9e;
                width: 100%;
                text-align: center;
                border: 0;
            }
        }
    }
}

.tab-list {
    .comment-panel {
        .no-comment {
            padding: rem(85) rem(30) 0;
        }
    }
}

.qrcode-container {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    z-index: 5;
    .mask {
        position: absolute;
        height: 100%;
        width: 100%;
        background-color: #000;
        opacity: 0.5;
    }
    .front {
        position: absolute;
        left: 50%;
