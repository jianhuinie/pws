        padding: rem(30);
        transform: translate3d(-50%, -50%, 0);
        background-color: #FFF;
        border-radius: rem(3);
    }
    .label-group {
        font-size: rem(13);
        margin: 0 auto;
        text-align: center;
        .label-name {
            float: left;
        }
        .org-name {
            margin-left: rem(60);
            text-align: left;
        }
    }
    #qrcode {
        margin: 0 auto;
        text-align: center;
        padding: rem(10);
        img {
            width: rem(124);
            height: rem(124);
        }
        canvas {
            width: 100%;
        }
    }
    .hint {
        text-align: center;
        color: #9D9D9D;
        font-size: rem(12);
    }
    .cancel {
        font-size: rem(15);
        font-weight: bold;
        position: absolute;
        right: rem(-10);
        top: rem(-10);
        color: #9D9D9D;
        padding: rem(20);
    }
    .label-group {
        .teacher-name {
            text-align: center;
        }
    }
}

