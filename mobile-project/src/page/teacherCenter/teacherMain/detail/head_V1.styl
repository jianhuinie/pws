.head-img {
  position: relative;
  .edit-banner {
    position: absolute;
    top: 0;
    left: 0;
    display: inline-block;
    width: 100%;
    height: 45%;
    z-index: 3;
  }
  .img-background {
    position: relative;
    top: 0;
    left: 0;
    display: block;
    padding-top: 75%;
    .cover {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
    }
  }
  .img-background {
    background-image: none;
  }
  .teacher-info {
    position: absolute;
    bottom: rem(31);
    padding: 0 rem(10);
    /*overflow: hidden;*/
    width: 100%;
    text-shadow: rem(2) rem(2) rem(2) rgba(0,0,0,0.4);
    .avatar-intro {
      position: relative;
      padding-left: rem(116);
      .avatar {
        border: 2px solid #ffffff;
        position: absolute;
        top: 0;
        left: 0;
        width: rem(100);
        height: rem(100);
        img {
          width: 100%;
        }
        .teacher-hot {
          width: rem(32);
          height: rem(24);
          position: absolute;
          left: rem(71);
          top: rem(7);
        }
      }
      .christmas-hat {
        width: rem(55);
        height: rem(55);
        left: rem(70);
        top: rem(-28);
      }
      .christmas-tree {
          width: rem(92);
          height: rem(41);
          left: rem(2);
          bottom: rem(0);
      }
      .intro {
        padding: rem(8) 0;
        .name-sex {
          .teacher-name {
            display: inline-block;
            color: #ffffff;
            font-size: rem(20);
            line-height: 1.3;
            text-overflow: ellipsis;
            overflow: hidden;
            white-space: nowrap;
            max-width: 60%;
            vertical-align: text-bottom;
          }
          .teacher-sex, .teacher-vip {
            display: inline-block;
            width: rem(20);
            height: rem(20);
            line-height: 1;
            vertical-align: text-bottom;
            img {
              width: 100%;
              height: 100%;
            }
          }
          .teacher-gold {
            height: rem(22);
            display: inline-block;
            line-height: 1;
            vertical-align: text-bottom;
            img {
                height: 100%;
                vertical-align: inherit;
            }
          }
          .teacher-vip {
            width: rem(22);
            height: rem(22);
            img {
              vertical-align: inherit;
            }
          }
        }
        .org-name {
          display: block;
          margin: 0 auto;
          color: #ffffff;
          line-height: 1;
          font-size: rem(12);
        }
        .self-brief {
          margin-top: rem(10);
          color: #ffffff;
          text-overflow: ellipsis;
          overflow: hidden;
          white-space: nowrap;
          font-size: rem(12);
        }
        .age {
          color: #ffffff;
          font-size: rem(12);
          span {
            display: inline-block;
            margin-right: rem(10);
          }
        }

      }

    }

  }
  .head-bottom-shade {
    position: absolute;
    bottom: 0;
    height: rem(35);
    width: 100%;
    background: rgba(0, 0, 0, 0.4);
    padding-left: rem(10);
    font-size: rem(15);
    .sound-address {
      width: rem(100);
      height: 100%;
      float: left;
      background: #ffffff;
      border-bottom: 1px solid #f2f4f5;
      position: absolute;
      padding: 0 rem(5);
      .audio-player {
        text-align: center;
        font-size: rem(12);
        background: #ffffff;
        color: #ff6c00;
        padding: rem(7);
        border-radius: rem(2);
        line-height: rem(22);
        height: rem(35);
        width: 100%;
        position: absolute;
        left:0;
        background: rgba(0,0,0,0);
      }
      img{
        width: rem(18);
        height: rem(18);
        position: absolute;
        left: rem(10);
        top: 50%;
        transform: translateY(-50%);
      }
      span {
        font-size: rem(15);
        display: inline-block;
        text-align: right;
        position: absolute;
        top: 50%;
        right: rem(10);
        transform: translateY(-50%);
        color: #9d9e9e;
      }
      .address {
        padding: rem(8) 0;
        text-align: center;
        color: #9d9e9e;
        font-size: rem(12);
        text-overflow: ellipsis;
        overflow: hidden;
        white-space: nowrap;

      }
    }
    .item-list {
      padding: rem(5) 0;
      padding-left: rem(100);
      display: block;
      .item-flex {
        display: inline-block;
        width: 31%;
        font-size: rem(12);
        color: #ffffff;
        margin: 0 auto;
        text-align: center;
        border-right: 1px solid rgba(255,255,255,0.5);
      }
      .item-flex:last-child {
        border-right: none;
      }
    }

  }
}