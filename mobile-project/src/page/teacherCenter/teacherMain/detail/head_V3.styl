.v3-teacher-info {
  position: absolute;
  bottom: rem(40);
  left: 0;
  padding: rem(10);
  /*overflow: hidden;*/
  width: 100%;
  text-shadow: rem(2) rem(2) rem(2) rgba(0,0,0,0.4);
  .avatar-intro {
    position: relative;
    padding-left: rem(100);
    .avatar {
      width: rem(85);
      height: rem(85);
      border-radius: rem(85);
      border: 2px solid #ffffff;
      overflow: hidden;
      position: absolute;
      left: 0;
      bottom: rem(10);
      img {
        width: 100%;
        height: 100%;
        border-radius: rem(85);
      }
    }
    .christmas-hat {
        width: rem(56);
        height: rem(56);
        left: rem(46);
        bottom: rem(67);
    }
    .christmas-tree {
        width: rem(72);
        height: rem(32);
        left: rem(6);
        bottom: rem(11);
    }
    .recommend {
      position: absolute;
      top: rem(12);
      left: rem(59);
      display: block;
      background: #ff9100;
      color: #ffffff;
      border-radius: rem(4);
      font-size: rem(10);
      width: rem(32);
      height: rem(18);
      line-height: rem(18);
      text-align: center;
    }

    .intro {
      padding: rem(8) 0;
      .name-sex {
        &.no-org {
          margin-bottom: rem(20);
        }
        .teacher-name {
          display: inline-block;
          color: #ffffff;
          font-size: rem(20);
          line-height: 1.3;
          text-overflow: ellipsis;
          overflow: hidden;
          white-space: nowrap;
          vertical-align: text-bottom;
        }
        .has-audio {
          max-width: 34%;
        }
        .no-audio {
          max-width: 73%;
        }
        .teacher-sex, .teacher-vip {
          display: inline-block;
          width: rem(20);
          height: rem(20);
          line-height: 1
          img {
            width: 100%;
            height: 100%;
            vertical-align: inherit;
          }
        }
        .teacher-vip {
          width: rem(22);
          height: rem(22);
          img {
            vertical-align: inherit;
          }
        }
        .teacher-gold {
          display: inline-block;
          height: rem(22);
          img {
            vertical-align: text-bottom;
          }
        }
      }
      .org-name {
        display: block;
        margin: 0 auto;
        color: #ffffff;
        line-height: 1;
        font-size: rem(12);
      }
      .self-brief {
        margin-top: rem(10);
        color: #ffffff;
        text-overflow: ellipsis;
        overflow: hidden;
        white-space: nowrap;
        font-size: rem(12);
      }
      .age {
        color: #ffffff;
        font-size: rem(12);
        span {
          display: inline-block;
          margin-right: rem(10);
        }
      }

    }

  }
  .audio-show {
    .audio-player {
      position: absolute;
      right: rem(10);
      top: 35%;
      transform: translateY(-35%);
      padding: rem(10);
      background: transparent;
      border-radius: rem(17);
      border: 1px solid #ffffff;
      width: rem(80);
      height: rem(36);
      opacity: 0.5;
    }
    img {
      width: rem(18);
      height: rem(18);
      vertical-align: sub;
      position: absolute;
      top: 31%;
      right: rem(64);
    }
    span {
      vertical-align: text-bottom;
      position: absolute;
      color: #ffffff;
      top: 30%;
      right: rem(26);
      font-size: rem(15);
    }

  }

}