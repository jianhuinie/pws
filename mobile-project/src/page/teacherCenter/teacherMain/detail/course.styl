.teacher-course {
  margin-top: rem(10);
  background: #ffffff;
  padding-left: rem(15);
  .title {
    padding: rem(10) rem(15) rem(10) 0;
  }
  .character {
    display: inline-block;
    font-size: rem(17);
  }
  .common {
    color: #ff6c00;
  }
  .red {
    color: #f95e5e;
  }
  .title-more-course {
    font-size: rem(13);
    display: inline-block;
    float: right;
    margin-right: rem(10);
    color: #9d9d9e;
    line-height: rem(28);
    position: relative;
    i {
      font-size: rem(15);
      position: absolute;
      top: 47%;
      right: rem(-15);
      transform: translateY(-47%);
    }
  }
  ul {
    width: 100%;
    padding: rem(6) 0;
    overflow-x: auto;
    white-space: nowrap;
    border-top: 1px solid #f2f4f5;
    padding-right: rem(10);
    overflow-y: hidden;
    li {
      vertical-align: bottom;
      width: rem(130);
      height: rem(140);
      display: inline-block;
      border: 1px solid #f2f4f5;
      margin-right: rem(5);
      position: relative;
      .img-background {
        height: rem(73.125);
        position: relative;
        display: block;
        line-height: 0;
        top: 0;
        left: 0;
        padding-top: 56.25%;
        .class-cover {
          width: 100%;
          position: absolute;
          top: 0;
          left: 0;
        }
        .fenqi{
          position: absolute;
          background: #37a4f5;
          border-radius: rem(2);
          top: rem(3);
          right: rem(3);
          color: #fff;
          font-size: rem(9);
          line-height: rem(9);
          padding: rem(4);
          &.hide {
            display: none;
          }
        }
        .video-play {
          width: rem(40);
          height: rem(40);
          border-radius: 50%;
          position: absolute;
          top: 50%;
          left: 50%;
          -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
          text-align: center;
          background: rgba(0,0,0,0.5);
          img {
            width: rem(15);
            height: rem(18);
            position: absolute;
            top: 50%;
            left: 55%;
            transform: translate(-55%, -50%);
          }
        }

      }
      .info {
        padding: rem(5);
        font-size: rem(12);
        p {
          text-overflow: ellipsis;
          white-space: normal !important;
          overflow: hidden;
          -webkit-box-orient: vertical;
          -webkit-line-clamp: 2;
          display: -webkit-box;
          line-height: 1.4;
          .course-type {
            color: #3fa5f2;
          }
        }
        .course-price {
          position: absolute;
          bottom: rem(2);
          margin-top: rem(2);
          font-size: rem(15);
          .symbol {
            font-size: rem(12)
          }
          color: #ff5722
        }
      }
    }

    .more-li {
      font-size: rem(15);
      height: rem(140);
      line-height: rem(140);
      color: #9d9d9e;
      background: #f2f4f5;
      text-align: center;
      margin-right: 0;
      position: relative;
      img {
        width: rem(40);
        height: rem(40);
        position: absolute;
        top: 34%;
        transform: translate(-50%,-34%);
        left: 50%;
      }
      span {
        display: inline-block;
        position: absolute;
        top: 15%;
        transform: translate(-50%,0);
        left: 50%;
        color: #9d9d9e;
        height: rem(40);
      }
    }
  }
  .coupon {
    font-size: rem(13);
    padding: rem(7) rem(15) rem(7) 0;
    line-height: rem(24);
    display: block;
    img {
      width: rem(21.5);
      height: rem(21.5);
      vertical-align: top;
      margin-right: rem(5);
    }
    i {
      font-size: rem(15);
      color: #9d9d9e;
      float: right;
      line-height: rem(24);
    }
  }
}