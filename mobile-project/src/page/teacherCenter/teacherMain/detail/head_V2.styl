.headV2-bottom-shade {
  position: absolute;
  bottom: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0.4);
  padding: rem(10);
  font-size: rem(15);
  .headV2-teacher-name {
    color: #ffffff;
    font-size: rem(20);
    .name {
      display: inline-block;
      color: #ffffff;
      font-size: rem(20);
      vertical-align: top;
      line-height: 1.2;
      text-overflow: ellipsis;
      overflow: hidden;
      white-space: nowrap;
      max-width: 50%;


    }
    .teacher-sex, .teacher-vip {
      display: inline-block;
      width: rem(20);
      height: rem(20);
      line-height: 1;
      img {
        width: 100%;
        height: 100%;
        vertical-align: inherit;
      }
    }
    .teacher-vip {
      width: rem(22);
      height: rem(22);
    }
    .teacher-gold {
      display: inline-block;
      height: rem(22);
      img {
        vertical-align: text-bottom;
      }
    }
  }
  .headV2-other-info {
    padding-left: rem(5);
    border-left: 2px solid #ff9100;
    .short-intro {
      max-width: 70%;
      text-overflow: ellipsis;
      overflow: hidden;
      white-space: nowrap;
    }
    .short-intro, .org-name,.age {
      color: #ffffff;
      font-size: rem(13);
    }
  }
  .audio-show {
    .audio-player {
      position: absolute;
      right: rem(10);
      top: 50%;
      transform: translateY(-50%);
      padding: rem(10);
      background: transparent;
      border-radius: rem(17);
      border: 1px solid #ffffff;
      width: rem(80);
      height: rem(36);
      opacity: 0.5;
    }
    img {
      width: rem(18);
      height: rem(18);
      vertical-align: sub;
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      right: rem(64);
    }
    span {
      vertical-align: text-bottom;
      position: absolute;
      color: #ffffff;
      top: 50%;
      transform: translateY(-50%);
      right: rem(26);
      font-size: rem(15);
    }

  }
}
.edit-background {
  display: none;
  color: #ffffff;
  position: absolute;
  top: rem(40);
  right: rem(10);
  img {
    width: rem(100);
    height: rem(27);
  }
}

.V2-item-list{
  background: #ffffff;
  display: flex;
  justify-content: space-around;
  padding: rem(5);
  border-bottom: 1px solid #f2f4f5;
  .V2-item-flex{
    flex: 1;
    text-align: center;
    line-height: 1.4;
    .figure {
      color: #3d3d3d;
    }
    .explain {
      color: #9d9d9e;
    }
    .headV2-no-comment {
      line-height: 2.6;
      color: #9d9d9e;
    }
  }
}
.line {
  margin-top: rem(10);
  width: rem(1);
  height: rem(18);
  border-right: 1px solid #f2f4f5;
}
