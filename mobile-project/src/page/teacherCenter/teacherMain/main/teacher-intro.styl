.teacher-intro {
  background: #ffffff;
  padding-left: rem(15);
  .address {
    display: block;
    height: rem(44);
  }
  .address, .personal-identify {
    padding: rem(10) 0;
    padding-right: rem(15);
    position: relative;
    .title {
      float: left;
      display: inline-block;
      text-align: left;
      width: rem(70);
      font-size: rem(15);
      color: #9d9e9e;
      margin-right: rem(10);
    }
    .distance {
      display: inline-block;
      position: absolute;
      right: rem(30);
      top: 50%;
      transform: translateY(-50%);
      color: #9d9d9e;
    }
    .info {
      display: block;
      font-size: rem(15);
      color: #3d3d3d;
      margin-left: rem(72);
      text-overflow: ellipsis;
      overflow: hidden;
      white-space: nowrap;
      .one-line {
        position: relative;
        .icon {
          position: absolute;
          top: 63%;
          transform: translateY(-73%);
        }
        .cert {
          margin-left: rem(18);
        }
      }
      span {
        display: inline-block;
        margin-right: rem(10);
        font-size: rem(15);
        img {
          margin-right: rem(3);
          vertical-align: sub;
          width: rem(20);
          height: rem(20);
        }
      }
    }
    .icon-angle-right {
      float: right;
      font-size: rem(15);
      color: #9d9e9e;
      position: absolute;
      right: rem(15);
      top: 48%;
      transform: translateY(-48%);
    }
    .icon-check-o-org {
      color: #9d9e9e;
    }
  }
  .address {
    border-bottom: 1px solid #ebeced;
    .info {
      width: 70%;
    }
  }
  .personal-identify {
    border-bottom: 1px solid #ebeced;
  }
  .feature {
    padding-right: rem(15);
    position: relative;
    line-height: rem(40);
    .gray-400 {
      color: #9d9e9e;
      font-size: rem(15);
      margin-right: rem(10);
      width: rem(70);
    }
    > span {
      float: left;
    }
    .skill {
      height: rem(22.5);
      font-size: rem(13);
      line-height: rem(22.5);
      padding: 0 rem(6.4);
      margin-right: rem(6.4);
      border: 1px solid #e6e6e6;
      display: inline-block;
    }
    .skill:last-child{
      margin-right: 0;
    }
    .slide-down {
      margin-left: rem(40);
      height: rem(40);
      overflow: hidden;
      padding-right: rem(23.2);
    }
    .content {
      margin-left: rem(40);
      height: 0;
      overflow: hidden;
    }
    .icon-angle-down, .icon-angle-up {
      position: absolute;
      top: rem(15);
      right: rem(15);
      color: #9d9d9d;
      z-index: 0;
    }
    .icon-angle-down {
      display: none;
    }
  }
}

.teacher-other-intro {
  border-top: 1px solid #ebeced;
  background: #ffffff;
  padding-left: rem(15);
  padding-bottom: rem(15);
  .self-intro, .relative-case, .past-experience, .student-comment,.img-text {
    padding-right: rem(15);
    .title {
      display: inline-block;
      font-size: rem(15);
      padding-top: rem(18);
      margin-bottom: rem(8);
      color: #9d9e9e;
      width: 100%;
    }
    .default {
      color: #ff6c00;
    }
    .red {
      color: #f95e5e;
    }
    .info {
      border-radius: rem(2);
      border: 1px solid #ebeced;
      background: #f7f9fa;
      font-size: rem(15);
      padding: rem(9) rem(10);
      word-break: break-all;
      margin-bottom: rem(10);
    }
    .info:last-child {
      margin-bottom: 0;
    }
  }
  .past-experience {
    font-size: rem(14);
    .one-exp-line {
      margin-top: rem(10);
      .date-orange,.date-default,.date-red {
        color: #b99d73;
      }
      .date-coffee {
        color: #738fb9;
        .date-space {
          display: inline-block;
          margin: 0 rem(3);
        }
      }
      .exp-des {
        padding: rem(8) rem(10);
        margin-top: rem(10);
        position: relative;
        .triangle {
          display: inline-block;
          position: absolute;
          top: rem(-16);
          left: rem(20);
          widht: 0;
          height: 0;
          border-style: solid;
          border-width: 8px;
        }
        .triangle-orange,.triangle-default,.triangle-red {
          border-color: transparent transparent #fff9f0 transparent;
        }
        .triangle-coffee {
          border-color: transparent transparent #e3f2fd transparent;
        }
      }
      .exp-orange,.exp-default,.exp-red{
        border: 1px solid #fff3e0;
        color: #6d6d6e;
        background: #fff9f0;
        word-break: break-all;
      }
      .exp-coffee {
        border: 1px solid #e0ecff;
        color: #3d3d3d;
        background: #e3f2fd;
        word-break: break-all;
      }
    }
    .one-exp-line:first-child {
      margin-top: rem(2);
    }
    .hide {
      display: none;
    }
    .exp-spread {
      margin: 0 auto;
      text-align: center;
      font-size: rem(25);
      margin-top: rem(10);
      .icon {
        color: #9d9e9e;
        font-size: rem(20);
      }
    }
  }

  .intro-comment {
    .score-info {
      .icon-star_all {
        color: #dcddde;
      }

      .star-shine {
        color: #ff6c00;
      }
      .star-half {
        display: inline-block;
        position: relative;
        line-height: 0;

        .icon-star_half {
          color: #ff6c00;
          position: absolute;
          left: 0;
          top: 0;
        }
        .red {
          color: #f95e5e;
        }
      }
      .red {
        color: #f95e5e;
      }
        .score-detail {
          font-size: rem(16);
        }

    }
      .score-tag {
        margin-top: rem(5);
        span {
          display: inline-block;
          font-size: rem(13);
          border: 1px solid #dcddde;
          padding: 0 rem(5);
          margin-right: rem(5);
        }
      }
    .evaluation-info {
      font-size: rem(13);
      padding-bottom: rem(15);
      margin-top: rem(10);
      .eva-detail {
        margin-top: rem(7);
        font-size: rem(13);
        .eva-img {
          float: left;
          height: rem(30);
          width: rem(30);
          border-radius: 50%;
          img {
            width: 100%;
            height: 100%;
            border-radius: 50%;
          }
        }
        .eva-user {
          margin-left: rem(40);
          font-size: rem(12);
          .comment-time {
            font-size: rem(12);
            color: #9d9d9e;
          }
        }
        > p {
          font-size: rem(13);
          display: -webkit-box;
          text-overflow: ellipsis;
          white-space: normal;
          -webkit-box-orient: vertical;
          -webkit-line-clamp: 3;
          overflow: hidden;
          line-height: 1.5;
          margin-top: rem(10);
        }
      }
    }
    .more {
      text-align: center;
      span {
        display: inline-block;
        margin: 0 auto;
        text-align: center;
        font-size: rem(14);
        color: #9d9d9e;
        border: 1px solid #dcddde;
        padding: rem(5) rem(10);
      }
    }
  }
}

.img-text {
  width: 100%;
  overflow-x: auto;
  div{
    word-break: break-all;
  }
  * {
    p {
      max-width: 100%;
    }
  }
  * {
    img {
      max-width: 100%;
    }
  }
}