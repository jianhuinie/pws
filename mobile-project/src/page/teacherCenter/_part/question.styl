.question {
    background: white;
    margin: rem(10) 0;
    padding: rem(4) 0 rem(15) 0;
    .question-count {
        padding: rem(10);
        font-family: PingFang-SC-Regular;
        font-size: rem(15);
        color: #ff9100;
        letter-spacing: rem(0);
        text-align: left;
    }
    .question-list,.answer-list {
        margin-top: rem(10);
        margin-bottom: rem(15);
        .question-icon,.answer-icon {
            float: left;
            background: #ff9100;
            border-radius: rem(3);
            width: rem(30);
            font-family: PingFang-SC-Regular;
            font-size: rem(15);
            color: #ffffff;
            letter-spacing: rem(0);
            text-align: center;
            padding: rem(3) 0;
            margin: rem(4) rem(10);
        }
        .answer-icon {
            background: #6287d5;
        }
        .question-content,.answer-content {
            float: left;
            width: 78%;
            font-family: PingFang-SC-Regular;
            font-size: rem(14);
            color: #3d3d3e;
            letter-spacing: rem(-0.16);
            line-height: rem(20);
            text-align: left;
            margin-bottom: rem(10);
            margin-top: rem(4);
            word-break: break-all;
        }
        .ask-img {
            width: rem(265);
            margin-left: rem(50);
            margin-bottom: rem(10);
            .ask-img-item {
                float: left;
                width: rem(84);
                height: rem(84);
                margin-left: rem(4);
                margin-bottom: rem(4);
                .ask-single-img {
                    max-height: rem(200);
                }
                img {
                    height: 100%;
                    width: 100%;
                }
            }
            .ask-img-item-single {
                float: left;
                max-width: rem(200);
                max-height: rem(200);
                .ask-single-img {
                    max-height: rem(200);
                }
                img {
                    height: 100%;
                    width: 100%;
                }
            }
        }
        .answer-img {
            max-height: rem(200);
            max-width: rem(200);
            margin-left: rem(50);
            margin-bottom: rem(10);
        }
        .answer-audio-show {
            position: relative;
            margin-left: rem(50);
            .answer-audio {
                width: rem(157);
                background: #84D55A;
                height: rem(40);
                border-radius: rem(8);
                display: inline-block;
                margin-right: rem(10);
            }
            .answer-audio-icon {
                position: absolute;
                left: rem(18);
                width: rem(14);
                height: rem(20);
                top: rem(10);
            }
            .answer-audio-lenth {
                font-family: PingFang-SC-Regular;
                font-size: rem(13);
                color: #6d6d6e;
                text-align: center;
                position: absolute;
                top: rem(15);
                display: inline-block;
            }
        }
    }

    .more-detail {
        margin-top: rem(15);
        text-align: center;
        font-family: PingFang-SC-Regular;
        font-size: rem(13);
        color: #9d9e9e;
        letter-spacing: rem(-0.14);
        border: 1px solid #cdcdce;
        border-radius: rem(3);
        width: 30%;
        margin-left: 35%;
        padding: rem(6) rem(4);
    }

}