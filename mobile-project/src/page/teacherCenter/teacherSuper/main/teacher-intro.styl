.avatar-other {
  padding-top: rem(20);
  text-align: center;
  .teacher-avatar {
    margin: 0 auto;
    text-align: center;
    .avatar-sex {
      position: relative;
      width: rem(70);
      height: rem(70);
      left: 50%;
      transform: translateX(-50%);
      .avatar {
        width: rem(70);
        height: rem(70);
        border-radius: rem(70);
      }
      .sex {
        width: rem(20);
        height: rem(20);
        position: absolute;
        right: 0;
        bottom: 0;
      }
    }

  }
  .teacher-name {
    margin:0 auto;
    text-align: center;
    font-size: rem(17);
    margin-top: rem(10);
    color: $G500;
    position: relative;
    .teacher-vip {
      display: inline-block;
      width: rem(17);
      height: rem(17);
      margin-left: rem(3);
      position: absolute;
      top: 40%;
      transform: translateY(-50%);
      img {
        width: 100%;
        height: 100%;
        vertical-align: inherit;
      }
    }
  }
  .org-name {
    margin-top: rem(3);
    display: inline-block;
    padding: 0 rem(4);
    border: 1px solid $C500;
    font-size: rem(11);
    color: $C500;
    border-radius: rem(2)
  }
  .teacher-gold {
    display: inline-block;
    height: rem(20);
    margin-left: rem(3);
    img {
      height: 100%;
      vertical-align: bottom;
    }
  }
  .personal-identify {
    margin-top: rem(20);
    display: flex;
    justify-content: space-around;
    .info {
      flex: 1;
      font-size: rem(12);
      color: $G300;
      img {
        width: rem(24);
        height: rem(24);
      }
    }
  }
}
.introduce,.relative-case,.student-comment,.past-experience {
  margin-top: rem(30);
  .title {
    font-size: rem(16);
    color: $C500;
  }
  .info {
    font-size: rem(14);
    word-break: break-all;
    margin-top: rem(8);
    color: $G400;
  }
  .info:first-child {
    margin-top: 0;
  }
  .overflow-info {
    overflow: hidden;
  }
  .overflow-height {
    max-height: rem(260);
  }
  .more-info {
    padding-top: rem(10);
    display: none;
    margin: 0 auto;
    text-align: center;
    color: #b6b6b6;
    .icon {
      font-size: rem(15);
      vertical-align: middle;
    }
  }
}
.relative-case {
  .title {
    margin-bottom: rem(10);
  }
}
.past-experience {
  .date {
    display: inline-block;
    color: $G500;
    margin-bottom: rem(3);
  }
}
.student-comment {
  .title {
    display: inline-block;
    margin-bottom: rem(5);
  }
}
.intro-comment {
  .score-info {
    .icon-star_all {
      color: $g200;
    }

    .star-shine {
      color: $C500;
    }
    .star-half {
      display: inline-block;
      position: relative;
      line-height: 0;

      .icon-star_half {
        color: $C500;
        position: absolute;
        left: 0;
        top: 0;
      }
    }
    .score-detail {
      font-size: rem(16);
    }

  }
  .score-tag {
    margin-top: rem(5);
    span {
      display: inline-block;
      font-size: rem(13);
      border: 1px solid #dcddde;
      padding: 0 rem(5);
      margin-right: rem(5);
    }
  }
  .evaluation-info {
    font-size: rem(13);
    padding-bottom: rem(15);
    margin-top: rem(10);
    .eva-detail {
      margin-top: rem(7);
      font-size: rem(13);
      .eva-img {
        float: left;
        height: rem(30);
        width: rem(30);
        border-radius: 50%;
        img {
          width: 100%;
          height: 100%;
          border-radius: 50%;
        }
      }
      .eva-user {
        margin-left: rem(40);
        font-size: rem(12);
        .comment-time {
          font-size: rem(12);
          color: #9d9d9e;
        }
      }
      > p {
        font-size: rem(13);
        display: -webkit-box;
        text-overflow: ellipsis;
        white-space: normal;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 3;
        overflow: hidden;
        line-height: 1.5;
        margin-top: rem(10);
      }
    }
  }
  .more {
    text-align: center;
    span {
      display: inline-block;
      margin: 0 auto;
      text-align: center;
      font-size: rem(14);
      color: #9d9d9e;
      border: 1px solid #dcddde;
      padding: 0 rem(10);
      height: rem(36);
      line-height: rem(36);
    }
  }
}
.img-text {
  margin: 0 auto;
  text-align: center;
  border: 1px solid $C500;
  padding: rem(5) rem(10);
  border-radius: rem(20);
  margin-top: rem(20);
  font-size: rem(15);
  color: $C500;
}

#detail-container {
  display: none;
  .title {
    padding: rem(20) 0;
    font-size: rem(16);
    color: #00BCD4;
  }
  #detail {
    word-break: break-all;
    p {
      max-width: 100% !important;
    }
    img {
      max-width: 100% !important;
    }
  }
}
