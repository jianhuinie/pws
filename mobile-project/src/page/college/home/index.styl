@import "page/_base/base.styl";
@import "page/college/home/_part/playIcon/index.styl";
@import "page/college/home/_part/cards/index.styl";
@import "page/college/home/_part/desc_img_lateral/index.styl";
@import "page/college/home/_part/img_desc_lateral/index.styl";
@import "page/college/home/_part/img_desc_vertical/index.styl";
@import "page/college/ui/search/index.styl";
button, input, select, textarea {
    outline: 0;
    margin: 0;
    padding: 0;
}
.img-wrap-16-9 {
    position: relative;
    padding-bottom: 56.25%;
}

.img-wrap-16-9 img {
    position: absolute;
    width: 100%;
    height: 100%;
}
.ellipsis {
    zoom: 1;
    overflow: hidden;
    -o-text-overflow: ellipsis;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.one-line {
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    display: -webkit-box;
    white-space: inherit;
}
.double-line {
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    display: -webkit-box;
    white-space: inherit;
}
.college-container {
	.count {
		font-size: rem(11);
		color: #9d9e9e;
		.icon-ic_redu {
			margin-left: rem(20);
		}
	}
	background: #f8f8f8;
	.swiper-banner-container {
		position: relative;
		.swiper-wrapper {
			height: rem(140);
		}
		.slider-page {
			list-style: none;
		    margin: 0;
		    padding: 0 rem(7) 0 0;
		    position: absolute;
		    height: rem(24);
		    right: 0;
		    bottom: 0;
		    z-index: 10;
		    li {
		    	display: inline-block;
    			padding: 0 rem(2);
    			position: relative;
			    height: 100%;
			    float: left;
			    span {
			    	text-indent: rem(-9999);
				    width: rem(8);
				    height: rem(8);
				    border: 1px solid #fff;
				    border-radius: rem(4);
				    display: inline-block;
				    margin: rem(2) rem(15);
				    background-color: transparent;
			    }
			    span.on {
			    	background-color: #fff;
			    }
		    }
		}
	}
	.content {
		.content-item {
			.header {
				position: relative;
				background: #ffffff;
				box-shadow: rem(0) rem(0) rem(0) rem(0) #ececec;
				width: 100%;
				height: rem(40);
				margin-top: rem(10);
				font-size: rem(15);
				color:#3d3d3e;
				line-height: rem(40);
				border-bottom: rem(1) solid #f5f5f6;
				.name {
					position: absolute;
					left: rem(10);
					.split {
						display: inline-block;
						background:#2b5490;
						width: rem(4);
						height: rem(15);
						position: absolute;
						top: rem(12.5);
					}
					.val {
						margin-left: rem(8);
					}
				}
				.more {
					font-size:rem(13);
					color:#9d9d9e;
					position: absolute;
					right: rem(5);
					>span {
						margin-right: rem(5);
					}
				}
			}
		}
		.new-user {
			margin-top: rem(10);
			.more-contact {
				font-size: rem(13);
				color:#6d6d6e;
				line-height: rem(30);
				padding: rem(20) rem(10);
				.title {
					font-size: rem(15);
					color:#3d3d3e;
				}
			}
			.more-qrcode {
				background-color: #fff;
				padding: rem(20) 0;
				.contact {
					font-size: rem(18);
					color: #3d3d3e;
					letter-spacing: rem(0.32);
					line-height: rem(17);
					text-align: center;
				}
				.qrcode {
					width: 80%;
				    margin: 0 auto;
				    display: flex;
				    justify-content: space-around;
				    margin-top: rem(20);
				    .container {
				    	width: 40%;
    					display: inline-block;
    					text-align: center;
				    	.div-img {
				    		width: rem(60);
				    		display: inline-block;
				    	}
				    	.title {
							font-size: rem(13);
							color:#3d3d3e;
							line-height: rem(20);
				    	}
				    	.code {
							font-size: rem(13);
							color:#3d3d3e;
							line-height: rem(14);
				    	}
				    }
				}
			}
		}
	}
	.footer {
		background:#2b5490;
		height: rem(58);
		font-size: rem(10.5);
		color:#fff;
		text-align: center;
		line-height: rem(58);
	}
}