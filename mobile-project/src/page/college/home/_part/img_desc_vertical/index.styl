.desc_img_vertical {
	background-color: #fff;
	.items {
		padding: rem(2) 0;
	    margin: 0;
	    font-size: 0;
	    display: table;
	    width: 100%;
		.item {
			display: inline-block;
	        width: 50%;
	        margin-bottom: rem(5);
	        letter-spacing: normal;
	        vertical-align: top;
	        line-height: 1.5;
	        -webkit-box-sizing: border-box;
	        box-sizing: border-box;
	        .container {
	        	width: 95%;
	        	margin: 0 auto;
	        	border: rem(1) solid #f5f5f6;
	        	.img-bg {
			        display: inline-block;
			        width: 100%;
			        overflow: hidden;
			       	position: relative;
                    .play-icon {
                        left: 50%;
					    top: 50%;
					    transform: translate(-50%, -50%);
					    right: initial;
					    bottom: initial;
                        .mask {
                            width: rem(28);
                            height: rem(28);
                            border-radius: rem(14);
                        }
                    }
		        }
		        .content {
		        	font-size: rem(13);
		        	margin-top: rem(10);
			        padding: 0 rem(8);
			        width: 100%;
			        display: inline-block;
			       	.title {
						font-size: rem(15);
						color: #3d3d3e;
                        height: rem(44);
					}
					.desc {
						font-size: rem(13);
						color:#9d9d9e;
						line-height: rem(19);
					}
					.count {
						margin-bottom: rem(6);
					}
		        }
	        }
		}
	}
}
