.play-icon {
	position: absolute;
	right: rem(10);
    bottom: rem(10);
	border-radius: rem(14);
	overflow: hidden;
	.mask {
		background: #000;
		opacity: 0.3;
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
	}
    .icon-ic_play {
    	font-size: rem(28);
	    color: #fff;
	    position: relative;
	    vertical-align: middle;
    }
}