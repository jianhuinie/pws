@import "page/_common/swiper/swiper.styl";
.swiper-3d-container {
	background-color: #fff;
	.swiper-wrapper {
		height: rem(216);
		padding: rem(20);
		.swiper-slide {
			width: rem(210);
			height: rem(209);
			box-shadow: 0 0 rem(30) rgba(0, 0, 0, 0.5);
    		border-radius: rem(4);
			.title {
				font-size: rem(14);
				color:#6d6d6e;
				line-height: rem(22);
				padding: rem(8);
				max-height: rem(49);
			}
			.desc {
				padding: rem(8);
				font-size: rem(11);
				color:#9d9e9e;
				line-height: rem(11);
			}
			.slide-img {
				width: rem(210);
				height: rem(119);
				position: relative;
				.play-icon {
					position: absolute;
					top: rem(45);
					left: rem(90);
					border-radius: rem(20);
					overflow: hidden;
					.mask {
						background: #000;
						opacity: 0.3;
						position: absolute;
						top: 0;
						left: 0;
						right: 0;
						bottom: 0;
                        width: rem(40);
                        height: rem(40);
                        border-radius: rem(20);
					}
				    .icon-ic_play {
				    	font-size: rem(40);
					    color: #fff;
					    position: relative;
				    }
				}
				img {
					border-top-left-radius: 4px;
					border-top-right-radius: 4px;
				}
			}
		}
	}
}