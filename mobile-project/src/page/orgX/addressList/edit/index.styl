@import "../common.styl";

select:focus,
textarea:focus {
    outline: none !important;
    // border:rem(1) solid #fff;
    // box-shadow: 0 0 rem(10) #719ece;
}

.name,
.mobile,
.email,
.address,
.address-detail {
    padding: 0 rem(6) 0 rem(15);
    background: #fff;
}
.name,
.mobile,
.email,
.address {
    position: relative;
    display: -webkit-flex;
    display: -moz-flex;
    display: -ms-flex;
    display: -o-flex;
    display: flex;
    // overflow: auto;
    // white-space: initial;
    // in order to fit iphone 4-5, so如果想换行就换吧，反正我不设定高度
    // height: rem(46);
    line-height: rem(46);
    border-bottom: rem(1) solid  #ededee;
    .desc {
        display: inline-block;
        flex: 22;
        font-size: rem(15);
        color: #3c3c3c;
    }
    .content {
        display: inline-block;
        flex: 78;
        border: none;
        // padding-left: rem(23);
        font-size: rem(13);
        color: #3d3d3e;
    }
    #province,
    #city,
    #area {
        position: relative;
        display: inline-block;
        flex: 26;
        font-size: rem(12);
        width: 40%;
    }
    .content-address {
        position: absolute;
        top: rem(10);
        right: rem(18);
        text-align: right;
        color: #9d9d9e;
    }
    .icon {
        position: absolute;
        right: rem(6);
        top: rem(13);
        color: #9d9d9e;
    }
}
.address-detail {
    padding-top: rem(6);
    height: rem(101);
    textarea {
        border: 0;
        width: 100%;
        height: 100%;
        resize: none;
        font-size: rem(14);
    }
}
.actions {
    // position: fixed;
    position: relative;
    bottom: 0;
    left: 0;
    right: 0;
    line-height: rem(42);
    font-size: rem(17);
    text-align: center;
    .save,
    .save-and-use {
        margin: rem(15);
        height: rem(42);
        display: block;
        border-radius: rem(4);
        border:rem(1) solid #ff9100;
        background: #ff9100;
        color: #fff;
    }
}

::-webkit-input-placeholder { /* WebKit, Blink, Edge */
    color: #9d9d9e;
}
:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
   color: #9d9d9e;
   opacity: 1;
}
::-moz-placeholder { /* Mozilla Firefox 19+ */
   color: #9d9d9e;
   opacity: 1;
}
:-ms-input-placeholder { /* Internet Explorer 10-11 */
   color: #9d9d9e;
}