@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";

clearfix() {
    &:before,
    &:after {
        content: " ";
        display: table;
    }
    &:after {
        clear: both;
    }
    zoom: 1;
}
.clearfix {
    clear: both;
}

.hidden {
    display: none !important;
}

.primary-content {
    color: #ff9100;
}

body {
    background: #fff;
}

#main {
    position: relative;
}

.apply-service,
.refund-reason,
.refund-num {
    position: relative;
    display: -webkit-flex;
    display: -moz-flex;
    display: -ms-flex;
    display: -o-flex;
    display: flex;
    margin: rem(15) rem(7);
    padding: rem(5);
    background: #ededee;
    .must-fill {
        flex: 1;
        position: relative;
        top: rem(2);
        left: rem(2);
        color: #fc5c5a;
    }
    .desc,
    .icon {
        flex: 6;
        font-size: rem(15);
        color: #9d9d9e;
    }
    select {
        max-width: 76%;
        flex: 19;
        font-size: rem(13);
        color: #3d3d3e;
        .num {
            color: #fc5c5a;
        }
    }
    select:focus {
        outline: none !important;
    }
    .icon {
        position: absolute;
        top: rem(10);
        right: rem(5);
    }
}
.money-ps {
    font-size: rem(12);
    color: #9d9d9e;
}

.action {
    position: absolute;
    // position: fixed;
    bottom: rem(-80);
    left: 50%;
    margin-left: rem(-48);
    // right: 0;
    text-align: center;
    // margin-left: rem(48);
    // width: rem(96);
    // right: 50%;
    .submit-apply {
        position: relative;
        // left: 50%;
        display: block;
        // margin: rem(15);
        padding: 0 rem(15);
        // width: 100%;
        text-align: center;
        border: 1px solid #ff9100;
        border-radius: rem(4);
        height: rem(39);
        line-height: rem(39);
        color: #ff9100;
    }
}