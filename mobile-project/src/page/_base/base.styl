html, body {
  //font-family: "Helvetica Neue", Helvetica, Verdana, san-serif;
  font-family: PingHei, "Hiragino Sans GB", "Microsoft YaHei";
}

body{
  background-color: #f2f4f5;
}

body, h1, h2, h3, h4, h5, h6, hr, p, blockquote, dl, dt, dd, ul, ol, li, pre, form, fieldset, legend, button, input, textarea, th, td {
  margin: 0;
  padding: 0
}

ul, ol, li {
  list-style: none
}

h1, h2, h3, h4, h5, h6 {
  font-size: 100%
}

a {
  text-decoration: none;
  outline: 0;
}

body, a {
  color: #555555;
}

.clearfix:after {
  content: " ";
  display: block;
  clear: both;
  height: 0;
}
.clearfix {
  zoom: 1;
}

.line-clamp{
  overflow: hidden;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  display: -webkit-box;
  white-space: inherit;
}

.line-clamp-2{
  -webkit-line-clamp: 2;
}

.line-clamp-3{
  -webkit-line-clamp: 3;
}


.hide{
  display : none;
}

