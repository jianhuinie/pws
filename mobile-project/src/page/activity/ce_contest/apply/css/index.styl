@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";
@import "page/_common/footer/footer.styl";

.nav-bar{
  background-color: #0089f9;
  color:#fff;
  .icon-back:before{
    color:#fff;
  }
}

.apply{
  background-color : #fff;

  padding-bottom : rem(20);
}

.m-form{
  padding:rem(15) rem(15);

  .m-item{
    margin:rem(6) rem(0);
    zoom:1;
    position : relative;
    .m-title{
      position : absolute;
      left:rem(5);
      top:rem(5);
      font-size:rem(13);
      color:#666;
      span{
        position : absolute;
        color:red;
        left:rem(-7);
        top:rem(2);
      }
    }
    .m-set{
      margin-left:rem(75);
      padding:rem(3) rem(0);
      border:1px solid #ccc;
      input{
        height:rem(25);
        line-height : rem(25);
        border:0px;
        outline : none;
        padding:0 rem(5);
        width:90%;
        font-size:rem(12);
        color:#333;
      }
      textarea{
        height:rem(145);
        width:95%;
        padding-left:rem(5);
        outline : none;
        border : 0px;
        font-size : rem(12);
      }
      select{
        font-size:rem(12);
      }
    }
    .short{
      width:rem(100);
    }
    .m-set-avatar{
      position : relative;
      width: rem(100);
      height:rem(100);
      line-height : rem(100);
      text-align : center;
      background-color : #ebebeb;
      font-size:rem(12);
      color:#666;
      img{
        position: absolute;
        z-index : 0;
        width:100%;
        height:100%;
        top:rem(0);
        left:rem(0);
        outline : none;
        border:0px;
        background-color : #fff;
      }
      .file{
        position : absolute;
        z-index : 100;
        height: rem(100);
        width: rem(100);
        left:rem(0);
        padding:rem(0);
        margin:rem(0);
        top:rem(0);
        opacity:0;
      }
      .form-element{
        position : absolute;
        z-index : -1;
        left:rem(-1000);
        top:rem(-1000);
        opacity : 0;
      }
    }
    .select{
      border:0px;
      line-height : 2.2;
      padding:rem(0);
      select{
        width:rem(100);
        height:rem(25);
        border:1px solid #ccc;
        background-color : #fff;
      }
    }
    .error{
      border: 1px solid red;
    }
  }
}
.m-submit{
  width:rem(140);
  height:rem(38);
  line-height : rem(38);
  vertical-align : middle;
  text-align : center;
  margin-top:rem(26);
  background-color : #ff3360;
  margin: auto;
  color:#fff;
  border-radius : rem(2);
}

