@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";
.nav-bar{
  background-color: #0089f9;
  color:#fff;
  .icon-back:before{
    color:#fff;
  }
}
.detail{
  margin:rem(0) rem(10);
}
.left{
  float:left;
}
.one-line {
  overflow: hidden;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  display: -webkit-box;
  white-space: inherit
}
.detail-title{
  margin-top:rem(16);
  font-size:rem(14);
  color:#333;
}
.detail-sublime{
  margin-top:rem(5);
  font-size:rem(11);
  color:#999;
}
.detail-date{
  margin-right:rem(14);
}
.detail-info{
  font-size:rem(13);
  color:#666;
  margin-top:rem(13);
}
img{
  width:100%;
  height:100%;
}

.detail-img{
  margin-top:rem(15);
  height:rem(138);
}