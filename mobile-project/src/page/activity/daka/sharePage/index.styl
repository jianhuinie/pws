@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";
$color = rgba(200,200,200,.3);
body {
    background: rgb(249, 216, 130);

    background-size: 100%;
}

trem(value)
    return value/rem(1600)

.tstyle{
    border-radius: rem(20);
    position: relative;
    height: rem(30);
    background: #fff;
}
.content-p{
    height: trem(47);
    position: relative;
    text-align: center;
}
.detail-content {
    box-shadow: rem(0) rem(-8) trem(15) $color;
    background: #fff;
    border-radius: rem(20);
    margin: 0 rem(10);
    margin-top: trem(-25);
    z-index: 100;
    position: relative;
    padding-bottom: trem(20);
}
.t-01{
    margin: 0 trem(20);

}
.t-02{
    margin: trem(-25) trem(15) 0 trem(15);
    box-shadow: rem(0) rem(-8) trem(10) $color;
}
.content-box {
    position: relative;
    margin-top: trem(100);
    width: 100%;
    .cbg-img {
        width: 100%;
        display: block;
        position: absolute;
        top: 0;
        left: 0;
    }
    .sign-time{
        p{
            font-size: trem(14);
            margin-top: trem(13);
            text-align: center;
            color: #6d6d6e;
        }
    }
    .u-img {
        border: 3px solid #fff;
        background: #fff;
        width: trem(94);
        height: trem(94);
        border-radius: 100%;
        margin: 0 auto;
        overflow: hidden;
        margin-top: trem(-41);
        position: absolute;
        display: inline-block;
        margin-left: trem(-48);
        img {
            width: 100%;
            height: 100%;
            display: block;
            border-radius: 100%;
        }
    }

}
.action-btn{
    background:#ffffff;
    border-radius:trem(100);
    width:trem(125);
    height:trem(40);
    margin: trem(27) auto 0 auto;
    font-size: trem(14);
    line-height: trem(40);
    color:#faaa39;
    text-align: center;

}
.micro-line {
    margin: trem(40) trem(20) 0;
    line-height: 1.5;
    font-size: trem(14);
    .h5 {
        color: #6d6d6e;
        text-align: left;
    }
    .m-content{
        margin-top: trem(10);
    }
    p {
        font-size:trem(14);
        color:#3c3c3c;
        line-height:1.5;
        text-align:left;
    }
}
.honor {
    color: #9d9e9e;
    text-align: center;
    line-height: trem(20);
    font-size: trem(14);
    span {
        color: #ffca7c;
    }
}



.GSX_Dialog_buttons {
    display: none!important;
}

.dialog_1 {
    display: none;
}

.dialog {
    background-color: #fff;
    .close-btn {
        width: rem(40);
        height: rem(40);
        background-repeat: no-repeat;
        background-position: center;
        position: absolute;
        right: 0;
        top: 0;
    }
    .top_tip {
        font-size: rem(12);
        color: #9d9e9e;
        text-align: left;
        span {
            display: inline-block;
            margin-right: rem(5);
        }
    }

    .honor {
        font-size: rem(12);
        color: #9d9e9e;
        text-align: left;
        text-align: center;
        margin-top: rem(10);
        span {
            color: #ffca7c;
        }
    }
    .time-line {
        font-size: rem(40);
        margin-top: rem(30);
        height: rem(50);
        line-height: rem(50);
        text-align: center;
        .icon {
            img {
                display: inline-block;
                height: rem(30);
                width: rem(30);
                margin-top: rem(-6);
                margin-right: rem(5);
                margin-left: rem(-30);
            }
        }
    }
}

.GSX_Dialog.GSX_Dialog_default {
    padding-top: 0!important;
}
.time-line {
    font-size: trem(40);
    height: trem(62);
    line-height: trem(62);
    text-align: center;
    .icon {
        img {
            display: inline-block;
            height: trem(30);
            width: trem(30);
            margin-top: trem(-6);
            margin-right: trem(5);
            margin-left: trem(-30);
        }
    }
}
.daka_btn {
    background: #faaa39;
    border: 6px solid rgba(250, 175, 56, 0.10);
    box-shadow: rem(0) rem(2) rem(4) rem(0) #fed87c;
    width: rem(110);
    height: rem(110);
    font-size: rem(27);
    color: #fff;
    border-radius: 100%;
    text-align: center;
    line-height: rem(96);
    margin: rem(13) auto 0 auto;
    &.on {
        background: #ffca7c;
    }
}

.detail_content {
    background: #fff;
    border-radius: rem(20);
    min-height: rem(200);
    margin: rem(20);
    overflow: hidden;
}


