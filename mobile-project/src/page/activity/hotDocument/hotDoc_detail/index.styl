@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";

.container {
    margin-top: 2%;
    background: #fff;
    .content {
        padding: 4%;
        .title {
            font-size: rem(22);
            font-family: PingFang-SC-Medium;
            color: #313131;
            line-height: rem(22);
            font-weight: bolder;
        }
        .tip {
            margin: 2% auto;
            p {
                display: inline;
                margin-right: 3%;
                color: #9d9d9e;
            }
        }
        .detail *{
            max-width: 100%!important;
            box-sizing: border-box!important;
            -webkit-box-sizing: border-box!important;
            word-wrap: break-word!important;
        }
    }
    .bottom {
        .teacher {
            border: 1px solid #f2f4f5;
            position: relative;
            padding: rem(14) rem(10) rem(14) rem(76.8);
            i {
                position: absolute;
                right: 3%;
                top: 20%;
                color: #aaa;
            }
            .teacher-icon {
                position: absolute;
                left: rem(16);
                top: rem(16);
                width: rem(44.8);
                height: rem(44.8);
                border-radius: rem(22.4);
                img{
                    border-radius: rem(22.4);
                    height: 100%;
                    width: 100%;
                }
            }
            .right {
                .teacher-name {
                    font-size: rem(17);
                    .vip {
                        display: inline-block;
                        position: relative;
                        top: rem(-1.6);
                        width: rem(19.2);
                        height: rem(19.2);
                        img {
                            width: 100%;
                            height: 100%;
                        }
                    }
                }
                .teacher-info {
                    .student-number {
                        display: inline-block;
                        font-size: rem(13);
                        color: #9d9d9e;
                    }
                    .course-time {
                        display: inline-block;
                        font-size: rem(13);
                        color: #9d9d9e;
                    }
                    .praise-rate {
                        display: inline-block;
                        font-size: rem(13);
                        color: #9d9d9e;
                    }
                }
                .description {
                    font-size: rem(12);
                    color: #9d9d9e;
                }
            }
        }
        .banner {
            background-color: #f2f4f5;
            color: #aaa;
            text-align: center;
            padding: 4%;
            .slogan{
                font-size: rem(13);
                padding: 3%;
            }
            .button {
                font-size: rem(14);
                color: #8cc8fd;
                margin: 1% auto;
                border: 1px solid #8cc8fd;
                width: 37%;
                border-radius: rem(20);
                padding: 1.3% 0;
            }
        }
    }
}
