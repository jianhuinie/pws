@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";

.container {
    background: #fff;
    .tip {
        text-align: center;
        font-size: rem(12.8);
        color: #9d9d9e;
        padding-top: 4%;
    }
    .list {
        position: relative;
        padding: rem(14) rem(10) rem(14) rem(115.2);
        border-bottom: 1px solid #f2f4f5;
        height: rem(91.2);
        .img {
            width: rem(91.2);
            height: rem(60.8);
            position: absolute;
            left: 3%;
            img{
                width: 100%;
                height: 100%;
            }
        }
        .right {
            .title {
                color: #3d3d3e;
                left: 31%;
                line-height: rem(19.2);
                font-weight: bold;
                font-family: PingFang-SC-Medium;
            }
            .info {
                margin-top: rem(6.4);
                left: 31%;
                .read {
                    display: inline-block;
                    font-size: rem(12);
                    color: #9d9d9e;
                }
                .good {
                    display: inline-block;
                    font-size: rem(12);
                    color: #9d9d9e;
                }
            }
        }
    }

    .more-flag {
        height: rem(0.5);
    }

    .has-more {
        display: none;
    }

    .no-more {
        display: none;
        text-align: center;
        font-size: rem(11.2);
        width: 100%;
        padding: 3%;
        background: #d7d7d7;
    }

    .typing-loader {
        width: rem(8);
        height: rem(8);
        animation: typing 1s linear infinite alternate;
        margin: rem(10) auto;
        position: relative;
        left: rem(-12);
    }

    @keyframes typing {
        0% {
            background-color: rgba(255, 145, 1, 1);
            box-shadow: rem(12) rem(0) rem(0) rem(0) rgba(255, 145, 1, 0.2), rem(24) rem(0) rem(0) rem(0) rgba(255, 145, 1, 0.2);
        }
        25% {
            background-color: rgba(255, 145, 1, 0.4);
            box-shadow: rem(12) rem(0) rem(0) rem(0) rgba(255, 145, 1, 2), rem(24) rem(0) rem(0) rem(0) rgba(255, 145, 1, 0.2);
        }
        75% {
            background-color: rgba(255, 145, 1, 0.4);
            box-shadow: rem(12) rem(0) rem(0) rem(0) rgba(255, 145, 1, 0.2), rem(24) rem(0) rem(0) rem(0) rgba(255, 145, 1, 1);
        }
    }
}
