@import "page/_base/base.styl";

body{
  background-color : #F4F4F4;
}
.title{
    width: 100%;
    height: rem(65);
    position: fixed;
    top: 0;
    left: 0;
    background-color: #FFA500;
    z-index: 1;
    img{
        position: absolute;
        width: 35%;
        height: 88%;
        top: 0;
        left: 0;
    }
    .title-text{
        position:absolute;
        right:rem(10);
        height:rem(65);
    }
    p{
        height: rem(30);
        line-height: rem(30);
        color: white;

        border-left: 3px solid white;
        padding-left: rem(10);
        margin-top: 10%;
        font-size: rem(20);
    }

}
.container{
    width: 90%;
    margin-left: 5%;
    margin-top: 24%;
    .question_1,.question_2,.question_3,.question_4,.question_5,.question_6{
        margin-top:rem(10);
        ul{
            border:1px solid #D9D9D9;
            border-radius:rem(5);
            background-color:white;
            margin-top:rem(10);
            li{
                border-bottom:1px solid #D9D9D9;
                padding: rem(4);
                color: #6E7B8B;
            }
            .last-li{
                border-bottom:none;
            }
        }
    }

    .radio-btn{
        width:rem(18);
        height:rem(18);
        display:inline-block;
        margin:rem(4) rem(7) 0 0;
        cursor:pointer;
        position:relative;
        border-radius:100%;
        border:1px solid #ccc;
        input[type="radio"]{
            visibility:hidden;
        }
        input[type="checkbox"]{
            visibility:hidden;
        }
        i{
            width:rem(12);
            height:rem(12);
            position:absolute;
            left:rem(2);
            top:rem(2);
            border-radius:50%;
        }
    }
    .checkedRadio{
        i{
            background-color: #FFA500;
        }
    }
    .block_1{
        margin-top:rem(10);
        margin-bottom:rem(10);
    }
    .submit{
        width:100%;
        height:rem(40);
        text-align:center;
        background-color: #FFA500;
        border-radius:rem(5);
        line-height:rem(40);
        color:white;
    }
}
.block_2{
    display:none;
    position:absolute;
    top:rem(32);
    left:0;
    img{
        width: 100%;
        height: 100%;
    }
    .text{
        height: 100%;
        width: 100%;
        text-align: center;
        font-size: rem(14);
        text-indent: 1em;
        color:white;
    }
}
textarea{
    border: 1px solid #fff;
    border-radius: rem(5);
    font-size: rem(14);
    outline: none;
    width: 96;
    width: 92%;
    margin-top: rem(10);
    height: rem(100);
    padding: rem(10);
}