@import "page/_base/base.styl";
@import "page/activity/gaokao/_part/index.styl"

body{
    background: #EDEDED;
}

header{
    background: rgba(248,247,247,0.90);;
    border-bottom: 1px solid #D6D6D6;
    width: 100%;
    height: rem(64);
    position: relative;
    font-family:PingFang-SC-Regular;
    font-size:rem(17);
    color:#3c3d3d;
    line-height:rem(64);
    text-align:center;
    top:0;
    left:0;
    opacity: 1;
    z-index: 3;
    .icon-back{
        position: absolute;
        height: rem(20);
        width: rem(10);
        top: 36%;
        left: rem(10);
    }
}

.super-1{
    width: 96%;
    margin-left: 2%;
    background: white;
    margin-top: 8%;
    border-radius: rem(4);
    margin-top: rem(2);
    margin-bottom: rem(90);
    .hide{
        display:none;
    }
    span{
        display:inline-block;
    }
    h2{
        font-family:PingFang-SC-Medium;
        font-size:rem(15);
        color:#3c3d3d;
        line-height:rem(15);
        margin-bottom:rem(20);
        margin-left: rem(6);
        margin-top: rem(15);
    }
    .super-list{
        width:96%;
        margin-left:2%;
        position:relative;
        .super-card,{
            border-bottom: 1px solid #E5E5E5;
            position:relative;
            padding-top:rem(10);
        }
        .super-text{
            float:left;
            margin-left:rem(10);
            margin-top:rem(10);
            .super-name{
                font-family:PingFang-SC-Regular;
                font-size:rem(16);
                color:#3c3d3d;
                line-height:rem(12);
                text-align:left;
            }
            .super-see{
                font-family:PingFang-SC-Regular;
                font-size:rem(13);
                color:#ff6c00;
                line-height:rem(12);
                text-align:left;
                margin-top:rem(10);
            }
            span{
                font-family:PingFang-SC-Regular;
                font-size:rem(13);
                color:#9d9e9e;
                line-height:rem(12);
                text-align:left;
                margin-right: rem(4);
                i{
                    position:absolute;
                    right: 62%;
                    top: 25%;
                }
            }
            .super-date{
                font-family:PingFang-SC-Regular;
                font-size:rem(12);
                color:#ff6c00;
                line-height:rem(14);
                text-align:left;
                margin-top:rem(2);
            }
        }

        .super-avatar{
            border-radius: 50%;
            height: rem(60);
            width: rem(60);
            float:left;
            margin-bottom: rem(10);
            margin-top:rem(10);

        }
        .super-button-video{
                background: grey;
                margin-right: rem(2);
                width: rem(83);
                height: rem(29);
                text-align: center;
                border-radius: rem(4);
                line-height: rem(29);
                color: white;
                float:right;
                margin-top:8%;

                p{
                    font-family:PingFang-SC-Regular;
                    font-size:rem(13);
                }
        }
        .super-button-unpay{
            background:#1db954;
        }
        .super-button-video{
            background:#ff9100;
        }
    }
}

.has_more,{
    width: 100%;
    height: rem(40);
    text-align: center;
    .bottom-icon{
        width: rem(9);
        height: rem(5);
    }
    p{
        font-family:PingFang-SC-Regular;
        font-size:rem(13);
        color:#9d9e9e;
        line-height:rem(40);
    }
}
.back-review{
    margin-top: rem(15);
}

.share-infos{
    width:90%
    margin-left:5%;
    text-align:center;
    margin-top:rem(20);
    p{
        font-family:PingFang-SC-Regular;
        font-size:rem(14);
        color:#9d9e9e;
        line-height:rem(14);
    }
    .share-button{
        border:1px solid #ff6c00;
        border-radius:rem(100);
        width: 60%;
        margin-left: 18%;
        height: rem(38);
        margin-top: rem(20);
        margin-bottom: rem(20);
        p{
            font-family:PingFang-SC-Regular;
            font-size:rem(16);
            color:#ff6c00;
            line-height:rem(38);
            text-align:center;
        }
    }
}

.share-mask {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 900;
  background-color: #000;
  opacity: 0.65;
  .content {
    position: absolute;
    top: rem(10);
    width: 100%;
    height: 100%;
    img {
      width: rem(200);
      height: rem(150);
      position: absolute;
      top: 0;
      right: rem(20);
    }
  }
}