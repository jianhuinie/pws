@import "page/_base/base.styl";
@import "page/activity/gaokao/_part/index.styl"

body{
    background: #EDEDED;
}

header{
    background: rgba(248,247,247,0.90);;
    border-bottom: 1px solid #D6D6D6;
    width: 100%;
    height: rem(64);
    position: relative;
    font-family:PingFang-SC-Regular;
    font-size:rem(17);
    color:#3c3d3d;
    line-height:rem(64);
    text-align:center;
    top:0;
    left:0;
    opacity: 1;
    z-index: 3;
    .icon-back{
        position: absolute;
        height: rem(20);
        width: rem(10);
        top: 36%;
        left: rem(10);
    }
}
.rank-pics,.rank-pics-1{
    margin:rem(2) 0;
    width:96%;
    margin-left:2%;
    img{
        width:100%;
        height:100%;
    }
}

.rank-itme{
    width:100%;
    height:rem(200);
    border-radius:rem(4);
}
.share-infos{
    width:90%
    margin-left:5%;
    text-align:center;
    margin-top:rem(20);
    p{
        font-family:PingFang-SC-Regular;
        font-size:rem(14);
        color:#9d9e9e;
        line-height:rem(14);
    }
    .share-button{
        border:1px solid #ff6c00;
        border-radius:rem(100);
        width: 60%;
        margin-left: 18%;
        height: rem(38);
        margin-top: rem(20);
        margin-bottom: rem(20);
        p{
            font-family:PingFang-SC-Regular;
            font-size:rem(16);
            color:#ff6c00;
            line-height:rem(38);
            text-align:center;
        }
    }
}
.last-one{
    margin-bottom:rem(90);
}

.share-mask {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 900;
  background-color: #000;
  opacity: 0.65;
  .content {
    position: absolute;
    top: rem(10);
    width: 100%;
    height: 100%;
    img {
      width: rem(200);
      height: rem(150);
      position: absolute;
      top: 0;
      right: rem(20);
    }
  }
}