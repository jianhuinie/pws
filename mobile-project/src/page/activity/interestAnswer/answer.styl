@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";

html {
  height: 100%;
  font-size: 0;
}

body{
  background-image: url('/src/page/activity/interestAnswer/image/bg.jpg');
  height: 100%;
}

@keyframes rotate{
  from{transform:rotate(0deg)}
  to{transform:rotate(360deg)}
}


@keyframes changePageRotate{
  0%  {transform:rotate(0deg)}
  25%  {transform:rotate(2deg)}
  50%  {transform:rotate(0deg)}
  100% {transform:rotate(-2deg)}
}

.icon-music{
  animation: 3.5s linear 0s normal none infinite rotate;
}
.auto-block{
  position : absolute;
  top:rem(20);
  right:rem(10);
  z-index : 100;

  span{
    display : block;
    width:rem(30);
    height:rem(30);
    line-height:rem(30);
    vertical-align : middle;
    text-align : center;
    border-radius: rem(100);
    background-color : #000;
    border:1px solid #fff;
    color:#fff;
    font-size:rem(12);
    opacity : 0.3;
  }
  audio{
    display : none;
  }
}
.off{
  .icon-music{
    animation-play-state:paused;
    -webkit-animation-play-state:paused;
    background-color : #ccc;
  }
}

body{
  height: 100%;
}


#page_main {
  height: 100%;
}
#main{
  height: 100%;
  .cover {
    position : relative;
    display: none;
    width: 100%;
    height: 100%;
    position: relative;
    img {
      width: 100%;
      height: 100%;
    }
    .change-page {
      position: absolute;
      display: inline-block;
      width: rem(164);
      height: rem(70);
      bottom: 16%;
      left: 50%;
      margin-left:rem(-82);
      animation: 1s linear 0s normal none infinite changePageRotate;
      img{
        width:100%;
        height : 100%;
      }
    }
  }
  .parent {
    display: none;
    padding: rem(10);
    .home-outer,.taste-feel,.happy-logic,.order-activate {
      width: 100%;
      height: 100%;
      margin: 0 auto;
      text-align: center;
      position: relative;
      .figure {
        width: 100%;
        padding: 0 rem(20);
        position: absolute;
        top: 15%;
        left: 50%;
        transform: translateX(-50%);
        img {
          width: 100%;
          height: auto;
        }
      }
      img {
        width: 100%;
        height: 100%;
      }
      .choose {
        display: none;
      }
      .first-button,.choose-first {
        display: block;
        position: absolute;
        bottom: 10%;
        left: 50%;
        transform: translateX(-50%);
        width: 80%;
        height: rem(40);
      }
      .second-button,.choose-second {
        display: block;
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 80%;
        height: rem(40);
      }

    }
    .taste-feel,.happy-logic {
      width: 90%;
      height: 90%;
      .choose-first,.choose-second {
        width: 100%;
        height: rem(50);
      }
    }
    .happy-logic {
      width: 80%;
      height: 80%;
      .figure {
        margin-top: rem(30);
        padding: 0;
      }
    }
    .order-activate {
      .choose-first {
        bottom: 12%;
        width: 85%;
        height: rem(40);
      }
    }
    .taste-feel {
      .first-button,.choose-first {
        bottom: 13%;
      }
    }
  }
  .second-content,.third-content,.forth-content {
    display: none;
    label {
      width: rem(150);
    }
  }
  .result {
    display: none;
    width: 100%;
    height: 100%;
    position: relative;
    .result-info {
      width: 100%;
      height: 60%;
    }
    .bottom {
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 40%;
      img {
        width: 100%;
        height: 100%;
      }
    }
    .repeat-test,.share-friend {
      position: absolute;
      left: 9%;
      bottom: 30%;
      width: 40%;
      height: rem(60);
    }
    .share-friend {
      left: 51%;
    }
    .find-teacher {
      position: absolute;
      left: 9%;
      bottom: 19%;
      width: 80%;
      height: rem(46);
    }

  }
  .active {
    display: block;
  }
}

.share-mask {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 900;
  background-color: #000;
  opacity: 0.65;
  .content {
    position: absolute;
    top: rem(10);
    width: 100%;
    height: 100%;
    img {
      width: rem(200);
      height: rem(150);
      position: absolute;
      top: 0;
      right: rem(20);
    }
  }
}

