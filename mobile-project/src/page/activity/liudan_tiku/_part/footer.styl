.footer-container {
  position: relative;
  width: 100%;
  height: rem(278);
  .footer-back {
    width: 100%;
    height: rem(278);
  }
  .back-box {
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    padding: rem(23) rem(20);
    background: rgba(0, 0, 0, .6);
    .small-title {
      font-size: rem(23);
      color: #FFFFFF;
      letter-spacing: rem(-0.7);
      line-height: rem(32);
    }
    .title {
      margin-bottom: rem(20);
      font-size: rem(27);
      color: #fff;
      letter-spacing: rem(-0.7);
      line-height: rem(32);
    }
    .number-box {
      display: flex;
      justify-content: space-between;
      .box {
        width: rem(78);
        height: rem(78);
        padding: rem(20) 0;
        overflow: hidden;
        border: 2px solid #FFFFFF;
        border-radius: 50%;
        color: #fff;
        .number {
          font-size: rem(16);
        }
        .exp {
          font-size: rem(12);
        }
      }
    }
  }
  .fixed-footer {
    position: fixed;
    display: flex;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 3;
  }
    .no-fixed {
      display: flex;
      .consult, .free {
        height: rem(48);
        line-height: rem(48);
      }
      .consult {
        width: rem(127);
        background: #fff;
        font-size: rem(16);
        color: #3D3D3E;
        letter-spacing: 0;
        img {
          width: rem(20);
          height: rem(20);
          vertical-align: text-bottom;
        }
      }
      .free {
        flex: 1;
        color: #fff;
        background: #FF6C00;
      }
    }
}