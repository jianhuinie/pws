.liudan-header {
  .header-header {
    background: #F7EEDF;
    position: relative;
    .header-back {
      width: 100%;
      min-height: rem(260);
    }
    .header-box {
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
      z-index: 2;
      padding-left: rem(29);
      .title {
        font-size: rem(35);
        color: #1B1D22;
        letter-spacing: rem(-1.13);
        margin-top: rem(70);
        line-height: rem(35);
      }
      .little-title {
        font-size: rem(20);
        color: #6D6D6E;
        letter-spacing: rem(-0.36);
        margin-bottom: rem(15);
        margin-top: rem(2);
        line-height: rem(20);
      }
      .content {
        font-size: rem(14);
        color: #6D6D6E;
        letter-spacing: 0;
        line-height: rem(18);
      }
      .teacher {
        margin-top: rem(15);
        font-size: rem(12);
        color: #FF6C00;
      }
      .teacher-info {
        font-size: rem(13);
        color: #6D6D6E;
        span {
          color: #9d9d9e;
        }
      }
    }
  }

  .input-container {
    padding: 0 rem(20) rem(40) rem(20);
    .title {
      font-size: rem(24);
      color: #FF6C00;
      letter-spacing: rem(-0.21);
      line-height: rem(33);
    }
    .little-title {
      font-size: rem(15);
      color: #6D6D6E;
      letter-spacing: 0;
      line-height: rem(15);
    }
      .liudan-form {
        margin-top: rem(39);
        .input-border {
          border: 1px solid #DDDDDE;
          height: rem(44);
          padding: rem(5) 0;
          border-radius: rem(3);
        }
        .input-box {
          display: flex;
          width: 100%;
          margin-bottom: rem(10);
          input {
            font-size: rem(14);
            padding: 0 rem(10);
            background: #FFFFFF;
            border-radius: rem(3);
            outline: none;
            -webkit-appearance: none;
            border: 0;
            width: 100%;
            height: 100%;
          }
          .name-border {
            width: rem(138);
            margin-right: rem(10);
          }
          .subject-box {
            position: relative;
            flex: 1;
            .subject {
              width: 100%;
            }
            .search-suggestion {
              position: absolute;
              background: #fff;
              top: rem(45);
              left: 0;
              right: 0;
              max-height: rem(150);
              overflow-x: hidden;
              overflow-y: auto;
              z-index: 5;
              li {
                padding: 0 rem(20);
                height: rem(38);
                line-height: rem(38);
                font-size: rem(13);
                color: #9D9E9E;
                border-bottom: 1px solid #f3f4f5;
              }
            }
          }
          .number {
            flex: 1;
          }
        }
        .submit {
          margin-top: rem(10);
          width: 100%;
          height: rem(48);
          background: #FF6C00;
          border-radius: rem(4);
          font-size: rem(20);
          color: #FFFFFF;
          line-height: rem(48);
        }
      }
  }
}