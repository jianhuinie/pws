@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";

.hidden {
    display: none !important;
}

.text-ellipsis {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
body {
    font-size: rem(12);
    background: #fff;
}

.seperation-right {
    border-right: rem(1) solid #fff;
}

.nav-header{
    background: #f6f7f7;
}

.list {
    margin: rem(15);
}

.icon,
.rank,
.name,
.id,
.city,
.single-total {
    // padding: rem(4) 0;
    height: rem(26);
    line-height: rem(26);
    display: inline-block;
}

.tab,
.mine,
.other {
    text-align: center;
}
.tab,
.mine {
    border-bottom: rem(4) solid #fff;
    color: #fff;
    .icon,
    .rank,
    .name,
    .id,
    .city,
    .single-total {
        background: #33acdf;
    }
    .icon {
        width: 8%;
    }
    .icon-rank {
        // overflow: hidden;
        // padding: 0;
        // position: relative;
        // top: rem(1);
        // height: rem(22);
        height: rem(26);
        border-radius: rem(12) 0 0 rem(12);
        vertical-align: bottom;
        img {
            // position: relative;
            // top: rem(-2);
            height: rem(16);
            width: 50%;
            position: relative;
            top: rem(-5);
            vertical-align: bottom;
        }
    }
    .rank-num {
        // top: 0;
        // padding: rem(4) 0;
        // overflow: none;
        border-radius: rem(12) 0 0 rem(12);
    }
    .icon-text {
        // in order not to go down to next line
        // overflow: visible;
        // padding: rem(5) 0;
        border-radius: 50%;
    }
    .rank {
        width: 12%;
    }
    .name {
        width: 19%;
    }
    .id {
        width: 26%;
    }
    .city {
        width: 17%;
    }
    .single-total {
        width: 18%;
    }
    .single-total-tab,
    .single-total-mine {
        border-radius: 0 rem(12) rem(12) 0;
    }
}
.tab {
    .icon,
    .rank,
    .name,
    .id,
    .city,
    .single-total {
        background: #3ea6f2;
    }
}
.other {
    margin-bottom: rem(10);
    background: #e6e6e6;
    .unit {
        border-top: rem(1) solid #fff;
        .rank,
        .name,
        .id,
        .city,
        .single-total {
            margin-bottom: rem(-4);
        }
        .rank {
            width: 20%;
        }
        .name {
            width: 19%;
        }
        .id {
            width: 26%;
        }
        .city {
            width: 17%;
        }
        .single-total {
            width: 18%;
        }
    }
    .unit-first {
        border-top: none;
        // background: #fc5955;
        .rank {
            border-radius: rem(12) 0 0;
        }
        .single-total-other {
            border-radius: 0 rem(12) 0 0;
        }
    }
    .unit-last {
        .rank {
            border-radius: 0 0 0 rem(12);
        }
        .single-total-other {
            border-radius: 0 0 rem(12) 0;
        }
    }
}

.pager {
    text-align: center;
    .prev,
    .next {
        img {
            height: rem(25);
        }
    }
    .prev {
        margin-right: rem(10);
    }
}