@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";

body{
    background:white;
}
.header{
    width:100%;
    height:rem(400);
    position:relative;
    img{
        width:100%;
        height:100%;
        top:0;
        left:0;
    }
    .first-wrap{
        position: absolute;
        top: rem(150);
        width: rem(300);
        margin:auto;
        left: 50%;
        margin-left:rem(-150);
        z-index:100;
            li{
                float: left;
                background: url('/src/page/activity/safeFeeGuard/image/slice-1.png') no-repeat;
                background-size: rem(96);
                height: rem(95);
                //min-width:rem(100);
                width:rem(90);
                margin-left:rem(10);
                .text-info{
                    margin-top: rem(14);
                }
                .text-info-p{
                    font-family: PingFang-SC-Medium;
                    font-size: rem(12);
                    color: #ffffff;
                    line-height: rem(11);
                    width: rem(90);
                    text-align: center;
                }
                .number{
                    font-family: PingFang-SC-Semibold;
                    font-size: rem(26);
                    color: #ffffff;
                    line-height: rem(27);
                    margin: rem(3);
                    margin-left: rem(12);
                }
                .number-text{
                    font-family:PingFang-SC-Medium;
                    font-size:rem(26);
                    color:#ffffff;
                    line-height:rem(27);
                }
                .text-info-span{
                    height:rem(27);
                    margin: rem(4);
                    margin-left:rem(10);
                    width:rem(80);
                    .number2,.number-text-2{
                        font-family:PingFang-SC-Medium;
                        font-size:rem(26);
                        color:#ffffff;
                        line-height:rem(27);
                    }
                    /*.number-text-2{
                        font-family:PingFang-SC-Medium;
                        font-size:rem(22);
                        color:#ffffff;
                        line-height:rem(23.75);
                    }*/
                }
            }
    }

    .second-wrap{
        position: absolute;
        top: rem(250);
        width: rem(220);
        margin:auto;
        left: 50%;
        margin-left:rem(-110);
        z-index:100;
            li{
                float: left;
                background: url('/src/page/activity/safeFeeGuard/image/slice-1.png') no-repeat;
                background-size: rem(96);
                height:rem(95);
                width:rem(90);
                margin-left:rem(10);
                .text-info{
                    margin-top: rem(14);
                }
                .text-info-p{
                    font-family: PingFang-SC-Medium;
                    font-size: rem(12);
                    color: #ffffff;
                    line-height: rem(11);
                    width: rem(80);
                    text-align: center;
                    margin-left:rem(3);
                }
                .text-info-span{
                    height:rem(27);
                    margin: rem(4);
                    margin-left:rem(10);
                    width:rem(90);
                    .number2{
                        font-family:PingFang-SC-Medium;
                        font-size:rem(24);
                        color:#ffffff;
                        line-height:rem(27);
                    }
                    .number-text-2{
                        font-family:PingFang-SC-Medium;
                        font-size:rem(24);
                        color:#ffffff;
                        line-height:rem(27);
                    }
                }
            }
    }
}

.title-text{
        width: 100%;
        text-align: center;
        margin-top: rem(16);
        .title-1{
            font-family:PingFang-SC-Medium;
            font-size:rem(22);
            color:#3c3d3d;
            letter-spacing:rem(0);
        }
        .title-2{
            font-family:PingFang-SC-Regular;
            font-size:rem(15);
            color:#9d9e9e;
            letter-spacing:rem(0);
        }
    }
.img-wenzai{
    text-align:center;
    margin-top:rem(10);
    .wenzai-main{
        width:rem(147);
        height:rem(123);
    }
}

.example{
    margin-top:rem(36);
    position:relative;
    .example-title{
        width: 46%;
        height: rem(32);
        margin-left: 27%;
        text-align: center;
        background: #1db954;
        line-height: rem(28);
        font-family: PingFang-SC-Regular;
        font-size: rem(16);
        color: #ffffff;
        margin-bottom: rem(21);
        padding:rem(2);
    }
    .example-explain{
        width: 94%;
        margin: 0 3%;
        font-family: PingFang-SC-Regular;
        font-size: rem(15);
        color: #3c3d3d;
        line-height: rem(20);
        text-align: left;
    }
}
.example-list{
        margin-top:rem(10);
        position:relative;
        p{
            font-family:PingFang-SC-Regular;
            font-size:rem(14);
            color:#6d6d6e;
            text-align:left;
            line-height:rem(18);
            margin-left:3%;
            right:20%;
            background:#f8f8f8;
            bottom:0;
            padding:rem(10);
            width:74%;
        }
    }
    .wenzai-img{
        position:absolute;
        bottom: 0;
        right: rem(8);
        height:rem(70);
        width:rem(55);
}
.bottom-banner{
    width: 94%;
    height: 30%;
    margin-top: rem(36);
    margin-left: 3%;
}
.contact-us{
    margin:rem(20) 0;
    position:relative;
    height:rem(80);
    .contact-us-content {
        width:50%;
        margin-left:25%;
        position:relative;
        display:block;
    }
    .phone-icon{
        height:rem(18);
        width:rem(14);
        position:absolute;
        left:rem(4);
        top:rem(-4);
    }
    .phone-number{
        font-family:SanFranciscoDisplay-Medium;
        font-size:rem(18);
        color:#3c3d3d;
        line-height:rem(16);
        text-align:center;
    }
    .show-date{
        font-family: PingFang-SC-Regular;
        font-size: rem(12);
        color: #9d9e9e;
        margin-left: 28%;
        margin-top: rem(6);
    }
}
.help-us{
    position: fixed;
    bottom: 0;
    width: 100%;
    text-align: center;
    background: #1db954;
    height: rem(44);
    line-height: rem(44);
    p{
        font-family:PingFang-SC-Regular;
        font-size:rem(17);
        color:#ffffff;
    }
}