@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";
@import "page/_common/swiper/swiper.styl";

.container {
    position: relative;
    img {
        width: 100%;
    }
    .content {
        position: absolute;
        top: 0;
        width: 100%;
        div {
            margin: 0 auto;
        }
        .title {
            font-family: STSongti-SC-Regular;
            font-size: rem(18);
            color: #543737;
            letter-spacing: rem(0.77);
            text-align: center;
            width: 80%;
            margin-top: rem(13);
            margin-bottom: rem(11);
        }
        .banner {
            width: 98%;
            box-shadow: rem(0) rem(2) rem(4) rem(0) #81a3db;
            position: relative;
            overflow: hidden;
            .swiper-wrapper {
                overflow: hidden;
                height: 100%;
                position: relative;
            }
        }
        .input-container {
            margin-top: rem(18);
            text-align: center;
            .input {
                margin-bottom: rem(10);
                span {
                    margin-right: 3%;
                    font-size: rem(16);
                    position: relative;
                    left: rem(-20);
                }
                input {
                    font-family: STSongti-SC-Regular;
                    opacity: 0.79;
                    background: #ffffff;
                    border: 1px solid #707070;
                    border-radius: rem(3);
                    height: rem(33);
                    width: 54%;
                    height: rem(35);
                    padding: rem(5) rem(16);
                    position: relative;
                    left: rem(-20);
                }
            }
            .submit {
                font-family: MicrosoftYaHei-Bold;
                background: #38b0ff;
                border-radius: rem(3);
                width: 54%;
                height: rem(40);
                font-size: rem(22);
                color: #fff;
                letter-spacing: rem(0.94);
                text-align: center;
                line-height: rem(40);
                border: 0 solid #000;
                font-weight: bolder;
            }
        }
        .tip1 {
            font-family: STSongti-SC-Bold;
            font-size: rem(20);
            color: #684242;
            letter-spacing: rem(0.86);
            text-align: center;
            margin-top: rem(18);
        }
        .tip2 {
            font-family: STSongti-SC-Regular;
            font-size: rem(18);
            color: #684242;
            letter-spacing: rem(0.77);
            text-align: center;
        }
        .try-again {
            margin-top: rem(17);
            font-family: MicrosoftYaHei-Bold;
            background: #38b0ff;
            border-radius: rem(3);
            width: 54%;
            height: rem(40);
            font-size: rem(22);
            color: #fff;
            letter-spacing: rem(0.94);
            text-align: center;
            line-height: rem(40);
            border: 0 solid #000;
            font-weight: bolder;
        }
        .footer {
            margin-top: rem(18);
            width: 35%;
            position: relative;
            left: rem(6);
        }
    }
}
