body {
    background: #fff;
    font-size: rem(10);
    margin: 0;
}
.individual-push {
    .ellipsis {
        display: inline-block;
        *display: inline;
        zoom: 1;
        overflow: hidden;
        -o-text-overflow: ellipsis;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
    .double-line {
        overflow: hidden;
        text-overflow: ellipsis;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        display: -webkit-box;
        white-space: inherit;
    }
    .clearfix { 
        *zoom: 1; 
    }
    .clearfix:before, .clearfix:after {
        display: table; 
        line-height: 0; 
        content: ""; 
    }
    .clearfix:after { 
        clear: both; 
    } 
    img {
        width: 100%;
        height: 100%;
    }
    width: 100%;
    margin: 0 auto;
    .title {
        text-align: center;
        font-size: 1.6em;
        color: #3c3d3d;
        line-height: rem(40);
        background:#f8f8f8;
        height:rem(40);
    }
    .course {
        border-top: 2px solid #37a4f5;
        padding: rem(5);
        margin-top: rem(0);
        .item {
            display: inline-block;
            overflow: hidden;
            width: 50%;
            padding: rem(10) rem(5);
            -webkit-box-sizing: border-box;
            box-sizing: border-box;
            vertical-align: top;
            .cover {
                margin-bottom: rem(6);
            }
            .name {
                font-size: 1.4em;
                color: #3c3d3d;
                line-height: rem(18);
                width: 100%;
            }
            .type {
                font-size: 1.2em;
                color: #9d9e9e;
                line-height: rem(24);
                width: 100%;
            }
            .desc {
                margin-top: rem(8);
                .price {
                    font-size: 1.4em;
                    color: #37a4f5;
                    line-height: rem(14);
                }
                .pay-count {
                    font-size: 1.2em;
                    color: #9d9e9e;
                    line-height: rem(14);
                    margin-left: rem(10);
                }
            }
        }
    }
    .footer {
        background:#37a4f5;
        width: 100%;
        height:rem(74); 
        font-size: 1.2em;
        color: #ffffff;
        margin-top: rem(15);
        padding-top: rem(10);
        text-align: center;  
        line-height: rem(10); 
    }
}