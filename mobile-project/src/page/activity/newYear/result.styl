@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";

#page_main {
	position: absolute;
    height: 100%;
    width: 100%;
}
.single-line {
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
section {
	position: relative;
	background: #fff;
	height: 100%;
	& > img {
		width: 100%;
		position: absolute;
		z-index: 1;
		bottom: rem(48);
	}
}
.hide {
	display: none;
}

.content {
    height: 100%;
    font-size: rem(16);
    overflow: hidden;
    padding: rem(48) rem(16);
    background: transparent;
    position: relative;
    z-index: 2;
	.left-cont {
		width: 55%;
		float: left;
		margin-top: rem(16);
		.text {
		    width: rem(16);
		    display: inline-block;
		    float: left;
		    margin: 0 rem(8);
		    font-size: rem(20);
		    transform: translateY(rem(128));
            -webkit-transform: translateY(rem(128));
		    opacity: 0;
	        color: #6D6D6E;
	        word-wrap: break-word;
		}
		.text-left {
			transition: all 1s ease 3s;
            -webkit-transition: all 1s ease 3s;
		}
		.text-right {
			transition: all 1s ease 2s;
            -webkit-transition: all 1s ease 2s;
		}
		.divider {
		    display: inline-block;
		    float: left;
		    height: rem(48);
		    border-right: 2px solid #FF6182;
		    margin-left: rem(16);
		    margin-top: rem(8);
		}
		.text-title {
			transform: translateY(rem(128));
            -webkit-transform: translateY(rem(128));
		    opacity: 0;
		    transition: all 1s ease 1s;
            -webkit-transition: all 1s ease 1s;
		    font-size: rem(24);
		    width: rem(24);
		    color: #3C3C3C;
		    display: inline-block;
		    margin: 0 rem(16);
		    float: left;
		}
	}
	.right-cont {
		transition: all 1s ease 0s;
        -webkit-transition: all 1s ease 0s;
		opacity: 0;
		transform: translateX(rem(80));
        -webkit-transform: translateX(rem(80));
		width: 45%;
		float: right;
		text-align: right;
		direction: rtl;
		white-space: nowrap;
		& > p {
			margin: rem(9.6) 0;
			font-size: rem(16);
			&.info {
				font-weight: bold;
			}
			&.info > span {
				color: #FF6182;
			}
		}
		.img-cont {
			width: 55%;
			display: inline-block;
			& > img {
			    width: 100%;
			    border-radius: 50%;
			    box-shadow: 0 0 rem(6) rem(2) #ff9182;
			}
		}
		.trace {
			font-size: rem(14.4);
			color: #6D6D6E;
		}
		.name {
			font-size: rem(18);
		}
		.zan {
			direction: ltr;
			color: #6D6D6E;
			img {
			    width: rem(16);
			    margin-right: rem(3.2);
			    vertical-align: rem(-2);
			}
		}
		.toTeacher {
			direction: ltr;
			font-size: rem(14.4);
			color: #6D6D6E;
			& > .icon {
				vertical-align: rem(1);
			}
		}
	}
	.qiuqian-wrap {
	    transition: all 0.5s ease 4s;
        -webkit-transition: all 0.5s ease 4s;
		position: absolute;
	    top: rem(336);
	    left: 0;
	    transform: translateX(rem(-130));
        -webkit-transform: translateX(rem(-130));
	    width: rem(130);
	    height: rem(40);
	    line-height: rem(40);
	    text-align: center;
	    color: #fff;
	    letter-spacing: rem(2);
	    letter-spacing: rem(3.2);
	    font-size: rem(20.8);
		.qiuqian-img {
			width: 100%;
		    position: absolute;
		    top: 0;
		    left: 0;
		    z-index: -1;
		}
	}
	.bottom-info {
        position: fixed;
	    bottom: 0;
	    background: #fff;
	    width: 100%;
	    left: rem(0);
	    color: #9D9E9E;
	    height: rem(40);
	    line-height: rem(40);
	    font-size: rem(12.8);
	    .bottom-text {
	    	display: inline-block;
		    padding: 0 rem(8);
		    width: 80%;
	    }
	    .register {
		    display: inline-block;
		    height: 100%;
		    padding: 0 rem(11.2);
		    position: absolute;
		    right: 0;
		    color: #3ea6f2;
	    }
	}
}





