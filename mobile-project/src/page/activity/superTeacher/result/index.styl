@import 'page/_base/base.styl';

$dark = #000;
$white = #fff;
$pink-main = #673ab7;
$vote-main = #fdcf1d;

body {
    margin: 0;
    background: $pink-main;
    font-size: rem(13);
    line-height: rem(20);
    color: $white;
}

.hidden {
    display: none !important;
}
.clear-fix {
    clear: both;
}
.text-ellipsis {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
.tac {
    text-align: center;
}

.fw700 {
    font-weight: 700;
}
.fz12 {
    font-size: rem(12);
}
.fz14 {
    font-size: rem(14);
}
.fz16 {
    font-size: rem(16);
}
.fz18 {
    font-size: rem(18);
}
.fz20 {
    font-size: rem(20);
}


.banner {
    border-bottom: rem(10) solid #fec420;
    .img {
        display: block;
        width: 100%;
        height: rem(200);
    }
}

.no1,
.no10,
.creative,
.method,
.talent,
.young {
    padding: rem(5) rem(15) rem(15);
}

.no10,
.method,
.young {
    background: #ececec;
    color: $pink-main;
    .content {
        .unit {
            color: $pink-main;
        }
    }
}
.creative,
.talent {
    .content {
        .unit {
            color: $white;
        }
    }
}

.no1 {
    .title {
        .img {
            width: rem(213);
            height: rem(120);
        }
    }
    .content {
        margin: 0 rem(42);
        .link {
            color: $white;
            .avatar {
                display: block;
                margin: rem(10) auto;
                border-radius: rem(4);
                width: rem(157);
            }
            .name {
                padding: rem(5) 0;
            }
            .wrapper-tac {
                padding: rem(5) 0;
            }
            .prize-comment {
                .title {
                    padding: rem(5) 0;
                    color: #f6d55e;
                }
                .content {
                    margin: 0;
                    text-align: justify;
                }
            }
        }
    }
}

.no10,
.creative,
.method,
.talent,
.young,
.prizes {
    .title {
        position: relative;
        top: rem(-20);
        .prize {
            z-index: 2;
            position: relative;
            display: inline-block;
            top: rem(20);
            // left: 50%;
            // margin-left: rem(-35);
            width: rem(70);
            height: rem(70);
        }
        .text {
            // position: absolute;
            // left: rem(-13);
            height: rem(40);
            line-height: rem(40);
            .desc,
            .angle-left,
            .angle-right {
                display: inline-block;
                height: 100%;
            }
            .desc {
                padding: 0 rem(30);
                background: #fec420;
                color: $pink-main;
            }
            .angle-left,
            .angle-right {
                position: relative;
                width: 0;
                height: 0;
                border: rem(20) solid transparent;
                vertical-align: top;
                // vertical-align: bottom;
            }
            .angle-left {
                border-left-color: #ececec;
                left: rem(40);
            }
            .angle-left-pink {
                border-left-color: $pink-main;
            }
            .angle-right {
                border-right-color: #ececec;
                right: rem(40);
            }
            .angle-right-pink {
                border-right-color: $pink-main;
            }
        }
    }
    .content {
        // margin: rem(40) 0;
        .unit {
            overflow: hidden;
            display: inline-block;
            margin: 2.5% 0;
            width: 47.5%;
            .avatar {
                // width: rem(158);
                height: rem(158);
            }
            .name {
                margin: rem(5) 0;
            }
        }
        .unit-left {
            margin-right: 5%;
        }
        .unit-first {
            display: block;
            margin: 0 auto;
            // width: 100%;
            .avatar {
                // width: 47.5%;
            }
        }
    }
    .list-young {
        .unit {
            display: block;
            margin: rem(15) 0;
            color: $pink-main;
            .name
            .pv,
            .stu-no {
                display: inline-block;
            }
            .pv,
            .stu-no {
                width: rem(85);
                font-size: rem(12);
            }
            .avatar {
                width: rem(62);
                height: rem(62);
                border-radius: 50%;
            }
            .name {
                width: rem(85);
                font-size: rem(15);
                vertical-align: middle;
            }
        }
    }
    .tip-no-rank {
        color: #918f8f;
        font-size: rem(11);
    }
}

.prizes {
    .title-prizes {
        top: rem(24);
        padding-bottom: rem(16);
    }
    .content-prizes {
        padding: rem(1) 0;
        background: $pink-main;
        .unit {
            margin: rem(28);
            padding: rem(14);
            border: rem(1) solid $white;
            border-radius: rem(8);
            background: $white;
            text-align: center;
            .trophy {
                width: rem(128);
                height: rem(128);
            }
            .prize-name {
                color: #6324c1;
            }
            .desc {
                padding: rem(25) rem(34);
                color: #464646;
            }
            .specific {
                color: #f88204;
            }
        }
    }
}

.intro-rank {
    .btns-wrapper {
        padding: rem(25) rem(15);
        background: #ececec;
        .btn {
            display: inline-block;
            padding: 0 rem(14);
            height: rem(47);
            line-height: rem(47);
            background: $pink-main;
            color: $white;
        }
        .intro {
            margin: 0 rem(15) 0 0;
        }
    }
}

.footer {
    padding: rem(20) rem(14);
    background: $pink-main;
    text-align: center;
    color: $white;
    .final-right {
        font-size: rem(13);
        padding: 0 0 rem(20);
    }
    .copyright {
        font-size: rem(10);
    }
}
