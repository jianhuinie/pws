@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";
@import "common/ui/Loading/index.styl";

.tab {
    background: #fff;
    div {
        text-align: center;
        display: inline-block;
        height: rem(40);
        line-height: rem(40);
        font-size: rem(15);
        width: 30%;
        margin: 0 10%;
    }
    .active {
        color: #37a4f5;
        border-bottom: 1px solid #37a4f5;
    }

}
.content {
    .empty-container {
        margin-top: rem(167);
        .image {
            width: 23%;
            margin: 0 auto;
            img {
                width: 100%;
            }
        }
        .tip {
            font-size: rem(13);
        }
    }
    .head-content {
        background: #fff;
        margin-bottom: 2%;
        border-top: 1px solid #f2f4f5;
        .champion-banner {
            text-align: center;
            position: relative;
            height: rem(203);
            .champion-container {
                position: relative;
                height: rem(170);
                span {
                    margin: 0 auto;
                    display: block;
                }
                .avator {
                    width: rem(125);
                    height: rem(125);
                    margin: 0 auto;
                    border-radius: rem(36);
                    position: relative;
                    img {
                        width: 100%;
                        height: 100%;
                        position: absolute;
                        top: 0;
                        left: 0;
                    }
                    .avator-icon {
                        width: rem(72);
                        height: rem(72);
                        /*background: #f00;*/
                        position: absolute;
                        border-radius: rem(36);
                        top: 22%;
                        left: 20%;
                        img {
                            border-radius: rem(36);
                        }
                    }
                }
                .name {
                    margin-bottom: rem(8);
                }
            }
        }
    }
    .item {
        background: #fff;
        padding: 2.5%;
        border: 1px solid #f2f4f5;
        margin: 0;
        div {
            display: inline-block;
            height: rem(46);
            vertical-align: bottom;
        }
        .number {
            position: absolute;
            width: 29%;
            .ranking {
                font-size: rem(18);
                vertical-align: top;
                height: rem(40);
                line-height: rem(40);
                text-align: center;
                width: 50%;
                color: #9d9d9e;
                &.excellent {
                    color: #ff9100;
                }
                &.null {
                    font-size: rem(12);
                    width: 56%;
                }
            }
            .avatar {
                width: rem(40);
                height: rem(40);
                float: right;
                border-radius: rem(20);
                img {
                    border-radius: rem(20);
                    width: 100%;
                    height: 100%;
                }
            }
        }
        .information {
            margin-left: 33%;
            width: 33%;
            .info-container {
                width: 100%;
                p {
                    font-size: rem(13);
                    color: #9d9e9e;
                    height: rem(20);
                    line-height: rem(20);
                }
                .teacher {
                    font-size: rem(15);
                    color: #3d3d3e;
                    width: 100%;
                    height: rem(23);
                    line-height: rem(23);
                }
                .vipBtn {
                    width: 104%;
                    line-height: rem(22);
                    text-align: center;
                    display: inline-block;
                    border: 1px solid #37a4f5;
                    color: #37a4f5;
                    border-radius: rem(3);
                    position: relative;
                    left: rem(-4);
                    font-size: rem(10);
                }
            }
        }
        .student-amount {
            line-height: rem(46);
            position: absolute;
            right: rem(33);
        }
        .ranking-change {
            line-height: rem(46);
            float: right;
            img {
                width: rem(13);
                height: rem(12);
                &.no-change {
                    width: rem(11);
                    height: rem(4);
                }
            }
        }
    }

    .tip {
        text-align: center;
        font-size: rem(14);
        width: 100%;
        padding: 3%;
        color: #9d9d9e;
    }

    .tips {
        text-align: center;
        font-size: rem(12);
        width: 100%;
        padding: 1%;
        color: #9d9d9e;
        margin-bottom: 1%;
    }

    .more-flag {
        height: rem(0.5);
    }

    .has-more {
        display: none;
    }

    .no-more {
        display: none;
        text-align: center;
        font-size: rem(11.2);
        width: 100%;
        padding: 3%;
        background: #d7d7d7;
    }

    .typing-loader {
        width: rem(8);
        height: rem(8);
        animation: typing 1s linear infinite alternate;
        margin: rem(10) auto;
        position: relative;
        left: rem(-12);
    }

    @keyframes typing {
        0% {
            background-color: rgba(255, 145, 1, 1);
            box-shadow: rem(12) rem(0) rem(0) rem(0) rgba(255, 145, 1, 0.2), rem(24) rem(0) rem(0) rem(0) rgba(255, 145, 1, 0.2);
        }
        25% {
            background-color: rgba(255, 145, 1, 0.4);
            box-shadow: rem(12) rem(0) rem(0) rem(0) rgba(255, 145, 1, 2), rem(24) rem(0) rem(0) rem(0) rgba(255, 145, 1, 0.2);
        }
        75% {
            background-color: rgba(255, 145, 1, 0.4);
            box-shadow: rem(12) rem(0) rem(0) rem(0) rgba(255, 145, 1, 0.2), rem(24) rem(0) rem(0) rem(0) rgba(255, 145, 1, 1);
        }
    }
}
