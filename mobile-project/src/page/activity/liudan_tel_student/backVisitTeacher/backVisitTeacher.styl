@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";

#main{
        margin: rem(15);
    background-color: #fff;
    padding-bottom: rem(1);
   
}
div.dis_btn{
    background-color: #aaa;
    border: 1px solid #aaa;
    &:active{
        background-color: #999;
        border: 1px solid #aaa;
    }
}
.student-info{
  padding: rem(15);
  background-color:#fff;
  table{
        width: 100%;
    line-height: rem(20);
    font-size: rem(14);
    margin-top: rem(20);
  }
  td {
    padding-top: rem(7);
    padding-bottom: rem(7);
    border-bottom: 1px solid #dcddde;
}
  .column1 {
    width: rem(40);
    text-align: left;
    white-space: nowrap;
    color: #9d9e9e;
    vertical-align: top;
}
.column2 {
    padding-left: rem(15);
    color: #3c3d3d;
}
}
.user-info {
            padding-left: rem(66);
            min-height: rem(56);
            position: relative;

            .u-logined {
                padding: rem(8) 0;
            }
            .u-name {
                color: #666;
                font-size: rem(14);
                line-height: 1;
            }
            .u-quit {
                color: #FFCC80;
                font-size: rem(12);
                margin-top: rem(10);
                line-height: 1;
                color: #aaa;
            }
        }
        .price{
          color:orange;
          position:absolute;
          right:0;
          top:0;
          height:rem(56);
          line-height:rem(56);
        }
        .u-img {
            width: rem(54);
            height: rem(54);
            border: rem(2) solid #fff;
            border-radius: 100%;
            position: absolute;
            left: rem(0);
            top: rem(0);
            overflow: hidden;
            background-color: #fff;

            img {
                width: 100%;
                height: 100%;
            }
        }
.call-info {
  background: #fff;
  .aui-buttons{
    text-align:center;
  }
  p {
    font-size: rem(16);
    line-height: 1.3;
    padding: rem(15);
    text-align: left;
    font-weight: bold;
    display: block;
  }
  span{
    padding:0 rem(15) rem(15) rem(15);
    font-size: rem(14);
    display: block;
    }
  
}
.b-logo{
    text-align: center;
    margin-top: rem(30);
}
.aui-btn {
  position: relative;
  display: inline-block;
  padding: rem(6) rem(12);
  margin-bottom: 0;
  font-weight: 400;
  line-height: 1.4;
  text-align: center;
  background-color: #ecf0f1;
  white-space: nowrap;
  vertical-align: middle;
  touch-action: manipulation;
  cursor: pointer;
  -webkit-user-select: none;
  border: 1px solid #ecf0f1;
  border-radius: rem(4);
}
.aui-btn-block {
    display: block;
    padding: rem(8) 0;
    margin-bottom: 0;
    font-size: rem(16);
    width: 36%;
    display: inline-block;
    
}
.aui-btn-info {
    color: #ffffff;
    background-color: #3498db;
    border: 1px solid #3498db;
    margin:rem(10);
    margin-top: 0;
}


.aui-btn:active {
      color: #fff;
        background-color: #2980b9;
    border: 1px solid #2980b9;
}
.common-teacher-info {
	    background: -webkit-linear-gradient(-45deg,rgba(0,56,72,1) 100px,rgba(0,117,113,1) 180px,rgba(0,117,113,1) 220px,rgba(0,56,72,1) 300px) center center no-repeat;
    padding: rem(15);
  
  width: 100%;
  text-shadow: rem(2) rem(2) rem(2) rgba(0,0,0,0.4);
  .recommend {
    width: rem(32);
    height: rem(18);
    position: absolute;
    top: rem(-5);
    left: 43%;
    transform: translateX(-43%);
    background: #ff6c00;
    color: #ffffff;
    font-size: rem(12);
    border-radius: rem(5);
    line-height: rem(18);
    display: inline-block;
    text-align: center;
  }
  .avatar {
    position: relative;
    .avatar-info {
      width: rem(62);
      height: rem(62) ;
      border: 2px solid #ffffff;
      border-radius: rem(8);
      overflow: hidden;
      margin: 0 auto;
      img {
        width: 100%;
        height: 100%;
      }
    }
    .teacher-audio {
      border: 1px solid #ffffff;
      border-radius: rem(5);
      position: absolute;
      left: 65%;
      width: rem(70);
      top: rem(15);
      background: transparent;
      opacity: 0.5;
      font-size: rem(12);
      color: #ffffff;
      padding: 0 rem(6);
      height: rem(30);
      line-height: rem(30);
      img {
        width: rem(16);
        height: rem(16);
        position: absolute;
        top: 50%;
        left: rem(6);
        transform: translateY(-50%);
      }
      .audio-length {
        position: absolute;
        right: rem(6);
        display: inline-block;
        top: 50%;
        transform: translateY(-50%);
        z-index: 1;
      }
      .audio {
        height: rem(30);
        width: rem(70);
        position: absolute;
        left: 0;
        top: 0;
        z-index:2;
      }
    }
  }

  .teacher-name {
    color: #ffffff;
    margin: 0 auto;
    text-align: center;
    margin-top: rem(5);
    font-size: rem(20);
    position: relative;
    padding: 0 rem(10);
    .name {
      display: inline-block;
      max-width: 73%;
      text-overflow: ellipsis;
      overflow: hidden;
      white-space: nowrap;
      line-height: 1;
    }
    .sex-vip {
      position: absolute;
      display: inline-block;
      top: 43%;
      transform: translateY(-45%);
      line-height: 1;
      .teacher-sex {
        display: inline-block;
        margin-left: rem(3);
        img {
          width: rem(19);
          height: rem(19);
          vertical-align: bottom;
        }
      }
      .teacher-vip {
        display: inline-block;
        img {
          width: rem(19);
          height: rem(21);
          vertical-align: bottom;
        }
      }
    }

  }
  .org-name {
    margin-top: rem(5);
    display: block;
    text-align: center;
    color: #ffffff;
    font-size: rem(12);
  }
  .self-brief {
    margin-top: rem(5);
    color: #ffffff;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    font-size: rem(12);
    text-align: center;
  }
  .age {
    text-align: center;
    color: #ffffff;
    font-size: rem(12);
    span {
      display: inline-block;
      margin-right: rem(10);
    }
  }
}


