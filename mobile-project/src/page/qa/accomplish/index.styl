@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";

.nav-bar {
    background: #f2f4f5;
    .nav-wrap-right {
        font-size: rem(14);
        margin-right: rem(15);
    }
}

body {
    background: #fff;
    .picture {
        height: rem(90);
        width: rem(90);
        margin: rem(15) auto;
        margin-top: rem(45);
        img {
            height: 100%;
        }
    }
    .bottom {
        margin-top: rem(25);
    }
    .text {
        text-align: center;
        &.primary {
            color: #f57c00;
        }
        &.black {
            color: #3c3d3d;
        }
        &.muted {
            color: #6d6d6e;
        }
        &.small {
            font-size: rem(10);
        }
        &.middle {
            font-size: rem(13);
        }
        &.large {
            font-size: rem(14);
        }
    }
    .qrcode {
        width: rem(218);
        height: rem(218);
        margin: 0 auto;
        margin-top: rem(25);
        img {
            width: 100%;
        }
    }
    .download {
        text-align: center;
        .btn {
            background: #ff9100;
            border-radius: rem(2);
            width: rem(128);
            height: rem(39);
            border: none;
            color: #fff;
            margin-top: rem(20);
            display: inline-block;
            line-height: rem(39);
        }
    }

}