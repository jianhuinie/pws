@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";

#page_nav_bar {
    background: #F4F4F4;
}

#page_main {
    position: absolute;
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;
    width: 100%;
    bottom: rem(45);
    top: 0;
}

.head-nav {
    background: white;
    padding: 0 rem(10);
    padding-bottom: rem(15);
    .asker {
        padding-top: rem(10);
        .asker-img {
            float: left;
            height: rem(40);
            width: rem(40);
            border-radius: 50%;
            margin-right: rem(10);
            margin-top: rem(5);
        }
        .asker-info {
            margin-top: rem(12);
            .asker-name {
                font-family: PingFang-SC-Regular;
                font-size: rem(15);
                color: #3c3d3d;
                letter-spacing: rem(-0.17);
                line-height: rem(15);
                text-align: left;
            }
            .asker-details {
                font-family: PingFang-SC-Regular;
                font-size: rem(13);
                color: #9d9e9e;
                letter-spacing: rem(-0.14);
                line-height: rem(13);
                text-align: left;
                margin-top: rem(6);
            }
        }
    }
    .asker-content {
        margin-top: rem(10);
        position: relative;
        .invalid-question {
            position: absolute;
            top: rem(10);
            right: rem(20);
        }
        .asker-text{
            font-family: PingFang-SC-Regular;
            font-size: rem(15);
            color: #3c3d3d;
            letter-spacing: rem(-0.17);
            line-height: rem(20);
            text-align: left;
            word-wrap: break-word;
            word-break: break-all;
        }
        .ask-img{
            margin-top: rem(10);
            width: rem(300);
            .ask-img-item{
                width: rem(90);
                height: rem(90);
                float: left;
                margin-left: rem(2);
                margin-right: rem(2);
                margin-bottom: rem(4);
                height: rem(98);
            }
        }
    }
    .bottom-nav {
        margin-top: rem(15);
        position: relative;
        .answer-score {
            display: none;
        }
        .bottom-item {
            display: inline-block;
        }
        .head-score {
            font-family: PingFang-SC-Regular;
            font-size: rem(13);
            color: #ff9100;
            letter-spacing: rem(-0.14);
            line-height: rem(13);
            text-align: left;
        }
        .head-subject {
            margin-left: rem(20);
            font-family: PingFang-SC-Regular;
            font-size: rem(13);
            color: #ff9100;
            letter-spacing: rem(-0.14);
            line-height: rem(13);
            text-align: left;
            .subject-icon {
                height: rem(14);
                width: rem(14);
                margin-right: rem(4);
            }
        }
        .head-time {
            font-family: PingFang-SC-Regular;
            font-size: rem(13);
            color: #9d9e9e;
            letter-spacing: rem(-0.14);
            line-height: rem(13);
            text-align: left;
            margin-left: rem(10);
        }
        .head-read {
            position: absolute;
            right: 0;
            bottom: 0;
            p {
                font-family: PingFang-SC-Regular;
                font-size: rem(13);
                color: #9d9e9e;
                letter-spacing: rem(-0.14);
                line-height: rem(12);
                text-align: left;
                display: inline-block;
            }
            .head-read-icon {
                height: rem(14);
                width: rem(14);
                margin-right: rem(4);
            }
        }
    }
}

.hot-answer {
    padding: rem(15);
    position: relative;
    margin-top: rem(15);
    border-radius: rem(3);
        .answer-show {
            background: white;
            padding: rem(12);
            margin-top: rem(10);
            .answer-show-text {
                font-family: PingFang-SC-Regular;
                font-size: rem(14);
                color: #3c3d3d;
                letter-spacing: rem(-0.16);
                line-height: rem(20);
                text-align: left;
                margin-bottom: rem(10);
                word-break: break-all;
            }
            .answer-show-img {
                width: 60%;
                margin-bottom: rem(10);
                //height:rem(100);
            }
            .audio-show {
                position: relative;
                .audio {
                    width: rem(157);
                    background: #84D55A;
                    height: rem(40);
                    border-radius: rem(8);
                    display: inline-block;
                    margin-right: rem(10);
                }
                .audio-icon {
                    position: absolute;
                    left: rem(18);
                    width: rem(14);
                    height: rem(20);
                    top: rem(10);
                }
                .audio-lenth {
                    font-family: PingFang-SC-Regular;
                    font-size: rem(13);
                    color: #6d6d6e;
                    text-align: center;
                    position: absolute;
                    top: rem(15);
                    display: inline-block;
                    }
                }
            }
        }
        .item-nav {
            .item-nav-avatar {
                height: rem(50);
                width: rem(50);
                border-radius: 50%;
                float: left;
                margin-right: rem(10);
            }
            .item-nav-content {
                float: left;
                margin-top: rem(10);
                width: 79%;
                .item-nav-name {
                    font-family: PingFang-SC-Regular;
                    font-size: rem(14);
                    color: #3c3d3d;
                    letter-spacing: rem(-0.16);
                    line-height: rem(15);
                    text-align: left;
                    margin-bottom: rem(8);
                }
                .item-nav-role {
                    border: 1px solid #DCDCDC;
                    padding: rem(2);
                    font-family: PingFang-SC-Regular;
                    font-size: rem(12);
                    color: #9d9e9e;
                    letter-spacing: rem(-0.13);
                    line-height: rem(13);
                    text-align: center;
                    background: white;
                    margin-left: rem(4);
                }
                .item-nav-address {
                    font-family: PingFang-SC-Regular;
                    font-size: rem(12);
                    color: #9d9e9e;
                    letter-spacing: rem(-0.13);
                    line-height: rem(13);
                    text-align: left;
                }
            }
}

.empty {
        text-align:center;
        padding-top: rem(50);
        color: #A7A7A7;
}
.hide {
    display: none;
}
