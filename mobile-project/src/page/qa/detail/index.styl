@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";

#page_nav_bar {
    background: #F4F4F4;
}

.head-nav {
    background: white;
    padding: 0 rem(10);
    padding-bottom: rem(15);
    .asker {
        padding-top: rem(10);
        .asker-img {
            float: left;
            height: rem(40);
            width: rem(40);
            border-radius: 50%;
            margin-right: rem(10);
            margin-top: rem(5);
        }
        .asker-info {
            margin-top: rem(12);
            .asker-name {
                font-family: PingFang-SC-Regular;
                font-size: rem(15);
                color: #3c3d3d;
                letter-spacing: rem(-0.17);
                line-height: rem(15);
                text-align: left;
            }
            .asker-details {
                font-family: PingFang-SC-Regular;
                font-size: rem(13);
                color: #9d9e9e;
                letter-spacing: rem(-0.14);
                line-height: rem(13);
                text-align: left;
                margin-top: rem(6);
            }
        }
    }
    .asker-content {
        margin-top: rem(10);
        position: relative;
        .invalid-question {
            position: absolute;
            top: rem(10);
            right: rem(10);
        }
        .asker-text{
            font-family: PingFang-SC-Regular;
            font-size: rem(15);
            color: #3c3d3d;
            letter-spacing: rem(-0.17);
            line-height: rem(20);
            text-align: left;
            word-wrap: break-word;
            word-break: break-all;
        }
        .ask-img{
            margin-top: rem(10);
            width: 100%;;
            .ask-img-item{
                width: 32%;
                float: left;
                margin-left: rem(2);
                margin-right: rem(2);
                margin-bottom: rem(4);
                img {
                    height: 100%;
                    width: 100%;
                }
                //height: rem(98);
            }
        }
    }
    .bottom-nav {
        margin-top: rem(15);
        position: relative;
        .answer-score {
            display: none;
        }
        .bottom-item {
            display: inline-block;
        }
        .head-score {
            font-family: PingFang-SC-Regular;
            font-size: rem(13);
            color: #ff9100;
            letter-spacing: rem(-0.14);
            line-height: rem(13);
            text-align: left;
        }
        .head-subject {
            font-family: PingFang-SC-Regular;
            font-size: rem(13);
            color: #ff9100;
            letter-spacing: rem(-0.14);
            line-height: rem(13);
            text-align: left;
            .subject-icon {
                height: rem(14);
                width: rem(14);
                margin-right: rem(4);
            }
        }
        .head-time {
            font-family: PingFang-SC-Regular;
            font-size: rem(13);
            color: #9d9e9e;
            letter-spacing: rem(-0.14);
            line-height: rem(13);
            text-align: left;
            margin-left: rem(10);
        }
        .head-read {
            position: absolute;
            right: 0;
            bottom: 0;
            p {
                font-family: PingFang-SC-Regular;
                font-size: rem(13);
                color: #9d9e9e;
                letter-spacing: rem(-0.14);
                line-height: rem(12);
                text-align: left;
                display: inline-block;
            }
            .head-read-icon {
                height: rem(14);
                width: rem(14);
                margin-right: rem(4);
            }
        }
    }
}

.hot-answer {
    background: white;
    margin-top: rem(20);
    .hot-answer-icon{
        margin-top: rem(10);
        margin-left: 0;
        height: rem(22);
    }
    .answer-items{
        border-bottom: 1px solid #F4F4F4;
        padding-bottom: rem(10);
    }
    .hot-answer-show {
        margin-top: rem(16);
        padding: 0 rem(20);
        position: relative;
        .answer-avart {
            border-radius: 50%;
            height: rem(40);
            width: rem(40);
            float: left;
        }
        .answer-contents {
            float: left;
            margin-left: rem(10);
            width: 54%;
            .answer-first-content {
                .answer-first-item {
                    display: inline-block;
                    .answer-name {
                        font-family: PingFang-SC-Regular;
                        font-size: rem(15);
                        color: #3c3d3d;
                        letter-spacing: rem(-0.17);
                        line-height: rem(14);
                        text-align: left;
                    }
                    .answer-shenfen {
                        font-family: PingFang-SC-Regular;
                        font-size: rem(11);
                        color: #9d9e9e;
                        letter-spacing: rem(-0.14);
                        line-height: rem(13);
                        text-align: left;
                        display: inline-block;
                        border: 1px solid #9d9e9e;
                        border-radius: rem(2);
                        padding: rem(2);
                        text-align: center;
                        margin-left: rem(2);
                    }
                    .answer-intro {
                        font-family: PingFang-SC-Regular;
                        font-size: rem(13);
                        color: #9d9e9e;
                        letter-spacing: rem(-0.14);
                        line-height: rem(13);
                        height: rem(13);
                        text-align: left;
                        margin-top: rem(4);
                    }
                }
            }
        }
        .answer-right-tab {
            width: 50%;
            text-align: right;
            position: absolute;
            top: 0;
            right: rem(4);
        }
        .invalid-answer {
            font-family: PingFang-SC-Regular;
            font-size: rem(15);
            color: #FC5C5A;
            font-weight: bold;
            letter-spacing: rem(-0.17);
            .invalid-answer-icon {
                height: rem(16);
                width: rem(16);
            }
        }
        .answer-unget, .answer-get {
            font-family: PingFang-SC-Regular;
            font-size: rem(12);
            letter-spacing: rem(-0.14);
            line-height: rem(13);
            border-radius: rem(2);
            padding: rem(4);
            text-align: center;
            margin-right: rem(6);
        }
        .answer-unget {
            color: #9d9e9e;
            border: 1px solid #9d9e9e;
        }
        .answer-get {
            color: #FC5C5A;
            border: 1px solid #FC5C5A;
        }

    }
    .answer-show {
        padding-left: rem(70);
        padding-right: rem(20);
        margin-top: rem(10);
        .answer-show-text {
            font-family: PingFang-SC-Regular;
            font-size: rem(14);
            color: #3c3d3d;
            letter-spacing: rem(-0.16);
            line-height: rem(20);
            text-align: left;
            margin-bottom: rem(10);
            word-break: break-all;
        }
        .answer-show-img {
            width: 60%;
            margin-bottom: rem(10);
        }
        .audio-show {
            position: relative;
            .audio {
                width: rem(157);
                background: #84D55A;
                height: rem(40);
                border-radius: rem(8);
                display: inline-block;
                margin-right: rem(10);
            }
            .audio-icon {
                position: absolute;
                left: rem(18);
                width: rem(14);
                height: rem(20);
                top: rem(10);
            }
            .audio-lenth {
                font-family: PingFang-SC-Regular;
                font-size: rem(13);
                color: #6d6d6e;
                text-align: center;
                position: absolute;
                top: rem(15);
                display: inline-block;
            }
        }
    }
    .answer-class {
        margin-left: 20%;
        width: 75%;
        border: 1px solid #E3E3E3;
        margin-bottom: rem(18);
        .answer-class-img {
            height: rem(63);
            width: rem(63);
        }
        .answer-class-width {
            width: 72%;
            position: relative;
        }
        .answer-class-item {
            display: inline-block;
            .answer-class-name {
                font-family: PingFang-SC-Regular;
                font-size: rem(13);
                color: #3c3d3d;
                letter-spacing: rem(-0.14);
                text-align: center;
                margin-left: rem(8);
                position: absolute;
                top: rem(-20);
            }
            .answer-learn-times {
                font-family: PingFang-SC-Regular;
                font-size: rem(12);
                color: #6d6d6e;
                letter-spacing: rem(-0.13);
                text-align: left;
                margin-left: rem(10);
                position: absolute;
                bottom: rem(-20);
            }
        }
    }
    .answer-bottom{
        padding-left: rem(70);
        position: relative;
        .answer-bottom-time {
            font-family: PingFang-SC-Regular;
            font-size: rem(13);
            color: #9d9e9e;
            letter-spacing: rem(-0.14);
            line-height: rem(11);
            text-align: left;
            margin-right: rem(20);
        }

        .answer-bottom-comment {
            display: inline-block;
            position: absolute;
            right: rem(12);
            .zan-action {
                display: inline-block;
                height: rem(40);
            }
            .answer-comment-icon {
                height: rem(15);
                width: rem(15);
                margin-right: rem(4);
            }
            .answer-comment-number {
                font-family: PingFang-SC-Regular;
                font-size: rem(13);
                color: #9d9e9e;
                letter-spacing: rem(-0.14);
                line-height: rem(13);
                text-align: left;
            }

            .answer-support-number {
                font-family: PingFang-SC-Regular;
                font-size: rem(13);
                color: #9d9e9e;
                letter-spacing: rem(-0.14);
                line-height: rem(13);
                text-align: left;
            }
            .answer-good-number {
                font-family: PingFang-SC-Regular;
                font-size: rem(13);
                color: #ff9100;
                letter-spacing: rem(-0.14);
                line-height: rem(13);
                text-align: left;
            }
            .answer-comment-space{
                margin-right: rem(15);
            }
        }
    }
    .teacher-nav {
        position: relative;
        .teacher-nav-color {
            background: #37a4f5;
            width: rem(4);
            height: rem(30);
            display: inline-block;
            margin-right: rem(4);
            margin-top: rem(10);
        }
        .student-nav-color {
            background: #43b244;
            width: rem(4);
            height: rem(30);
            display: inline-block;
            margin-right: rem(4);
            margin-top: rem(10);
        }
        .teacher-nav-text {
            font-family: PingFang-SC-Regular;
            font-size: rem(15);
            color: #3d3d3d;
            letter-spacing: rem(0);
            text-align: center;
            position: absolute;
            left: rem(14);
            top: rem(16);
        }
    }
    .hot-teacher-ask {
        font-family: PingFang-SC-Regular;
        font-size: rem(17);
        color: #ff9100;
        letter-spacing: rem(0);
        line-height: rem(18);
        text-align: center;
        border: 1px solid #ff9100;
        width: 50%;
        margin-left: 25%;
        border-radius: rem(10);
        padding: rem(12);
        margin-top: rem(10);
    }
    .answer-item-no-border {
        border: none;
    }
}

.hot-answer-bottom {
    padding-bottom: rem(20);
}
.answer-link-all {
    margin-top: rem(50);
}

.hot-student-ask {
    background: #ff9100;
    text-align: center;
    font-family: PingFang-SC-Regular;
    font-size: rem(17);
    color: #ffffff;
    letter-spacing: rem(0);
    position: fixed;
    width: 100%;
    height: rem(50);
    line-height: rem(50);
    bottom: 0;
}

.ans-filter {
    margin-left: rem(10);
    padding-top: rem(20);
    font-size: rem(15);
}
.answer-tobe-ask {
    display: inline-block;
    span {
        font-size: rem(14);
    }
}