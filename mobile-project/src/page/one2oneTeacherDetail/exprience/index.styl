.exprience {
    background: white;
    padding: rem(20) rem(10) rem(24) rem(10);
    .exprience-content {
        .title {
            font-family: PingFangSC-Semibold;
            font-size: rem(16);
            color: #3D3D3E;
            line-height: rem(30);
            height: rem(30);
        }
        .content {
            .box-item {
                &.hide {
                    display: none;
                }
                position: relative;
                padding: 0 0 0 rem(20);
                margin-bottom: rem(30);
                .dot-box {
                    position: absolute;
                    top: rem(6);
                    left: rem(-2);
                    height: 100%;
                    .dot {
                        background: #DDDDDE;
                        border: rem(2) solid #FFFFFF;
                        border-radius: rem(20);
                        width: rem(12);
                        height: rem(12);
                    }
                    .dot-line {
                        width: rem(1);
                        height: 94%;
                        background: #ddddde;
                        position: relative;
                        left: rem(5);
                    }
                }
                .box {
                    .box-title {
                        font-family: PingFang-SC-Regular;
                        font-size: rem(15);
                        color: #3D3D3E;
                        line-height: rem(20);
                        word-break: break-all;
                    }
                    .box-time {
                        font-family: PingFang-SC-Regular;
                        font-size: rem(13);
                        color: #9D9D9E;
                        letter-spacing: 0;
                        line-height: rem(30);
                    }
                    .box-content {
                        font-family: PingFang-SC-Regular;
                        font-size: rem(15);
                        color: #3D3D3E;
                        line-height: rem(21);
                        word-break: break-all;
                    }
                }
            }
        }
    }
    .more-exprience {
        height: rem(30);
        line-height: rem(30);
        text-align: center;
        font-family: PingFang-SC-Regular;
        font-size: rem(15);
        color: #9D9D9E;
        letter-spacing: 0;
        &.hide {
            display: none;
        }
    }
}