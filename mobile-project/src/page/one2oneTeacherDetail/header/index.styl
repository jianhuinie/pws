
.base-info-box {
    padding: rem(25) rem(24) rem(25) rem(112);
    position: relative;
    min-height: rem(130);
    .avatar {
        height: rem(80);
        width: rem(80);
        position: absolute;
        left: rem(14);
        .avatar-index {
            visibility: visible;
            opacity: 1;
            height: rem(80);
            width: rem(80);
            border-radius: rem(45);
        }
        .tag {
            position: absolute;
            height: rem(21);
            bottom: rem(-4);
            left: rem(19);
            width: rem(42);
            text-align: center;
            background: #ff6c00;
            line-height: rem(21);
            border-radius: rem(26);
            font-family: Roboto-Bold;
            font-size: rem(12);
            color: #FFFFFF;
            letter-spacing: 0;
        }
    }
    .box {
        .header-line {
            height: rem(26);
            line-height: rem(26);
            .name {
                float: left;
                height: rem(26);
                line-height: rem(26);
                display: inline-block;
                font-family: PingFangSC-Semibold;
                font-size: rem(18);
                color: #FCFCFC;
                max-width: 50%;
                text-overflow: ellipsis;
                word-break: break-all;
                overflow: hidden;
            }
            .icon-ic_male, .icon-ic_female {
                position: relative;
                top: rem(4);
                color: #37A4F5;
                font-size: rem(18);
                float: left;
                margin-left: rem(6);
                margin-right: rem(3);
            }
            .icon-ic_female {
                color: #FF6FCC;
            }
            .new-in {
                background: #FFFFFF;
                font-family: PingFangSC-Semibold;
                font-size: rem(10);
                color: #FF6C00;
                /* line-height: 10px; */
                border-radius: rem(2);
                padding: 0 rem(4);
                display: inline-block;
                height: rem(20);
                line-height: rem(20);
                float: left;
                position: relative;
                top: rem(2);
                margin-left: rem(6);
            }
        }
        .second-line {
            font-family: PingFang-SC-Regular;
            font-size: rem(13);
            color: #9D9D9E;
            letter-spacing: 0;
            height: rem(24);
            line-height: rem(24);
        }
        .third-line {
            font-family: PingFangSC-Semibold;
            font-size: rem(14);
            color: #FFFFFF;
            line-height: rem(22);
            height: rem(22);
        }
        .last-line {
            height: rem(20);
            line-height: rem(20);
            .stars {
                position: relative;
                top: rem(2);
                display: inline-block;
                .icon-star_all {
                    float: left;
                    color: #ff9100;
                    font-size: rem(14);
                    &.grey-star {
                        color: #ededed;
                    }
                }
                .star-icon {
                    float: left;
                    position: relative;
                    .icon-star_all {
                        float: left;
                        color: #ededed;
                        font-size: rem(14);
                    }
                    .icon-star_half {
                        float: left;
                        position: absolute;
                        left: 0;
                        top: 0;
                        color: #ff9100;
                        font-size: rem(14);
                    }
                }
            }
            .number {
                font-family: PingFang-SC-Regular;
                font-size: rem(13);
                color: #9D9D9E;
                letter-spacing: 0;
                line-height: rem(13);
            }
        }
    }
}
.avatar-mask {
    position: absolute;
    width: 100%;
    img {
        visibility: visible;
        opacity: 1;
        height: rem(130);
        width: 100%;
    }
}

.databus {
    background: white;
    text-align: center;
    align-items: center;
    padding: rem(10);
    position: relative;
    top: rem(-10);
    display: flex;
    .item {
        flex: 1;
        .text {
            font-family: PingFangSC-Semibold;
            font-size: rem(16);
            color: #3D3D3E;
            line-height: rem(20);
            height: rem(20);
        }
        .text-r {
            font-family: PingFang-SC-Regular;
            font-size: rem(13);
            color: #3D3D3E;
            letter-spacing: 0;
            line-height: rem(20);
            height: rem(20);
            margin-top: rem(3);
        }
    }
    .line {
        height: rem(34);
        width: rem(1);
        background: #ededee;
    }
}
.cross-line {
    width: 100%;
    height: rem(1);
    background: #ededee;
    position: relative;
    top: rem(-10);
}
.platform-ensure {
    height: rem(36);
    line-height: rem(36);
    background: white;
    position: relative;
    top: rem(-10);
    .info {
        display: flex;
        width: rem(310);
        padding-left: rem(4);
        .item {
            height: rem(36);
            line-height: rem(36);
            display: inline-block;
            flex: 1;
            .text {
                font-family: PingFang-SC-Regular;
                font-size: rem(13);
                color: #9D9D9E;
                letter-spacing: 0;
                line-height: rem(13);
            }
            .icon-focus {
                font-size: rem(13);
                color: #ff9100;
                position: relative;
                left: rem(4);
            }
        }
    }
    .next {
        position: absolute;
        right: rem(4);
        top: 0;
        .icon-chevron-thin-right {
            color: #9d9d9e;
        }
    }
}