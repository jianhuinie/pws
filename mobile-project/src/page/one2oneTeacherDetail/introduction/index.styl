.introduce {
    background: white;
    margin-top: rem(9);
    top: rem(-10);
    position: relative;
    .cross-line {
        top: 0;
    }
    .header-line {
        padding: 0 rem(10);
        height: rem(46);
        line-height: rem(46);
        .title {
            float: left;
            font-family: PingFangSC-Semibold;
            font-size: rem(18);
            color: #3d3d3e;
        }
        .audio {
            float: right;
            background: #FFFFFF;
            border: rem(1) solid #FF9100;
            border-radius: rem(52);
            width: rem(80);
            height: rem(28);
            margin-top: rem(9);
            position: relative;
            .play-icon-dynamic {
                height: rem(18);
                width: rem(18);
                float: left;
                top: rem(5);
                position: relative;
                left: rem(4);
            }
            .audio-length {
                float: right;
                height: rem(28);
                line-height: rem(28);
                font-size: rem(15);
                color: #FF9100;
                position: relative;
                right: rem(6);
                font-family: SanFranciscoDisplay-Medium;
                display: inline-block;
            }
            .icon-ic_voice {
                position: absolute;
                font-size: rem(16);
                margin-top: rem(5);
                margin-left: rem(6);
                color: #ff9100;
            }
        }
    }
    .content {
        padding: 2%;
        .introduction {
            font-family: PingFang-SC-Regular;
            font-size: rem(15);
            color: #3D3D3E;
            line-height: rem(21);
            word-wrap: break-word;
            word-break: break-all;
        }
        .tags {
            width: 96%;
            margin-top: rem(10);
            line-height: rem(38);
            margin-bottom: rem(10);
            overflow: hidden;
            .item {
                background: #FFFFFF;
                border: rem(1) solid #DDDDDE;
                border-radius: rem(54);
                display: inline-block;
                padding: rem(6) rem(8);
                font-family: PingFang-SC-Regular;
                font-size: rem(13);
                color: #9D9D9E;
                letter-spacing: 0;
                line-height: rem(13);
                white-space: nowrap;
                height: rem(27);
            }
            &.has-more-tags {
                height: rem(76);
            }
            &.hide {
                display: none;
            }
        }
        .more-skills {
            text-align: center;
            margin-bottom: rem(10);
            font-size: rem(14);
            color: #cdcdcd;
            &.hide {
                display: none;
            }
        }
        .video-content {
            .video-frame {
                width: 100%;
                height: rem(210);
                &.hide {
                    display: none;
                }
            }
            .cover {
                position: relative;
                padding-bottom: 54%;
                .cover-img {
                    visibility: visible;
                    opacity: 1;
                    width: 100%;
                    height: 100%;
                    border-radius: rem(2);
                    position: absolute;
                    top: 0;
                    left: 0;
                    z-index: 2;
                }
                .mask-icons {
                    position: absolute;
                    background: black;
                    z-index: 10;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%,-50%);
                    width: rem(60);
                    height: rem(60);
                    border-radius: 50%;
                    opacity: 0.5;
                }
                .icon {
                    position: absolute;
                    font-size: rem(50);
                    color: white;
                    z-index: 10;
                    top: 50%;
                    left: 51%;
                    transform: translate(-50%,-50%);
                }
            }
        }
        .pics-content {
            width: 100%;
            text-align: center;
            margin-top: rem(10);
            img {
                border-radius: rem(2);
                min-height: rem(60);
                float: left;
                width: 23.6%;
                margin-right: rem(2);
                margin-left: rem(2);
            }
            .grey-pic {
                float: left;
                width: 23.6%;
                margin: 0;
                border-radius: rem(2);
                min-height: rem(60);
                background: #f8f8f8;
                display: inline-block;
                margin-right: rem(2);
                margin-left: rem(2);
                position: relative;
                .grey-text {
                    position: absolute;
                    top: 50%;
                    left: 0;
                    right: 0;
                    transform: translateY(-50%);
                    font-size: rem(13);
                    text-align: center;
                    color: #9d9d9e;
                }
            }
        }
    }
}

.tags-box {
    .header {
        height: rem(40);
        line-height: rem(40);
        text-align: center;
        background: #F2F2F2;
        position: relative;
        .close-box {
            position: absolute;
            right: rem(10);
            top: rem(10);
            border: 1px solid #9d9e9e;
            height: rem(20);
            width: rem(20);
            border-radius: 50%;
            .icon {
                color: #9d9e9e;
                position: absolute;
                top: 50%;
                left: 50%;
                font-size: rem(14);
                transform: translate(-50%, -50%);
            }
        }
    }
    .tag-box-items {
        padding: rem(10) rem(15);
        .tag-item {
            background: #FFFFFF;
            border: rem(1) solid #DDDDDE;
            border-radius: rem(54);
            display: inline-block;
            padding: rem(6) rem(8);
            font-family: PingFang-SC-Regular;
            font-size: rem(13);
            color: #9D9D9E;
            letter-spacing: 0;
            line-height: rem(13);
            white-space: nowrap;
            height: rem(27);
            margin-bottom: rem(10);
        }
    }
}