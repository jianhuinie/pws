@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";

body {
    background-color: #f3f3f4;
}

.single-line {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.double-line {
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    display: -webkit-box;
    white-space: inherit;
}
.container {
    position: relative;
    margin-top: rem(10);
    .course-info {
        position: relative;
        width: 100%;
        height: rem(82);
        padding: rem(10) rem(15);
        background: #fff;
        .avatar {
            position: absolute;
            top: rem(10);
            left: rem(15);
            width: rem(65);
            height: rem(65);
        }
        .intro {
            margin-left: rem(75);
            margin-right: rem(75);
            .data-course-title {
                font-size: rem(15);
                line-height: rem(19);
                color: #3d3d3e;
            }
            .course-teacher {
                position: absolute;
                left: rem(90);
                bottom: rem(10);
                font-size: rem(13);
                color: #9d9e9e;
            }
        }
        .download {
            position: absolute;
            right: rem(15);
            top: rem(27);
            border: 1px solid #ff9100;
            border-radius: rem(2);
            width: rem(66);
            height: rem(26);
            color: #ff9100;
            font-size: rem(12);
            text-align: center;
            line-height: rem(26);
        }
        .no-download {
            position: absolute;
            right: rem(15);
            bottom: rem(10);
            font-size: rem(13);
            color: #9d9e9e;
        }
    }
    .file-info{
        margin-top: rem(10);
        width: 100%;
        #frame-pre{
            width: 100%;
            height: 100%;
        }
    }
    .enter-mask,
    .login-mask,
    .teacher-mask {
        position: absolute;
        top: rem(222);
        left: 0;
        right: 0;
        padding: 0 rem(30);
        z-index: 2;
        width: 100%;
        p {
            font-size: rem(15);
            color: #6d6d6e;
            line-height: rem(20);
            text-align: center;
        }
        span {
            display: block;
            margin: rem(20) auto;
            width: rem(108);
            height: rem(40);
            border-radius: rem(2);
            background: #ff9100;
            font-size: rem(17);
            text-align: center;
            line-height: rem(40);
            color: #fff;
        }
    }
}

.app-mask,
.browser-mask {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 10;
    background: rgba(0,0,0,.7);
}
.browser-mask{
    img{
        position: absolute;
        right: rem(15);
        top: rem(12);
        width: rem(205);
        height: rem(142);

    }
}
.app-mask {
    div {
       height: rem(200);
       width: 100%;
       position: absolute;
       bottom: 0;
       left: 0;
       right: 0;
       background: #ededee;
    }
    p {
        margin-top: rem(46);
        font-size:rem(17);
        color:#3d3d3e;
        line-height:rem(17);
        text-align: center;
    }
    span {
        display: block;
        margin: rem(30) auto;
        width: rem(114);
        height: rem(42);
        border: 1px solid #ff9100;
        border-radius: rem(4);
        font-size: rem(17);
        text-align: center;
        line-height: rem(42);
        color: #ff9100;
    }
}


