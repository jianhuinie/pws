@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";
$O600 = #ff6c00;
$Orange = #ff9100;
$g600 = #3c3d3d;
$g500 = #6d6d6e;
$g400 = #9d9e9e;
$g300 = #dcddde;
$g200 = #ebeced;
$g100 = #f2f4f5;
$r600 = #f03748;
$b700 = #245bd2;
body {
  background-color: $g100;
}

.head {
  width: 100%;
  position: relative;
  padding-top: 56.25%;
  > img {
    position: absolute;
    top: 0;
    left: 0;
  }
}

.course_info {
  background-color: #fff;
  padding: rem(15);
  .line1 {
    overflow: hidden;
    .course-title {
      float: left;
      color: #3c3c3c;
      width: 80%;
      line-height: 1.3;
      font-size: rem(18);
      text-overflow: ellipsis;
      white-space normal;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;

    }
    .price {
      float: right;
      width: 20%;
      text-align: right;

      .original_price {
        font-size: rem(14);
        color: $g400;
        text-decoration: line-through;
        .unit {
          font-size: rem(8);
        }
      }
      .current_price {
        font-size: rem(16);
        color: $O600;
        .unit {
          font-size: rem(10);
        }
      }
    }
  }
  .line2 {
    font-size: rem(14);
    color: $g400;
    margin-top: rem(6);
  }
}

.course_package {
  background-color: #fff;
  margin-top: rem(10);
  padding-top: rem(15);
  .title {
    text-align: center;
    color: $g500;
    .left > img {
      transform: rotate(180deg);
      margin-right: rem(4);
      position: relative;
      top: rem(-3);
    }
    .right > img {
      margin-left: rem(4);
      position: relative;
      top: rem(-3);
    }

  }
  .course-content {
    padding: rem(15) 0;
    li {
      padding: rem(10);
      border-bottom: 1px solid $g200;
      &:first-child {
        padding-top: 0;
      }
      &:last-child {
        padding-bottom: 0;
        border: 0;
      }
    }
    .left-cover {
      width: rem(100);
      height: rem(64);
      border-radius: rem(3);
      float: left;
      position: relative;
      margin-right: rem(10);
      img {
        border-radius: rem(3);
      }
      .teacher-name {
        width: 100%;
        height: rem(22);
        line-height: rem(22);
        padding: 0 rem(5);
        position: absolute;
        left: 0;
        bottom: 0;
        font-size: rem(12);
        color: #fff;
        background-color: rgba(0, 0, 0, 0.6);
        text-align: center;
        text-overflow: ellipsis;
        white-space: normal !important;
        overflow: hidden;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 1;
        display: -webkit-box;
      }
    }
    .type-name {
      text-overflow: ellipsis;
      white-space: normal !important;
      overflow: hidden;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 1;
      display: -webkit-box;
    }
    .type {
      font-size: rem(12);
      color: #527AD7;
      border: 1px solid #527AD7;
      border-radius: rem(2);
      padding: 0 rem(4);
      display: inline-block;
    }
    .cc-title {
      font-size: rem(15);
      color: $g600;
      margin-left: rem(5);
    }
    .time-lesson {
      margin-top: rem(5);
      font-size: rem(12);
      color: $g400;
    }
    .time {
      margin-right: rem(2);
    }
    .cc-price {
      font-size: rem(14);
      color: $r600;
      .free {
        color: #43b244;
      }
    }
  }

}

.download {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: rem(50);
  line-height: rem(50);
  text-align: center;
  a {
    color: #fff;
  }

  background-color: #516DC0;
  .icon-download {
    border: 1px solid #fff;
    border-radius: 50%;
    padding: rem(3);
    margin-right: rem(8);
  }
}

//课程简介
.course-introduce {
  background-color: #fff;
  margin-top: rem(10);
  padding-top: rem(15);
  .title {
    text-align: center;
    color: $g500;
    .left > img {
      transform: rotate(180deg);
      margin-right: rem(4);
      position: relative;
      top: rem(-3);
    }
    .right > img {
      margin-left: rem(4);
      position: relative;
      top: rem(-3);
    }

  }
  .intro-content {
    padding: rem(15);
    font-size: rem(14);
    color: #3c3c3c;
  }
}

.img-text {
  margin-top: rem(10);
  padding: 0 rem(15);
  margin-bottom: rem(60);
  .load-tip {
    text-align: center;
    font-size: rem(14);
    color: $g400;
    margin-top: rem(10);
  }
}

