@import "page/_base/base.styl";

.text-ellipse {
  text-overflow: ellipsis;
  white-space: normal !important;
  overflow: hidden;
  -webkit-box-orient: vertical;
  //-webkit-line-clamp: 2;
  display: -webkit-box;
}

body {
  background-color: #f3f3f3;
}

.header {
  width: 100%;
  height: rem(244);
  position: relative;
  background-color: #fff;
  .intro {
    width: 100%;
    position: absolute;
    bottom: rem(25);
    text-align: center;
    color: white;
    font-size: rem(26);
    -webkit-line-clamp: 1;
  }
}

.content {
  padding-bottom: rem(30);
  background-color: #fff;
}

.teacher-info {
  padding: rem(23) rem(18);
  .avatar {
    width: rem(86);
    height: rem(86);
    float: left;
    margin-right: rem(15);
    img {
      border-radius: 50%;
    }
  }
}

.introduce {
  .teacher-name {
    font-size: rem(19);
    color: #4a4a4a;
  }
  .intro-content {
    font-size: rem(13);
    color: #9b9b9b;
    -webkit-line-clamp: 3;
  }

}

.course-info {
  padding: 0 rem(18);
  .title {
    color: #245bd2;
    font-size: rem(20);
    -webkit-line-clamp: 1;
  }
  .course-content {
    color: #4a4a4a;
    -webkit-line-clamp: 3;
    margin-top: rem(10);
  }
  .price {
    margin-top: rem(10);
    font-size: rem(15);
    color: #ef4141;
    font-weight: 600;
  }
}

.send-mobile {
  padding: 0 rem(18);
  margin-top: rem(20);
  .input-mobile {
    width: 100%;
    height: rem(40);
    line-height: rem(40);
    border-radius: rem(3);
    text-align: center;
    border: 1px solid #d3d3d3;
    outline: medium; //去掉点击之后的边框
    -webkit-appearance: none;
  }

}

.tip1 {
  color: #245bd2;
  text-align: center;
  margin-top: rem(8);
}

.submit {
  padding: 0 rem(18);
  margin-top: rem(15);
  > span {
    display: inline-block;
    width: 100%;
    text-align: center;
    background-color: #245bd2;
    color: white;
    height: rem(47);
    line-height: rem(47);
    border-radius: rem(2);

  }
  &.disabled {
    > span {
      color: rgba(255, 255, 255, 0.5);
    }
  }
}

.tip2 {
  color: #9b9b9b;
  text-align: center;
  margin-top: rem(8);
}

.exchange-rule {
  padding: 0 rem(18);
  margin-top: rem(20);
  .rule-title {
    font-size: rem(16);
    color: #245bd2;
  }
  .rule-content {
    font-size: rem(15);
    color: #4a4a4a;
    margin-top: rem(10);
    &.line1 {
      margin-top: rem(15);
    }
    &.line4 {
      color: #ef4141;
    }
  }
}

.bottom {
  background-color: #f3f3f3;
  padding: rem(40) rem(18) 0;
  .app-intro {
    overflow: hidden;
    position: relative;
    height: rem(50);
  }
  .logo {
    width: rem(50);
    height: rem(50);
    display: inline-block;
    vertical-align: top;
  }
  .right {
    display: inline-block;
    .app-name {
      color: #4a4a4a;
      font-size: rem(22);
      font-weight: 600;
    }
    .slogan {
      font-size: rem(13);
      color: #9b9b9b;
      letter-spacing: rem(8);
    }
  }
  .wrap {
    position: absolute;
    left: calc(50% - 112px);

  }
  .download {
    font-size: rem(17);
    width: rem(166);
    height: rem(44);
    line-height: rem(44);
    background-color: #de3c3c;
    border-radius: rem(100);
    text-align: center;
    margin: 0 auto;
    margin-top: rem(30);
    color: white;
    a {
      color: white;
    }

  }
  .ios-tip {
    text-align :center;
    font-size :rem(11);
  }

  footer {
    font-size: rem(11);
    color: #9b9b9b;
    text-align: center;
    margin-top: rem(20);
    padding-bottom: rem(13);
  }

}