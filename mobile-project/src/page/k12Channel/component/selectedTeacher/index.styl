.sel-teacher{
  padding:rem(20);
  padding-top:rem(17);
  background: white;
  margin-bottom: rem(10);
  .more {
        font-family: PingFang-SC-Regular;
        font-size: rem(14);
        color: #ff9100;
        line-height: rem(12);
        text-align: center;
        width: 100%;
        display: block;
  }
  .label-text{
    margin:rem(0);
  }
  .sel-teacher-content{
    display : block;
    position : relative;
    border-radius : rem(10);
    margin:rem(18) rem(0);
    .avatar{
      border-radius: 50%;
      width:rem(110);
      height:rem(110);
      overflow : hidden;
      position: absolute;
      left:rem(0);
      top:rem(0);

     /* >img{
        border-radius: 100%;
      }*/
    }
    .sel-teacher-text{
      border:1px solid #ff9100;
      border-radius : rem(5);
      min-height:rem(110);
      margin-left: rem(60);
      padding-left:rem(60);
      padding-right:rem(5);

      .describe{
        font-size:rem(13);
        color:#6d6d6e;
      }
    }

    .label-text{
      margin-top:rem(13);
      margin-bottom:rem(5);
      color:#9D9E9E;
      .teacherlength {
        font-size: rem(12);
        height: rem(24);
        line-height: rem(24);
      }
    }
  }
}

.land-list{
  margin:rem(20) 0;
  position : relative;
  height:rem(130);
  .list-container{
    position : absolute;
    left:rem(0);
    right:rem(0);
    top:rem(0);
    bottom:rem(0);
    overflow : hidden;
  }
  .list{
    position :absolute;
    display : -webkit-box;
    >a{
      display : block;
      width:rem(110);
      text-align : center;
      margin-right:rem(5);
    }
  }

  .avatar{
    margin : auto;
    width:rem(60);
    height:rem(60);
    overflow : hidden;
    border-radius : rem(10);
    border:1px solid #F2F4F5;
  }
  .name{
    font-size:rem(14);
    color:#3c3d3d;
    text-align:center;
    margin-top:rem(5);
  }
  .sel-teacher-text{
    font-size:rem(11);
    color:#9d9e9e;
    //line-height:rem(11);
    text-align:center;
    .text-info {
        height: rem(20);
        line-height: rem(20);
    }
  }
}