.nearby-org {
    background: white;
    padding: rem(10);
    margin-bottom: rem(10);

    .org-list {
        padding: 0 rem(10);
        .org-item {
            position: relative;
            padding: rem(10) 0 rem(10) rem(110);
            overflow: hidden;
            min-height: rem(110);
            margin: rem(10) 0;
            border-bottom: 1px solid #f4f4f4;
            img {
                height: rem(80);
                width: rem(80);
                position: absolute;
                left: 0;
                border-radius: rem(5);
            }
            .org-info {
                position: relative;
                top: rem(10);
                .org-name {
                    font-family:PingFang-SC-Regular;
                    font-size:rem(15);
                    color:#3c3d3d;
                    letter-spacing:rem(-0.38);
                    line-height:rem(15);
                    text-align:left;
                }
                span {
                    font-family: PingFang-SC-Regular;
                    font-size: rem(12);
                    color: #9d9e9e;
                    letter-spacing: rem(-0.38);
                    line-height: rem(15);
                    height: rem(15);
                    text-align: left;
                }
                .third-nav {
                    position: relative;
                    .location {
                        position: absolute;
                        right: rem(10);
                    }
                }
            }
        }
    }
    .has-more {
        font-family: PingFang-SC-Regular;
        font-size: rem(14);
        color: #ff6c00;
        letter-spacing: rem(-0.81);
        text-align: center;
        line-height: rem(30);
        height: rem(30);
        //margin-top: rem(10);
        &.hide {
            display: none;
        }
    }
}