.four-tab {
    position: relative;
    height: rem(220);
    width: 100%;
    background: white;
    margin-bottom: rem(10);
    .tab-item {
        position: absolute;
    }
    .four-tab-one {
        width: 38%;
        left: 0;
        top: 0;
        height: rem(220);
        border-right: 1px solid #f4f4f4;
        text-align: center;
        padding: rem(10);
        .tab-avart-one {
            width: 90%;
            //height: rem(80);
            //border-radius: 50%;
        }
    }
    .four-tab-two {
        width: 62%;
        right: 0;
        height: rem(90);
        top: 0;
        border-bottom: 1px solid #f4f4f4;
        padding: rem(10);
        .tab-avart-two {
            width: 25%;
            //height: rem(50);
            //border-radius: 50%;
            position: absolute;
            right: 12%;
            top: rem(15);
        }
    }
    .four-tab-three {
        width: 31%;
        top: rem(90);
        height: rem(130);
        left: 38%;
        border-bottom: 1px solid #f4f4f4;
        border-right: 1px solid #f4f4f4;
        padding-left: rem(10);
        text-align: center;
    }

    .four-tab-four {
        width: 31%;
        top: rem(90);
        height: rem(120);
        right: 0;
        padding-left: rem(10);
        text-align: center;
    }
    .tab-avart-other {
        width: 60%;
        //width: rem(50);
        //border-radius: 50%;

    }
    .title {
        font-family: PingFang-SC-Medium;
        font-size: rem(15);
        color: #3c3d3d;
        line-height: rem(16);
        text-align: left;
        margin-top: rem(10);
    }
    .sub {
        font-family: PingFang-SC-Regular;
        font-size: rem(12);
        color: #9d9e9e;
        letter-spacing: rem(0);
        line-height: rem(12);
        text-align: left;
        margin-top: rem(5);
        margin-bottom: rem(15);
    }

}