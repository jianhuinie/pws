.coupon {
    margin-bottom: rem(10);
    background: #ffffff;
    height: rem(43);
    padding: rem(10);
    position: relative;
    .title {
        float: left;
        font-size: rem(15);
        color: #3c3d3d;
        margin: 0 auto;
        text-align: center;
        margin-right: rem(5);
        white-space: nowrap;
    }
    .content {
        position: relative;
        font-size: rem(13);
        line-height: rem(22.4);
        span {
            font-size: rem(12);
            color: #3fa5f2;
            display: inline-block;
            float: right;
            margin-right: rem(16.8);

        }
        .icon {
            position: absolute;
            right: rem(-2);
            top: rem(5);
        }
    }

    > a {
        position: absolute;
        height: 100%;
        width: 100%;
        top: 0;
        left: 0;
    }
}