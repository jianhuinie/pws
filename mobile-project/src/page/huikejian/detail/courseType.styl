.course-type {
    margin-bottom: rem(10);
    padding: 0 rem(10);
    background: #ffffff;
    .type-item {
        border-bottom: 1px solid #ebeced;
        padding: rem(10) 0;
        overflow:hidden;
        .type-name {
            display: block;
            font-size: rem(14);
            margin-bottom: rem(10);
            position: relative;
            i {
                position: absolute;
                top: rem(4);
                right: 0;
            }
        }
        .course-detail {
            float: left;
            width: 48%;
            .avatar {
                height: rem(83.5);
                margin: 0 auto;
                position: relative;
                .figure_pic{
                    height:rem(83.5);
                    display: block;
                    line-height: 0;
                    overflow: hidden;
                    background-image: url("");
                    background-repeat: no-repeat;
                    -webkit-background-size: rem(42) rem(42);
                    background-size: rem(42);
                    background-position: 50%;
                    background-color: #f2f2f2;
                }
                img{
                    width: 100%;
                    height: 100%;
                }
            }
            .course-name {
                font-size: rem(13);
                white-space: nowrap;
                text-overflow: ellipsis;
                overflow: hidden;
                margin: 0 auto;
                text-align: left;
            }
            .price-type {
                position: relative;
                margin: 0 auto;
                text-align: left;
                .price {
                    font-size: rem(16);
                    color: #ff6d00;
                    .symbol {
                        font-size: rem(12);
                    }
                }
                .online {
                    font-size: rem(10);
                    color: #45a6ef;
                    border: 1px solid #45a6ef;
                    position: absolute;
                    right: 0;
                    top: rem(2);
                }
            }
        }
        .course-detail:last-child{
            margin-left: rem(10);
        }
    }
    .all-course {
        margin: 0 auto;
        font-size: rem(13);
        color: #9d9e9e;
        display: block;
        height: rem(40);
        line-height: rem(40);
        text-align: center;
        .all {
            position: relative;
            i {
                position: absolute;
                top: 50%;
                transform: translateY(-50%);
                right: rem(-15);
            }
        }

    }
}