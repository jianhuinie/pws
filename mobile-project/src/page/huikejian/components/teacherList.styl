
@import '../../common/component/medal.styl';

.teacher-list {
    background: #fff;
    >li {
        border-bottom: 1px solid  #e6e6e6;
    }
}

.search-item {
    position: relative;
    font-size: rem(12);
    padding: rem(9);
    color: #555;
    border-bottom: 1px solid #EEE;
    clearfix();


    >a {
        width: 100%;
        position: absolute;
        height: 100%;
        top: 0;
        left: 0;
        display: block;
    }

     >.avatar {
        line-height: 0;
        position: relative;
        width: rem(60);
        height: rem(60);
        float: left;
        margin-right: rem(6);

        >img {
            width: 100%;
            border-radius: 50%;
        }

        >.icon-play-oo {
            background: #fff;
            color: $brand-info;
            font-size: rem(18);
            width: rem(26);
            height: rem(26);
            line-height: rem(26);
            border-radius: rem(20);
            text-align: center;
            padding-left: rem(1);

            position: absolute;
            right: rem(2);
            bottom: rem(-2);
            opacity: 0.9;
            z-index: 1;
        }
    }




    >h3 {
        font-size: rem(16);
        line-height: 1.4;
        color: #000;
        margin-bottom: rem(2);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        clearfix();

        >a {
            font-size: rem(12);
            border: 1px solid $brand-info;
            color: $brand-info;
            display: inline-block;
            padding: 0 rem(6);
            height: rem(18);
            line-height: rem(18);
            margin-left: rem(6);
            border-radius: rem(2);
            position: relative;
            top: rem(-1);
        }

        >.icon {
            margin-left: rem(6);
            position: relative;
            top: rem(1);
        }

        >.icon-live {
            color: $brand-info;
            float: right;
        }

        >small {
            color: #999;
            margin-left: rem(3);
        }

        >.icon-medal-img {
            position: relative;
            top: rem(4);
        }

    }

    >.teacher-price {
        color: $brand-primary;
        margin: rem(2) 0;

        >span {
            color: #7a7a7a;
            margin-left: rem(4);
        }

        >em {
            float: right;
            font-size: rem(14);

            >i {
                font-size: rem(12);
            }

            >span {
                color: #7a7a7a;
                font-size: rem(12);
            }
        }
    }

    >.teacher-course {
        max-width: 100%;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }


}