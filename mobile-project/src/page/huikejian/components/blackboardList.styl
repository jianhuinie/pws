
.blackboard-item {
    padding: rem(10);
    position: relative;
    padding-left: rem(112);
    height: rem(84);
    >a {
        &:first-child {
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
        }
    }

    >img {
        position: absolute;
        left: rem(10);
        top: rem(10);
        box-shadow: 0 0 rem(10) 0 #ddd;
    }

    >h3 {
        font-size: rem(13);
        color: #000;
        word-break: break-all;
        >i {
            margin-left: -.5em;
        }

        >span {
            margin-right: -.4em;
        }
    }

    >p {
        font-size: rem(12);
        color: #999;
    }
}