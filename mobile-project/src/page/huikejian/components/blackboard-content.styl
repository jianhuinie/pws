.item-content {
    list-style: none;
    padding-bottom: rem(14);
    padding-top: rem(10);
    position: relative;
    .content {
        > div {
            > h3 {
                font-size: rem(15);
                line-height: rem(23);
                color: #3c3c3c;
                font-weight: normal;
                max-height: rem(46);
                word-wrap: break-word;
                word-break: break-all;
                overflow: hidden;
                text-overflow: ellipsis;
                -webkit-line-clamp: 2;
                -webkit-box-orient: vertical;
                display: -webkit-box;
                white-space: inherit;
            }
        }
        .news-teacher-name {
            font-size: rem(12);
            margin-top: rem(8);
            line-height: 1;
            color: #9d9d9d;
            .right-side {
                float: right;
            }
        }
    }
}
.right-image {
    .content {
        > div {
            padding-right: rem(100);
            position: relative;
            height: rem(54);
            .right-img-content {
                position: absolute;
                right: 0;
                height: rem(48);
                width: rem(86);
                overflow: hidden;
                top: rem(5);
            }
        }
    }
}
.border-bottom:after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    border-top: 1px solid #e6e6e6;
    -webkit-transform: scaley(0.5);
    -wenkit-transform-orgin: 0 0;
}