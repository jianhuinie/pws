
.comments-list {
    font-size: rem(12);
    background: #fff;
    >li {
        clearfix();
        padding: rem(10);
    }
}

.comment-from {
    float: left;
    text-align: center;

    >.avatar-tiny {
        display: inline-block;
        line-height: 1;
        >img {
            border-radius: rem(24);
        }

    }

    >p {
        line-height: 1;
        color: #000;
        max-width: rem(48);
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
}

.comment-item {
    margin-left: rem(58);
    padding: rem(6) rem(9);
    border: 1px solid  #eee;
    position: relative;
    white-space: normal;
    word-wrap: break-word;

    >p {
        >strong {
            color: #000;
            font-size: rem(14);
            margin-right: rem(6);
        }

        &:last-child {
            color: #000;
        }
    }

    &:before,
    &:after {
        position: absolute;
        content: '';
        width: 0;
        height: 0;
    }

    &:before {
        border: rem(8) solid transparent;
        border-color: transparent #eee transparent transparent;
        top: rem(13);
        left: rem(-16);
    }

    &:after {
        border: rem(6) solid transparent;
        border-color: transparent #fff transparent transparent;
        top: rem(15);
        left: rem(-12);
    }


}

.comment-score {
    text-align: right;
    >.star-score {
        margin-right: rem(4);
        float: left;
    }

    >i {
        float: left;
    }
}

