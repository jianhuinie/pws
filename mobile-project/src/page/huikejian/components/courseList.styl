

$primary-color = #ff7f00;

.course-list {
    >li {
        background: #fff;
        box-shadow: 0 rem(2) rem(4) #ccc;
        margin-bottom: rem(10);

        &:first-child {
            padding-top: rem(30);
        }
    }
}

.course-item {

    padding: .5em 1em;
    line-height: 1.8;
    position: relative;

    >h4 {
        font-size: rem(16);
        clearfix();

        .name {
            display: inline-block;
            width: rem(180);
            text-overflow();
        }

        >em,
        >i {
            float: right;
        }

        >em {
            color: $primary-color;
        }

        >i {
            color: #999;
            text-decoration: line-through;
        }
    }

    >a {
        &:first-child {
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            text-indent: rem(-999);
            z-index: 1;
        }
    }
}

.course-line {
    color: #6d6d6d;
    font-size: rem(13);
    position: relative;
    padding-right: 3.5em;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;

    >strong{
        color: #999;
    }

    >a {
        position: absolute;
        right: 0;
        top: 0;
        width: 3em;
        color: #999;
        font-size: rem(12);

        >.icon-angle-right {
            position: relative;
            top: rem(1);
        }
    }

    &.arrangement-line {
        white-space: normal;
        span {
            display: inline-block;
            width: rem(160);
            vertical-align: top;
        }
    }
}

.course-action {
    background: #f7f7f7;
    font-size: rem(13);
    padding: rem(8) rem(108) rem(8) 0;
    text-align: center;
    position: relative;
    color: $primary-color;

    >a {
        color: #fff;
        background: $primary-color;
        width: rem(108);
        padding:rem(8) 0;
        position: absolute;
        top: 0;
        right: 0;
    }

    >.course-tolive {
        background: lighten(green, 10%);
    }

}

.limited-discount-container {
    .status {
        display: none;
        height: rem(50);
        padding: 0 rem(10);
    }

    .status-1 {
        background-color: #fff6d3;
        padding: rem(5) rem(10);
        line-height: rem(20);
    }

    .status-2,
    .status-3
    {
        border-top: 1px solid #eee;
        line-height: rem(50);

        .hours,
        .minutes,
        .seconds
        {
            padding: rem(5) rem(4);
            border-radius: rem(3);
            margin: 0 rem(2);
            color: #fff;
        }
    }

    .status-2 {
        .hours,
        .minutes,
        .seconds
        {
            background-color: #777;
        }
    }

    .status-3 {
        .hours,
        .minutes,
        .seconds
        {
            background-color: #f84028;
        }
    }

    .red {
        color: $brand-error;
    }
}

.limited-price-container {
    height: rem(20);
    .status {
        display: none;
    }

    .status-2,
    .status-3
    {
        span {
            margin: 0 rem(5);
        }
    }

    .status-2 {
        color: #969696;

        .price {
            color: $brand-error;
        }
    }

    .status-3 {
        color: $brand-error;

        .price {
            color: #969696;
            text-decoration: line-through;
        }
    }
}

