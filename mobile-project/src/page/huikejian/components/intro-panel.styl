.org-intro-panel {
  position: relative;
  padding: rem(10);
  .org-image {
    position: absolute;
    top: 10;
    left: 10;
    width: rem(60);
    height: rem(60);
    border: 0 none;
  }
  .context {
    margin-left: rem(70);
    color: #9c9c9c;
    font-size: rem(12);
    line-height: rem(20);
    .org-name {
      fong-size: rem(15);
      color: #3d3d3d;
      .name{
        display: inline-block;
        white-space: nowrap;
        text-overflow: ellipsis;
        overflow: hidden;
        max-width: 81%;
      }
      .teacher-vip {
        margin-left: rem(5);
        display: inline-block;
        vertical-align: top;
        width: rem(17);
        height: rem(17);
        img {
          width: 100%;
          height: 100%;
        }
      }
    }
  }
  .icon {
    position: absolute;
    top: 50%;
    right: rem(10);
    font-size: rem(16);
    z-index: 0;
  }
  .mask-link {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
  }
}