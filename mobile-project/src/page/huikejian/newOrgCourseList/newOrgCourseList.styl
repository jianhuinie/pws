@import '../../_base/base.styl';
@import "../../_common/nav_bar/nav_bar.styl";
@import '../detail/courseList.styl';

#main {
    margin-top: rem(10);
    padding: rem(15) rem(10);
    background: #FFF;
}


.course-page, .teacher-page, .active-page {
    margin-top: rem(10);
}

.more-course-ajax, .more-teacher-ajax, .more-dynamic-ajax {
    text-align: center;
    color: #9d9e9e;
    font-size: rem(13);
    height: rem(40);
    border-top: 1px solid #e6e6e6;
    line-height: rem(40);
    background-color: #fff;

    > div:first-child {
        text-align: left;
        margin: 0 auto;
        position: relative;
        width: rem(93);

        > i {
            right: 0;
            top: rem(13.728);
        }
    }
}

.more-teacher-ajax {
    border-top: none;
}

.more-button.loading .spinner {
    display: block;
}

.more-button.loading {
    > div:first-child {
        display: none;
    }
}

.more-button {
    .more-loading {
        display: none;
    }
}

.more-button .spinner {
    display: none;
    margin: 0 auto;
    width: rem(50);
    height: 100%;
    text-align: center;
    font-size: rem(10);
    padding: rem(5) 0;
    > div {
        background-color: #ff7f00;
        height: 100%;
        width: rem(6);
        display: inline-block;
        -webkit-animation: more-button-delay 1.2s infinite ease-in-out;
        animation: more-button-delay 1.2s infinite ease-in-out;
    }
    .rect2 {
        -webkit-animation-delay: -1.1s;
        animation-delay: -1.1s;
    }
    .rect3 {
        -webkit-animation-delay: -1s;
        animation-delay: -1s;
    }
    .rect4 {
        -webkit-animation-delay: -0.9s;
        animation-delay: -0.9s;
    }
    .rect5 {
        -webkit-animation-delay: -0.8s;
        animation-delay: -0.8s;
    }
}

.ajax-loading {
    height: rem(100);
    background: url(../img/loading.gif) center no-repeat;
    font-size: rem(16);
    line-height: rem(100);
    text-align: center;
}
