@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";

.nav-button{
    color: orange;
}

.container{
    input,textarea{
        width: 100%;
        height: 100%;
        border: 0px;
        outline:none;
    }

    .title, .text{
        padding:rem(0) rem(15);
        font-size: rem(15);
    }

    .title{
        border-bottom: 1px solid #dcddde;
      input{
        height: rem(36);
        line-height:rem(36);
        padding:rem(1) 0;
      }
    }

    .text{
        margin-top: rem(13);
        color: #3c3d3d;
        position:absolute;
        top:rem(85);
        left:rem(0);
        right: rem(0);
        bottom: rem(55);
    }

}

.upload{
    position: absolute;
    bottom: rem(0);
    left: rem(0);
    right: rem(0);
    z-index: 100;
    background: #fff;
}


.dialog_operate{
  color:#3c3d3d;
}
.addName{
  color:#dcddde;
  outline:none;
  border:1px solid #dcddde;
  height:rem(25);
  line-height:rem(25);
  margin-top:rem(5);
  margin-bottom:rem(5);
  width:rem(190);
  padding:0 rem(5);
  border-radius: rem(5);
}
.error{
  border:1px solid red;
}