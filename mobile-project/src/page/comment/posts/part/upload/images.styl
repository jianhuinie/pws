.images{
  position:relative;
    .header{
        padding-left: rem(25);
        span{
            right: rem(0);
            top: rem(0);
            color: red;
            font-size: rem(10);
            position: absolute;
        }
        div{
            position: relative;
            width: rem(18);
            height: rem(18);
        }
        margin: rem(15) 0;
    }

    img{
        width: 100%;
        height: 100%;
    }

    ul,li{
        margin: rem(0);
        padding: rem(0);
    }
    ul{
        overflow-x: auto;
        overflow-y: hidden;
        white-space: nowrap;
        position: relative;
        padding-top:rem(15);
        padding-left: rem(25);
        border-top: 1px solid #dcddde;
    }
    li{
        display: inline-block;
        position: relative;
        vertical-align: middle;
        margin-right: rem(15);
        height: rem(80);
        width: rem(80);
        input{
            position:absolute;
            opacity: 0;
            z-index: 100;
            left: rem(0);
            right: rem(0);
          width:rem(80);
          height: rem(80);
          overflow : hidden;
          top: rem(0);
          bottom: rem(0);
        }

        .del{
            position: absolute;
            top:rem(-5);
            right: rem(-5);
            width: rem(20);
            height: rem(20);
            text-align: center;
            z-index:100;
        }
        .uploadding{
          position:absolute;
          display: inline-block;
          width: 100%;
          padding:rem(3) 0;
          text-align:center;
          color:#fff;
          background: #000;
          opacity: 0.6;
          font-size:rem(12);
          bottom:rem(0);
        }
        .uploadError{
          color: red;
        }
    }
    .addImagesBox{
        border: 1px solid #dcddde;
        text-align: center;
        span{
            display: inline-block;
            width: rem(20);
            height: rem(20);
            position: absolute;
            left:50%;
            top:50%;
            margin-left:rem(-10);
            margin-top:rem(-10);
        }
    }
    .text-info{
        margin-top: rem(25);
        margin-bottom: rem(15);
        text-align: center;
        font-size: rem(14);
        color: #9d9e9e;
    }
}