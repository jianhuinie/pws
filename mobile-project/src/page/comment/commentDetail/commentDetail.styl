$O600 = #ff6c00;
$Orange = #ff9100;
$g600 = #3c3d3d;
$g500 = #6d6d6e;
$g400 = #9d9e9e;
$g300 = #dcddde;
$g200 = #ebeced;
$g100 = #f2f4f5;

