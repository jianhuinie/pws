.comment-list-wrapper {
    li {
        display: block;
        background-color: #fff;
        &.main-course-comment {
            margin-top: rem(10);
        }
        &:first-child {
            margin-top: 0;
        }
        padding: rem(15);
        width: auto;
        text-align: left;
    }

    .user-img {
        width: rem(44);
        height: rem(44);
        float: left;
        margin-right: rem(10);

        img {
            border-radius: 50%;
        }
    }
    .right-info {

        // padding-top: rem(5);
        margin-bottom: rem(10);
        .user-name {
            color: $g600;
            margin-bottom: rem(5);
            .like {
                float: right;
                font-size: rem(13);
                color: $g400;
                &.isLike {
                    color: $Orange;
                }
            }
        }
        .stars-info {
            font-size: rem(12);
            color: $g400;
            .like {
                float: right;
                font-size: rem(14);
                &.isLike {
                    color: $Orange;
                }
            }
        }
    }
    .comment-content {
        color: $g600;
        margin: 0;
        word-break: break-all;
        font-size: rem(14);
        line-height: rem(24);

        .comment-photo-list {
            margin-top: rem(10);
            overflow: hidden;
            > li {
                float: left;
                text-align: center;
                width: 20%;
                padding: rem(2);
                div {
                    position: relative;
                    width: 100%;
                    padding-top: 100%;
                    img {
                        position: absolute;
                        top: 0;
                        left: 0;
                        width: 100%;
                        height: 100%;
                    }
                }
            }
        }
    }
    .course-info {
        margin: rem(10) 0 0;
        .create-time {
            font-size: rem(13);
            color: $g400;
        }
        .course-title {
            font-size: rem(13);
            color: $g500;
        }
    }
    .teacher_reply {
        background-color: $g200;
        font-size: rem(14);
        color: $g600;
    }
    .student-additioanl {
        .additional-date {
            margin-top: rem(15);
            color: $Orange;
            font-size: rem(13);
        }
        .comment-additional {
            font-size: rem(14);
            margin-top: rem(10);
        }
    }
    .teacher-additional {
        font-size: rem(14);
        color: $g600;
        background-color: $g200;
        padding: rem(10);
        margin-top: rem(10);
        border-radius: rem(2);
        position: relative;
        word-break: break-all;
        line-height: 1.2;
        .triangle {
            position: absolute;
            width: rem(10);
            height: rem(10);
            border-radius: rem(2);
            background-color: $g200;
            top: rem(-5);
            left: rem(20);
            transform: rotate(45deg);
        }
    }
    .other-course-comment {
        padding-top: 0;
        .right-info {
            margin: 0;
            padding-top: rem(10);
            border-top: 1px solid $g200;
        }
        .user-img, .user-name {
            display: none;
        }
        .stars-info {
            font-size: rem(12);
            color: $g400;
            margin-bottom: rem(10);
        }
    }
    .user-more-comment {
        width: 100%;
        height: rem(36);
        line-height: rem(36);
        background-color: #fff;
        font-size: rem(12);
        color: $g400;
        text-align: center;
        border-top: 1px solid $g200;
    }
}
