.sign-teacher {
    margin: rem(30) rem(15);
    .title {
        font-family: PingFangSC-Regular;
        font-size: rem(15);
        color: #3d3d3e;
        letter-spacing: rem(-0.37);
        line-height: rem(30);
        height: rem(30);
    }
    .teacher-item {
        background: white;
        padding: rem(15) 0 rem(20) rem(80);
        position: relative;
        box-shadow: rem(1) rem(1) rem(10) #dbdbdb;
        border-radius: rem(4);
        margin-bottom: rem(10);
        .cammend-tag {
            position: absolute;
            right: 0;
            top: 0;
            width: 22%;
        }
        .avatar {
            position: absolute;
            height: rem(60);
            width: rem(60);
            border-radius: 50%;
            left: rem(10);
            top: rem(15);
        }
        .first-head {
            .first-content {
                height: rem(20);
                .name {
                    word-wrap: break-word;
                    word-break: break-all;
                    font-family: PingFangSC-Regular;
                    font-size: rem(15);
                    color: #3d3d3e;
                    letter-spacing: rem(-0.37);
                    max-width: 80%;
                    float: left;
                }
                img {
                    height: rem(16);
                    width: rem(16);
                    position: relative;
                    top: rem(-4);
                    margin-right: rem(4);
                    margin-left: rem(6);
                }
            }
        }
        .second-round {
            margin-top: rem(4);
            .stars {
                min-width: rem(70);
                display: inline-block;
                .icon {
                    font-size: rem(14);
                    float: left;
                    &.active-star {
                        color: #ff9100;
                    }
                    &.grey-star {
                        color: #E5E5E5;
                    }
                }
                .star-icon {
                    position: relative;
                    float: left;
                    .icon-star_half {
                        position: absolute;
                        left: 0;
                        top: 0;
                    }
                }
            }
            .stars-number {
                font-family: PingFang-SC-Regular;
                font-size: rem(12);
                color: #9d9d9e;
                line-height: rem(12);
                text-align: left;
            }
            .comment-number {
                font-family: PingFang-SC-Regular;
                font-size: rem(12);
                color: #9d9d9e;
                line-height: rem(12);
                text-align: left;
                margin-left: rem(20);
            }
        }
        .last-line {
            display: flex;
            .audio, .video {
                flex: 0.5;
                display: flex;
                i {
                    float: left;
                    font-size: rem(18);
                    position: relative;
                    top: rem(6);
                    margin-right: rem(4);
                }
                .tex {
                    font-family: PingFangSC-Regular;
                    font-size: rem(13);
                    color: #9d9d9e;
                    letter-spacing: rem(-0.32);
                    line-height: rem(30);
                    display: inline-block;
                }
            }
            .audio {
                .icon-ic_audio {
                    color: #ff9100;
                }
            }
            .video {
                .icon-video {
                    color: #87CEFA;
                }
            }
        }
    }
}