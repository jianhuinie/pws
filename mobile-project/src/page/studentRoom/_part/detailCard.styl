.header {
    display: flex;
    height: rem(40);
    line-height: rem(40);
    padding: 0 rem(18);
    padding-top: rem(6);
    .time {
        flex: 2;
        font-family: PingFang-SC-Regular;
        font-size: rem(14);
        color: #6d6d6e;
    }
    .status {
        flex: 1;
        text-align: right;
        font-family: PingFang-SC-Regular;
        font-size: rem(15);
        color: #ff5850;
        &.has-pay {
            color:#1db954;
        }
        &.un-do-now {
            color:#9d9d9e;
        }
        &.other-pay {
            color:#9d9d9e;
        }
        &.has-done {
            color: #37a4f5;
        }
    }
}
.subject-name {
    font-family: PingFang-SC-Medium;
    font-size: rem(17);
    color: #3d3d3e;
    line-height: rem(40);
    padding-left: rem(20);
}
.line {
    width: 90%;
    background: #efefef;
    //margin-top: rem(10);
    margin-left: 5%;
    margin-bottom: rem(10);
    height: rem(1);
}
.content {
    .item {
        padding-left: rem(30);
        padding-right: rem(15);
        position: relative;
        margin: rem(6) 0;
        margin-left: rem(22);
        min-height: rem(30);
        line-height: rem(30);
        //height: rem(30);
        .icon {
            font-size: rem(18);
            position: absolute;
            top: rem(6);
            left: 0;
            color: #8A8A8A;
            &.icon-ic_price {
                font-size: rem(22);
                top: rem(4);
            }
        }
        .price {
            font-family: PingFang-SC-Regular;
            color: #ff6c00;
            line-height: rem(30);
            font-size: rem(14);
            display: inline-block;
        }
        .lessonWay, .student-require-time, .location, .sex-text {
            font-family: PingFang-SC-Regular;
            font-size: rem(14);
            color: #3d3d3e;
        }
    }
    .distance, .distance-undo {
        margin-left: rem(55);
        font-family: PingFang-SC-Regular;
        font-size: rem(14);
        color: #9d9d9e;
        line-height: rem(14);
    }
    .remark-content {
        margin-top: rem(15);
        margin-bottom: rem(15);
        .text {
            position: absolute;
            left: 0;
            font-family: PingFang-SC-Regular;
            font-size: rem(14);
            color: #9d9d9e;
            display: inline-block;
            line-height: rem(30);
            height: rem(30);
        }
        .remark {
            margin-left: rem(10);
            font-family: PingFang-SC-Regular;
            font-size: rem(14);
            color: #3d3d3e;
            word-wrap: break-word;
            word-break: break-all;
            line-height: rem(30);
        }
    }
}
.time-line {
    background: #ddddde;
    width: 100%;
    height: rem(1);
}