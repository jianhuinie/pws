.box {
    width: 100%;
    border-radius: rem(4);
    padding: rem(14);
    background: white;
    .first-nav {
        position: relative;
        .course-icon {
            font-family: PingFang-SC-Regular;
            font-size: rem(15);
            color: #3d3d3e;
            letter-spacing: rem(0.53);
            line-height: rem(15);
            text-align: left;
            img {
                height: rem(15);
                width: rem(13);
            }
            .hide {
                display: none;
            }
        }
        .vip_exclusive {
            position: absolute;
            right: 0;
            font-size: rem(14);
            color: #ff9100;
            line-height: rem(24);
            height: rem(24);
        }
        .course-title {
            position: absolute;
            right: 0;
        }
        .course-status {
            position: absolute;
            right: 0;
            font-size: rem(14);
            line-height: rem(24);
            height: rem(24);
            text-align: right;
        }
    }
    .second-nav {
        margin: rem(15) 0;
        .time {
            font-family: PingFang-SC-Regular;
            font-size: rem(13);
            color: #9d9d9e;
            letter-spacing: rem(0.46);
            line-height: rem(13);
            text-align: center;
            float: left;
        }
        .pay-text {
            float: right;
            font-family: PingFang-SC-Regular;
            font-size: rem(13);
            color: #ff9100;
            letter-spacing: rem(0.46);
            line-height: rem(13);
            text-align: center;
        }
    }

    .text {
        margin: rem(15) 0;
        font-family: PingFang-SC-Regular;
        font-size: rem(15);
        color: #3d3d3e;
        letter-spacing: rem(0.53);
        text-align: justify;
        line-height: rem(20);
        word-break: break-all;
    }

    .status-box {
        .avatar-box {
            float: right;
            border:1px solid #cdcdce;
            border-radius:rem(3);
            padding: rem(8) rem(15);
            color: #9d9d9e;
            font-family: PingFang-SC-Regular;
            font-size:rem(15);
            text-align:center;
        }
        .contact {
            color: white;
            background: #ff9100;
            border: none;
        }
        .join {
            color: white;
            background: #37a4f5;
            border: none;
        }
    }
}

.last-nav-has-teacher {
    .first {
        border-left: 4px solid #37a4f5;
        margin: rem(10);
        span {
            padding-left: rem(10);
        }
    }
    .teacher-infos{
        background: #fff;
        padding: 0 rem(10);
        margin-bottom: rem(10);
        .teacher-box {
            padding: rem(15) rem(10) rem(10) rem(110);
            position: relative;
            .avatar {
                position: absolute;
                height: rem(88);
                width: rem(88);
                left: rem(10);
                border: 1px solid #ededee;
            }
            .title {
                font-family: PingFang-SC-Regular;
                font-size: rem(17);
                color: #3d3d3e;
                line-height: rem(17);
                height: rem(17);
                img {
                    height: rem(20);
                    width: rem(20);
                    vertical-align: bottom;
                    margin-left: rem(4);
                }
            }
            .tags {
                font-family: PingFang-SC-Regular;
                font-size: rem(12);
                line-height: rem(12);
                height: rem(22);
                overflow-y: hidden;
                margin-top: rem(8);
                span {
                    margin-right: rem(4);
                    border-radius: rem(2);
                    padding: 0 rem(6);
                    color: #9d9d9e;
                    display: inline-block;
                    height: rem(22);
                    line-height: rem(22);
                    border: 1px solid #ededee;
                }
            }

            .short-intro {
                font-family: PingFang-SC-Regular;
                font-size: rem(12);
                height: rem(12);
                color: #9d9d9e;
                line-height: rem(12);
                text-align: left;
                margin: rem(8) 0;
                padding-bottom: rem(10);
            }

            .last {
                line-height: rem(12);
                height: rem(12);
                font-size: rem(12);
                .area {
                    width: 60%;
                    font-family: PingFang-SC-Regular;
                    float: right;
                    color: #9d9d9e;
                    text-align: right;
                    height: rem(12);
                    line-height: rem(12);
                    font-size: rem(12);
                }
                .score {
                    font-family: PingFang-SC-Regular;
                    color: #ff9100;
                    float: left;
                    margin-right: rem(6);
                }

                .comment {
                    font-family: PingFang-SC-Regular;
                    color: #9d9d9e;
                    text-align: left;
                    float: left;
                }
            }
        }
    }
}

$brand-primary = #FF9100
$brand-info = #3FA5F2
$brand-section-bg = #FFF
$brand-border = #D9D9D9
$brand-muted = #CCC
$brand-danger = #FC5C5A
.muted
    color #AAA
.button
    &.success
        background-color rgb(72,176,74)
    &.muted
        background-color #CCC
.button
    &.primary
        background-color #F90

text-overflow()
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
word-break()
    word-break break-all
    word-wrap break-word
    white-space normal

.demand-detail
    margin-bottom rem(90)
.demand-introduction
    background-color #FFF
    padding rem(4) rem(16)
    + .demand-introduction
        margin-top rem(10)
    .user-image
        display inline-block
        vertical-align text-bottom
        margin-right rem(6)
        width rem(50)
        height rem(50)
        > img
            border-radius 50%

    .header
        margin-top rem(15)
        display flex
        .header-rows
            flex 1
            .header-row
                display flex
                font-size rem(15)
                + .header-row
                    margin-top rem(8)

                .course-icon
                    flex 1
                    > img
                        width rem(12)
                        height rem(14)
                        margin-bottom rem(3)
                .course-title
                    text-align right
                .user-name
                   width rem(84)
                   text-overflow()
                .vip-exclusive
                    flex 1
                    font-size rem(14)
                    color #FC5C5A
                .address
                    flex 1
                    line-height rem(23)
                    color #9D9D9E
                    font-size rem(13)
                    text-overflow()
                    .address-image
                        display inline-block
                        vertical-align sub
                        width rem(12)
                        height rem(15)
                        background #FFF url('/src/page/studentRoom/teacher/img/location.svg') no-repeat center bottom

                .payment
                    line-height rem(23)
                    font-size rem(13)
                    color #3D3D3E
    .user-info {
        display: flex;
        margin-top: rem(10);
        .user-avator {
            width: rem(30);
            height rem(30);
            margin-right: rem(10);
            > img {
                width: rem(30);
                height: rem(30);
                border-radius: 50%;
            }
        }
        .user-info-detail {
            flex: 1;
            .first-nav {
                padding-left: rem(1);
                .course-icon {
                    font-family: PingFang-SC-Regular;
                    font-size: rem(15);
                    color: #3d3d3e;
                    letter-spacing: rem(0.53);
                    line-height: rem(15);
                    text-align: left;
                    .user-name {
                        display: inline-block;
                        width: rem(100);
                        overflow: hidden;
                        text-overflow: ellipsis;
                        white-space: nowrap;
                        font-size: rem(13);
                        color: #9d9d9e;
                        overflow: hidden;
                    }
                    span {
                        float: left;
                    }
                    .course-title{
                        float: right;
                        font-family: PingFang-SC-Regular;
                        font-size: rem(14);
                        color: #ff9100;
                        letter-spacing: rem(0.53);
                        line-height: rem(14);
                        text-align: center;
                    }
                    .hide {
                        display: none;
                    }
                }
            }
            .second-nav {
                margin-top: rem(4);
                display: flex;
                .address {
                    flex: 1;
                    font-family: PingFang-SC-Regular;
                    font-size: rem(13);
                    color: #9d9d9e;
                    letter-spacing: rem(0.46);
                    line-height: rem(13);
                    overflow: hidden;
                    text-overflow: ellipsis;
                    white-space: nowrap;
                }
                .pay-text {
                    font-family: PingFang-SC-Regular;
                    font-size: rem(13);
                    color: #ff9100;
                    letter-spacing: rem(0.46);
                    line-height: rem(13);
                    text-align: right;
                }
            }
        }
    }
    .subject-nav {
        margin-top: rem(10);
        display: flex;
        .course-icon {
            flex: 1;
            padding-right: rem(4);
            display: flex;
            font-family: PingFang-SC-Regular;
            font-size: rem(15);
            color: #3d3d3e;
            letter-spacing: rem(0.53);
            line-height: rem(15);
            text-align: left;
            img {
                height: rem(15);
                width: rem(13);
                margin-right: rem(4);
                padding: rem(4) 0;
            }
            .subject-name {
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
                color: #37a4f5;
                border-left: 3px solid #37a4f5;
                span {
                    display: inline-block;
                    position: relative;
                    padding-left: rem(10);
                }
            }
        }
        .vip-exclusive {
            color: #FC5C5A;
            font-size: rem(14);
            height: rem(24);
            line-height: rem(24);
        }
    }

    .main
        margin rem(12) 0
        word-break()
        line-height rem(24)
    .pay-text {
        font-size: rem(12);
        color: #6d6d6e;
        padding: rem(3) rem(4);
        text-align: center;
        border: 1px solid #CAC4C4;
        border-radius: rem(2);
    }
    .footer
        padding rem(12) 0
        font-size rem(12)
        &.teacher
            border-top 1px solid $brand-border
        .publish-time
            margin-right rem(6)
        .user-cancel
            flex 1
            float right
        .teacher-list
            display flex
            .teacher-photo-list
                flex 1
                .student-photo
                    width rem(130)
                    line-height rem(30)
                    text-overflow()
                    > img
                        width rem(30)
                        height rem(30)
                        border-radius 50%
                        margin-right rem(4)
            .entered-teacher-count
                width 38%
                line-height rem(30)
                font-size rem(14)
                color #9D9D9E
        .teacher-container {
            display: inline-block;
            width: 62%;
            vertical-align: bottom;
            float: right;
            span {
                margin-left: rem(3);
                float: right;
                display: inline-block;
                width: rem(30);
                img {
                    border-radius: rem(15);
                    width: 100%;
                    height: rem(30);
                }
            }
        }

.entered-teacher
    margin-top rem(12)
    .title
        padding rem(6) rem(16)
        color #3D3D3E
        font-size rem(15)
    .list
        .teacher-avator
            padding rem(12) rem(16) rem(16) rem(16)
            background-color $brand-section-bg
            + .teacher-avator
                margin-top rem(12)

            .teacher-introduction
                display flex
                .left
                    width rem(50)
                    height rem(50)
                    > img
                        border-radius 50%
                        width rem(50)
                        height rem(50)
                .right
                    flex 1
                    height rem(50)
                    margin-left rem(10)
                    font-size rem(12)
                    width 69%
                    .teacher-info
                        color #3D3D3E
                        font-size rem(17)
                        > img
                            width rem(16)
                            height rem(16)
                            margin-left rem(4)
                            margin-top rem(1)
                            vertical-align baseline
                    .teacher-record
                        display flex
                        margin-top rem(8)
                        .score
                            color #37A4F5
                            width rem(50)
                        .score-none
                            color #9E9E9E
                            width rem(50)
                        .comment
                            width rem(62)
                            text-overflow()
                            color #9D9D9E
                        .area
                            width rem(132)
                            text-overflow()
                            color #9D9D9E
                .teacher-good
                    font-size rem(12)
                    line-height rem(12)
                    color #cdcdcd
                    line-height rem(45)
                    position relative
                    top rem(-10)
                    text-align center
                    width rem(40)
                    .good-container
                        text-align right
                        width rem(30)
                        .like-number
                            vertical-align middle
                        img
                            vertical-align text-bottom
                    &.like
                        color #37A4F5


            .teacher-word
                margin-top rem(16)
                font-size rem(13)
                color #9D9D9E
                padding-bottom rem(8)
            .teacher-live-lesson
                display flex
                padding-top rem(10)
                border-top 1px solid #EDEDEE
                .lesson-image
                    width rem(40)
                    height rem(40)
                .lesson-introduction
                    flex 1
                    .lesson-tag
                        padding 0 rem(4)
                        display inline-block
                        > .tag
                            vertical-align top
                            padding 0 rem(4)
                            border 1px solid #DDDDDE
                            border-radius rem(3)
                            font-size rem(12)
                            color #6D6D6E
                            text-align center
                    .lesson-title
                        height rem(20)
                        display inline-block
                        padding-left rem(4)
                        font-size rem(15)
                        text-overflow()
                        vertical-align text-bottom
                        font-weight bold


.recommend
    .demand-more
        margin-top rem(12)
        margin-bottom rem(30)
        .title
            padding rem(6) rem(16)
            font-size rem(15)
            color #3D3D3E
        .vip-exclusive
            font-size rem(14)
            color #FC5C5A
        .address
            line-height rem(23)
            > img
                padding-bottom rem(4)

#wrapper-footer
    position fixed
    display flex
    bottom 0
    z-index 2
    width 100%
    background-color #FFF
    box-shadow 0 0 0 rem(1) rgba(200,200,200,0.25)
    height rem(50)
    .recommend-box
        flex 1
        > p
            padding-top rem(3)
            padding-left rem(15)
            font-size rem(12)
            height rem(21)
            line-height rem(21)
        .recommend-image
            margin rem(8) 0 0 rem(30)
            width rem(18)
            height rem(18)
            background #FFF url(/src/page/studentRoom/teacher/img/recommend.svg) no-repeat center bottom
            background-size contain
    .enter-status
        flex 1
        &.twoButton
            flex 2
        .buttons
            display flex
            text-align center
            background #37A4F5
            .button
                flex 1
                font-size rem(18)
                padding rem(14) rem(8)
                color #FFF
            .message-image
                display inline-block
                width rem(18)
                height rem(18)
                background transparent url(/src/page/studentRoom/teacher/img/message.png) no-repeat center bottom
                background-size contain
                position relative
                top rem(3)
            .mobile-image
                display inline-block
                width rem(18)
                height rem(18)
                background transparent url(/src/page/studentRoom/teacher/img/mobile.png) no-repeat center bottom
                background-size contain
                position relative
                top rem(3)
        .enter-button
            height rem(50)
            line-height rem(26)
            padding rem(13)
            text-align center
            font-size rem(17)
            color #FFF
            background #37a4f5
.dialog
    .mask
        position fixed
        z-index 4
        top 0
        bottom 0
        left 0
        right 0
        background-color #000
        opacity 0.3
    .enter-reason
        position fixed
        z-index 5
        bottom 0
        left 0
        width 100%
        background-color #FFF
        padding 0 rem(14) rem(20) rem(14)
        .title
            display flex
            padding rem(18) 0
            font-size rem(16)
            > div
                flex 1
            .next-button
                text-align right
                color $brand-muted
            .pass
                color $brand-info
        .input
            width 100%
            border 1px solid #EEE
            padding rem(10)
        .enter-reason-text
            width 98%
            resize none
            outline none
            border 0 solid #FFF

.choose-course
    position absolute
    z-index 4
    bottom 0
    left 0
    width 100%
    height rem(510)
    background-color #FFF
    padding rem(20) rem(16) rem(15) rem(15)
    overflow auto
    .header
        .content
            margin rem(10) 0 rem(15) 0
        .title
            display flex
            .reason
                flex 1
            .close
                width rem(20)
                height rem(20)
                background transparent url(/src/page/studentRoom/teacher/img/close.svg) no-repeat center bottom
    .container
        border-top 1px solid #EEE
        margin-bottom rem(20)
        .title
            padding rem(20) 0
        .type-tabs
            display flex
            margin-bottom rem(20)
            .tab
                flex 1
                border-radius rem(100)
                border 1px solid #EEE
                text-align center
                padding rem(6) 0
                + .tab
                    margin-left rem(9)
            .tab-selected
                color $brand-info
                border 1px solid $brand-info
        .course-list-wrapper
            height rem(210)
            overflow scroll
        .course-list
            .course-item
                padding rem(6) rem(10)
                border 1px solid $brand-border
                border-radius rem(3)
                + .course-item
                    margin-top rem(10)
                display flex
                padding
                .course-name
                    flex 1
                    text-overflow()
                .course-price
                    width rem(150)
                    text-align right
                    color $brand-info
                    font-size rem(13)
                    line-height rem(24)
                    text-overflow()
            .course-item-choosed
                border 1px solid $brand-info
                background-color rgb(246,251,255)
            .course-none
                margin-top rem(100)
                font-size rem(15)
                color $brand-muted
                text-align center
    .footer
        > .button
            padding rem(11) 0
            font-size rem(17)
            text-align center
            background-color $brand-info
            color #FFF

