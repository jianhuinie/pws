@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";
@import "page/studentRoom/_part/detail.styl";
@import "page/studentRoom/_part/refresh.styl";
@import "page/studentRoom/_part/contact.styl";

$brand-info = #3fa5f2;
$brand-border = #DDD;
.mask {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: black;
    z-index: 2;
    opacity: 0.3;
}

.hide {
    display: none;
}

.question {
    position: fixed;
    z-index: 2;
    background: white;
    border-radius: rem(10);
    width: 76%;
    text-align: center;
    margin-left: 12%;
    top: rem(200);
    .title {
        font-family: PingFang-SC-Medium;
        font-size: rem(17);
        color: #030303;
        letter-spacing: rem(-0.41);
        text-align: center;
        margin: rem(20) 0 rem(15) 0;
    }
    .content {
        font-family: PingFang-SC-Regular;
        font-size: rem(15);
        color: #6d6d6e;
        letter-spacing: rem(-0.1);
        line-height: rem(16);
        text-align: center;
        margin: rem(10) 0;
    }
    ul {
        display: flex;
        margin: rem(15);
        li {
            flex: 1;
            font-family: PingFang-SC-Regular;
            font-size: rem(15);
            color: #6d6d6e;
            letter-spacing: rem(-0.1);
            line-height: rem(15);
            text-align: center;
            .radio-btn {
                height: rem(14);
                width: rem(14);
                border: 1px solid #979797;
                border-radius: 100%;
                display: inline-block;
                margin-right: rem(4);
                position: relative;
            }
            .checked-btn {
                i{
                    height: rem(8);
                    width: rem(8);
                    background: #6d6d6e;
                    display: block;
                    border-radius: 100%;
                    position: absolute;
                    top: rem(2);
                    left: rem(2);
                }
            }
        }
    }
    .buttons {
        display: flex;
        border-top: 1px solid #ededee;
        span {
            flex: 1;
            padding: rem(8) 0;
            color: #37a4f5;
            display: block;
        }
    }
}

.close-reason {
    position: fixed;
    z-index: 2;
    right: 0;
    left: 0;
    bottom: rem(20);
    .choose-button {
        border-radius: rem(12);
    }
    .button {
        margin: 0 rem(10);
        padding: rem(14) 0;
        text-align: center;
        background-color: rgb(240,240,240);
        border: 1px solid #DDD;
        font-size: rem(18);
        color: #0076FF;
    }
    .confirm {
        border-radius: rem(2);
    }
    .cancel {
        margin-top: rem(6);
        border-radius: rem(2);
        background-color: #FFF;
    }
}
.close-reason-confirm, .delete-teacher-confirm {
    position: fixed;
    z-index: 2;
    left 50%
    top 50%
    transform translate(-50%, -50%)
    width: rem(290);
    background-color: rgb(240,240,240);
    text-align: center;
    border-radius: rem(4);
    .title {
        font-size: rem(18);
        padding: rem(16);
    }
    .buttons {
        display: flex;
        border-top: 1px solid $brand-border;
        .button {
            flex: 1;
            color: $brand-info;
            padding: rem(10);
            + .button {
                border-left: 1px solid $brand-border;
            }
        }
    }
}
.delete-teacher {
    position: fixed;
    z-index: 2;
    width: 100%;
    bottom: rem(20);
    .button {
        margin: rem(10);
        padding: rem(15) 0;
        border-radius: rem(4);
        font-size: rem(17);
        color: #0076FF;
        text-align: center;
        background-color: #F8F8F8;
    }
}

.download-tip {
    position fixed
    z-index 4
    top 50%
    left 50%
    transform translate(-50%, -50%)
    width: rem(230);
    text-align: center;
    background-color: #FFF;
    border-radius: rem(4);
    .content {

        padding: rem(24) rem(40);
        font-size: rem(15);
    }
    .button {
        border-bottom-left-radius: 4px;
        border-bottom-right-radius: 4px;
        padding: rem(8) 0 rem(13) 0;
        color: #FFF;
        background-color: $brand-primary;
    }
}

.none-teacher {
    width: 100%;
    padding: rem(30) 0;
    p {
        margin: 0 auto;
        text-align: center;
        color: #9D9D9E;
    }
}