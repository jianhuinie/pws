@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";
@import "page/studentRoom/_part/list.styl";
@import "page/studentRoom/_part/refresh.styl";
@import "page/studentRoom/_part/nav.styl"
@import "common/ui/Loading/index.styl";

.nav-bar {
    z-index: 2;
}

.has-more {
    font-family: PingFang-SC-Regular;
    font-size: rem(14);
    color: #9d9d9e;
    letter-spacing: rem(0.49);
    text-align: center;
    height: rem(50);
    line-height: rem(50);
}

.add-icon {
    z-index: 1;
    display: inline-block;
    position: fixed;
    bottom: rem(20);
    right: rem(20);
    width: rem(60);
    height: rem(60);
    img {
        width: 100%;
    }
}

.empty {
    text-align: center;
    .tip-container {
        margin-top: rem(188);
        p {
            font-size: rem(15);
            color: #9D9D9E;
            line-height: rem(21);
        }
    }
    .image-container {
        width: 26%;
        position: relative;
        top: rem(11);
        left: rem(16);
        margin: 0 auto;
        z-index: -1;
        img {
            width: 100%;
        }
    }
    .button {
        background: #FF9100;
        border-radius: rem(2);
        width: 44%;
        height: rem(40);
        color: #fff;
        line-height: rem(40);
        margin: 0 auto;
    }
}

