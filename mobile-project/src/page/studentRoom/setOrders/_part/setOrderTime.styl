.set-time {
    margin-top: rem(10);
    background: white;
    .set-time-button {
        height: rem(50);
        line-height: rem(50);
        display: flex;
        padding: 0 rem(15);
        .text {
            flex: 3;
            font-family:PingFang-SC-Regular;
            font-size:rem(15);
            color:#3d3d3e;
        }
        .button {
            flex: 1;
            .circles {
                height: rem(30);
                border: rem(1) solid #C4C4C4;
                width: rem(56);
                margin-top: rem(10);
                float: right;
                box-shadow: rem(1) rem(1) rem(2) #DBDBDB;
                position: relative;
                border-radius: rem(30);
                .circle-button {
                    background: white;
                    height: rem(32);
                    width: rem(32);
                    border: rem(1) solid #c4c4c4;
                    border-radius: 50%;
                    position: absolute;
                    left: rem(-1);
                    top: rem(-1);
                    box-shadow: rem(1) rem(1) rem(10) #dbdbdb;
                }
                .circle-button-open {
                    background: white;
                    height: rem(28);
                    width: rem(28);
                    border: rem(1) solid #c4c4c4;
                    border-radius: 50%;
                    position: absolute;
                    right: rem(1);
                    top: rem(1);
                }
            }
            .circles-open {
                background: #1db954;
                box-shadow: none;
                border: none;
            }
        }
    }
    .set-time-line {
        background: #efefef;
        height: rem(1);
        width: 90%;
        margin-left: 5%;
    }
    .set-time-table {
        .title {
            padding: 0 rem(15);
            height: rem(50);
            line-height: rem(50);
            display: flex;
            .text {
                flex: 2;
                display: inline-block;
                font-family:PingFang-SC-Regular;
                font-size:rem(15);
                color:#3d3d3e;
            }
            .choose-all {
                flex: 0.8;
                display: inline-block;
                font-family:PingFang-SC-Regular;
                font-size:rem(15);
                color:#37a4f5;
                text-align: right;
            }
        }
        .table {
            .set-time-line-time {
                background: #efefef;
                height: rem(1);
                width: 100%;
            }
            .header {
                padding: rem(10) rem(15);
                display: flex;
                .title-item {
                    flex: 1;
                }
                .title-item-name {
                    font-family: PingFangSC-Regular;
                    font-size: rem(13);
                    color: #3d3d3e;
                    letter-spacing: rem(-0.25);
                    text-align: center;
                    margin-right: rem(10);
                }
                .title-item-time {
                    margin-left: rem(4);
                    margin-right: rem(4);
                    font-family: PingFangSC-Regular;
                    font-size: rem(13);
                    color: #3d3d3e;
                    letter-spacing: rem(-0.32);
                    text-align: center;
                    height: rem(36);
                    line-height: rem(36);
                }
            }
            .timer-container {
                padding: rem(10) rem(15);
                display: flex;
                .time-item {
                    flex: 1;
                    text-align: center;
                    .icon-ic_unselect {
                        color: #DCDCDC;
                        font-size: rem(20);
                    }
                    .icon-focus {
                        color: #1DB954;
                        font-size: rem(20);
                    }
                }
                .time-item-name {
                    text-align: left;
                    span {
                        font-family: PingFangSC-Regular;
                        font-size: rem(13);
                        color: #3d3d3e;
                        letter-spacing: rem(-0.32)px;
                        line-height: rem(13);
                        text-align: center;
                    }
                }
            }
        }
    }
}