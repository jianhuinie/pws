.set-distance {
    background: white;
    margin-top: rem(10);
    .distance {
        display: flex;
        padding: 0 rem(15);
        .text {
            display: inline-block;
            flex: 0.6;
            height: rem(50);
            line-height: rem(50);
            font-family: PingFang-SC-Regular;
            font-size: rem(15);
            color: #3d3d3e;
        }
        .distance-sets {
            display: inline-block;
            flex: 1;
            height: rem(50);
            line-height: rem(50);
            text-align: right;
            .input-content {
                font-family: PingFang-SC-Regular;
                font-size: rem(15);
                color: #3d3d3e;
            }
            .set {
                width: rem(80);
                border: none;
                outline: none;
                font-family: PingFang-SC-Medium;
                font-size: rem(15);
                color: #3d3d3e;
                text-align: right;
                &.hide {
                    display: none;
                }
            }
            .input-text {
                font-family: PingFang-SC-Regular;
                font-size: rem(15);
                color: #6d6d6e;
            }
        }
    }
    .set-distance-line {
        background: #efefef;
        height: rem(1);
        width: 90%;
        margin-left: 5%;
    }
    .set-distance-button {
        height: rem(50);
        line-height: rem(50);
        padding: 0 rem(15);
        display: flex;
        position: relative;
        .text {
            display: inline-block;
            flex: 0.5;
            height: rem(50);
            line-height: rem(50);
            font-family: PingFang-SC-Regular;
            font-size: rem(15);
            color: #3d3d3e;
        }
        .address {
            flex: 1;
            text-align: right;
            padding-right: rem(20);
        }
        .icon-angle-right {
            position: absolute;
            top: 50%;
            right: rem(15);
            transform: translateY(-50%);
            color: #c4c4c4;
        }
    }
}