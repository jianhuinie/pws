.set-price {
    background: white;
    .price {
        display: flex;
        padding: 0 rem(15);
        .text {
            display: inline-block;
            flex: 0.6;
            height: rem(50);
            line-height: rem(50);
            font-family: PingFang-SC-Regular;
            font-size: rem(15);
            color: #3d3d3e;
        }
        .price-sets {
            display: inline-block;
            flex: 1;
            height: rem(50);
            line-height: rem(50);
            text-align: right;
            .input-content {
                font-family: PingFang-SC-Regular;
                font-size: rem(15);
                color: #3d3d3e;
            }
            .set {
                width: rem(80);
                border: none;
                outline: none;
                font-family: PingFang-SC-Medium;
                font-size: rem(15);
                color: #3d3d3e;
                text-align: right;
                &.hide {
                    display: none;
                }
            }
            .input-text {
                font-family: PingFang-SC-Regular;
                font-size: rem(15);
                color: #6d6d6e;
            }
        }
    }
    .set-price-line {
        background: #efefef;
        height: rem(1);
        width: 90%;
        margin-left: 5%;
    }
    .set-price-button {
        height: rem(50);
        line-height: rem(50);
        padding: 0 rem(15);
        display: flex;
        .text {
            display: inline-block;
            flex: 1;
            height: rem(50);
            line-height: rem(50);
            font-family: PingFang-SC-Regular;
            font-size: rem(15);
            color: #3d3d3e;
        }
        .button {
            display: inline-block;
            flex: 1;
            height: rem(50);
            line-height: rem(50);
            .circles {
                height: rem(30);
                border: rem(1) solid #C4C4C4;
                width: rem(56);
                margin-top: rem(10);
                float: right;
                box-shadow: rem(1) rem(1) rem(2) #DBDBDB;
                position: relative;
                border-radius: rem(30);
                .circle-button {
                    background: white;
                    height: rem(32);
                    width: rem(32);
                    border: rem(1) solid #c4c4c4;
                    border-radius: 50%;
                    position: absolute;
                    left: rem(-1);
                    top: rem(-1);
                    box-shadow: rem(1) rem(1) rem(10) #dbdbdb;
                }
                .circle-button-open {
                    background: white;
                    height: rem(28);
                    width: rem(28);
                    border: rem(1) solid #c4c4c4;
                    border-radius: 50%;
                    position: absolute;
                    right: rem(1);
                    top: rem(1);
                }
            }
            .circles-open {
                background: #1db954;
                box-shadow: none;
                border: none;
            }
        }
    }
}