#wrapper {
    top: rem(85);
    #scroller {
        min-height: rem(600);
    }
}
.content-mask {
    position: fixed;
    top: rem(85);
    bottom: 0;
    left: 0;
    right: 0;
    background: black;
    z-index: 10;
    opacity: 0.5;
}

.list-box {    
    margin-top: rem(10);
    .list{
        width: 94%;
        margin-left: 3%;
        .list-box-item {
            border-radius: rem(4);
            background: white;
            box-shadow: rem(1) rem(1) rem(10) #bfbfbf;
            margin-bottom: rem(10);
            padding-bottom: rem(10);
            .header {
               .no-pay, .cancel-pay {
                    color: #9d9d9e;
               }
               .has-pay {
                   color: #1db954;
               }
               .done-pay {
                    color:#37a4f5;
               }
           }
            .content {
                .distance-card {
                    padding-right: rem(140);
                    position: relative;
                    .location {
                        line-height: rem(20);
                        position: relative;
                        top: rem(5);
                    }
                    .distance {
                        position: absolute;
                        top: rem(2);
                        right: rem(10);
                        width: rem(110);
                        margin-left: 0;
                        display: inline-block;
                        //line-height: rem(14);
                    }
                }
            }
            .content-line {
                width: 100%;
                height: rem(1);
                background: #ddddde;
            }
            .un-pay-status {
                height: rem(50);
                line-height: rem(50);
                position: relative;
                top: rem(5);
                .pay-button {
                    border: rem(1) solid #37a4f5;
                    border-radius: rem(2);
                    width: 22%;
                    height: rem(27);
                    font-family: PingFang-SC-Regular;
                    font-size: rem(13);
                    color: #37a4f5;
                    line-height: rem(27);
                    text-align: center;
                    display: inline-block;
                }
                .un-do-pay {
                    margin-left: 48%;
                    margin-right: 2%;
                }
            }
            &.no-margin {
                margin-bottom: 0;
            }
        }
    }
    .sing-button {
        height: rem(60);
        padding: rem(10) rem(15);
        .no-replay {
            display: inline-block;
            height: rem(44);
            line-height: rem(44);
            width: 40%;
            border: rem(1) solid #37a4f5;
            border-radius: rem(3);
            text-align: center;
            font-family: PingFang-SC-Regular;
            font-size: rem(15);
            color: #37a4f5;
            float: left;
        }
        .check-detail {
            background: #2da2f8;
            border-radius: rem(3);
            width: 53.2%;
            height: rem(44);
            line-height: rem(44);
            display: inline-block;
            margin-left: rem(10);
            float: right;
            text-align: center;
            font-family: PingFang-SC-Regular;
            font-size: rem(15);
            color: #ffffff;
        }
    }
}

