.gold-borad {
    background: white;
    .board-top {
        padding: rem(15) rem(90) rem(15) rem(70);
        position: relative;
        .avatar {
            height: rem(45);
            width: rem(45);
            border: 1px solid #EDEDEE;
            border-radius: rem(3);
            left: rem(15);
            position: absolute;
        }
        .top-content {
            .org-name {
                font-family: PingFang-SC-Medium;
                font-size: rem(18);
                color: #3C3D3D;
                line-height: rem(20);
                height: rem(20);
                font-weight: 400;
            }
            .gold-cert {
                img {
                    height: rem(20);
                    width: rem(20);
                }
                .gold-name {
                    font-family: PingFang-SC-Regular;
                    font-size: rem(13);
                    color: #C38C3A;
                    line-height: rem(20);
                    height: rem(20);
                    position: relative;
                    top: rem(2);
                }
            }
            .focus {
                color: white;
                background: #FF6C00;
                border-radius: rem(2);
                width: rem(64);
                height: rem(29);
                line-height: rem(29);
                text-align: center;
                position: absolute;
                right: rem(15);
                top: rem(20);
            }
        }
    }

    .border-bottom {
        width: 88%;
        margin-left: rem(15);
        padding-bottom: rem(10);
        &.hide {
            display: none;
        }
        .bottom-text {
            //flex: 1;
            font-family: PingFang-SC-Regular;
            font-size: rem(13);
            color: #9D9D9E;
            letter-spacing: rem(-0.32);
            line-height: rem(20);
            height: rem(20);
            text-align: center;
            span {
                display: inline-block;
                height: rem(20);
                line-height: rem(20);
            }
            img {
                width: rem(15);
                height: rem(15);
                position: relative;
                left: rem(0);
                top: rem(-2);
            }
        }
        .line {
            width: rem(1);
            height: rem(12);
            margin-top: rem(4);
            margin-left: rem(5);
            margin-right: rem(5);
            display: inline-block;
            background: #9d9d9e;
            opacity: 0.4;
        }
    }
}