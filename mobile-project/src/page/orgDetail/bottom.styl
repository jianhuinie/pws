.bottom {
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 10;
    right: 0;
    border-top: 1px solid #EBEBEB;
    background: white;
    display: flex;
    height: rem(50);
    line-height: rem(50);
    //padding: 0 rem(20);
    .item {
        flex: 1;
        text-align: center;
        border-right: 1px solid #EBEBEB;
        font-family: PingFang-SC-Regular;
        font-size: rem(16);
        color: #3D3D3E;
        letter-spacing: rem(-0.39);
        line-height: rem(50);
        height: rem(50);
        img {
            height: rem(20);
            width: rem(20);
            margin-right: rem(5);
            position: absolute;
            top: rem(15);
        }
        span {
            margin-left: rem(25);
        }
        &.appoint {
            background: #ff6c00;
            color: white;
        }
        &.hide {
            display: none;
        }
    }
}