.container {
    //background: white;
    .dynamic {
        padding: rem(10) rem(15);
        background: white;
        margin-bottom: rem(10);
        .first-nav {
            position: relative;
            margin-bottom: rem(5);
            .avatar {
                position: absolute;
                top: rem(10);
                img {
                    width: rem(40);
                    height: rem(40);
                    border-radius: rem(4);
                }
            }
            .title {
                height: rem(30);
                line-height: rem(30);
            }
            .infos {
                padding: rem(10) 0 0 rem(50);
                min-height: rem(65);
                .name {
                    font-family: PingFang-SC-Regular;
                    font-size: rem(15);
                    color: #3d3d3e;
                    letter-spacing: rem(-0.37);
                    line-height: rem(15);
                    padding-top: rem(2);
                }
                .def {
                    font-family: PingFang-SC-Regular;
                    font-size: rem(14);
                    color: #9D9D9E;
                    line-height: rem(30);
                    height: rem(30);
                }
            }
        }
        .infos {
            font-family: PingFang-SC-Regular;
            font-size: rem(14);
            color: #9D9D9E;
            line-height: rem(18);
            word-break: break-all;
            margin-top: rem(4);
        }
        .content {
            position: relative;
            background: #f8f8f8;
            padding: rem(10) rem(15);
            margin-top: rem(10);
            min-height: rem(80);
            img {
                width: rem(100);
                height: rem(60);
                border-radius: rem(4);
                position: absolute;
                top: rem(10);
                left: rem(10);
            }
            .box {
                padding: 0 0 0 rem(110);
                .name {
                    font-family: PingFang-SC-Regular;
                    font-size: rem(15);
                    color: #3E3E3E;
                    letter-spacing: rem(-0.37);
                    line-height: rem(20);
                }
                .price {
                    font-family: PingFang-SC-Regular;
                    font-size: rem(14);
                    color: #FF6C00;
                    letter-spacing: rem(-0.34);
                    line-height: rem(14);
                }
                .type {
                    font-family: PingFang-SC-Regular;
                    font-size: rem(13);
                    color: #9D9D9E;
                    letter-spacing: rem(-0.32);
                    line-height: rem(30);
                    height: rem(30);
                }
            }
        }
        .last-nav {
            margin-top: rem(10);
            .times, .reads, .like {
                    font-family: PingFang-SC-Regular;
                    font-size: rem(13);
                    color: #9D9D9E;
                    line-height: rem(30);
                    height: rem(30);
            }
            .times {
                float: left;
            }
            .reads , .like {
                float: right;
            }
            .reads {
                margin-right: rem(10);
            }
        }
    }
}