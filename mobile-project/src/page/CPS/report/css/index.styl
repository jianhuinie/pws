@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";
@import "page/_common/footer/footer.styl";
body {
    background-color: #fff;
}

.report {
    margin: rem(15);
    font-size: rem(14);
    display: none;
}

.title {
    margin-top: rem(10);
}

.old {
    img {
        width: 100%;
    }
    .report {
        padding: rem(25);
    }
    .img {
        height: rem(88);
        width: rem(72);
        margin: auto;
        margin-top: rem(40);
    }
    .info {
        font-size: rem(14);
        color: #6d6d6e;
        line-height: rem(19);
        text-align: center;
    }
    .phone {
        font-size: rem(26);
        color: #3c3d3d;
        line-height: rem(38);
        text-align: center;
        margin: rem(20) rem(0);
    }
    .msg {
        font-size: rem(14);
        color: #9d9e9e;
        line-height: rem(19);
    }
    .warn {
        font-family: STHeitiSC-Light;
        font-size: rem(14);
        color: #ff9100;
        line-height: rem(19);
    }
}

