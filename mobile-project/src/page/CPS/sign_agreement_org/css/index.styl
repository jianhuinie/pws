@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";
$g3 = #dcddde;
body {
    background-color: #fff;
}
input:focus{
    outline:none;
}
.login{
    padding: 0 rem(20);
    background-color: #fff;
    width: 100%;
    height: 100%;
    position: absolute;
    padding-top: 10%;
    .top{
        text-align:center;
        img{
                width: rem(140);
    height: rem(96);
    margin: rem(25);
        }
    }
    .login-tip{
        height: rem(44);
        line-height: rem(44);
        text-align:center;
        color: #666;
    }
    .login-button, .button{
        position:relative;
        background-color: #ff7f00;
    }

}
.input-c {
    border: 1px solid $g3;
    border-radius: rem(3);
    padding: rem(11) rem(15);
    margin: rem(3) 0 rem(15) 0;
    height: rem(45);
    background-color: #fff;
    &.err {
        border-color: red;
    }
    input {
        padding: 0;
        margin: 0;
        width: 100%;
        border: 0;
    }
}
.item {
          position: relative;
          width: 100%;
          overflow: hidden;
          border-bottom: 1px solid #dddddd;

          .right_wrap {
            position: absolute;
            right: 0;
            top: 0;
            width: rem(110);
            height: rem(45);
            font-size: rem(15);
            text-align: center;
            line-height: rem(45);
            color: #9D9D9D;
            background-color: #ddd;
            font-size: rem(13);
            &.on{
              color: #fff;
              background-color: #ff7f00;
            }
          }

          .user_wrap {
            height: 100%;
            margin-left: rem(89);
          }
          .vcode_wrap {
            height: 100%;
            margin-right: rem(110);
          }

          .input_text {
            height: 100%;
            width: 100%;
            font-size: rem(14);
            border: 0 none;
            color: #3d3d3d;
            -webkit-appearance: none;
            background-color: transparent;
          }
        }

.content-main {
    font-size: rem(12);
    line-height: 1.8;
    padding: rem(10);
    color: #404040;
    padding-bottom: rem(50);
}

table {
    border: 1px solid #999;
    border-width: 0 0 1px 1px;
    width: 100%;
}

.table-scroll {
    td {
        border: 1px solid #999;
        border-width: 1px 1px 0 0;
        text-align: center;
    }
}

img {
    width: 100%;
}

.title {
    text-align: center;
    margin: rem(10);
    font-size: rem(14);
}

.f-w {
    font-weight: bold;
}

.login-button, .button {
    display: inline-block;
    margin: 0;
    text-align: center;
    height: rem(40);
    padding: 0 rem(10);
    color: #fff;
    border: 0;
    background-color: #06c1ae;
    font-size: rem(16);
    vertical-align: middle;
    line-height: rem(40);
    box-sizing: border-box;
    cursor: pointer;
    -webkit-user-select: none;
    width: 100%;
    position: fixed;
    bottom: 0;
}

.grey {
    background-color: #ccc;
}

