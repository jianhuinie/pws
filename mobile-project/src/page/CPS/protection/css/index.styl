@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";

ul,li{
  margin:rem(0);
  padding:rem(0);
}
body{
  background : #fff;
}

.banner{
  background:#1db954;
  background-image:linear-gradient(-270deg, rgba(112,112,112,0.29) 0%, rgba(2,2,2,0.29) 61%, rgba(0,0,0,0.29) 100%);
  height:rem(140);
  position: relative;
  .bg-banner-img{
    position : absolute;
    width:100%;
    height:100%;
  }
  .title{
    position : absolute;
    width:rem(240);
    left:50%;
    margin-left:rem(-120);
    z-index : 1;
    padding-top:rem(45);
    height:rem(43);
    line-height : rem(43);
    text-align : center;
    font-size:rem(25.6);
    color:#fff;
    text-shadow:rem(0) rem(1) rem(3) rgba(0,0,0,0.20);

    >img{
      height:rem(43);
      width:rem(43);
    }
  }
}

.list{
  margin:rem(20) rem(15) rem(5);
  >li{
    position : relative;
    padding-bottom:rem(20);
    .info{
      margin-left:rem(40);
      .title{
        font-size:rem(18);
        color:#3c3d3d;
      }
      .describe{
        margin-bottom:rem(10);
        font-size:rem(14);
        color:#9d9e9e;
      }
      .describe-sub{
        border-radius:rem(6);
        background:#f8f8f8;
        padding:rem(15);
        font-size:rem(14);
        color:#6d6d6e;
        position : relative;
        >img{
          position : absolute;
          right:rem(0);
          bottom:rem(0);
          width:rem(45);
        }
      }
    }
    .icon{
      margin-top:rem(5);
      height:rem(30);
      width:rem(29);
      >img{
        height: 100%;
        width:100%;
      }
      position: absolute;  
    }
  }
}
.report{
  border-top: 1px solid #ebeced;
  padding:rem(15) rem(20) rem(20);
  .title{
    text-align : center;
    font-size:rem(15);
    color:#6d6d6e;
    >img{
      height:rem(16);
      width:rem(16);
      margin-right:rem(3);
      margin-top:rem(-6);
    }
  }
  .describe{
    font-size:rem(13);
    color:#9d9e9e;
    margin:rem(10) rem(0);
  }
  .btn{
    display :block;
    border:1px solid #ff6c00;
    border-radius:rem(3);
    width:rem(94);
    height:rem(29);
    line-height : rem(29);
    font-size:rem(14);
    color:#ff6c00;
    text-align : center;
    margin : auto;
  }
}