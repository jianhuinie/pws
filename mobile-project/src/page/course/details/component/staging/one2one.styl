.choose-content {
    .one2one-staging {
        margin-top: rem(20);
        padding: 0 rem(10);
        text-align: left;
        .text {
            font-size: rem(12);
            color: #3c3d3d;
            margin-bottom: rem(10);
        }
        .item, .item-active {
            width: 40%;
            display: inline-block;
            border: 1px solid #BBBBBB;
            border-radius: rem(4);
            text-align: center;
            margin-bottom: rem(10);
            margin-left: rem(10);
            .first-nav {
                font-family: HiraginoSansGB-W3;
                font-size: rem(13);
                color: #3d3d3d;
                padding-top: rem(4);
            }
            .fee {
                font-family: HiraginoSansGB-W3;
                font-size: rem(13);
                color: #9d9e9e;
                padding-bottom: rem(4);
            }
            &.active {
                border: none;
                .first-nav {
                    color: white;
                }
                .fee {
                    color: white;
                }
            }
        }
    }
}