
//课程简介
.course-sum {
  background-color: #fff;
  width: 100%;
  padding-bottom: rem(13);
  position: relative;
  .jhx-price {
    background-color: #e63f35;
    overflow: hidden;
    position: relative;
    height: rem(54);
    .left-part {
      float: left;
    }
    .right-part {
      position: absolute;
      right: 0;
      height: rem(54);

      background-color: #c42f25;
    }
    .price {
      font-size: rem(35);
      color: #fff;
      display: inline-block;
      padding-right: 0;
    }
    .text {
      display: inline-block;
      font-size: rem(10);
      color: #ffd6d6;
    }
    .price-text {
      line-height: 1.3;
    }
    .num {
      color: #fff;
      padding-left: rem(3);
    }
    .symbol {
      font-size: rem(21);
      vertical-align: middle;
      margin-left: rem(5);
      margin-right: rem(-10);
    }
    .tip {
      display: inline-block;
      font-size: rem(12);
      padding-left: rem(10);
    }
    .line1 {
      color: #fff;
      padding-top: rem(8);
      font-size: rem(16);
    }
    .line2 {
      color: #ffd6d6;
      margin-top: rem(-5);
    }
    .next-icon {
      display: inline-block;
      color: #fff;
      position: relative;
      top: rem(-8);
      font-size: rem(10);
      margin-left: rem(5);
    }
  }
  .course-title {
    line-height: 1.3;
    font-size: rem(20);
    color: #3c3d3d;
    text-overflow: ellipsis;
    white-space normal;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin: 0 rem(15) rem(10);
    padding-top: rem(25);
    overflow: hidden;
  }
  .price {
    padding-left: rem(15);
    margin-bottom: rem(10);
    .current {
      font-size: rem(20);
      color: #ff6c00;
      margin-right: rem(5);
    }
    .original {
      font-size: rem(14);
      color: #9d9e9e;
      text-decoration: line-through;
      margin-right: rem(5);
    }
    .unit {
      font-size: rem(15);
    }
  }
  .countdown {
    padding-left: rem(15);
    margin-bottom: rem(10);
  }
  .student {
    font-size: rem(14);
    color: #9d9e9e;
    width: 100%;
    padding-left: rem(15);
    margin-bottom: rem(8);
  }
}

.main-info {
  display: flex;
  margin-top: rem(15);
  padding: 0 rem(5);
  li {
    flex: 1;
    display: inline-block;
    vertical-align: top;
  }
  .open-top-bottom, .address-top-bottom, .online-top-bottom, .comment-top-bottom, .coupon-top-bottom {
    text-align: center;
    .img {
      margin: 0 auto;
    }
  }
  .inner-content {
    margin: 0 auto;
  }
  .title {
    margin-top: rem(3);
    font-size: rem(12);
    color: #3c3d3d;
  }
  .text {
    font-size: rem(12);
    color: #9d9e9e;
  }
  .img {
    width: rem(24);
    height: rem(24);
    margin-right: rem(5);
    margin-top: rem(5);
  }
  .open {
    padding-top: rem(10);
    border-right: 1px solid #f7f9fa;

    padding-bottom: rem(15);

  }

  .open-left-right, .address-left-right, .comment-left-right, .online-left-right, .coupon-left-right {
    padding-left: rem(10);
    .img {
      float: left;
    }
  }
  .address, .online {
    padding-top: rem(10);
  }
  .comment {
    border-left: 1px solid #f7f9fa;
    padding-top: rem(10);
    border-left: 0;
    border-right: 1px solid #f7f9fa;
    .no-comment {
      line-height: rem(36);
    }

  }
  .address-top-bottom, .online-top-bottom {
    border-right: 1px solid #f7f9fa;
  }
  .coupon {
    padding-top: rem(10);
    border-right: 1px solid #f7f9fa;
  }

  li:last-child {
    border-right: none;
  }

}
