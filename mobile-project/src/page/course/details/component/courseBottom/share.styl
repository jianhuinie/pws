.shares {
    flex: 1;
    padding-top: rem(5);
    font-size: rem(12);
    border-right: 1px solid #F2F2F3;
    display: none;
    .share-reward {
        position: absolute;
        top: rem(-30);
        /*left: -14px;*/
        left: 0;
        width: rem(72);
        z-index: 1;
        .title {
            padding: rem(5) rem(8);
            border-radius: rem(16);
            background-color: #fc5c5a;
            display: inline;
            font-size: rem(13);
            color: #fff;
        }
        .triangle-down {
            width: 0;
            height: 0;
            border-left: 6px solid transparent;
            border-right: 6px solid transparent;
            border-top: 10px solid #fc5c5a;
            display: inline-block;
            position: absolute;
            top: rem(14);
            left: rem(27);
        }
    }
}

.share-mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;
    background: black;
    opacity: 0.8;
    display: none;
    .content {
        width: 50%;
        margin-left: 40%;
        margin-top: rem(20);
    }
}
