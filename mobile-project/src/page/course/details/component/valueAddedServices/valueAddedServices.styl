.vas {
    position: relative;
    padding: 0 rem(10);
    width: 100%;
    height: rem(40);
    background-color: #FFF;
    border-top: 1px solid #ededee;
    border-bottom: 1px solid #ededee;
    font-size: rem(13);
    overflow: hidden;

    .item {
        position: relative;
        float: left;
        margin-right: rem(15);
        padding-left: rem(16);
        height: rem(38);
        line-height: rem(38);

        img {
            position: absolute;
            top: rem(12);
            left: 0;
            width: rem(14);
            height: rem(14);
        }
    }

    .arrow {
        position: absolute;
        top: rem(13);
        right: rem(10);
        width: rem(8);
        height: rem(14);
    }
}

.vasl {
    position: fixed;
    -webkit-transition: -webkit-transform 1s;
    transition: transform 1s;
    -webkit-transform: translateY(100%);
    transform: translateY(100%);
    z-index: 1000;
    bottom: 0;
    width: 100%;
    background-color: #fff;

    .title {
        padding: rem(19) 0 rem(14);
        background-color: #fff;
        color: #ff9100;
        text-align: center;
        font-size: rem(16);
    }

    .ctn {
        position: relative;
        overflow-y: scroll;
        max-height: rem(300);
    }

    .va {
        padding: rem(15);
        font-size: rem(14);
        box-shadow: 0 rem(1) 0 rem(1) #ececec;

        img {
            width: rem(15);
            vertical-align: middle;
            margin-right: rem(6);
        }

        span {
            vertical-align: middle;
        }
    }

    .ok {
        width: 100%;
        height: rem(44);
        line-height: rem(44);
        color: #fff;
        background-color: #ff9100;
        text-align: center;
        font-size: rem(17);
    }
}
