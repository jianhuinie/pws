
//学生评价
.stu-comment {
  margin: rem(9) 0;
  margin-top: rem(15);
  background-color: #fff;
  padding-top: rem(25);
  .title {
    font-size: rem(18);
    color: #3c3d3d;
    margin-left: rem(15);
    padding-left: rem(5);
    border-left: 2px solid #ff9100;
    line-height: 1;
  }
  .comment-info {
    background-color: #fff;
    padding-bottom: rem(20);
  }
  .total-star {
    margin-left: rem(15);
    border-bottom: 1px solid #ebeced;
    padding-top: rem(20);
    padding-bottom: rem(10);
    margin-right: rem(15);
    .star-score {
      vertical-align: middle;
    }
    .icon {
      font-size: rem(20);
      padding-left: rem(5);
    }
    .score {
      font-size: rem(15);
      color: #ff6c00;
      padding-left: rem(10);
    }
    .icon-star-half {
      color: #ff6c00;
    }
    .icon-star {
      color: #ffc499;
    }
    .star-shine {
      color: #ff6c00;
    }
  }
  .comment-detail {
    width: 100%;
    padding-top: rem(18);
    .avatar {
      width: rem(50);
      height: rem(50);
      margin-left: rem(15);
      float: left;
    }
    img {
      border-radius: 50%;
    }
    .right-info {
      margin-left: rem(75);
      padding-top: rem(3);
    }
    .stu-name {
      font-size: rem(17);
      color: #3c3d3d;
    }
    .create-time {
      font-size: rem(12);
      color: #9d9e9e;
    }
    .comment {
      color: #3c3d3d;
      font-size: rem(15);
      padding: 0 rem(13);
      margin-top: rem(13);
      margin-bottom: rem(15);
      display: -webkit-box;
      word-break: break-all;
      text-overflow: ellipsis;
      white-space: normal;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 3;
    }
  }
  .total-comment {
    font-size: rem(16);
    color: #6d6d6e;

    height: rem(40);
    line-height: rem(40);
    text-align: center;
    margin: 0 auto;
    .inner-content {
      display: inline-block;
      border: 1px solid #eaeaea;
      border-radius: rem(2);
      padding: 0 rem(12);
    }

  }
}
