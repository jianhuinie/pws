
.course-info {
  padding-bottom: rem(13);
  background-color: #fff;
  margin-top: rem(10);
  padding-top: rem(25);
  .class-title {
    font-size: rem(18);
    color: #3c3d3d;
    margin-left: rem(15);
    padding-left: rem(5);
    border-left: 2px solid #ff6c00;
    line-height: 1;
  }
  .info {
    color: #3c3d3d;
    padding: rem(12) rem(12) 0;
    font-size: rem(13);
    word-break: break-all;
  }
}

.img-text-content {
  overflow: hidden;
  margin-top: rem(10);
  .wrap {
    position: relative;
    max-height: rem(513);
    overflow: hidden;
    padding: 0 rem(10)
  }
}

.img-text {
  max-height: rem(460);
  margin-bottom: rem(60);
  overflow: hidden;

  iframe {
    width: 100% !important;
    margin-bottom: rem(10);
  }
}

.all-info {
  z-index: 1;
  position: absolute;
  top: rem(457);
  left: 50%;
  -webkit-transform: translateX(-50%);
  transform: translateX(-50%);
  font-size: rem(16);
  color: #6d6d6e;
  width: rem(120);
  height: rem(40);
  line-height: rem(40);
  text-align: center;
  margin: rem(13) auto;
  margin-bottom: 0;
  border: 1px solid #e2e2e2;
  border-radius: rem(2);
}
