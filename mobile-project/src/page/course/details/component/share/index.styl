
//分享
.share {
  background-color: #fff;
  margin: rem(9) 0;
  padding-bottom: rem(19);
  padding-top: rem(15);
  margin-bottom: rem(60);
  .app-qrCode {
    display: none;
  }
  ul {
    width: 100%;
    font-size: rem(13);
    padding-bottom: rem(17);
    text-align: center;
  }
  li {
    display: inline-block;
    margin: 0 rem(3);
  }
  span {
    vertical-align: middle;
  }
  .friends, .weixin, .qrcode, .m-qrcode {
    border: 1px solid #dcddde;
    text-align: center;
    border-radius: rem(20);
    margin-top: rem(10);
    padding: 0 rem(10);
  }
  .friends {
    position: relative;
    height: rem(27);
    line-height: rem(27);
    padding-left: rem(28);

    img {
      position: absolute;
      top: rem(6);
      left: rem(10);
    }
  }
  .weixin {
    position: relative;
    height: rem(27);
    line-height: rem(27);
    padding-left: rem(30);
    margin: 0 auto;
  }
  .icon-wechat {
    position: absolute;
    top: rem(6);
    left: rem(10);
    color: #61c765;
    font-size: rem(14);
    margin-right: rem(5);
  }
  .qrcode {
    height: rem(27);
    line-height: rem(27);
  }
  .icon-qrcode {
    color: #6d6d6e;
    font-size: rem(13);
  }
  .icon, img {
    padding-right: rem(2);
  }
  img {
    vertical-align: middle;
  }
  .m-qrcode-share {
    display: none;
    .m-qrcode {
      width: rem(80);
      height: rem(27);
      line-height: rem(27);
      margin: 0 auto;
      margin-bottom: rem(12.5);
      font-size: rem(13);
    }
  }

  .tip, .course-id {
    color: #9d9e9e;
    font-size: rem(12);
    width: 100%;
    text-align: center;
  }

}

#plan-dialog {
  background: #ffffff;
  display: none;
  position: fixed;
  top: 10%;
  left: 10%;
  border-radius: rem(5);
  width: 80%;
  z-index: 4;
  max-height: rem(320);

  .title {
    padding: rem(6.4) rem(15);
    border-bottom: 1px solid #ebeced;
  }
  .title-content {
    padding: 0 rem(15);
    max-height: rem(238);
    overflow-y: hidden;
  }
  span {
    font-size: rem(15);
    display: inline-block;
  }
  .long {
    font-size: rem(14);
    color: #9d9e9e;
    display: inline-block;
  }
  .content {
    border-bottom: 1px solid #ebeced;
    padding: rem(15) rem(0);
    padding-right: rem(5);
    font-size: rem(14);

    .circle {
      border: 1px solid #3fa5f2;
      color: #3fa5f2;
      width: rem(17.5);
      height: rem(17.5);
      border-radius: 50%;
      margin: 0 auto;
      text-align: center;
      line-height: rem(17.5);
      float: left;
      font-size: rem(13);
      margin-top: rem(3);
      display: inline-block;
    }
    .time-detail {
      overflow: hidden;
      margin-left: rem(27.5);
    }
    .time, .plan-detail {
      font-size: rem(14);
      display: inline-block;
    }
    .plan-detail {
      max-height: rem(40);
      white-space: normal !important;
      display: -webkit-box;
      text-overflow: ellipsis;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
    }
  }
  .button-know {
    padding: rem(15) rem(15);
    border-top: 1px solid #ebeced;
    margin: 0 auto;
    text-align: center;

    span {
      font-size: rem(16);
      color: #ff9100;
      display: inline-block;
    }
  }
}

.masked {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 3;
}

.qrcode-container {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 5;

  .QRmask {
    position: absolute;
    height: 100%;
    width: 100%;
    background-color: #000;
    opacity: 0.5;
  }
  .front {
    position: absolute;
    left: 50%;
    top: 50%;
    width: rem(280);
    padding: rem(30);
    -webkit-transform: translate3d(-50%, -50%, 0);
    transform: translate3d(-50%, -50%, 0);
    background-color: #FFF;
    border-radius: rem(3);
  }
  .label-group {
    font-size: rem(13);
    margin-bottom: rem(3);

    label {
      float: left;
      color: #6D6D6D;
    }
    p {
      color: #3D3D3D;
      max-height: rem(40);
      overflow: hidden;
    }
  }
  #qrcode {
    margin: rem(20) auto 0 auto;
    text-align: center;
    img {
          width: rem(124);
          height: rem(124);
      }

    canvas {
      width: 100%;
    }
  }
  .hint {
    text-align: center;
    margin-top: rem(25);
    color: #9D9D9D;
    font-size: rem(12);
  }
  .cancel {
    position: absolute;
    margin-left: rem(222);
    font-size: rem(22);
    font-weight: bold;
    top: rem(9);
    color: #9d9d9d;
  }
}


//预约试听弹框
.try-container {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    z-index: 5;
    .mask {
        position: absolute;
        height: 100%;
        width: 100%;
        background-color: #000;
        opacity: 0.5;
    }
    .front {
        position: absolute;
        left: 50%;
        top: 50%;
        width: rem(250);
        -webkit-transform: translate3d(-50%, -50%, 0);
        transform: translate3d(-50%, -50%, 0);
        background-color: #fff;
        border-radius: rem(3.008);
        text-align: center;
        .cancel {
            font-size: rem(22);
            font-weight: bold;
            position: absolute;
            right: rem(9.008);
            top: rem(9.008);
            color: #9d9d9d;
            z-index: 1;
        }
        > h3 {
            font-size: rem(16);
            line-height: rem(34);
            margin-top: rem(10);
        }
        > p {
            font-size: rem(13);
            line-height: rem(34);
            margin-top: rem(10);
        }
        .btn {
            overflow: hidden;
            clearfix();
            margin-top: rem(10);
            > div {
                width: 50%;
                font-size: rem(13);
                line-height: rem(36);
                border-left: 1px solid #ccc;
                border-top: 1px solid #ccc;
                margin-left: rem(-1);
                float: left;
            }
            .pay {
                > a {
                    color: #ff9100;
                }
            }
        }
    }
}
