
//相关课程
.related-course {
  .title {
    font-size: rem(18);
    height: rem(52);
    line-height: rem(52);
    width: 100%;
    text-align: center;
    color: #9d9e9e;
  }
  .course-list {
    background-color: #fff;
    padding: 0 rem(12) rem(15);
  }
  li {
    padding: rem(12) 0;
    border-bottom: 1px solid #f7f9fa;
    overflow: hidden;
  }
  .left-col {
    float: left;
    width: rem(68);
    height: rem(68);
    margin-right: rem(12);
    position: relative;
    .icon-play {
      position: absolute;
      bottom: rem(5);
      right: rem(5);
      width: rem(25);
      height: rem(25);
    }
  }
  .right-col {
    position: relative;
    height: rem(68);
    //width: 67%;
    .top-line {
      text-overflow: ellipsis;
      white-space: normal !important;
      overflow: hidden;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 2;
      display: -webkit-box;
    }
    .type {
      font-size: rem(12);
      color: #fff;
      background-color: #3fa5f2;
      padding: 0 rem(5);
      border-radius: rem(2);
      margin-right: rem(5);
      display: inline-block;
    }
    .rc-title {
      font-size: rem(15);
      color: #3c3d3d;
      line-height: 1.3;
    }
    .bottom-line {
      position: absolute;
      bottom: rem(-3);
      left: rem(81);
    }
    .rc-price {
      color: #ff6c00;
      font-size: rem(15);
      margin-right: rem(10);
    }
  }
  .all-rc {
    font-size: rem(16);
    color: #6d6d6e;
    height: rem(40);
    line-height: rem(40);
    width: rem(120);
    text-align: center;
    margin: rem(15) auto;
    margin-bottom: 0;
    border: 1px solid #f4f4f5;
    border-radius: rem(2);
  }
  .app-download {
    font-size: rem(13);
    color: #fff;
    width: rem(210);
    height: rem(35);
    line-height: rem(35);
    margin: 0 auto;
    margin-top: rem(15);
    text-align: center;
    background-color: #ff6c00;
    border-radius: rem(2);
  }

}
