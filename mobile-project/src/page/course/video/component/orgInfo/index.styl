//老师信息
.org-list {
    margin: rem(9) 0;
    /*&.one {
        margin: rem(9);
    }*/
    .org-ul {
        width: 100%;
        overflow-x: auto;
        white-space: nowrap;
        overflow-y: hidden;
    }
    .org-item {
        vertical-align: top;
        width: 100%;
        background-color: #fff;
        display: inline-block;
        &.one-org {
            width: 100%;
            margin: 0;
        }
    }
    .org-info {
        position: relative;
        padding-left: rem(60);
        height: rem(60);
        .avatar {
            display: inline-block;
            position: absolute;
            left: 0;
            .img {
                width: rem(60);
                height: rem(60);
            }

        }
        .right-col {
            display: inline-block;
            padding-left: rem(10);
            width: 100%;
            margin-top: rem(2);
            .audio-icon {
                margin-top: rem(15);
                margin-left: rem(12);
                display: inline-block;
                width: rem(77);
                height: rem(32);
                text-align: center;
                border: 1px solid #e0e1e2;
                border-radius: rem(20);
                position: relative;
                float: left;
                .audio-long {
                    color: #9d9e9e;
                    font-size: rem(14);
                    position: absolute;
                    right: rem(9);
                    top: 50%;
                    transform: translateY(-50%);

                }
                img {
                    width: rem(20);
                    height: rem(20);
                    color: #ff6c00;
                    font-size: rem(12);
                    position: absolute;
                    left: rem(9);
                    top: 50%;
                    transform: translateY(-50%);
                }
            }
            .chat {
                width: rem(77);
                height: rem(32);
                border: 1px solid #e0e1e2;
                border-radius: rem(20);
                margin-left: rem(11);
                margin-top: rem(15);
                display: inline-block;
                color: #9d9e9e;
                position: relative;
                font-size: rem(14);
                padding-right: rem(9);
                line-height: rem(30);
                img {
                    position: absolute;
                    width: rem(20);
                    height: rem(20);
                    left: rem(9);
                    top: 50%;
                    transform: translateY(-50%);
                }
                text-align: right;
            }
            .org-name {
                width: 100%;
                ellipsis();
                .name {
                    position: relative;
                    height: rem(32);
                    line-height: rem(32);
                    .name-wrap {
                        max-width: 50%;
                        color: #3c3d3e;
                        font-size: rem(17);
                        display: inline-block;
                        ellipsis();
                        vertical-align: middle;
                    }
                    .org {
                        font-size: rem(12);
                        color: #9D9D9E;
                        letter-spacing: 0;
                        border: 1px solid #e0e1e2;
                        padding: 0 rem(2);
                        border-radius: rem(2);
                        vertical-align: middle;
                        line-height: rem(20);
                        display: inline-block;
                        max-width: 48%;
                    }
                    .vip {
                        display: inline-block;
                        margin-left: rem(3);
                        width: rem(15);
                        height: rem(15);
                        v-center(absolute);
                        img {
                            vertical-align: top;
                        }
                    }
                }
                
            }
            .intro, .org {
                color: #9d9d9e;
                font-size: rem(12);
                ellipsis();
            }
        }
    }
    
    .org-vip {
        position: absolute;
        display: inline-block;
        margin-left: rem(3);
        width: rem(13);
        height: rem(13);
    }
    .intro {
        color: #3c3d3d;
        ellipsis();
        width: 100%;
    }
    .certs {
        font-size: rem(12);
        color: #9d9e9e;
        margin-top: rem(5);
        margin-left: rem(9);
        li {
            display: inline-block;
            border: 1px solid #e0e1e2;
            border-radius: rem(2);
            height: rem(20);
            line-height: rem(20);
            padding: 0 rem(5);
            margin-right: rem(5);
        }

    }
    .summary {
        margin-top: rem(12);
        ul {
            display: inline-flex;
            width: 100%;
            text-align: center;
            height: rem(60);
            line-height: rem(30);
            li {
                flex: 1;
                font-size: rem(13);
                color: #9D9D9E;
                .num {
                    font-size: rem(18);
                    color: #3C3D3E;
                }
            }
            li:not(:last-child) {
                border-right: 1px solid #f4f4f4;
            }
        }
    }
    .more {
        text-align: center;
        margin-top: rem(20);
        .btn {
            background: #FFFFFF;
            border: 1px solid #FF9100;
            border-radius: rem(3);
            font-size: rem(13);
            color: #FF9100;
            width: rem(84);
            height: rem(30);
            line-height: rem(30);
            display: inline-block;
            text-align: center;
        }
        span:first-child {
            margin-right: rem(10);
        }
        span:last-child {
            margin-left: rem(10);
        }
    }
}