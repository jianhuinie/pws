.label-cps {
    padding: 0;
    .cps-label {
        vertical-align: top;
    }
    .jifen-box {
        vertical-align: top;
    }
}

.class-introduce {
    padding-bottom: rem(35);
    .video-courses-link{
        padding-top: 18.6%;
        width: 100%;
        position: relative;
        background-color:#fff;
        margin-top: rem(10);
        img[src]{
            opacity: 1;
        }
        img{
            opacity: 0;
            position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 100%;
        }
    }
    .college-tip {
        display: none;
        z-index: 4;
        position: relative;
        bottom: 0;
        left: 0;
        height: rem(50);
        background: #2b5490;
        width: 100%;
        padding: rem(12) rem(10) rem(6) rem(9);
        margin-top: rem(8);
        text-align: left;
        line-height: 1;
        color: #fff;
        .logo {
            background: #fff;
            border-radius: rem(35);
            width: rem(40);
            height: rem(40);
            position: absolute;
            top: rem(5);
            left: rem(9);
            text-align: center;
            img {
                width: rem(35);
                height: rem(35);
            }
        }
        .c-title {
            font-size: rem(13);
            position: absolute;
            top: rem(12);
            left: rem(57);
        }
        .description {
            font-size: rem(12);
            color: #fff;
            position: absolute;
            bottom: rem(6);
            left: rem(57);
        }
        .college-link {
            display: block;
            position: absolute;
            right: 0;
            bottom: 0;
            height: rem(50);
            background: #2b5490;
            padding: rem(10) rem(20);
            text-align: left;
            color: #ffffff;
            .big {
                font-size: rem(13);
                vertical-align: middle;
                line-height: rem(30);
            }
            .icon-angle-right {
                font-size: rem(15);
                position: absolute;
                right: rem(5);
                top: 50%;
                transform: translateY(-50%);
            }
        }
    }
    // .course-info {
    //     .img-text img{
    //         width: auto!important;
    //     }
    // }
    .base-info{
        background-color: #fff;
            padding: rem(5) rem(15) rem(15) rem(15);

        .display-show {
            display: inline-block;
        }
        .display-hidden {
            display: none;
        }
        .v-title {
            font-size: rem(20);
            padding-top: rem(10);
            padding-bottom: rem(10);
            line-height: 1.2;
            color: #333;
        }
        .money-rent{
            font-size: rem(18);
            color: #f73;
            margin-bottom: rem(8);
            line-height: 1.2;
            .limited_time {
                margin: rem(10) 0;
                color: initial;
                >span {
                    color: #ff0000;
                }
            }
        }
        .free{
            color: green;
        }
        .course-comment{
            margin-top: rem(0);
            font-size: rem(12);
            color: #9d9e9e;
            li{
                display:inline-block;
                margin-right:rem(5);
            }
            .line{
                height: rem(16);
    border-right: 1px solid #dcddde;
    display: inline-block;
    vertical-align: sub;
            }
        }
        label{
                font-size: rem(14);
        }
    }

    .relative-title {
        text-align: center;
        font-size: rem(18);
        color: #9d9e9e;
        padding: rem(7);
    }
    //分享
    .share-course {
        background-color: #fff;
        margin-top: rem(10);
        margin-bottom: rem(16);
        color: #6d6d6e;
        font-size: rem(13);
        padding-top: rem(10);
        padding-bottom: rem(36);
        text-align: center;
        ul {
            width: 100%;
            // display: flex;
            // justify-content: center;
            height: rem(50);
            line-height: rem(50);
        }
        li {
            //flex: 1;
            text-align: center;
            display: inline-block;

        }
        .friends, .weixin, .qrcode, .m-qrcode {
            border: 1px solid #dcddde;
            text-align: center;
            border-radius: rem(20);
            margin-top: rem(10);
        }
        .friends {
            width: rem(85);
            height: rem(32);
            line-height: rem(32);
            //float: right;
            img {
                margin-top: rem(-3);
            }

        }
        .weixin {
            width: rem(78);
            height: rem(32);
            line-height: rem(32);
            // float: left;
        }
        .qrcode {
            width: rem(85);
            height: rem(32);
            line-height: rem(32);
            //float: left;
        }
        .icon, img {
            padding-right: rem(3);
        }
        img {
            vertical-align: middle;
        }
        .icon-weixin {
            color: #61c765;
            font-size: rem(22);
            vertical-align: middle;
            padding-right: 0;

        }
        .icon-qrcode {
            color: #6d6d6e;
            font-size: rem(13);
        }
        .tip, .course-id {
            font-size: rem(13);
            color: #9d9e9e;
            width: 100%;
            text-align: center;
            border: 0;
        }
        .tip {
            margin-top: rem(8);
        }
        .display-none{
            display: none;
        }
        .m-qrcode {
            margin: rem(10) auto;
            width: rem(80);
            height: rem(32.5);
            line-height: rem(32.5);

        }
    }
}
