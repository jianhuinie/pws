.course-try-listen {
	background: #FFFFFF;
    margin-top: rem(9);
	.try-item {
		padding: 0 rem(15);
		box-shadow: rem(15) 0 0 0 #f4f4f4;
		height: rem(44);
		border-bottom: 1px solid #f4f4f4;
		padding-right: rem(96);
        position: relative;
        .item-listen-play {
            v-center(absolute);
            right: rem(12);
            >span {
                display: inline-block;
                border: 1px solid #ff9100;
                color: #ff9100;
                border-radius: rem(2);
                padding: rem(2) rem(5);
            }
        }
		.try-title {
			text-overflow();
			line-height: rem(44);
			font-size: rem(15);
			color: #3C3D3E;
			letter-spacing: rem(-0.16);
		}
	}
}