.circle-icon {
    position: relative;
    width: rem(16);
    height: rem(16);
    border-radius: rem(8);
    border-width: rem(1);
    border-style: solid;
    border-color: #CCCCCC;
    font-size: 0;
    line-height: 0;
}

.qrcode-container {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    z-index: 5;

    .mask {
        position: absolute;
        height: 100%;
        width: 100%;
        background-color: #000;
        opacity: 0.5;
    }
    .front {
        position: absolute;
        left: 50%;
        top: 50%;
        padding: rem(30);
        transform: translate3d(-50%, -50%, 0);
        background-color: #FFF;
        border-radius: rem(3);
    }
    .label-group {
        font-size: rem(13);
        margin: 0 auto;
        text-align: center;

        .label-name {
            float: left;
        }
        .org-name {
            margin-left: rem(60);
            text-align: left;
        }
    }
    #qrcode {
        margin: 0 auto;
        text-align: center;
        width: rem(180);
        height: rem(180);
        padding: rem(10);
        img {
            width: rem(124);
            height: rem(124);
        }

        canvas {
            width: 100%;
        }
    }
    .hint {
        text-align: center;
        color: #9D9D9D;
        font-size: rem(12);
    }
    .cancel {
        font-size: rem(22);
        font-weight: bold;
        position: absolute;
        right: rem(9);
        top: rem(9);
        color: #9D9D9D;
    }
}

