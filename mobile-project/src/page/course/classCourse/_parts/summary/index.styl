.course-sum {
    border-bottom: 1px solid #f4f4f4;
    background-color: #fff;
    width: 100%;
    //padding-bottom: rem(13);
    position: relative;
    .main-info {
        display: inline-flex
        margin-top: rem(15);
        padding: 0 rem(5);
        padding-bottom: rem(10);
        width: 100%;
        .icon {
            font-size: rem(25);
        }
        li {
            display: inline-block;
            flex: 1;
            vertical-align: top;
            line-height: rem(18);
        }
        .open-top-bottom, .address-top-bottom, .online-top-bottom, .comment-top-bottom {
            text-align: center;
            .img {
                margin: 0 auto;
            }
        }
        .inner-content {
            margin: 0 auto;

        }
        .title {
            margin-top: rem(3);
            font-size: rem(12);
            color: #3c3d3d;
        }
        .text {
            font-size: rem(12);
            color: #9d9e9e;
        }
        .img {
            width: rem(24);
            height: rem(24);
            margin-right: rem(5);
            margin-top: rem(5);
        }
        .open {
            padding-top: rem(10);
            border-right: 1px solid #f7f9fa;

            padding-bottom: rem(15);

        }

        .open-left-right, .address-left-right, .comment-left-right, .online-left-right, .coupon-left-right {
            padding-left: rem(10);
            .img {
                float: left;
            }
        }
        .address-left-right {
            .title {
                padding-top: rem(8);
            }
        }
        .address, .online {
            padding-top: rem(10);
        }
        .comment {
            border-left: 1px solid #f7f9fa;

            padding-top: rem(10);
            border-left: 0;
            border-right: 1px solid #f7f9fa;
            .no-comment {
                line-height: rem(36);
            }

        }
        .address-top-bottom, .online-top-bottom {
            border-right: 1px solid #f7f9fa;
        }
        .comment-top-bottom {
            border-right: none;
        }
        .coupon {
            width: 50%;
            padding-top: rem(10);

        }

    }

    .course-title {
        line-height: 1.3;
        font-size: rem(20);
        color: #3c3d3d;
        text-overflow: ellipsis;
        white-space normal;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        margin: 0 rem(15) rem(10);
        padding-top: rem(25);
    }
    .student {
        font-size: rem(14);
        color: #9d9e9e;
        width: 100%;
        padding-left: rem(15);
        margin-bottom: rem(8);
    }
    .price {
        padding-left: rem(15);
        margin-bottom: rem(10);
        clear: both;
        .current {
            font-size: rem(20);
            color: #ff6c00;
            margin-right: rem(5);
            //text-shadow: rem(1) rem(2) rem(5) #000;
        }
        .original {
            font-size: rem(14);
            color: #9d9e9e;
            text-decoration: line-through;
            margin-right: rem(5);
            //text-shadow: rem(1) rem(2) rem(5) #000;
        }
        .unit {
            font-size: rem(15);
        }
    }
    .countdown, .amount-discount {
        font-size: rem(14);
        padding-left: rem(15);
        margin-bottom: rem(10);
    }
}