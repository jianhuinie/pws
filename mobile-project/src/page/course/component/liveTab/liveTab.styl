@import "common/ui/Loading/index.styl";
.live-room-nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 900;
    background: #fff;
    border-bottom: 1px solid #ededee;
    height: rem(50);
    display: flex;
    #page_goBack {
        height: rem(20);
        width: rem(20);
        font-size: rem(20);
        margin-left: rem(10);
        img {
            width: rem(20);
            height: rem(20);
            margin-top: rem(15);
            margin-left: rem(4);
        }
    }
    .nav-title {
        height: rem(48);
        line-height: rem(48);
        margin-left: rem(20);
        text-align: center;
        .item {
            display: inline-block;
            padding: 0 rem(15);
            font-family: PingFang-SC-Regular;
            font-size: rem(17);
            color: #3D3D3E;
            &.active {
                font-family: PingFang-SC-Semibold;
                font-weight: bolder;
                border-bottom: rem(2) solid #ff9100;
                color: #ff9100;
                height: rem(49)
            }
        }
    }
    .open-app {
        text-align: center;
        position: absolute;
        right: rem(58);
        top: rem(3);
        img {
            height: rem(20);
            width: rem(20);
            position: relative;
            top: rem(3);
            margin-bottom: rem(7);
        }
        .icon-upload {
            font-size: rem(24);
            color: #ff9100;
        }
        .text {
            font-size: rem(10);
            color: #ff9100;
            height: rem(20);
            line-height: rem(20);
        }
    }
    .menu {
        position: absolute;
        right: rem(14);
        text-align: center;
        top: rem(3);
        img {
            height: rem(20);
            width: rem(20);
            position: relative;
            top: rem(3);
            margin-bottom: rem(7);
        }
        .icon-people-menu {
            font-size: rem(24);
            color: #949494;
        }
        .text {
            font-size: rem(10);
            color: black;
            height: rem(20);
            line-height: rem(20);
        }
    }

    &.animate {
        animation: typing 1s ease 10s normal;
        animation-fill-mode: forwards;
    }
}

@keyframes typing {
    0% {
        opacity: 1;
    }
    30% {
        opacity: 0.7;
    }
    60% {
        opacity: 0.4;
    }
    100% {
        opacity: 0;
    }
}