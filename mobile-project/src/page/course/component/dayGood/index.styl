@import "page/_common/swiper/swiper.styl";

.day-good {
    background: white;
    padding: rem(10);
    margin-bottom: rem(10);
    .start-title{
        text-align : center;
        .title{
            display : inline;
            font-size:rem(17);
            color:#3c3d3d;
            margin:rem(0) rem(3);
        }

        .icon-star_all{
            color:#ebeced;
            font-size:rem(10);
        }
        .block-line{
            position : relative;
            top:rem(-2);
            .line{
                top:rem(5);
                left: rem(-32);
                position : absolute;
                display : block;
                width:rem(30);
                height:rem(1);
                font-size : rem(0);
                border-top:1px solid #ebeced;
            }
            .line-sub{
                width:rem(10);
                left: rem(-10);
                top:rem(7);
            }
        }
        .block-line-right{
            .line{
                left:rem(14);
            }
            .line-sub{
                left: rem(12);
            }
        }
        .start-title-sub{
            margin-top:rem(2);
            font-size:rem(12);
            color:#9d9e9e;
            text-align:center;
        }
    }

    .swiper-container {
        width: 100%;
        padding: rem(20) 0;
    }

    .swiper-slide {
        background-position: center;
        background-size: cover;
        width: 70%;
    }

    .swiper-slide-active {
        width: 70% !important;
    }

    .total {
        width: rem(220);
        margin: 0 auto;
        border-radius: rem(5);
        border: 1px solid #f4f4f4;
        box-shadow: rem(2) rem(2) rem(9) rem(2) #E0E0E0;

        .img-phone {
            width: 100%;
            height: 100%;
            margin: 0 auto;
            position: relative;
            overflow: hidden;

            img {
                display: block;
                height: rem(130);
                width: 100%;
                /*position: absolute;
                top: 0;
                left: 0;*/
                border-top-left-radius: 5px;
                border-top-right-radius: 5px;
            }
            .item-play-icon {
                height: rem(30);
                width: rem(30);
                position: absolute;
                top: 30%;
                left: 45%;
            }
            .course-info {
                padding: 0 rem(12);
                margin-top: rem(6);
                line-height: rem(22);
                .course-icon {
                    font-family: PingFang-SC-Regular;
                    font-size: rem(10);
                    color: #37A4F5;
                    border-radius:rem(1);
                    border: 1px solid #37A4F5;
                    padding: rem(2) rem(4);
                }
                .course-title {
                    font-family: PingFang-SC-Regular;
                    font-size:rem(14);
                    color:#6d6d6e;
                }
            }

            .pay-number {
                font-family:PingFang-SC-Regular;
                font-size:rem(11);
                color:#9d9e9e;
                line-height:rem(40);
                height: rem(40)
                padding: 0 rem(12);
            }

            .img-phone:before {

                content: " ";
                width: 100%;
                display: block;
            //padding-top: 100%;
            }
        }
    }
}