@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";
@import "page/course/component/courseCard/course_card.styl";
@import "page/course/component/nearbyOrg/org.styl";
@import "page/course/component/dayGood/index.styl";

body {
  background-color: #F2F4F5;
}

img{
  width:100%;
  height:100%;
}
ul,li{
  margin:rem(0);
  padding:rem(0);
}

.bottom{
  margin-bottom : rem(10);
}
.single-line{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.class-list{
  background : #fff;
  padding:rem(10) rem(5);
  >li{
    width:20%;
    float:left;
    text-align : center;
    font-size:rem(12);
    color:#6d6d6e;
    margin-bottom:rem(5);

    >a{
      display : block;
    }
    .img{
      border-radius:rem(6);
      width:rem(45);
      height:rem(45);
      overflow : hidden;
      margin: auto;
    }
    .text{
      height:rem(20);
      line-height : rem(20);
    }
  }
}
.baner-wrap{
  background : #fff;

  .top-slider {
    overflow: hidden;
    width: 100%;
    position: relative;

    z-index: 0;
    background-color: #EDF0F0;

    img {
      width: 100%;
      vertical-align: top;
    }
    ul.slide_position {
      list-style: none;
      margin: 0;
      padding: 0;
      position: absolute;
      height: rem(24);
      right: 0;
      bottom: 0;
      padding-right: rem(7);

      li.on {
        span {
          background-color: #FFF;
        }
      }
      span {
        text-indent: rem(-9999);
        width: rem(8);
        height: rem(8);
        border: 1px solid rgb(255, 255, 255);
        border-radius: rem(4);
        display: inline-block;
        margin: rem(2) rem(1.5);
        background-color: transparent;
      }
      li {
        display: inline-block;
        padding: 0 rem(2);
      }
    }
    .slide_group {
      position: relative;
      font-size: 0;
      white-space: nowrap;
      height: 100%;

      p {
        padding-right: rem(65);
        padding-left: rem(15);
        font-size: rem(12);
        line-height: rem(30);
      }
      .slide {
        display: inline-block;

        font-size: rem(14);
        vertical-align: top;
        >a{
          padding-top:38%;
          position : relative;
          display : block;
          >img{
            position : absolute;
            top:rem(0);
            right:rem(0);
            left:rem(0);
            bottom:rem(0);
            width:100%;
            height : 100%;
          }
        }

      }
    }
  }


  .top-sliders-container {
    position: relative;
    width: 100%;
    z-index: 0;
    overflow: hidden;

    ul {
      position: relative;

      height: 100%;
      li {
        position: relative;
        height: 100%;
        float: left;
      }
    }
    .slider-control {
      position: absolute;
      bottom: rem(5)
      right: rem(8);
      z-index: 99;
    }
  }

}

.start-title{
  text-align : center;
  .title{
    display : inline;
    font-size:rem(17);
    color:#3c3d3d;
    margin:rem(0) rem(3);
  }

  .icon-star_all{
    color:#ebeced;
    font-size:rem(10);
  }
  .block-line{
    position : relative;
    top:rem(-2);
    .line{
      top:rem(5);
      left: rem(-32);
      position : absolute;
      display : block;
      width:rem(30);
      height:rem(1);
      font-size : rem(0);
      border-top:1px solid #ebeced;
    }
    .line-sub{
      width:rem(10);
      left: rem(-10);
      top:rem(7);
    }
  }
  .block-line-right{
    .line{
      left:rem(14);
    }
    .line-sub{
      left: rem(12);
    }
  }
  .start-title-sub{
    margin-top:rem(2);
    font-size:rem(12);
    color:#9d9e9e;
    text-align:center;
  }
}
.label-text{
  font-size:rem(14);
  color:#1db954;
}
.label-text-large{
  font-size:rem(17);
}
.block{
  background : #fff;
  padding:rem(10);
}

.local-lesson {
    .good-lessons {
        width: 100%;
    }
    .lists {
        margin-left: rem(-5);
        margin-right: rem(-5);
        .items {
            width: 49%;
            float: left;
            .item {
                border-radius: rem(0);
                height: auto;
                padding-top: rem(5);
                margin: rem(5);
                font-size: rem(14);

                a {
                    display: block;
                }
                .info {
                    height: rem(45);
                    .course-name {
                        height: rem(30);
                        line-height: rem(30);
                    }
                    .description {
                        font-size: rem(12);
                        .position {
                            float: right;
                            color: #9d9e9e;
                        }
                        .price {
                            color: #ff6c00;
                        }
                        .free {
                            color: #1db954;
                        }
                    }
                }

                .avatar {
                    border-radius: rem(5);
                    height: rem(97);
                    overflow: hidden;
                    display: block;
                    position: relative;
                    .mold,
                    .report-status {
                        width: 100%;
                        position: absolute;
                        bottom: 0;
                        left: 0;
                        line-height: rem(26);
                        color: #fff;
                        text-align: left;
                        padding-left: rem(5);
                    }
                    .mold {
                        opacity: 0.5;
                        background: #000;
                        height: rem(26);
                    }
                }
            }
        }
    }
}

.sel-teacher{
  padding:rem(20);
  padding-top:rem(17);

  .label-text{
    margin:rem(0);
  }
  .sel-teacher-content{
    display : block;
    position : relative;
    border-radius : rem(10);
    margin:rem(18) rem(0);
    .avatar{
      border-radius: 100%;
      width:rem(110);
      height:rem(110);
      overflow : hidden;
      position: absolute;
      left:rem(0);
      top:rem(0);

      >img{
        border-radius: 100%;
      }
      .xx-teacher-name {
        background: rgba(0,0,0,0.40);
        color: white;
        position: absolute;
        bottom: 0;
        left: 0;
        text-align: center;
        width: 100%;
        font-size: rem(12);
        line-height: rem(20);
        height: rem(20);
        }
    }
    .sel-teacher-text{
      border:1px solid #D1F1DC;
      border-radius : rem(5);
      min-height:rem(110);
      margin-left: rem(60);
      padding-left:rem(60);
      padding-right:rem(5);

      .describe{
        font-size:rem(13);
        color:#6d6d6e;
      }
    }
    .name{
      color:#1DB954;
    }
    .label-text{
      margin-top:rem(13);
      margin-bottom:rem(5);
      color:#9D9E9E;
    }
  }
}


.land-list{
  margin:rem(20) 0;
  position : relative;
  height:rem(110);
  .list-container{
    position : absolute;
    left:rem(0);
    right:rem(0);
    top:rem(0);
    bottom:rem(0);
    overflow : hidden;
  }
  .list{
    position :absolute;
    display : -webkit-box;
    >a{
      display : block;
      width:rem(94);
      text-align : center;
      margin-right:rem(5);
    }
  }

  .avatar{
    margin : auto;
    width:rem(60);
    height:rem(60);
    overflow : hidden;
    border-radius : rem(10);
    border:1px solid #F2F4F5;
  }
  .name{
    font-size:rem(14);
    color:#3c3d3d;
    text-align:center;
    margin:rem(5) rem(0);
    height: rem(20);
    line-height: rem(20);
  }
  .sel-teacher-text{
    font-size:rem(11);
    color:#9d9e9e;
    line-height:rem(20);
    height: rem(20);
    text-align:center;
  }
}
.more{
  text-align : center;
  margin:rem(5) rem(0);
  display : block;
}
.suggest-search{
  display : block;
  height : rem(70);
  position : relative;
  .avatar{
    position : absolute;
    left:rem(0);
    top:rem(0);
    width:rem(70);
    padding:rem(5);
  }
  .describe{
    margin-left:rem(75);
    font-size:rem(15);
    color:#6d6d6e;
    padding-top:rem(8);
  }
  .icon-chevron-thin-right{
    position : absolute;
    right:rem(0);
    top: rem(30);
    color:#cacbcc;
  }
}
.panel{
  margin-left:rem(-5);
  margin-right:rem(-5);
  >li{
    float : left;
    width: 50%;

    .item{
      >a{
        display : block;
      }
      border-radius:rem(5);
      margin:rem(5);
      vertical-align : middle;
      .name{
        font-size:rem(16);
        color:#fff;
        text-align:center;
      }
      .num{
        font-size:rem(12);
        color:#fff;
        text-align:center;
      }
      .describe{
        margin:rem(5) rem(0);
      }
    }
  }
}
.knowledge{
  .start-title{
    margin-top:rem(7);
    margin-bottom:rem(12);
  }
  .label-text{
    margin-bottom:rem(10);
    margin-top:rem(12);
  }
  .item{
    padding: rem(5) rem(0);
  }
}

.suggest-list{
  margin-top:rem(5);
  .title{
    font-size:rem(15);
    color:#3c3d3d;
    .label-text{
      font-size:rem(15);
    }
  }
  .panel {
    .item{
      border-radius : rem(0);
      height:auto;
      .avatar{
        border-radius:rem(5);
        height:rem(110);
        overflow: hidden;
        position : relative;

        .video-img{
          position : absolute;
          width:rem(30);
          height:rem(30);
          right:rem(10);
          bottom:rem(10);
        }
      }
    }
    .info{
      margin-top:rem(5);
    }
  }
  .describe{
    font-size:rem(14);
    color:#3c3d3d;
  }
  .learning{
    font-size:rem(11);
    color:#9d9e9e;
  }
}
.gre{
  padding-left:rem(0);
  padding-right:rem(0);
  .start-title{
    margin-top:rem(7);
    margin-bottom : rem(17);
  }
  .label-text{
    margin-top:rem(17);
    margin-bottom : rem(7);
  }
  .gre-list{

    >a{
      display : block;
    }
    >li:nth-child(1), >li:nth-child(2){
      border-top:1px solid #F2F4F5;
    }
    >li:nth-child(odd){
      border-right:1px solid #F2F4F5;
    }
    >li{
      float:left;
      width:50%;
      padding:rem(5) rem(0);
      border-bottom:1px solid #F2F4F5;

      .item{
        margin:rem(15);
        margin-right:rem(5);
        position : relative;
      }
      .avatar{
        border-radius:rem(6);
        overflow : hidden;
        width:rem(46);
        height:rem(46);
        display : inline;
        position : absolute;
        left:rem(0);
        top:rem(0);
      }

      .info{
        margin-left: rem(52);
        line-height : rem(30);
      }
      .subject{
        font-size:rem(16);
        color:#3c3d3d;
      }
      .subject-more{
        font-size:rem(13);
        color:#9d9e9e;
        line-height:rem(14);
      }
    }
  }
}
.search-more{
  height:rem(139);
  .text{
    padding-top:rem(15);
    text-align : center;
    font-size:rem(14);
    color:#9d9e9e;
    >img{
      width:rem(53);
      display : inline;
    }
  }

  position : relative;
  .btn-search-more{
    display : block;
    position : absolute;
    left:rem(20);
    right:rem(20);
    background:#1db954;
    border:1px solid #1db954;
    border-radius:rem(2);
    height:rem(42);
    line-height : rem(42);
    text-align : center;
    font-size:rem(17);
    color:#fff;
    bottom:rem(20);
  }
}
.support{
  display : flex;
  margin:rem(0) rem(5);
  margin-bottom : rem(10);
  >a{
    flex : 1;
    display :block;
    margin:rem(0) rem(5);
    background:#fff;
    border-radius:rem(2);
    height:rem(40);
    line-height:rem(40);
    text-align : center;
    font-size:rem(16);
    color:#3c3d3d;

    .icon-phone{
      transform:rotate(7deg);
    }
  }
}

.tanchuang{
    position:fixed;
    top:rem(100);
    width:68%;
    margin-left:16%;
    z-index:1001;
    img{
        width:100%;
        height:rem(120);
    }
    .tc-content{
        background:white;
        padding:rem(18) rem(16);
        border-radius:rem(4);
        margin-top:rem(-4);
        height:rem(170);
        p{
            font-family:PingFang-SC-Regular;
            font-size:rem(14);
            color:#3c3d3d;
            line-height:rem(21);
            text-align:left;
        }
    }
    .close_button{
        height:rem(30);
        width:rem(30);
        position: absolute;
        right: rem(-12);
        top: rem(10);
    }
}
.tanchuang-mask{
    position: fixed;
    z-index: 1000;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: black;
    opacity: 0.5;
}
.hide{
    display:none;
}

