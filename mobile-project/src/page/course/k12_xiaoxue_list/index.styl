@import "page/_base/base.styl";
@import "page/_common/nav_bar/nav_bar.styl";
@import "common/ui/Loading/index.styl";

.nav-bar {
    background-color: #f2f4f5;
}

.land-list{
    background: white;
    height: rem(40);
    width: 100%;
    overflow: hidden;
    //margin-top: rem(5);
    position: relative;
    .list-container{
        overflow : hidden;
        margin-left: rem(4);
        .list{
            position :absolute;
            display : -webkit-box;
            .list-item, .list-item-blank{
                display: block;
                margin-right: rem(5);
                font-family: PingFang-SC-Regular;
                font-size: rem(15);
                color: #6d6d6e;
                line-height: rem(40);
                height: rem(40);
                width: rem(70);
                text-align: center;
                transition: all ease 0.5s;
                &.on {
                    font-size:rem(17);
                    color:#ff9100;
                    width:rem(80);
                    border-bottom: 2px solid #ff9100;
                    height: rem(38);
                }
            }
        }
    }
    .course-type {
        position: absolute;
        top: 0;
        right: 0;
        img {
            height: rem(40);
        }
    }
}

.child-list {
    height: rem(40);
    width: 100%;
    background: white;
    margin-top: rem(5);
    padding: 0 rem(10);
    overflow: hidden;
    position: relative;
    display: none;
    .list-container-child  {
        overflow : hidden;
        margin-left: rem(4);
        .list{
            position :absolute;
            display : -webkit-box;
            .list-item, .list-item-intro{
                display: block;
                margin-right: rem(5);
                font-family: PingFang-SC-Regular;
                font-size: rem(14);
                color: #6d6d6e;
                line-height: rem(40);
                height: rem(40);
                width: rem(70);
                text-align: center;
                transition: all ease 0.5s;
                &.on {
                    font-size:rem(15);
                    color:#ff9100;
                    width:rem(80);
                    border-bottom: 2px solid #ff9100;
                    height: rem(38);
                }
            }
        }
    }
}

.main-list {
    margin-top: rem(4);
    .list-item-it {
        position: relative;
        padding: rem(10) rem(6) rem(10) rem(125) !important;
        background: white;
        border-bottom: 1px solid #f4f4f4;
        min-height: rem(90);
        .item-cover {
            height: rem(70);
            width: rem(115);
            position: absolute;
            left: rem(6);
            border-radius: rem(4);
        }
        .item-play-icon {
            position: absolute;
            height: rem(30);
            width: rem(30);
            left: rem(47);
            top: rem(30);
        }
        .list-info {
            .list-first-nav {
                //margin-top: rem(6);
                .list-title {
                    font-family: PingFang-SC-Regular;
                    font-size: rem(15);
                    color: #000000;
                    height: rem(24);
                    line-height: rem(24);
                    .list-icon {
                        font-family: STHeitiSC-Light;
                        font-size: rem(10);
                        color: #37a4f5;
                        text-align: center;
                        border: 1px solid #37a4f5;
                        padding: rem(2) rem(4);
                        margin-right: rem(4);
                    }
                }
            }
            .list-time {
                font-family:PingFang-SC-Regular;
                font-size:rem(13);
                color:#9d9e9e;
                text-align:left;
                margin: rem(6) 0;
            }
            .list-last-nav {
                font-family:PingFang-SC-Regular;
                font-size:rem(12);
                color:#9d9e9e;
                text-align:left;
                position: relative;
                .price{
                    font-family:Helvetica;
                    font-size:rem(14);
                    color:#f03748;
                    text-align:left;
                }
                .distance {
                    position: absolute;
                    right: rem(10);
                    bottom: 0;
                }
            }
        }
    }
}

.empty {
    background: #f4f4f4;
    width: 100%;
    position: relative;
    text-align: center;
    padding: rem(30);
    top: 0;
    img {
        height: rem(100);
        padding-top: 40%;
    }
    p {
        font-size: rem(14);
        margin-top: rem(30);
        color: #A8A8A8;
    }
}

.typing-loader {
    width: rem(8);
    height: rem(8);
    animation: typing 1s linear infinite alternate;
    margin: rem(10) auto;
    position: relative;
    left: rem(-12);
}

@keyframes typing {
    0% {
        background-color: rgba(255, 145, 1, 1);
        box-shadow: rem(12) rem(0) rem(0) rem(0) rgba(255, 145, 1, 0.2), rem(24) rem(0) rem(0) rem(0) rgba(255, 145, 1, 0.2);
    }
    25% {
        background-color: rgba(255, 145, 1, 0.4);
        box-shadow: rem(12) rem(0) rem(0) rem(0) rgba(255, 145, 1, 2), rem(24) rem(0) rem(0) rem(0) rgba(255, 145, 1, 0.2);
    }
    75% {
        background-color: rgba(255, 145, 1, 0.4);
        box-shadow: rem(12) rem(0) rem(0) rem(0) rgba(255, 145, 1, 0.2), rem(24) rem(0) rem(0) rem(0) rgba(255, 145, 1, 1);
    }
}
.has-more {
    display: block;
    height: rem(40);
    margin: rem(10) 0;
    background: #fff;
    padding: rem(6);
    line-height: rem(34);
    .typing-loader {
        display: none;
    }
    &.loading {
        .typing-loader {
            display: block;
        }
    }
    &.hide {
        display: none;
    }
}



