$navBarHeight = rem(45);

.nav-bar {
  display: -webkit-box;
  display: -ms-flexbox;
  position: relative;
  height: $navBarHeight;
  background: #ffffff;

  border-bottom: 1px solid #dcddde;

  .nav-wrap-left {
    position: absolute;
    font-size: rem(15);
    top: 50%;
    transform: translateY(-50%);
  }
  .nav-wrap-right {
    position: absolute;
    right: 0;
    font-size: rem(15);
    top: 50%;
    transform: translateY(-50%);
    img {
      vertical-align: sub;
    }
  }

  .nav-wrap-left, .nav-wrap-right {
    height: 100%;
    line-height: $navBarHeight;
  }
  h1.nav-header, .h1.nav-header {
    display: block;
    -webkit-box-flex: 1;
    -ms-flex: 1;
    font-size: rem(18);
    font-weight: 400;
    text-align: center;
    line-height: $navBarHeight
    margin: 0;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
  }
  .nav-button {
    display: inline-block;
    height: rem(45);
    min-width: rem(40);
    line-height: rem(45);
    text-align: center;
  }
  .icon-search{
    display: inline-block;
    height: rem(45);
    min-width: rem(40);
    line-height: rem(45);
    text-align: center;
  }

}
.hide {
    display: none;
}
