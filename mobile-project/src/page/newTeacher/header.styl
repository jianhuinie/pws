.header {
    height: rem(180);
    position: relative;
    margin-bottom: rem(10);
    &.help {
        height: rem(150);
    }
    .preface {
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        z-index: 2;
        img {
            &.help {
                height: rem(150);
            }
            width: 100%;
            height: rem(180);
        }
    }
    .info {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        z-index: 2;
        padding: rem(40) 0 0 rem(96);
        .avatar {
            height: rem(70);
            width: rem(70);
            border-radius: rem(8);
            border: rem(2) solid #ffffff;
            position: absolute;
            top: rem(40);
            left: rem(16);
            overflow: hidden;
            img {
                width: rem(70);
                height: rem(70);
                //border-radius: rem(4);
                //bottom: 0;
            }
        }
        .base-info {
            line-height: rem(28);
            .first-nav {
                width: 100%;
                .teacher-gold {
                    display: inline-block;
                    height: rem(20);
                    img {
                        vertical-align: text-bottom;
                    }
                }
                .name {
                    max-width: rem(65);
                    font-size: rem(20);
                    color: #FFFFFF;
                    letter-spacing: rem(0);
                    line-height: rem(20);
                    text-shadow: rem(0) rem(1) rem(1.5) rgba(0,0,0,0.50);
                    height: rem(20);
                    float: left;
                    margin-right: rem(6);
                    &.name-max-width {
                        max-width: rem(130);
                    }
                }
                .sex {
                    display: inline-block;
                    height: rem(16);
                    width: rem(16);
                    position: relative;
                    top: rem(-6);
                    right: 0;
                }
                .teacher-vip {
                    display: inline-block;
                    position: relative;
                    top: rem(-6);
                    right: 0;
                    img {
                        width: rem(20);
                        height: rem(20);
                    }
                }
                .teacher-audio-show {
                    width: rem(66);
                    height: rem(26);
                    position: relative;
                    display: inline-block;
                    .audio-border {
                        width: rem(66);
                        height: rem(26);
                    }
                    .play-icon {
                        height: rem(14);
                        position: absolute;
                        left: rem(10);
                        top: rem(6);
                    }
                    .audio-length {
                        font-family: Helvetica;
                        font-size: rem(13);
                        color: #FFFFFF;
                        line-height: rem(13);
                        position: absolute;
                        left: rem(30);
                        top: rem(8);
                    }
                }
            }
            .org-name {
                display: inline-block;
                border: 1px solid #ffffff;
                padding: rem(2) rem(4);
                font-size: rem(12);
                color: #FFFFFF;
                letter-spacing: rem(0);
                line-height: rem(12);
                text-shadow: rem(0) rem(1) rem(1.5) rgba(0,0,0,0.50);
                border-radius: rem(2);
            }
            .intro {
                width: 100%;
                ellipsis();
                display: inline-block;
                font-size: rem(12);
                color: #FFFFFF;
                letter-spacing: rem(0);
                line-height: rem(15);
                text-shadow: rem(0) rem(1) rem(1.5) rgba(0,0,0,0.50);
            }
        }
    }
    .hide {
        display: none;
    }
    .header-bottom-mask {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: rem(40);
        z-index: 2;
        background: black;
        opacity: 0.6;
    }
    .header-bottom {
        &.hide {
            display: none;
        }
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: rem(40);
        z-index: 2;
        color: white;
        display: flex;
        text-align: center;
        padding: rem(10) 0;
        ul {
            display: flex;
            width: 100%;
            li {
                flex: 1;
                ellipsis();
                line-height: rem(20);
            }
            li:not(:last-child) {
                border-right: 1px solid rgba(255, 255, 255, 0.3);
            }
        }
        .bot-line {
            width: rem(1);
            height: rem(20);
            background: white;
            opacity: 0.3;
        }
        .item {
            flex: 1;
            display: inline-block;
            font-family: PingFang-SC-Regular;
            font-size: rem(12);
            color: #FFFFFF;
            letter-spacing: rem(0);
            height: rem(20);
            line-height: rem(20);
            vertical-align: text-bottom;
            &.school-length {
                flex: 2;
            }
            &.school-age {
                flex: 2;
            }
        }
    }
}