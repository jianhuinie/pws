.comment-child-tab {
    display: flex;
    text-align: center;
    background: white;
    border-bottom: 1px solid #ededee;
    height: rem(42);
    line-height: rem(42);
    padding: 0 rem(15);
    .item {
        flex: 1;
        font-family: PingFang-SC-Regular;
        font-size: rem(15);
        color: #9D9D9E;
        &.on {
            color:#ff9100;
        }
    }
}
.comment-info.not-empty {
    padding: rem(25) 0 rem(20) 42%;
}
.comment-info {
    margin-top: rem(15);
    background: white;
    position: relative;
    border-bottom: 1px solid #ededed;
    overflow: hidden;
    .comment-left {
        position: absolute;
        left: rem(10);
        top: rem(25);
        text-align: center;
        width: 40%;
        // .none-comment {
        //     margin-top: 30%;
        // }
        .score {
            .score {
                font-size: rem(24);
                margin-right: rem(4);
                font-weight: 700;
            }
        }
        .stars {
            .star-half {
                display: inline-block;
                position: relative;
                line-height: 0;
                .icon-star_half {
                    color: #ff9600;
                    position: absolute;
                    left: 0;
                    top: 0;
                }
            }
            .icon-star_all {
                font-size: rem(14);
                color: #ff9600;
            }
            .icon-star_half {
                font-size: rem(14);
                color: #ff9600;
            }
        }
        .count {
            font-size: rem(14);
            margin-top: rem(10);
        }
    }
    .comment-right {
        border-left: 1px solid #ededed;
        padding-left: rem(12);
        .star-item {
            .name {
                font-size: rem(11);
                color: #9d9e9e;
                margin-right: rem(5);
            }
            .line {
                width: 50%;
                height: rem(10);
                background: #ededed;
                display: inline-block;
                position: relative;
                .mask {
                    position: absolute;
                    left: 0;
                    top: 0;
                    width: rem(0);
                    bottom: 0;
                    background: #ff9100;
                    transition: width 0.5s;
                }
            }
            .percent {
                font-size: rem(11);
                color: #9d9e9e;
            }
        }
    }
}
.none-comment {
    text-align: center;
    font-size: rem(14);
    color: #9d9d9d;
    background: white;
    line-height: rem(80);
    display: inline-block;
    width: 100%;
}