.personal {
    padding: rem(4) 0;
    background: white;
    .title-line {
        background: #F8F8F8;
        text-align: center;
        position: relative;
        padding: rem(10) 0;
        top: rem(-2);
        .slide-close {
            position: absolute;
            right: rem(8);
            top: rem(5);
            font-size: rem(24);
            color: #cdcdce;
        }
    }
    .item {
        border-bottom: 1px solid #ededed;
        position: relative;
        padding: rem(15) rem(10) rem(10) rem(40);
        img {
            height: rem(20);
            width: rem(20);
            position: absolute;
            left: rem(10);
            top: rem(16);
        }
        .info {
            .name {
                font-family: PingFang-SC-Regular;
                font-size: rem(14);
                color: #3D3D3E;
                line-height: rem(20);
                height: rem(20);
            }
            .infos {
                font-family: PingFang-SC-Regular;
                font-size: rem(12);
                color: #9D9D9E;
                height: rem(20);
                line-height: rem(20);
                margin-top: rem(6);
            }
        }
    }
}