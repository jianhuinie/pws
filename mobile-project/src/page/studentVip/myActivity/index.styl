@import "page/_base/base.styl";
body {
    background: #f8f7ed;
    font-size: rem(10);
    margin: 0;
}
.student-vip-activity {
	font-size: rem(17);
    color: #9d9d9e;
    line-height: rem(17);
    text-align: center;
    //min-height: rem(480);
    position: relative;
	.ellipsis {
        *display: inline;
        zoom: 1;
        overflow: hidden;
        -o-text-overflow: ellipsis;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    header {
        div {
            width: 92%;
            margin: 0 auto;
            font-size: rem(14);
            color: #954ba8;
            line-height: rem(14);
            position: relative;
            img.bg {
                width: 100%;
                height: rem(45);
            }
            div {
                text-align: center;
                position: absolute;
                width: 100%;
                top: rem(14);
                span {
                    margin-left: rem(5);
                    vertical-align: top;
                }
            }
        }
    }
	main {
	    width: 100%;
	    min-height: rem(340);
        margin-top: rem(20);
	    .empty {
	    	position: relative;
    		top: rem(150);
	    }
		.title {
			font-size: rem(15);
			color: #000;
		}
		.over {
			color: #9d9d9e;
		}
		.content {
			font-size: rem(14);
			color:#9d9d9e;
            &.aggrement {
                height: rem(14);
                line-height: rem(14);
                margin: rem(4) 0;
            }
		}
		section {
            -webkit-tap-highlight-color: transparent;
			border-bottom: 1px solid #acacac;
		    background: #fff;
		    position: relative;
		    padding: rem(10) rem(10) rem(10) rem(110)!important;
			.cover {
				width: rem(95);
				height: rem(64);
				display: inline-block;
				position: absolute;
				left: rem(10);
				img {
					border-radius: rem(3);
				}
			}
			.detail {
			    vertical-align: top;
			    line-height: rem(22);
			    overflow: hidden;
                text-align: left;
			    .tag {
					font-size: rem(12);
					float: right;
				}
				.success {
					color: #37bc61;
				}
                .list-address {
                    width: 70%;
                    float: left;
                }
			}
		}
	}
	footer {
        margin-top: rem(20);
		margin-bottom: rem(20);
        a {
            display: block;
            padding: rem(3);
            text-decoration:none;
			background: #ffffff;
		    border: 1px solid #ededee;
		    border-radius: rem(100);
		    width: rem(217);
		    height: rem(39);
		    font-size: rem(15);
		    color: #954ba8;
		    line-height: rem(39);
		    text-align: center;
		    margin: 0 auto;
		    margin-top: rem(20);
		}
	}
}