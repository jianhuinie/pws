.bottom-nav {
    background: white;
    border-top: 1px solid #954ba8;
    display: block;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    .bottom-close {
        position: absolute;
        height: rem(15);
        width: rem(15);
        top: rem(5);
        left: rem(5);
        padding: rem(5) rem(20) rem(20) rem(5);
    }
    .bottom-info {
        margin: rem(10) 0 0 rem(40);
        padding-bottom: rem(20);
        .bottom-text {
            font-family:PingFang-SC-Regular;
            font-size:rem(14);
            color: #9d9d9e;
            line-height:rem(10);
            margin-bottom: rem(20)
        }
        .bottom-show {
            font-family:PingFang-SC-Regular;
            font-size:rem(18);
            color:#954ba8;
            line-height:rem(10);
        }
    }
    .bottom-purple {
        height: rem(30);
        width: rem(30);
        position: absolute;
        top: rem(20);
        right: rem(10);
    }
}
