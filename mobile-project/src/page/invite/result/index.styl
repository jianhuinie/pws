@import "page/_base/base.styl";

$brand-text = #6D6D6E;
$brand-text-lighter = #9D9D9E;

body {
    background-color: #FFF;
}

.status {
    display: block;
    margin: rem(77) auto rem(25);
    width: rem(50);
}

.remind {
    margin-bottom: rem(102);
    color: $brand-text;
    font-size: rem(16);
    text-align: center;
}

title(backgroundColor color)
    height: rem(36);
    line-height: rem(36);
    font-size: rem(15);
    background-color backgroundColor
    color color
    text-align: center;

$next-bacgroundColor = #F8F8F8;
$next-color = $brand-text-lighter;

.next
    title($next-bacgroundColor, $next-color)

.goto {
    display: block;
    padding: 0 rem(15);
    height: rem(45);
    box-shadow: 0 rem(1) 0 #EDEDEE;
    color: $brand-text;
    line-height: rem(45);
    font-size: rem(15);

    img {
        width: rem(26);
        height: rem(26);
        border-radius: 50%;
        vertical-align: middle;
    }

    .arrow {
        float: right;
        width: rem(6);
        height: rem(12);
        margin-top: rem(17);
    }
}

.download-remind {
    margin: rem(34) auto rem(20);
    text-align: center;
    font-size: rem(14);
    color: $brand-text-lighter;
}

download(color)
    display: block;
    margin: 0 rem(15) rem(20);
    height: rem(44);
    border: 1px solid color;
    border-radius: rem(5);
    text-align: center;
    line-height: rem(44);
    color: color;

    img {
        width: rem(20);
        vertical-align: middle;
    }

    span {
        vertical-align: middle;
    }

.student-download
    download(#FF9100)

.teacher-download
    download(#37A4F5)
