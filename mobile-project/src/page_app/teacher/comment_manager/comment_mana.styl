@import "page_app/_base/base.styl";

body{
  background: #fff;
}
.container{
  padding: rem(15) rem(15) rem(22) rem(15);
  .title{
    font-size: rem(15);
    color: #3d3d3e;
    letter-spacing: 0;
    line-height:rem(20);
    text-align: left;
  }
  .title-descri{
    margin-top: rem(5);
    font-size: rem(13);
    color: #9d9d9e;
    letter-spacing: 0;
    line-height: rem(20);
    text-align: left;
  }
  .submit{
    width: 100%;
    height: rem(44);
    border-radius: rem(3);
    background: #37a4f5;
    font-size: rem(17);
    line-height: rem(44);
    color: #fff;
    text-align: center;
  }
  .question{
    width: 100%;
    .question-item{
      margin-top: rem(20);
      padding-bottom: rem(20);
      border-bottom: 1px solid #9d9d9e;
      p{
        margin-bottom: rem(15);
        font-size: rem(15);
        color: #3d3d3e;
        line-height: rem(15);
        text-align: left;
      }
      .radio-item{
        height: rem(50);
        margin-top: 0;
        span, .danxuan{
          color: #6d6d6e;
          font-size: rem(14);
          line-height: rem(25);
        }
        .radio-btn{
          float: left;
          margin-top: rem(4);
        }
      }
      .same-line{
        span{
          display: block;
          margin-right: rem(14);
        }
        ul{
          display: inline-block;
          .danxuan{
            display: inline-block;
            margin-right: rem(30);
            .radio-btn{
              width: rem(15);
              height: rem(15);
              display: inline-block;
              margin-right: rem(5);
              cursor: pointer;
              position: relative;
              border-radius: 100%;
              border: 1px solid #ccc;
              i{
                width: rem(11);
                height: rem(11);
                position: absolute;
                left: rem(1);
                top: rem(1);
                border-radius: 50%;
                input{
                  visibility: hidden;
                  box-sizing: border-box;
                  padding: 0;
                }
              }
            }
            .checkedRadio i{
              background-color: #37a4f5;
            }
          }
        }
      }

      .select{
        font-size: rem(15);
        line-height: rem(15);
        color: #9d9d9e;
      }
      .input-c{
        width: 100%;
        height: rem(80);
        border: 1px solid #cdcdce;
        border-radius: rem(2);
        padding: rem(11) rem(15);
        textarea{
          resize: none;
          width: 100%;
          height: 100%;
          border: 0;
          padding: 0;
          margin: 0;
          outline: 0;
          font-size: rem(14);
        }
      }
    }
    div:nth-child(3){
      border: 0;
    }
  }
}