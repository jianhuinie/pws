@import "page_app/_base/base.styl";

body{
  background: #fff;
}
.container{
  padding: rem(20) rem(15) rem(20) rem(15);
  .title{
    font-size: rem(15);
    color: #3d3d3e;
    letter-spacing: 0;
    line-height:rem(20);
    text-align: left;
  }
  .submit{
    margin-top: rem(20);
    width: 100%;
    height: rem(44);
    border-radius: rem(3);
    background: #37a4f5;
    font-size: rem(17);
    line-height: rem(44);
    color: #fff;
    text-align: center;
  }
  .description{
    margin-top: rem(10);
    font-size: rem(14);
    color: #6d6d6e;
    line-height: rem(20);
    text-align: left;
  }
  .question{
    width: 100%;
    p{
      margin-bottom: rem(10);
      font-size: rem(14);
      color: #6d6d6e;
      line-height: rem(15);
      text-align: left;
    }
    .question-item{
      margin-top: rem(20);
      .input-t, .input-i{
        width: 100%;
        border: 1px solid #cdcdce;
        border-radius: rem(2);
        &.err{
          border-color: red;
        }
      }
      textarea, input{
        font-family: inherit;
        width: 100%;
        height: 100%;
        border: 0;
        padding: 0;
        margin: 0;
        outline: 0;
        font-size: rem(14);
      }
      .input-t{
        height: rem(80);
        padding: rem(11) rem(15);
        textarea{
          resize: none;
        }
      }
      .input-i{
        height: rem(40);
        padding: rem(5) rem(15);
      }
    }
  }
}