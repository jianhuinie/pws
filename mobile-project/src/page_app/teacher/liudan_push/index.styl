@import "page_app/_base/base.styl";

body {
    background-color: #ebeced;
    padding: rem(5);


    .GSX_Dialog.GSX_Dialog_default{
        padding-top: rem(0);
        .GSX_Dialog_title{
            line-height: rem(40);
        }
        .GSX_Dialog_content{
            border-top: 1px solid #e2e2e2;
        }
        .GSX_Dialog_skin_ok{
            color:#3fa5f2;
            font-weight:bold;
        }
        .dialog-tip{
            p{
                line-height: 1.5;
                font-size: rem(14);
            }
        }
    }
}
.confirm-tip{
    display: none;
    background-color: #fff;
    margin-top: rem(5);
    .tip-title{
        text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    font-size: rem(15);
    line-height: rem(25);
    font-weight: bold;
        line-height: rem(40);
        text-align: center;
        border-bottom: 1px solid #ccc;

    }
    .dialog-tip{
        padding: rem(10) rem(20);
            p{
                line-height: 1.5;
                font-size: rem(14);
            }
        }
}

#dialog-content{
    width:100%;
    background-color:#fff;
    ul{
        margin-top: rem(10);
        font-size: rem(14);
        i{
            color: red;
            font-style: normal;
        }
    }

}

h1 {
    text-align: center;
    font-size: rem(18);
    line-height: rem(32);
    color: #3c3d3d;
}


#info_wrap {
    position: relative;
    padding: rem(10) rem(15);
    border-radius: rem(4);
    overflow: hidden
    background-color: #ffffff;
    margin-bottom: rem(10);

    table {
        width: 100%;
        line-height: rem(20);
        font-size: rem(14);

        td {
            padding-top: rem(7);
            padding-bottom: rem(7);
            border-top: 1px solid #dcddde;
        }
        tr:first-child td {
            border-top-color: transparent;
        }

        .column1 {
            width: rem(60);
            text-align: center;
            white-space: nowrap;
            color: #9d9e9e;
            vertical-align: top;
        }
        .column2 {
            padding-left: rem(15);
            color: #3c3d3d;
        }
    }
}

#button_wrap {
    text-align: center;
    margin: rem(10) 0;

    .button-container {
        position: relative;
        width: 100%;
        height: rem(40);
        margin-top: rem(5);

        .button-item {
            float: left;
            width: 50%;
            text-align: center;
            overflow: hidden;
            padding: 0 rem(5);
        }
    }

    .text {
        color: #9d9e9e;
        font-size: rem(12);
        line-height: rem(24);
        text-align: left;
        padding-left: rem(5);
    }

    .button {
        width: 100%;
        height: rem(40);
        font-size: rem(15);
        text-align: center;
        border-radius rem(40);
        outline: none;
        vertical-align: baseline;

        &.white {
            border: 1px solid #dcddde;
            background-color: #fff;
            color: #6d6d6e;
        }
        &.blue {
            border: 1px solid #3fa5f2;
            background-color: #3fa5f2;
            color: #ffffff;
        }
        &:active {
            box-shadow: inset 0 rem(1) rem(2) rgba(0, 0, 0, 0.3);
        }
        &:hover {
            box-shadow: inset 0 rem(1) rem(2) rgba(0, 0, 0, 0.3);
        }
    }
}

#result_wrap {
    padding: 0 rem(10);
    font-size: rem(14);
    color: #3c3d3d;
    margin-bottom: rem(10);
    line-height: rem(18);
    p {
        margin-bottom: rem(8);
    }
}

#sms_wrap {
    padding-left: rem(5);
    color: #9d9e9e;
    font-size: rem(14);
    line-height: rem(22);

    .icon {
        margin-right: rem(3);
        vertical-align: middle;

        &.icon-checkbox-checked {
            color: #3c3d3d;
        }
        &.icon-checkbox-unchecked {
            color: #9d9e9e;
        }
    }
}