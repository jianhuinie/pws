    position: relative;
    padding-top: 37.5%;

    img {
        position: absolute;
        top: 0;
        left: 0;
    }
}

.scale-16-9 {
    position: relative;
    padding-top: 56.25%;

    img {
        position: absolute;
        top: 0;
        left: 0;
    }
}

.img-scale-wrap {
    img {
        position: absolute;
        width: 100%;
        height: 100%;
    }
}

*:not(input,textarea) {
    -webkit-touch-callout: none;
    -webkit-user-select: none;
}

* {
    -webkit-text-size-adjust: none;
}

i,
a,
ul,
ol,
li,
div,
span,
form,
table,
nav,
menu,
summary,
header,
aside,
footer,
section,
article {
    box-sizing: border-box;
    outline: 0;
    -webkit-tap-highlight-color: transparent;
}

#page_bottom {
    position: fixed;
    width: 100%;
    bottom: 0;
}