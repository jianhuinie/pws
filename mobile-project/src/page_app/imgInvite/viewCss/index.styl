body {
    background: #EBEDEE;
}
.img-container {
    position: absolute;
    height: 100%;
    width: 100vw;
    padding: rem(15);
    
    div {
        width: 100%;
        height: 85%;
        img {
            width: 100%;
            height: 100%;
        }
    }
    .img-text {
        margin-top: rem(4);
    }
    .icon-surprise {
        color: #ff9100;
        font-size: rem(12);
        float: left;
        position: relative;
        top: rem(7);
        margin-right: rem(4);
    }
    .warn-text {
        font-family: PingFang-SC-Regular;
        font-size: rem(12);
        color: #9D9D9E;
        float: left;
        margin-top: rem(4);
    }
    .change {
        float: right;
        color: #37A4F5;
        font-size: rem(12);
        margin-top: rem(4);
        position: relative;
        right: rem(2);
    }
    .create-img {
        position: absolute;
        left: 50%;
        bottom: 15px;
        -webkit-transform: translateX(-50%);
        transform: translateX(-50%);
        background: #ff9100;
        border: none;
        color: #fff;
        border-radius: 3px;
        width: rem(108);
        height: rem(34.5);
    }
}