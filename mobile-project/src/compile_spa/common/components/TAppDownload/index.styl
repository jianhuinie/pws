@import 'compile_spa/resource/css/main.styl';
.teacher-download-bottom {
    position: fixed;
    bottom: 0;
    height: rem(60);
    background: #FCFCFC;
    box-shadow: inset 0 0 0 0 #DDDDDE;
    padding-left: rem(55);
    padding-right: rem(121);
    width: 100%;
    box-sizing: border-box;
    &.hidden {
        display: none;
    }
    .t-icon {
        v-center(absolute);
        display: inline-block;
        left: rem(15);
    }
    .download {
        v-center(absolute);
        display: inline-block;
        right: rem(12);
        font-size: rem(15);
        color: #37A4F5;
        border: 1px solid #37a4f5;
        padding: rem(4) rem(12);
        border-radius: rem(15);
    }
    .intro {
        margin-left: rem(5);
        v-center(absolute);
        line-height: rem(20);
        .title {
            font-size: rem(16);
            color: #3D3D3E;
        }
        .content {
            font-size: rem(12);
            color: #6D6D6E;
        }
    }
    .close {
        position: absolute;
        background-color: #cdcdce;
        color: #fff;
        width: rem(20);
        height: rem(20);
        border-radius: rem(10);
        text-align: center;
        line-height: rem(20);
        font-size: rem(15);
        right: rem(5);
        top: rem(5);
    }
}