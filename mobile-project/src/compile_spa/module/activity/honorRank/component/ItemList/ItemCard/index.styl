.item-card  {
    position: relative;
    padding: rem(6) rem(10) rem(6) rem(116);
    width: 94%;
    margin-left: 3%;
    border-radius: rem(8);
    margin-bottom: rem(10);
    &.one-content {
        background-image: linear-gradient(-180deg, #4C3C2F 0%, #8F7648 100%);
    }
    &.normal-content {
        background-image: linear-gradient(-180deg, #222A3D 0%, #425581 100%);
    }
    .forward {
        position: absolute;
        top: rem(20);
        left: rem(6);
        width: rem(47);
        height: rem(35);
        text-align: center;
        img {
            width: rem(47);
            height: rem(35);
        }
        .text {
            font-family: HelveticaNeueDeskInterface-Bold;
            font-size: rem(30);
            letter-spacing: 0;
            line-height: rem(30);
            text-shadow: rem(1) rem(1) 0 #933C07;
            position: absolute;
            top: 42%;
            left: 50%;
            transform: translate(-50%, -50%);
            &.gold {
                color: #FFC979;
            }
            &.silver  {
                color: #E6E8ED;
            }
            &.tong {
                color: #DDA572;
            }
            &.normal-order {
                color: #B7C0DB;
            }
        }
    }
    .title-avatar-cover {
        width: rem(50);
        height: rem(50);
        position: absolute;
        left: rem(60);
        top: rem(10);
        border-radius: rem(10);
        border: rem(1) solid white;
        overflow: hidden;
        img {
            width: rem(50);
            height: rem(50);
            position: absolute;
            top: 0;
            left: 0;
        }
    }
    .item-content {
        position: relative;
        .item-name {
            font-family: PingFang-SC-Regular;
            font-size: rem(14);
            color: #FFFFFF;
            line-height: rem(30);
            height: rem(30);
            margin-left: rem(6);
        }
        .help-number {
            border-radius: rem(9);
            width: 70%;
            height: rem(26);
            line-height: rem(26);
            &.gold {
                background-image: linear-gradient(-180deg, #6D583A 0%, #7D5F39 100%);
            }
            &.silver, &.tong, &.normal-order {
                background-image: linear-gradient(-180deg, #2A3653 0%, #394667 100%);
            }
            .icon-two-people {
                font-size: rem(12);
                margin-left: rem(10);
                color: #8CB5FF;
                position: relative;
                top: rem(-2);
                &.gold-icon {
                    color: #FFC98C;
                }
                // &.silver-icon, &.tong-icon, &.normal-order-icon {
                //     color: #8CB5FF;
                // }
            }
            .number-people {
                font-family: PingFang-SC-Regular;
                font-size: rem(12);
                height: rem(26);
                line-height: rem(26);
                margin-left: rem(4);
                position: relative;
                top: rem(-2);
                display: inline-block;
                &.gold-number {
                    color: #FFC98C;
                }
                &.silver-number, &.tong-number, &.normal-order-number {
                    color: #8CB5FF;
                }
            }
        }
        .coupon-content {
            width: rem(50);
            position: absolute;
            right: 0;
            top: rem(10);
            text-align: center;
            .money {
                font-family: PingFang-SC-Regular;
                font-size: rem(13);
                color: #8CB5FF;
                letter-spacing: 0;
                line-height: rem(20);
                height: rem(20);
                &.gold-money {
                    color: #FFC88C;
                }
            }
            .money-text {
                font-family: PingFang-SC-Regular;
                font-size: rem(12);
                color: #7191CA ;
                letter-spacing: 0;
                line-height: rem(20);
                height: rem(20);
                &.gold-money-text {
                    color: #D4A775;
                }
            }
        }
    }
}