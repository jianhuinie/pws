.my-rank-card {
    background: #1C2038;
    box-shadow: 0 rem(-1) 0 0 #303D5A, 0 rem(-4) rem(15) 0 rgba(0,0,0,0.50);
    padding: rem(5) rem(10) rem(5) rem(132);
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: rem(70);
    border-top: 1px solid white;
    .forward {
        position: absolute;
        left: rem(5);
        top: rem(15);
        width: rem(70);
        text-align: center;
        .order-text, .order-text-small {
            font-family: HelveticaNeueDeskInterface-Bold;
            font-size: rem(24);
            color: #B7C0DB;
            letter-spacing: 0;
            line-height: rem(24);
            height: rem(24);
            text-shadow: rem(1) rem(1) 0 #233052;
            &.hide {
                display: none;
            }
        }
        .order-text-small {
            font-size: rem(16);
        }
        .texts {
            font-family: PingFang-SC-Regular;
            font-size: rem(12);
            color: #B7C0DB;
            line-height: rem(12);
            &.hide {
                display: none;
            }
        }
    }
    .title-avatar-cover {
        position: absolute;
        left: rem(74);
        top: rem(10);
        height: rem(50);
        width: rem(50);
        border: rem(1) solid white;
        border-radius: rem(10);
        overflow: hidden;
        img {
            position: absolute;
            top: 0;
            left: 0;
            height: rem(50);
            width: rem(50);
        }
    }
    .item-content {
        position: relative;
        .item-name {
            font-family: PingFang-SC-Regular;
            font-size: rem(14);
            color: #FFFFFF;
            line-height: rem(30);
            height: rem(30);
            word-wrap: break-word;
            word-break: break-all;
            margin-left: rem(10);
        }
        .help-number {
            background-image: linear-gradient(-180deg, #2A3653 0%, #394667 100%);
            border-radius: rem(9);
            height: rem(24);
            line-height: rem(24);
            width: 70%;
            position: relative;
            top: rem(2);
            .icon-two-people {
                color: #8CB5FF;
                font-size: rem(12);
                margin-right: rem(4);
                margin-left: rem(10);
                position: relative;
                top: rem(-2);
            }
            .number-people {
                font-family: PingFang-SC-Regular;
                font-size: rem(12);
                color: #8CB5FF;
                letter-spacing: 0;
                line-height: rem(24);
                display: inline-block;
                height: rem(24);
                position: relative;
                top: rem(-2);
                &.hide {
                    display: none;
                }
            }
        }
        .coupon-content {
            width: rem(50);
            position: absolute;
            right: 0;
            top: rem(10);
            text-align: center;
            .coupon-money {
                font-family: PingFang-SC-Regular;
                font-size: rem(13);
                color: #8CB5FF;
                letter-spacing: 0;
                line-height: rem(20);
                height: rem(20);
                &.gold-money {
                    color: #FFC88C;
                }
            }
            .coupon-text {
                font-family: PingFang-SC-Regular;
                font-size: rem(12);
                color: #7191CA ;
                letter-spacing: 0;
                line-height: rem(20);
                height: rem(20);
                &.gold-money-text {
                    color: #D4A775;
                }
            }
        }
    }
}