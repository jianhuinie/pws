.subject_group {
	margin: 0 rem(15);
	.subject-item {
		/*float: left;*/
		display: inline-block;
		/*width: rem(81);*/
		width: 23.5%;
	    height: rem(36);
	    line-height: rem(36);
	    border: 1px solid #ddddde;
	    border-radius: rem(5);
	    margin-right: 2%;
	    margin-bottom: rem(10);
	    text-align: center;
	    font-family: PingFang-SC-Regular;
	    font-size: rem(14);
	    color: #3d3d3e;
