.subject-box {
	width: 100%;
    position: relative;
    /*height: rem(44);*/
    input {
        -webkit-tap-highlight-color:rgba(0,0,0,0);
    }
    background: #fff;
    input.subject {
    	width: 96%;
	    height: rem(44);
	    color: #3D3D3E;
	    padding-left: rem(10);
	    line-height: rem(44);
        font-size: rem(15);
        border: 0;
        border-bottom: 1px solid #f3f4f5;
    }
    .clear-address {
        position: absolute;
        background: #CDCDCE;
        width: rem(14);
        height: rem(14);
        right: rem(18);
        top: rem(16);
        border-radius: rem(7);
        .icon-close {
            color: #fff;
            position: absolute;
            font-size: rem(12);
            top: rem(1.5);
            left: rem(1.5);
        }
    }
    .shadow {
    	width: 100%;
    	height: rem(5);
    	background-color: #ddddde;
    }
    .current-address {
        width: 100%;
        height: rem(43);
        line-height: rem(43);
        padding-left: rem(39);
        font-size: rem(15);
        color: #3D3D3E;
        position: relative;
        border-bottom: 1px solid #f3f4f5;
        .icon-ditu {
            position: absolute;
            left: rem(14);
            top: rem(13);
        }
    }
    .search-address {
    	list-style: none;
    	padding: 0;
    	margin-top: 0;
    	.subject-li {
    		/*width: 100%;*/
    		height: rem(60);
    		padding-left: rem(10);
    		border-bottom: 1px solid #f3f4f5;
    		list-style: none;
    		.address {
    			height: rem(34);
    			font-size: rem(15);
    			line-height: rem(34);
    			color: #3D3D3E;
    			/*padding: rem(13) 0 rem(6) 0;*/
    		}
    		.area {
    			height: rem(26);
    			font-size: rem(13);
    			line-height: rem(26);
    			color: #9D9D9E;
    			/*padding: 0 0 rem(13) 0;*/
    		}
    	}
    }
}