.hide {
    display: none;
}

#video-wrap {
        position: relative;
        width: 100%;
        height: rem(200);
        overflow: hidden;
        .juhuixue-img {
            z-index: 4;
            position: absolute;
            top: 0;
            right: 0;
            img {
                width: rem(50);
            }
        }
        .juhuixue-tip {
            //z-index: 4;
            position: absolute;
            bottom: 0;
            left: 0;
            height: rem(55);
            /*background: #fff47c;*/
            background:#e63f35
            width: 100%;
            padding: rem(10) rem(12);
            text-align: left;
            line-height: 1;
            /*color: rgb(222,40,40);*/
            color: #fff;
            .symbol {
                font-size: rem(21);
            }
            .price-detail {
                font-size: rem(24);
                position:absolute;
                top: rem(5);
            }
            .sign-up {
                font-size: rem(12);
                position:absolute;
                left: rem(7);
                bottom: rem(5);
                color: #fff;
                /*color: rgb(222,40,40);*/
                .character {
                    display: inline-block;
                    margin-right: rem(3);
                }
            }
            .class-link {
                display: block;
                position: absolute;
                right: 0;
                bottom: 0;
                height: rem(55);
                background: #c42f25;
                padding: rem(10) rem(20);
                text-align: left;
                color: #ffffff;
                .big {
                    font-size: rem(19);
                    font-weight: 700;
                    margin-bottom: rem(3);
                }
                .cheap {
                    color: #ffd6d6;
                }
                .icon-angle-right {
                    font-size: rem(15);
                    position: absolute;
                    right: rem(5);
                    top: 50%;
                    transform: translateY(-50%);
                }
            }
        }
        #video-preface {
            position: absolute;
            width: 100%;
            left: 0;
            top: 0;
            z-index: 2;
            text-align: center;
            height: rem(200);
            background: #000000;
            .icon-play-o {
                position: absolute;
                color: #fff;
                font-size: rem(60);
                left: 50%;
                margin-left: rem(-30);
                top: 50%;
                margin-top: rem(-30);
            }
            .juhuixue-img {
