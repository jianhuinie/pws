        #pay-tip {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            font-size: rem(15);
            line-height: rem(20);
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 3;
            color: #dfdede;
            text-align: center;
            .tip-container {
                display: inline-block;
                center(absolute);
                background-color: rgba(0, 0, 0, 0);
                border: 0;
                margin: 0 auto;
                .btn {
                    margin: 0 auto;
                    >a {
                        display: inline-block;
                        padding: rem(8) rem(20);
                        margin-top: rem(7);
                        color: #ff9100;
                        background: rgba(0,0,0,0.30);
                        border: 1px solid #FF9100;
                        border-radius: rem(3);
                        font-size: rem(15);
                        color: #FF9100;
                    }
                }
                .tips {
                    margin-top: rem(14);
                    font-size: rem(12);
                    color: #FFFFFF;
                    letter-spacing: 0;
                    line-height: rem(12);
                }
