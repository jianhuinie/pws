.lessonWay-content {
    position: fixed;
    left: 0;
    right: 0;
    top: rem(40);
    z-index: 10;
    .address {
        height: rem(44);
        line-height: rem(44);
        background: #FCFCFC;
        //box-shadow: inset 0 0 0 rem(1) #EDEDEE;
        border-bottom: 1px solid #ededee;
        padding: 0 rem(15);
        color: #9D9D9E;
        .icon-ditu {
            font-size: rem(14);
            margin-right: rem(10);
        }
        .text {
            font-family: PingFang-SC-Regular;
            font-size: rem(15);
            line-height: rem(15);
        }
        .icon-chevron-thin-right {
            float: right;
            top: rem(16);
            position: relative;
        }
    }
    .lesson-way-content {
        background: white;
        .item {
            padding: 0 rem(15);    
            height: rem(44);
            line-height: rem(44);
            color: #3D3D3E;
            border-bottom: 1px solid #ededee;
            .text {
                font-family: PingFang-SC-Regular;
                font-size: rem(15);
                &.text-active {
                    color: #ff9100;
                }
            }
            .recommend {
                font-family: Roboto-Medium;
                font-size: rem(11);
                color: #FFFFFF;
                letter-spacing: 0;
                line-height: rem(11);
                background: #FF6C00;
                border-radius: rem(35);
                display: inline-block;
                padding: rem(4) rem(6);
                margin-left: rem(10);
                position: relative;
                top: rem(-2);
                &.hide {
                    display: none;
                }
            }
            .icon-checkmark {
                float: right;
                position: relative;
                top: rem(18);
                color: #ff9100;
                font-size: rem(12);
                &.hide {
                    display: none;
                }
            }
        }
    }
    &.hide {
        display: none;
    }
}