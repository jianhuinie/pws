.star-score {
  .icon-star_all {
    color: #dcddde;
  }
  .star-shine {
    color: #ff6c00;
  }
  .star-half {
    display: inline-block;
    position: relative;
    line-height: 0;
    .icon-star_half {
      color: #ff9100;
      position: absolute;
      left: 0;
      top: 0;
    }
  }
}