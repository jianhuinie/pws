.slide-mask-div {
    position: fixed;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
    transition: all ease 0.1s;
    opacity: 1;
    top: 0;
    bottom: 0;
    display: none;
    z-index:10;
}

.slide-dialog-mask {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 600;
    opacity: 1;
    backgroundx-color: rgba(0, 0, 0, 0.0);
    display: none;
    transition: background-color 4.6s;
    overflow: hidden;
    height: 100%;
    .slide-dialog-content {
        width: 100%;
        background-color: #fff;
        overflow: hidden;
        bottom: rem(0);
        left: rem(0);
        right: rem(0);
        visibility: visible;
        position: absolute;
        z-index: 601;
        transform: translate3d(rem(0), 100%, rem(0));
        transition: transform 0.4s ease;
        opacity: 1;
        background: white;
    }
    &.on {
        .slide-dialog-content {
            transform: translate3d(rem(0), rem(0), rem(0));
        }
    }
}

