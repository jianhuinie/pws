body {
    -webkit-overflow-scrolling: touch;
}

$height-num = 48;
$height = rem($height-num);
.download-show {
    #download.show {
        display: block;
    }
}

#download {

    position: relative;
    left: 0;
    right: 0;
    display: none;
    z-index: 9999;
    font-size: rem(12);
    top: 0;

    box-shadow: 0 rem(1) rem(2) rgba(0, 0, 0, 0.2);
    height: $height;
    background-color: #f2f2f2;

    width: 100%;
    min-width: rem(320);
    overflow: hidden;

    bottom: rem(-1);
    /**
    .logo {

        width: rem(55);
        height: rem(55);
        margin: 0 rem(5);
        float: left;
    }

    .slogan {
        width: rem(140);
        font-size: rem(12);
        float: left;
        color: #000;
        line-height: rem(18);

        p {
            max-width: rem(115);
            text-overflow();
        }

        .title {
            font-weight: bold;
            font-size: rem(14);
        }
        .star {
            color: $brand-primary;
        }
        .red {
            color: $brand-error;
        }
    }

    .btn-info {
        position: absolute;
        top: rem(18);
        right: rem(10);
        width: rem(100);
        padding: rem(4);
        font-size: rem(16);

        i {
            display: none;
        }
    }
    **/

    .icon-times {
        position: absolute;
        left: rem(10);
        top: rem(25);
        font-size: rem(16);
        color: #666;
    }

    &.big {
        bg: './downloadBg.jpg' 100% 100%;
        height: rem(189);
        width: 100%;
        overflow: hidden;
        padding: 0;

        .inner-bg {
            width: rem(280);
            height: rem(166);
            bottom: 0;
            margin: rem(23) auto 0;
            position: relative;

            img {
                width: 100%;
                height: 100%;
            }
        }

        .btn-info {
            position: absolute;
            top: rem(110);
            right: rem(7);
            width: rem(100);
            font-size: rem(14);

            i {
                display: inline-block;
                margin-right: rem(5);
            }
        }

        .icon-times {
            color: #fff;
            right: rem(10);
            top: rem(10);
            left: initial;
        }
    }

    .top-banner {
        $banner-height = $height;

        position: absolute;
        top: 0;
        left: 0;
        height: $height;
        width: 100%;
        letter-spacing: 0;

        .mask {
            position: absolute;
            width: 100%;
            height: 100%;
            background-color: #000;
            opacity: 0.75;
            z-index: 1;
        }

        .front {
            height: 100%;
            width: 100%;
            position: absolute;
            padding: 0 rem(20);
            z-index: 2;
        }

        .logo {
            float: left;

            img {
                margin: rem(($height-num - 24) / 2) 0;
                width: rem(25);
                height: rem(25);
            }
        }

        .ad-content {
            height: 100%;
            padding: rem(11) rem(75) rem(11) rem(10);
            color: #FFF;
            overflow: hidden;

            h3 {
                height: rem(14);
                line-height: rem(14);
                font-size: rem(12);
                margin-bottom: rem(1);
                opacity: 0.9;
            }

            .slogan {
                height: rem(12);
                line-height: rem(12);
                font-size: rem(10);
                opacity: 0.8;
                overflow: hidden;
            }
        }

        .download {
            position: absolute;
            top: 50%;
            right: rem(20);

            height: rem(23);
            line-height: rem(25);

            padding: 0 rem(12);
            font-size: rem(13);
            background-color: #FFF;
            border-radius: rem(3);
            transform: translateY(-50%);
            opacity: 0.9;
            z-index: 2;
        }
    }

}

.download-menu {

    position: absolute;
    bottom: rem(75);
    left: rem(10);

    background-color: #FFF;
    display: none;
    padding: rem(2) rem(10);
    box-shadow: 0 0 rem(2) rgba(0, 0, 0, 0.2);
    border-radius: rem(6);

    &:after {
        content: " ";
        position: absolute;
        bottom: rem(-5);
        left: rem(10);

        triangle: bottom rem(5) #FFF;
    }

    a {
        display: block;
        padding: rem(rem(8)) 0;

        + a {
            border-top: 1px solid #eee;
        }
    }
}

