.country_select_control {
    font-size: rem(15);
    .icon {
        position: absolute;
        right: rem(2);
        top: rem(12);
        font-size: rem(20);
        color: #9d9d9d;
    }
    .country_text {
        position: absolute;
        left: rem(2);
        width: rem(65);
        height: rem(45);
        line-height: rem(45);
        text-align: center;
        img {
            width: rem(18);
            height: rem(12);
            margin: 0 rem(3);
        }
    }

    .country_select {
        position: absolute;
        left: rem(0);
        top: 0;
        width: rem(89);
        min-height: rem(45);
        line-height: rem(45);
        border: 0 none;
        background-color: transparent;
        z-index: 1;
        opacity: 0.001;
    }
}