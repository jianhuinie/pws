.weixin-mask {
    background: black;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 900;
    opacity: 0.8;
    .canvas {
        position: absolute;
        right: rem(-110);
        top: rem(-40);
        transform: scaleY(0.5) rotate(10deg);
        width: rem(200);
        height: rem(200);
    }
    .text-box {
        color: white;
        font-family: cursive;
        font-size: rem(20);
        position: absolute;
        top: rem(80);
        right: rem(40);
    }
}