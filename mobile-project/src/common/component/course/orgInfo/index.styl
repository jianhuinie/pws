//机构信息
.org-list {
    margin: rem(9) 0;
    /*&.one {
        margin: rem(9);
    }*/
    .org-ul {
        width: 100%;
        overflow-x: auto;
        white-space: nowrap;
        overflow-y: hidden;
    }
    .org-item {
        vertical-align: top;
        width: rem(240);

        padding: rem(13) 0;
        background-color: #fff;
        display: inline-block;
        margin-right: rem(10);
        &:first-child {
            margin-left: rem(9);
        }

        &.one-org {
            width: 100%;
            margin: 0;
        }
    }
    .avatar {
        float: left;
        margin-right: rem(10);
        .img {
            width: rem(60);
            height: rem(60);
            margin-left: rem(15);
            img {
                border-radius: 50%;
            }

        }

    }
    .right-col {
        padding-left: rem(75);
        .audio-icon {
            margin-top: rem(15);
            margin-left: rem(12);
            display: inline-block;
            width: rem(77);
            height: rem(32);
            text-align: center;
            border: 1px solid #e0e1e2;
            border-radius: rem(20);
            position: relative;
            float: left;
            .audio-long {
                color: #9d9e9e;
                font-size: rem(14);
                position: absolute;
                right: rem(9);
                top: 50%;
                transform: translateY(-50%);

            }
            img {
                width: rem(20);
                height: rem(20);
                color: #ff6c00;
                font-size: rem(12);
                position: absolute;
                left: rem(9);
                top: 50%;
                transform: translateY(-50%);
            }
        }
        .chat {
            width: rem(77);
            height: rem(32);
            border: 1px solid #e0e1e2;
            border-radius: rem(20);
            margin-left: rem(11);
            margin-top: rem(15);
            display: inline-block;
            color: #9d9e9e;
            position: relative;
            font-size: rem(14);
            padding-right: rem(9);
            line-height: rem(30);
            img {
                position: absolute;
                width: rem(20);
                height: rem(20);
                left: rem(9);
                top: 50%;
                transform: translateY(-50%);
            }
            text-align: right;
        }
    }

    .org-name {
        .name {
            width: 85%;
            color: #3c3d3d;
            font-size: rem(17);
            position: relative;
            display: inline-block;
            text-overflow: ellipsis;
            white-space: nowrap;
            overflow: hidden;

        }
        .vip {
            display: inline-block;
            margin-left: rem(3);
            width: rem(20);
            height: rem(20);
            position: absolute;
        }
    }
    .intro, .org {
        color: #9d9e9e;
        font-size: rem(12);
        white-space: normal;
        position: relative;
    }
    .org-vip {
        position: absolute;
        display: inline-block;
        margin-left: rem(3);
        width: rem(13);
        height: rem(13);
    }
    .intro {
        color: #3c3d3d;
        text-overflow: ellipsis;
        white-space nowrap;
        overflow: hidden;
        width: 80%;
    }
    .certs {
        font-size: rem(12);
        color: #9d9e9e;
        margin-top: rem(5);
        margin-left: rem(9);
        li {
            display: inline-block;
            border: 1px solid #e0e1e2;
            border-radius: rem(2);
            height: rem(20);
            line-height: rem(20);
            padding: 0 rem(5);
            margin-right: rem(5);
        }

    }
}