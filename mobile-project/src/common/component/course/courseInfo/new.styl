.course-new {
    margin-top: rem(10);
    max-height: 100%;
    width: 100%;
    background: transparent;
    .title{
        font-size: rem(21);
        color: #3c3d3d;
        line-height: rem(18);
        margin-top: rem(12);
        text-align: left;
    }
    .title-black{
        color: #fff;
        background: url('/src/page/course/classCourse/_parts/courseInfo/img/57b424d3ef4a2.png') no-repeat;
        background-position: center center;
        background-size: 100% 100%;
        text-align: center;
        height: rem(50);
        line-height: rem(50);
    }
    .title-brown{
        color: #8a1f2f;
        background: url('/src/page/course/classCourse/_parts/courseInfo/img/57b424d4d038a.png') no-repeat;
        background-position: center center;
        background-size: 100% 100%;
        text-align: center;
        height: rem(50);
        line-height: rem(50);
    }
    .title-blue{
        padding-right: rem(40);
        color: #3c3d3d;
        background: url('/src/page/course/classCourse/_parts/courseInfo/img/57b424d436563.png') no-repeat;
        background-position: center center;
        background-size: 100% 100%;
        text-align: center;
        height: rem(50);
        line-height: rem(50);
    }
    .title-green{
        color: #6d6d6e;
        background: url('/src/page/course/classCourse/_parts/courseInfo/img/57b424d460a49.png') no-repeat;
        background-position: center center;
        background-size: 100% 100%;
        text-align: center;
        height: rem(50);
        line-height: rem(50);
    }
    .title-pink{
        color: #562c11;
        background: url('/src/page/course/classCourse/_parts/courseInfo/img/57b424d4b01b3.png') no-repeat;
        background-position: center center;
        background-size: 100% 100%;
        text-align: center;
        height: rem(50);
        line-height: rem(50);
    }
    .body{
        margin-top: rem(15);
        word-break: break-all;
        white-space: normal;
    }
    .image{
        width: 100%;
        height: auto;
        margin-top: rem(20);
        position: relative;
    }
    .img-white{
        border: 0;
    }
