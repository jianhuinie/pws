    .video-player {
        position: relative;
        -webkit-box-pack: center;
        -webkit-justify-content: center;
        -moz-box-pack: center;
        -ms-flex-pack: center;
        justify-content: center;
        height: rem(215);
        margin-top: rem(15);
        .video-poster{
            position: absolute;
            width: 100%;
            height: 100%;
            background-size: 100% 100%;
        }
        .play-icon {
            position: absolute;
            width: rem(44);
            height: rem(44);
            top: 50%;
            left: 50%;
            margin-left: rem(-22);
            margin-top: rem(-22);
            background-image: url('/src/page/course/classCourse/_parts/courseInfo/img/57b5a5d2928b8.png');
            background-size: 100% 100%;
        }
        .player-frame{
            position: relative;
            width: 100%;
            height: 100%;
            z-index: 1;
        }
    }
    .teacher-audio{
        position: relative;
        margin-top: rem(20);
        .audio-border{
            width: rem(138);
            height: rem(46);
            vertical-align: sub;
            display: inline-block;
        }
        .audio-wave{
            width: rem(15);
            height: rem(20);
            position: absolute;
            left: rem(20);
            top: 50%;
            margin-top: rem(-10);
            display: inline-block;
        }
        .audio-length{
            position: absolute;
            display: inline-block;
            font-size: rem(12);
            color: #9d9d9e;
            left: rem(90);
            transform: translateY(-50%);
            top: 50%;
        }
        .audio{
            width: rem(138);
            height: rem(46);
            position: absolute;
            top: 0;
            left: 0;
            vertical-align: sub;
        }
    }

}