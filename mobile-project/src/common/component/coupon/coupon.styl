.coupon-container-box {
    padding: rem(4) 0;
    background: white;
    padding-bottom: rem(100);
    height: rem(400);
    .title-line {
        background: #F8F8F8;
        text-align: center;
        position: relative;
        padding: rem(10) 0;
        top: rem(-2);
        .slide-close {
            position: absolute;
            right: rem(10);
            top: rem(4);
            font-size: rem(24);
            color: #cdcdce;
        }
    }
    .coupon-boxs {
        padding: rem(25) rem(20);
        padding-top: rem(10);
        height: rem(380);
        overflow-y: scroll;
        .coupon-item {
            position: relative;
            margin-bottom: rem(20);
            margin-top: rem(10);
            img {
                width: 100%;
                height: rem(80);
            }
            .coupon-item-box {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: rem(80);
                padding: rem(13);
                display: flex;
                .balance {
                    flex: 1.5;
                    display: inline-block;
                    text-align: center;
                    height: rem(54);
                    white-space: nowrap;
                    border-right: 1px solid rgba(195, 140, 58, 0.2);
                    .money {
                        line-height: rem(54);
                        color: #C38C3B;
                        .icon {
                            font-size: rem(18);
                            vertical-align: top;
                        }
                        .number {
                            font-size: rem(30);
                        }
                    }
                }
                .base-info {
                    flex: 2;
                    display: inline-block;
                    height: rem(54);
                    padding-left: rem(8);
                    width: 57%;
                    .full-use {
                        zoom: 1;
                        mult-ellipsis(1);
                        font-size: rem(13);
                        color: #6D6D6E;
                        height: rem(15);
                        line-height: rem(15);
                        width: 100%;
                    }
                    .time {
                        zoom: 1;
                        overflow: hidden;
                        -o-text-overflow: ellipsis;
                        text-overflow: ellipsis;
                        white-space: nowrap;
                        font-size: rem(12);
                        color: #6D6D6E;
                        margin-top: rem(4);
                        height: rem(14);
                        line-height: rem(14);
                        width: 100%;
                    }
                    .coupon-status {
                        margin-top: rem(5);
                        .normal,.has_get {
                            font-size: rem(15);
                            color: #FF9100;
                            line-height: rem(30);
                            display: inline-block;
                            height: rem(30);
                            margin-top: rem(-10);
                        }
                        .other {
                            font-size: rem(15);
                            color: #9d9e9e;
                            display: inline-block;
                        }
                        img {
                            height: rem(12);
                            width: rem(12);
                            margin-left: 0;
                        }
                    }
                }
                
            }
            .rule-boxs {
                width: 84%;
                margin-left: 8%;
                background: #F8F8F8 100%;
                padding: rem(12) rem(15);
                &.hide {
                    display: none;
                }
                .rule-name {
                    font-family: PingFang-SC-Medium;
                    font-size: rem(15);
                    color: #6D6D6E;
                    letter-spacing: rem(0);
                    line-height: rem(24);
                    height: rem(24);
                }
                .rule-title {
                    font-family: PingFang-SC-Regular;
                    font-size: rem(13);
                    color: #6D6D6E;
                    letter-spacing: rem(0);
                    line-height: rem(24);
                    height: rem(24);
                }
                .rules {
                    .rules-item {
                        font-family: PingFang-SC-Regular;
                        font-size: rem(13);
                        color: #37A4F5;
                        letter-spacing: rem(0);
                        line-height: rem(24);
                    }
                }
            }
        }
    }
    .empty-coupon {
        padding: 30% 0;
        text-align: center;
        font-size: rem(14);
    }
}