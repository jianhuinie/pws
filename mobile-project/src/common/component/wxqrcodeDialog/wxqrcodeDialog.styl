.qrcode-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 5;
    background: black;
    opacity: 0.3;
}
.qrcode-container {
    width: 84%;
    padding-bottom: rem(30);
    background: white;
    position: fixed;
    z-index: 10;
    top: 20%;
    left: 8%;
    text-align: center;
    border-radius: rem(6);
    .qrcode-close {
        position: absolute;
        right: 5%;
        font-size: rem(26);
        opacity: 0.6;
        top: rem(4);
    }
    img {
        margin-top: rem(40);
        width: 65%;
    }
    .warn {
        font-family: PingFang-SC-Regular;
        font-size: rem(17);
        color: #FF9100;
        line-height: rem(30);
        height: rem(30);
    }
    .text {
        font-family: PingFang-SC-Regular;
        font-size: rem(12);
        color: #9D9D9E;
        line-height: rem(24);
        height: rem(24);
    }
}