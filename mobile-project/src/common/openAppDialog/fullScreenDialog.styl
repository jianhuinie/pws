
.fsdlg {

    &-mask {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10;
        background: rgba(0,0,0, .1);
    }

    &-title {
        background: #fff;
        text-align: center;
        color: #000;
        font-size: rem(14);
        padding: rem(10) rem(20);
        border-radius: rem(5) rem(5) 0 0;
    }

    &-container {

        position: absolute;
        width: 100%;
        bottom: rem(8);
        padding: 0 rem(10);
    }

    &-body{
        background: #fff;
        border-radius: 0 0 rem(5) rem(5);
        padding: 0 rem(20) rem(12);
        >li {
            border-bottom: 1px solid #eee;
            background: transparent;
            outline: 0;
            font-size: rem(14);
            color: #2E92FF;
            display: block;
            width: 100%;
            padding: rem(8) 0;
            line-height: 1;

            &:last-child {
                border-bottom: 0;
            }
        }
    }

    &-footer {
        margin-top: rem(8);
        display: block;
        background: #fff;
        border: none;
        padding: rem(4) 0;
        text-align: center;
        border-radius: rem(5);
        color: $brand-info;
    }

}