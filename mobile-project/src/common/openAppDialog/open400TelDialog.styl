.fsdlg-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
  background-color: rgba(0, 0, 0, 0.1);
  .fsdlg-container {
    position: absolute;
    width: 100%;
    padding: 0;
    bottom: 0;
    .fsdlg-body {
      padding: 0;
      text-align: center;
      border-radius: 0;
      color: #000;
      background-color: #fff;
      > li {
        padding: rem(18) 0;
        border-bottom: 1px solid #eee;
        background: transparent;
        outline: 0;
        font-size: rem(14);
        display: block;
        width: 100%;
        line-height: 1;
        &:last-child {
          border-bottom: 0;
        }
      }
    }
  }
}