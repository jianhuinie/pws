.wechat-hide {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: black;
    opacity: 0.8;
    display: none;
}
.container {
    text-align: center;
    margin: auto;
    position: fixed;
    left: 11%;
    top: 20%;
    z-index: 1000;
    background: #fff;
    padding: 3%;
    width: 77%;
    border: 1px solid #cccccc;
    overflow: hidden;
    box-shadow: #999999 0 0 rem(15);
    display: none;
    i {
        font-size: rem(24);
        color: white;
        vertical-align: middle;
    }
    i .icon-mobile {
        font-size: rem(20);
    }
    div {
        -moz-border-radius: rem(3);
        -webkit-border-radius: rem(3);
        border-radius: rem(3);
        margin: 8% auto;
        width: 70%;
    }
    .close-login {
        position: absolute;
        right: rem(10);
        top: rem(5);
        width: rem(18);
        font-size: rem(18);
        color: #888;
        margin: 0;
    }
    .mobile-phone {
        background: #ff9100;
        font-size: rem(16);
        padding: 4%;
    }
    img {
        position: relative;
        top: rem(1.6);
        height: rem(19.2);
    }
    .we-chat {
        background: #1db954;
        font-size: rem(16);
        padding: 4%;
    }
    p.title{
        margin: 0 auto;
        font-size: rem(16);
        color: #000;
    }
    p {
        font-size: rem(14);
        width: 85%;
        margin: 5% auto;
        color: #b7b7b7;
    }
    a {
        text-decoration: none;
        color: white;
    }
}