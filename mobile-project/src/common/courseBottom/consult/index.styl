// hurry: 打400电话统一规则
@import "common/component/wxMask/weixinMask.styl";
@import 'common/openAppDialog/open400TelDialog.styl';
.consult-box {
    font-size: rem(12);
    border-right: rem(1) solid #F2F2F3;
    flex: 1;
    padding-top: rem(5);
    &.super {
        background: #00BCD4;
        color: white;
        border-right: rem(1) solid #13A7BA;
    }
    >div {
        margin-top: rem(3);
    }
    .icon {
        font-size: rem(22);
    }
    .share-reward {
        position: absolute;
        display: inline-block;
        top: rem(-47);
        .title {
            padding: rem(5) rem(8);
            border-radius: rem(16);
            background-color: #fc5c5a;
            display: inline;
            font-size: rem(13);
            color: #fff;
            margin-left: rem(4);
        }
        .triangle-down {
            width: 0;
            height: 0;
            border-left: rem(6) solid transparent;
            border-right: rem(6) solid transparent;
            border-top: rem(10) solid #fc5c5a;
            display: inline-block;
            position: absolute;
            top: rem(35);
            left: rem(30);
        }
    }
    &.cousult-three {
        img {
            vertical-align: text-bottom;
        }
        div{
            margin-top: rem(3);
        }
    }
    &.cousult-four {
        flex: 1;
        padding-top: rem(5);
        div{
            margin-top: rem(3);
        }
    }
}