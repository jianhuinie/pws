@import "common/component/wxMask/weixinMask.styl";
.shares {
    flex: 1;
    padding-top: rem(6);
    font-size: rem(12);
    border-right: rem(1) solid #F2F2F3;
    &.supper {
        background: #00BCD4;
        color: white;
        border-right: rem(1) solid #13A7BA;
    }
    .icon {
        font-size: rem(17);
        color: #9d9e9e;
    }
    .share-reward {
        position: absolute;
        top: rem(-30);
        left: 0;
        width: rem(72);
        z-index: 1;
        .title {
            padding: rem(5) rem(8);
            border-radius: rem(16);
            background-color: #fc5c5a;
            display: inline;
            font-size: rem(13);
            color: #fff;
        }
        .triangle-down {
            width: 0;
            height: 0;
            border-left: rem(6) solid transparent;
            border-right: rem(6) solid transparent;
            border-top: rem(10) solid #fc5c5a;
            display: inline-block;
            position: absolute;
            top: rem(14);
            left: rem(27);
        }
    }
    div {
        margin-top: rem(4);
    }
}


.share-mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;
    background: black;
    opacity: 0.8;
    display: none;
    .content {
        width: 50%;
        margin-left: 40%;
        margin-top: rem(20);
    }
}
