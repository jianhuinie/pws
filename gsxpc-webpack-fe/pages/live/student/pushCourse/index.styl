@import '~normalize-styl';
@import '~css/icomoon';
// @import '~css/normalize';

// antd 中定义的
*,
::after,
::before {
    box-sizing: border-box;
}

body,
p {
    margin: 0;
}

body {
    font-family: "Helvetica Neue For Number",-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"PingFang SC","Hiragino Sans GB","Microsoft YaHei","Helvetica Neue",Helvetica,Arial,sans-serif;
    font-size: 14px;
    line-height: 1.5;
    color: rgba(0,0,0,.65);
    background-color: #fff;
}

.student-course-detail {
    width: 440px;
    height: 440px;
    background: #FFFFFF;
    border: 1px solid #DEDEDE;
    box-shadow: 0 2px 4px 0 rgba(0,0,0,0.08);
    border-radius: 8px;
    position: relative;

    .view-title{
        height: 30px;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
        p {
            position: relative;
            height:30px;
            line-height 30px;
            background: #555B6D;
            color: #ffffff;
            font-size: 14px;
            padding-left: 8px;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
            .icon-guanbi {
                position: absolute;
                top: 8px;
                right: 8px;
                font-size 14px;
                color: #fff;
                cursor: pointer;
            }
        }
    }

    .view-content {
        padding: 10px;
        max-height: 401px;

        img {
            width 100%;
            height: 230px;
            margin-bottom: -5px;
        }
        .course-name {
            font-family: PingFangSC-Semibold;
            font-size: 16px;
            color: #3C3D3E;
            letter-spacing: 0.25px;
            font-weight: bold;
            margin-top: 12px;
            margin-bottom: 12px;
            vertical-align: top;
            overflow: hidden;
            -webkit-line-clamp: 1;
            -webkit-box-orient: vertical;
            display: -webkit-box;
            white-space: inherit;
            .union-label {
                display: inline-block;
                font-size: 12px;
                color: #FF6C00;
                letter-spacing: 0;
                line-height: 14px;
                padding: 2px 6px;
                background: #FFFFFF;
                border: 1px solid #FF6C00;
                border-radius: 2px;
                margin-right: 4px;
                font-weight: 200;
                position: relative;
                bottom: 2px;
            }
        }
        .course-nowprice {
            display: inline-block;
            font-family: PingFangSC-Regular;
            font-size: 20px;
            color: #FF6C00;
            line-height: 16px;
            margin-right: 10px;
            &.text-green {
                color: #1DB954;
            }
        }
        .course-oldprice {
            text-decoration: line-through;
            display: inline-block;
            font-family: OpenSans;
            font-size: 14px;
            color: #CDCDCE;
            line-height: 14px;
            position: relative;
            top: -1px;
        }
        .course-countdown {
            margin-top: 10px;
            margin-bottom: 20px;
            display: inline-block;
            padding: 2px 10px;
            background: #FF6C00;
            border: 1px solid #FF6C00;
            border-radius: 2px;
            font-family: PingFangSC-Regular;
            font-size: 12px;
            color: #FFFFFF;
            line-height: 16px;
            text-align: left;
        }

        .view-btn {
            width: 120px;
            position: absolute;
            bottom: 20px;
            left: 50%;
            margin-left: -60px;
        }
        .btn {
            display: block;
            width: 116px;
            height: 32px;
            font-family: PingFangSC-Regular;
            font-size: 14px;
            line-height: 16px;
            padding: 7.3px 0;
            color: #ffffff;
            background-color: #FF6C00;
            border: 1px solid #FF6C00;
            border-radius: 2px;
            margin: 6px auto 0 auto;
            text-align: center;
            outline: none;
            cursor: pointer;
        }
    }
}
