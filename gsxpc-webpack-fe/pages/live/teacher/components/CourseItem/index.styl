.push-course-item {
    width: 100%;
    margin-bottom: 16px;
    position: relative;
    cursor: pointer;
    .left-content {
        float: left;
        width: 156px;
        height: 88px;
        margin-right: 16px;
        img {
            width: 100%;
            height: 100%;
        }
    }
    .right-content {
        position: relative;
        height: 88px;
        .course-name {
            height: 44px;
            font-size: 14px
            line-height: 22px;
            color: #3d3d3e;
            font-weight: bold;
            vertical-align: top;
            overflow: hidden;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            display: -webkit-box;
            white-space: inherit;
            .union-label {
                display: inline-block;
                font-size: 12px;
                color: #FF6C00;
                letter-spacing: 0;
                line-height: 14px;
                padding: 2px 6px;
                background: #FFFFFF;
                border: 1px solid #FF6C00;
                border-radius: 2px;
                margin-right: 4px;
                font-weight: 200;
                position: relative;
                bottom: 2px;
            }
        }
        .course-prices {
            display: inline-block;
            position: absolute;
            bottom: 0;
            .price-now {
                display: inline-block;
                font-family: PingFangSC-Regular;
                font-size: 20px;
                color: #FF6C00;
                line-height: 16px;
                margin-right: 10px;
                &.text-green {
                    color: #1DB954;
                }
            }
            .price-origin {
                text-decoration: line-through;
                display: inline-block;
                font-family: OpenSans;
                font-size: 14px;
                color: #CDCDCE;
                line-height: 14px;
                position: relative;
                top: -1px;
            }
        }
        button {
            position: absolute;
            right: 0;
            bottom: 0;
            display: inline-block;
            background: #FF6C00;
            border-radius: 4px;
            width: 60px;
            height: 24px;
            line-height: 24px;
            font-size: 12px;
            color: #ffffff;
            text-align: center;
            border: 8px;
            outline: none;
            cursor: pointer;
        }
    }
    .clear-box {
        clear: both;
    }
}
