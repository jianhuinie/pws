@import '../resource/css/default.styl';
@import '../resource/css/antd/breadcrumb.styl';
@import '../resource/css/antd/button.styl';
@import '../resource/css/antd/form.styl';
@import '../resource/css/antd/popconfirm.styl';
@import '../resource/css/antd/table.styl';

#app {
    height: 100%;    
}
.main {
    height: 100%;
}
.child-page {
    margin-left: 200px;
    padding: 79px 15px 15px 15px;
    min-height: 100%;
    background-color: $grey_50;
    display: flex;
    flex-direction: column;
    > div {
        background-color: $white;
    }
}
.hide {
    display: none;
}

.left {
	float: left;
}

.right {
	float: right;
}

.clearfix {
	clear: both;
}

.cursor {
	cursor: pointer;
}

.blue {
	color: #37A4F5;
}

.red {
	color: red;
}

.orange {
	color: #fe943f;
}

.table-center {
    margin-top: 10px;
    .ant-table table {
        text-align: center;
        th {
            text-align: center;
            font-family: PingFangSC-Semibold;
            font-size: 12px;
            color: $grey_500;
        }
        td {
            font-family: PingFang-SC-Regular;
            font-size: 12px;
            color: $grey_600;
        }
    }
}

.page-wrapper {
    .data-background {
        margin-left: 224px;
        background: #f7f7f7;
        .body {
            margin: 0px 10px;
            background: #fff;
        }
    }

}