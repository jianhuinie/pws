@import '../../../../resource/css/default.styl';

.carousel-upload {
    .ant-upload {
        background: $grey_40;
        border: none;
        width: 150px;
        height 84px;
        &-select {
            .ant-upload {
                padding: 0;
            }
        }
    }
    &-image {
        width: 150px;
        height 84px;
    }
    &-button {
        &-image {
            width: 20px;
            height 18px;    
        }
        &-text {
            font-size: 12px;
            color: $grey_500;
            letter-spacing: 0;
            line-height: 12px;
            margin-top: 10px; 
        }    
    }
}