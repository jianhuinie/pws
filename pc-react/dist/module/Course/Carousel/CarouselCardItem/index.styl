@import '../../../../resource/css/default.styl';

.carousle-card-item {
    position: relative;
    &-seq {
        opacity: 0.6;
        background: $grey_600;
        width: 20px;
        height 20px;
        display: inline-block;
        border-radius: 20px;
        color: $white;
        line-height: 20px;
        font-size: 12px;
        text-align: center;
        position: absolute;
        left: 6px;
        top: -10px;
    }
    .icon-Combined-Shape {
        position: absolute;
        right: 6px;
        top: -10px;
        &:before {
            font-size: 20px;
        }
    }
    &-content {
        background: $white;
        border: 1px solid $grey_100;
        margin: 20px 15px 3px 15px;
        width: 570px;
        height 114px;
        display: flex;
    }
    &-image {
        margin: 15px 10px 15px 15px;
    }
    &-selection {
        margin: 18px 0 0 0;
        > div {
            margin-bottom: 10px;
        }
        &-label {
            font-size: 12px;
            color: $grey_500;
            letter-spacing: 0;
            line-height: 12px;
            display: inline-block;
            margin-right: 10px;
        }
    }
    &-text {
        font-size: 12px;
        color: $pink;
        letter-spacing: 0;
        line-height: 12px;
        display: block;
        padding-left: 15px; 
    }
}