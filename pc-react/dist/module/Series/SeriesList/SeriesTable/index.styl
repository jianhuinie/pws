@import '../../../../resource/css/default.styl';

.series-table {
    flex-grow: 1;
    border-top: 1px solid $grey_50;
    margin: 0 20px;
    & &-list {
        .ant-table-thead {
            display: none;    
        }
        .ant-table-tbody {
            .series-table-list-cover {
                padding: 20px 0 20px 10px;
                &-image {
                    display: flex;
                    img {
                        width: 140px;
                        height: 80px;
                    }
                }    
            }
        }
        &-name-price {
            margin-left: 20px;
            .series-table-list-name {
                font-size: 16px;
                color: $grey_600;
                line-height: 16px;
            }
            .single-table-list-staus {
                margin-top: 20px;
                height: 16px;
                line-height: 16px;
                i {
                    margin-right: 3px;
                }
                }
            .series-table-list-price {
                font-size: 16px;
                line-height: 16px;
                margin-top: 18px;
                &-free {
                    color: $green;
                }
                &-paied {
                    color: $pink;
                    
                }
            }
        }
        &-operation {
            &-content {
                text-align: right;
                margin: -40px 10px 0 0;
                a {
                    display: inline-block;
                    margin-left: 10px;
                    color: $blue_400;
                    &:hover, &:active {
                        color: $blue_500;
                    }
                }
            }
        }
    }
}