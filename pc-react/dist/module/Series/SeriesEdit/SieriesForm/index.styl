@import '../../../../resource/css/default.styl';

.series {
    &-confirm {
        .ant-modal-body {
            padding: 20px;
        }
        .ant-confirm-body {
            > .anticon {
                margin-right: 8px;
                font-size: 12px;
                color: $blue_400;
                margin-top: 7px;
                &:before {
                    content: "\E62C";
                }
            }
            .ant-confirm-title {
                font-size: 12px;
                color: #3C3D3E;
                line-height: 12px;
            }
            .ant-confirm-content {
                font-size: 12px;
                color: #6D6D6E;
                margin-left: 17px;
            }
        }
        .ant-confirm-btns {
            .ant-btn {
                border-radius: 2px;
                height: auto;
                font-weight: normal;
                font-size: 12px;
                line-height: 12px;
                padding: 5px 8px;
            }
            .ant-btn:first-child {
                color: $grey_600;
                border-color: $grey_100;
                &:active, &:hover, &:focus {
                    background-color: $white;
                    color: $grey_600;
                    border-color: $grey_100;    
                }
            }
            .ant-btn:last-child {
                background-color: $pink;
                border-color: $pink;
                color: $white;
                &:active, &:hover, &:focus {
                    background-color: $pink;
                    border-color: $pink;
                    color: $white;
                }
            }
        }
    }
    &-form {
        &-content {
            &-title {
                margin: 40px 0 30px 20px;
                font-size: 16px;
                color: $grey_600;
                line-height: 16px;
                padding-left: 8px;
                border-left: 2px solid $pink;
            }
            &-cover {
                .image-upload .ant-upload-list-picture-card{
                    width: 375px;
                    height: 211px;
                }
            }
            & &-sell {
                margin-top: -20px;
                .ant-input-affix-wrapper {
                    width: 241px;
                    font-size: 12px; 
                    &:hover .ant-input:not(.ant-input-disabled) {
                        border-color: $pink;
                    }
                }
            }
            & &-intro {
                margin-bottom: 24px;
                .ant-form-item-label {
                    line-height: 32px;
                }
                &-operate {
                    display: flex;
                    &-btn {
                        color: $grey_400;
                        border: 1px solid $grey_100;
                        border-radius: 2px;
                        > span {
                            display: inline-block;
                            padding-right: 8px;
                        }
                        &:hover {
                            color: $pink;
                            border-color: $pink;
                            span {
                                &:before {
                                    color: $pink;
                                }
                            }
                        }  
                    }
                }
            }
        }
    }
}