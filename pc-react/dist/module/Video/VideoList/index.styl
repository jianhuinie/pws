@import "../../../resource/css/default.styl";

.video-list {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    &-operation {
        height: 66px;
        padding: 19px 22px 19px 20px;
        display: flex;
        justify-content: space-between;
        &-add {
            &-button {
                font-size: 12px;
                line-height: 12px;
                padding: 8px 16px;
            }
            &-text {
                display: inline-block;
                margin-left: 20px;
                font-size: 12px;
                color: $grey_400;
            }
        }
    }
    &-process-content {
        margin-top: 20px;
        padding-right: 15px;
        .ant-progress {
            font-size: 12px;
            display: block;
            margin: 10px 0 5px;
            .ant-progress-bg {
                background-color: $green_400;
            }
            .ant-progress-text {
                color: $grey_600;
                .anticon-check-circle:before {
                    color: $green_400;
                }
            }
        }
        .video-btn {
            min-width: 88px;
        }
        .video-cancel-btn {
            width: 88px;
            margin-top: 16px;
            display: block;
        }
        &-num {
            font-size: 12px;
        }
    }
}