@import '../../../../resource/css/default.styl';

.single-select-video-table {
    text-align: right;
    .course-search {
        margin-bottom: 17px;
    }
    .ant-table-thead > tr {
        .single-select-video-table-list-create-time {
            text-align: right;
        }
    }
    .ant-table-content {
        .ant-table-tbody {
            .ant-table-row {
                td {
                    padding: 24px 10px;
                }
            }
        }
    }
    &-list {
        &-create-time {
            text-align: right;
        }
        .ant-pagination {
            text-align: right;
        }
    }
    &-operation {
        text-align: center;
        margin-top: 20px;
        button:first-child {
            margin-right: 20px; 
        }
    }
}