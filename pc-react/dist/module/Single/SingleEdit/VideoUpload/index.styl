@import '../../../../resource/css/default.styl';

.video-upload {
    margin: 0 0 100px 12.5%;
    .ant-popover-inner {
        border-radius: 2px;
        .ant-popover-inner-content {
            padding: 0;
        }
    }
    &-popover {
        &-content {              
            a {
                display: block;
                width: 104px;
                height 32px;
                padding: 10px 0 10px 16px;
                font-size: 12px;
                color: $grey_500;
                line-height: 12px;
                &:hover {
                    background-color: $grey_40;
                    .video-upload-popover-content-spot {
                        width: 0; 
                        height: 0; 
                        font-size: 0; 
                        border-width: 5px; 
                        border-style: solid; 
                        border-color: $grey_40 transparent transparent;
                        overflow: hidden; 
                        position: absolute; 
                        left: 47px; 
                        top: 9px;
                    }
                }
                &:first-child {
                    border-radius: 2px 2px 0 0;
                }
                &:last-child {
                    border-radius: 0 0 2px 2px;
                }
            }
        }
    }
    &-select-modal {
        margin-left: 280px;
        .ant-modal-content {
            width: 880px;
        }
    }
    &-tip-modal {
        .ant-modal-content {
            width: 410px;
        }
        &-content {
            padding-left: 30px;
            &-operation {
                margin-top: 30px;
                text-align: center;
                button:first-child {
                    margin-right: 20px;
                }
            }
        }
    }
    &-process {
        margin-top: 20px;
        .ant-progress {
            width: 550px;
            font-size: 12px;
            display: block;
            margin: 10px 0 5px;
            .ant-progress-bg {
                background-color: $green_400;
            }
            .ant-progress-text {
                color: $grey_600;
                .anticon-check-circle:before {
                    color: $green_400;
                }
            }
        }
        .video-btn {
            min-width: 88px;
        }
        .video-cancel-btn {
            width: 88px;
            margin-top: 16px;
            display: block;
        }
        &-content-num {
            font-size: 12px;
        }
    }
}