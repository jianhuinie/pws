@import '../../../../resource/css/default.styl';
@import '../../../../resource/css/antd/table.styl';
@import '../../../../resource/css/antd/button.styl';


.single-select-video-table {
    text-align: right;
    .course-search {
        margin-bottom: 17px;
    }
    .ant-table-thead > tr > th {
        text-align: center;    
    }
    &-list {
        &-cover {
            img {
                width: 54px;
                height: 30px;
                margin: 11px 11px 11px 11px;
            }
        }
        &-name {
            font-size: 12px;
            color: $grey_600;
            line-height: 16px;
        }
        &-type, &-begin {
            text-align: center;
            font-size: 12px;
            color: $grey_400;
            line-height: 12px;
        }
        .ant-pagination {
            text-align: right;
        }
    }
    &-operation {
        text-align: center;
        button:first-child {
            margin-right: 20px; 
        }
    }
}