.form {
    padding-bottom: 24px;
    .ant-form-item {
        margin-bottom: 21px;
        label {
            color: $grey_600;
            font-size: 12px;
            line-height: 12px;
        }
    }
    .ant-input{
        border-radius: 2px;
        font-size: 12px;
        &:hover, &:focus {
            border: 1px solid $pink;
            box-shadow: 0 0 4px 0 rgba(249,93,93,0.60);  
        }
    }
    .ant-form-item-control {
        width: 580px;
        > .ant-form-explain {
            font-size: 12px;
            color: $pink;
            line-height: 12px;
            margin-top: 3px;
            position: absolute;
        }
    }
    &-operate {
        .ant-btn {
            margin-right: 20px;    
        }   
    }
}