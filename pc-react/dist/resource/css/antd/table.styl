.table {
    width: inherit;
    .ant-table {
        overflow: visible;
        font-size: 12px;
        .ant-table-content {
            .ant-table-placeholder {
                border-bottom: none;
                padding: 60px 0 30px;
            }
        }
        &-thead > tr > th {
            border-bottom: none;
            font-size: 12px;
            font-weight: 400;
            color: $grey_600;
            letter-spacing: 0;
            line-height: 12px;
            background-color: $grey_40;
            padding: 19px 10px;
        }  
        &-tbody > .ant-table-row {
            &.ant-table-row-hover,
            &:hover {
                & > td {
                    background-color: $grey_30;    
                }
            }
            &.highlight-table-row {
                background-color: $grey_30; 
            }
            > td {
                padding: 0 10px;
                border-color: $grey_50;
                line-height: inherit;
                vertical-align: inherit;
                border-top: inherit;
            }
        } 
        .ant-checkbox-checked .ant-checkbox-inner, 
            .ant-checkbox-indeterminate .ant-checkbox-inner, 
                .ant-radio-checked .ant-radio-inner, 
                    .ant-radio-indeterminate .ant-radio-inner {
                        background-color: $pink;
                        border-color: $pink;
        }
        .ant-radio-inner:after {
            background-color: $white;
        }
        .ant-checkbox-wrapper:hover .ant-checkbox-inner, 
            .ant-checkbox:hover .ant-checkbox-inner, 
                .ant-checkbox-input:focus + .ant-checkbox-inner ,
                    .ant-radio-wrapper:hover .ant-radio-inner, 
                        .ant-radio:hover .ant-radio-inner, 
                        .ant-radio-input:focus + .ant-radio-inner {
                            border-color: $pink;
        }
    }
    &-pagination {
        &.ant-table-pagination {
            text-align: center;
            margin: 30px auto 20px;
            float: none;
            .ant-pagination-jump-next, .ant-pagination-prev {
                margin-right: 5px;
            }
            .ant-pagination-jump-prev:focus:after, .ant-pagination-jump-next:focus:after, .ant-pagination-jump-prev:hover:after, .ant-pagination-jump-next:hover:after {
                color: $pink;    
            }
            .ant-pagination-jump-prev:after, .ant-pagination-jump-next:after {
                color: $grey_500;
            }
            .ant-pagination-prev,
                .ant-pagination-next {
                    border-radius: 2px;
                    min-width: 20px;
                    line-height: 20px;
                    height: 20px;
                    .ant-pagination-item-link {
                        border: 1px solid $grey_50;
                        font-size: 12px;
                        height: 20px;
                        width: 20px;
                        border-radius: 2px;
                        &:after {
                            height: 20px;
                        }
                        &:hover {
                            color: $pink;
                        }
                    }
                }
            .ant-pagination-jump-prev, 
            .ant-pagination-jump-next {
                min-width: 20px;
                line-height: 20px;
                height: 20px;
            }
            .ant-pagination-item {
                border-radius: 2px;
                height: 20px;
                width: 20px;
                border: none;
                font-size: 12px;
                min-width: 20px;
                line-height: 20px;
                margin-right: 5px;
                &.ant-pagination-item-active {
                    a {
                        background-color: $pink;
                        color: $white;
                        display: inline-block;
                        border-radius: 2px;
                    }
                }
                > a {
                    width: 20px;
                    height 20px;
                    color: $grey_500;
                    margin: 0;
                }
            }

        }
    }
    .order-table-operation, .purse-table-operation-canlender {
        thead>tr>th {
            border-bottom: 0;
        }
        thead>tr>th, tbody>tr>th, tfoot>tr>th, thead>tr>td, tbody>tr>td, tfoot>tr>td {
            padding: 0;
            line-height: inherit;
            vertical-align: inherit;
            border-top: 0;
        }
    }
}
    