@import "../../../resource/css/default.styl";

.image-upload {
    .ant-upload-list-picture-card {
        width: 100px;
        height: 100px;
        display: inline-block;
        margin-right: 20px;
        border: 1px solid $grey_100;
        border-radius: 2px;
        background-image: url("https://imgs.genshuixue.com/0cms/d/file/content/2018/01/5a4c8b62712ee.png");
        background-repeat: no-repeat;
        background-color: $grey_40;
        background-position:center;
        background-size: 20px 18px;
        .ant-upload-list-item {
            width: 100%;
            height 100%;
            border-radius: 2px;
            padding: 0;
            border: none;
        }
        .ant-upload-list-item-info {
            .ant-upload-list-item-uploading-text {
                display: none;
            }
            > span {
                height: 100%;
                width: 100%;
            }
            &:before {
                background: transparent;
            }
        }
    }
    .ant-upload-select.ant-upload-select-picture-card {
        width: 100px;
        height: 32px;
        border: none;
        background-color: $white;
        display: inline-block;
        > span {
            padding: 0;
            vertical-align: top;
        }
    }
    &-btn {
        color: $pink;
        border-color: $grey_100;
        font-size: 12px;
        line-height: 12px;
        padding: 10px 26px;
        border-radius: 2px;
        &:active, &:hover, &:focus {
            background-color: $white;
            color: $pink;
            border-color: $grey_100;    
        }
    }
    &-tip {
        font-size: 12px;
        color: $grey_400;
        line-height: 12px;
    }
}