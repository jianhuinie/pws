.top-banner {
    height: 64px;
	background: #3D3D3E;
	line-height: 64px;
	width: 100%;
    position: fixed;
    z-index: 950;
	.left {
		margin-left: 25px;
		> span {
			font-size: 23px;
			line-height: 64px;
		}
	}
	.right-item {
		display: inline-block;
		height: 64px;
		vertical-align: top;
	}
	.user-avator {
		width: 30px;
		height: 30px;
		img {
			width: 100%;
			height: 100%;
		}
	}
	.user-name {
		margin: 24px 8px;
		height: 14px;
		font-size: 14px;
		color: #A6A6A6;
		line-height: 14px;
	}
	.show-logout {
		margin: 26px 80px 26px 0;
		width: 12px;
		height: 12px;
		font-size: 10px;
		text-align: center;
		line-height: 12px;
		position: relative;
		.anticon-caret-down {
			color: #9D9D9E;
		}
		.logout-panel {
			position: absolute;
			top: 14px;
			z-index: 100;
			.logout-triangle {
				width: 0;
				height: 0;
				border-left: 8px solid transparent;
				border-right: 8px solid transparent;
				border-bottom: 10px solid #FFF;
			}
			.logout-btn {
				position: absolute;
    			left: -40px;
				width: 68px;
				height: 34px;
				line-height: 34px;
				text-align: center;
				font-size: 12px;
				color: #6D6D6E;
				background: #FFF;
				box-shadow: 0 1px 4px 0 #CDCDCE;
				border-radius: 2px;
			}
		}
	}
}