@import "../../../resource/css/default.styl";

.nav-page {
    width: 200px;
    background-color: $grey_600;
    margin-top: 64px;
    position: fixed;
    height: 100%;
    .path-tab {
        display: flex;
        font-size: 12px;
        color: $grey_300;
        line-height: 12px;
        > span {
            display: inline-block;
            margin-right: 7px;
        }
        &:hover {
            color: $white;
            > span:before {
                color: $white;
            }
        }
    }
    .icon-title-packup-nor {
        display: inline-block;
        padding-left: 80px;
    }
    .sider-name {
        .cursor, &.path-tab {
            padding: 15px 0 15px 25px;
            background-color: $grey_600;
            &.active {
                background-color: $pink;
                color: $white;
                > span:before {
                    color: $white;
                }
            }
        }
    }
    .second-sider-name {
        padding: 0;
        margin: 0;
        .path-tab {
            background-color: $grey_700;
            padding: 15px 0 15px 50px;
            &.active {
                background-color: $pink;
                color: $white;
                > span:before {
                    color: $white;
                }
            }
        }
    }
}