@import '../../../resource/css/default.styl';

.single-edit-add-video {
    margin: 0 0 120px 12.5%;
    &-button {
        font-size: 12px;
        line-height: 12px;
        padding: 8px 16px;
    }
    .ant-popover-inner {
        border-radius: 2px;
        .ant-popover-inner-content {
            padding: 0;
        }
    }
    &-popover {
        &-content {              
            a {
                display: block;
                width: 104px;
                height 32px;
                padding: 10px 0 10px 16px;
                font-size: 12px;
                color: $grey_500;
                line-height: 12px;
                &:hover {
                    background-color: $grey_40;
                    .single-edit-add-video-popover-content-spot {
                        width: 0; 
                        height: 0; 
                        font-size: 0; 
                        border-width: 5px; 
                        border-style: solid; 
                        border-color: $grey_40 transparent transparent;
                        overflow: hidden; 
                        position: absolute; 
                        left: 47px; 
                        top: 9px;
                    }
                }
                &:first-child {
                    border-radius: 2px 2px 0 0;
                }
                &:last-child {
                    border-radius: 0 0 2px 2px;
                }
            }
        }
    }
}