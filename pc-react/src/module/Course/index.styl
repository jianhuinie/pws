@import "../../resource/css/default.styl";

.course {
    &-tab {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        .ant-tabs-bar {
            height: 65px;
            padding-left: 50px;
            margin-bottom: 0;
        }
        .ant-tabs-tab {
            height: 66px;
            padding: 23px 16px;
            font-size: 16px;
            color: $grey_600;
            line-height: 16px; 
            &-active, &:hover, &:active {
                color: $grey_600;
                font-weight: normal;
            }
        }
        .ant-tabs-ink-bar {
            background-color: $pink;
        }
        .ant-tabs-content {
            flex-grow: 1;    
        }
    }    
}