@import '../../../resource/css/default.styl';

.course-carousel {
    &-content {
        display: flex;
        margin: 40px 0 60px 40px;
        &-image {
            > img {
                width: 320px;
            }
        }
        &-card {
            margin-left: 30px;
            &-tip {
                margin-top: 20px;
                p {
                    font-size: 12px;
                    color: $grey_600;
                    line-height: 30px;
                }
            }
        }
    }
    &-save-button {
        background-color: $blue_200;
        height 60px;
        position: fixed;
        bottom: 0;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
}
