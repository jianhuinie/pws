@import '../../../../resource/css/default.styl';

.video-table {
    flex-grow: 1;
    padding: 0 20px;
    &-list {
        .ant-table-thead > tr {
            .video-table-list-create-time, .video-table-list-operation {
                text-align: right;
            }
        }
        .ant-table-body {
            .ant-table-tbody > .ant-table-row > td {
                padding: 24px 10px;
                font-size: 12px;
                color: $grey_600;
                letter-spacing: 0;
                line-height: 16px;
            }
        }
        &-name {
            overflow: hidden;
            text-overflow:ellipsis;
            white-space: nowrap;
            width: 220px;
        }
        &-create-time, &-operation {
            text-align: right;
        }
        &-video-status-red {
            color: $pink;
        }
        &-operation {
            &-content {
                a {
                    display: inline-block;
                    margin-left: 10px;
                    color: $blue_400;
                    &:hover, &:active {
                        color: $blue_500;
                    }
                }
            }   
        }
    }
    &-modal.ant-modal {
        .ant-modal-content .ant-modal-body {
            padding: 0;
            height: 300px;
        }
    }
}