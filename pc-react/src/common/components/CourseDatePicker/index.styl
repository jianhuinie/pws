@import "../../../resource/css/default.styl";

.course-date-picker {
    font-size: 12px;
    &.course-date-picker-single:only-child {
        .ant-calendar-picker {
            margin: 0;
        }
    }
    .ant-calendar-picker {
        width: 160px;
        &:first-child {
            margin-right: 10px;    
        }
        &:nth-child(2) {
            margin-left: 10px;
        }
        &-input {
        
        }
        &:hover {
            .ant-calendar-picker-input:not(.ant-input-disabled) {
                border-color: $pink;
            }
        }
        .ant-calendar {
            font-size: 12px;
            &-header {
                a {
                    &:hover {
                        color: $pink;
                    }
                }
            }  
            &-today {
                .ant-calendar-date {
                    border-color: $pink; 
                    color: $pink;
                    background-color: $white; 
                    &:before {
                        border-color: $pink;
                    }
                }
                &.ant-calendar-disabled-cell {
                    .ant-calendar-date {
                        border: none;
                    }
                }
            }
            &-selected-day {
                .ant-calendar-date, .ant-calendar-date:hover {
                    background-color: $pink;
                    border-color: $pink; 
                    color: $white;
                }    
            }
            &-date:hover {
                background-color: $pink_200;
                border-color: $pink_200;
            }
            &-footer {
                a {
                    color: $pink;
                }
                .ant-calendar-ok-btn {
                    background-color: $pink;
                    border-color: $pink;
                    color: $white;
                    border-radius: 2px;
                    font-size: 12px;
                }
            }
            .ant-calendar-time-picker-select li:hover {
                background-color:$pink_200;
            }
            &-month-panel-body {
                .ant-calendar-month-panel-selected-cell .ant-calendar-month-panel-month {
                    background-color: $pink;
                }
                .ant-calendar-month-panel-month:hover {
                    background-color: $pink_200;
                    border-color: $pink_200;
                }
            }
            &-year-panel-body {
                .ant-calendar-year-panel-selected-cell .ant-calendar-year-panel-year {
                    background-color: $pink;
                }
                .ant-calendar-year-panel-year:hover {
                    background-color: $pink_200;
                    border-color: $pink_200;
                }
            }
        }
    }
}