.sm-btn {
    font-size: 12px;
    line-height: 12px;
    padding: 5px 8px;
}
.md-btn {
    font-size: 14px;
    line-height: 14px;
    padding: 9px 18px;
}
.lg-btn {
    font-size: 14px;
    line-height: 14px;
    padding: 9px 31px;
    width: 90px;
    height: 32px;
}
.classic-btn {
    border-radius: 2px;
    height: auto;
    font-weight: normal;
    &.ant-btn-clicked:after {
        border-color: $pink;
    }
}
.pink-btn {
    background-color: $pink;
    border-color: $pink;
    color: $white;
    &:active, &:hover, &:focus {
        background-color: $pink;
        border-color: $pink;
        color: $white;
    }
}
.blue-btn {
    background-color: $blue;
    border-color: $blue;
    color: $white;
    &:active, &:hover, &:focus {
        background-color: $blue;
        border-color: $blue;
        color: $white;
    }
}
.grey-btn {
    background-color: $grey_200;
    border-color: $grey_200;
    color: $white;
    &:active, &:hover, &:focus {
        background-color: $grey_200;
        border-color: $grey_200;
        color: $white;
    }
}
.white-btn {
    color: $grey_600;
    border-color: $grey_100;
    &:active, &:hover, &:focus {
        background-color: $white;
        color: $grey_600;
        border-color: $grey_100;    
    }
}
.video-btn {
    font-size: 12px;
    line-height: 12px;
    padding: 8px 10px;
    background-color: $grey_40;
    border-color: $grey_100;
    color: $grey_600;
    &:active, &:hover, &:focus {
        background-color: $grey_40;
        border-color: $grey_100;
        color: $grey_600;
    }
}

.video-cancel-btn {
    font-size: 12px;
    line-height: 12px;
    padding: 8px 10px;
    background-color: $grey_40;
    border-color: $grey_100;
    color: $pink;
    &:active, &:hover, &:focus {
        background-color: $grey_40;
        border-color: $grey_100;
        color: $pink;
    }
}