.popconfirm {
    &-overlay {
        .ant-popover-inner-content {
            .anticon-exclamation-circle {
                &:before {
                    color: $blue_400;
                }
            }
            .ant-popover-buttons {
                .ant-btn {
                    border-radius: 2px;
                    height: auto;
                    font-weight: normal;
                    font-size: 12px;
                    line-height: 12px;
                    padding: 5px 8px;
                }
                .ant-btn:first-child {
                    color: $grey_600;
                    border-color: $grey_100;
                    &:active, &:hover, &:focus {
                        background-color: $white;
                        color: $grey_600;
                        border-color: $grey_100;    
                    }
                }
                .ant-btn:last-child {
                    background-color: $pink;
                    border-color: $pink;
                    color: $white;
                    &:active, &:hover, &:focus {
                        background-color: $pink;
                        border-color: $pink;
                        color: $white;
                    }
                }
            }
        }
    }
}