$size-hash['dialog-header'] = {

    'base': {
        'border-bottom-width': 1px,
        'font-size': $font-size-large,
        'font-family': $font-family-title,
        'padding-vertical': 9px,
        'padding-horizontal': 20px,
    }

};

$size-hash['dialog-close'] = {

    'base': {
        'font-size': 30px,
        'width': 30px,
        'height': 30px,
        'line-height': 30px,
        'padding-vertical': 0,
        'padding-horizontal': 0
    }

};

$size-hash['dialog-body'] = {

    'base': {
        'padding-vertical': 20px,
        'padding-horizontal': 20px
    }
}

$type-hash['dialog'] = {

    'default': {
        'bg': #FFF
    }
};

$type-hash['dialog-header'] = {

    'default': {
        'bg': #F5F5F5,
        'color': #555,
        'border': #CCC
    }
};

$type-hash['dialog-close'] = {

    'default': {
        'color': #CCC
    },
    'hover': {
        'color': #999
    }
};

$type-hash['dialog-mask'] = {

    'default': {
        'bg': #000,
        'opacity': 0.3
    }
};

$dialog-close-top = 7px;
$dialog-close-right = 13px;
