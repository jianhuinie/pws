$size-hash['list'] = {

    'base': {
        'padding-vertical': 0px,
        'padding-horizontal': 10px,
        'border-radius': 6px
    }

};


$type-hash['list'] = {

    'default': {
        'bg': #FFF,
        'box-shadow': $box-shadow
    }
};

$size-hash['list-item'] = {

    'base': {
        'border-top-width': 1px,
        'padding-vertical': 18px,
        'padding-horizontal': 0px,
    }

};

$type-hash['list-item'] = {

    'default': {
        'bg': #FFF,
        'color': $text-color,
        'border': #E6E6E6
    },

    'hover': {
        'bg': $gray-lighter,
        'color': $list-item-color
    },

    'active': {
        'bg': #FFF,
        'color': $brand-info
    }
};

