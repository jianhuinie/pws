$dropdown-gap = 10px;
$dropdown-caret-size = 5px;
$dropdown-caret-color = #666;
$dropdown-caret-top = 8px;

$size-hash['dropdown'] = {

    'base': {
        'line-height': 0,
        'padding-vertical': 0,
        'padding-horizontal': 0
    }
};

$size-hash['dropdown-menu'] = {

    'base': {
        'border-top-width': 1px,
        'border-right-width': 1px,
        'border-bottom-width': 1px,
        'border-left-width': 1px,
        'max-height': 170px,
        'padding-vertical': 0,
        'padding-horizontal': 0
    }

};

$type-hash['dropdown-menu'] = {

    'default': {
        'bg': #FFF,
        'border': #CCC,
        'shadow': 0 2px 4px rgba(0,0,0,0.2)
    }
};

$size-hash['dropdown-menu-item'] = {

    'base': {
        'line-height': $line-height-base
    }
};

$type-hash['dropdown-menu-item'] = {

    'default': {
        'color': $text-color,
    },

    'hover': {
        'bg': $brand-primary-lighter,
        'color': $text-color
    },

    'active': {
        'bg': $brand-primary,
        'color': #FFF
    }
};




