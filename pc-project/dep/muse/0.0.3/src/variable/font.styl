// 标题字体
$font-family-title = PingHei, "Hiragino Sans GB", "Microsoft YaHei";

// 正文字体
$font-family-text = $font-family-title; //arial;

// 代码字体
$font-family-code = Menlo, Monaco, Consolas, "Courier New", monospace;


// 字体基准大小
$font-size-base = 14px;

// 小字
$font-size-small = floor($font-size-base * 0.86); // 12px

$font-size-tiny = floor($font-size-base * 0.86); // 12px

// 大字
$font-size-large = floor($font-size-base * 1.15); // 16px

$font-size-huge = floor($font-size-base * 1.3); // 18px

// h1 标题
$font-size-h1 = floor($font-size-base * 2.6); // 36px

// h2 标题
$font-size-h2 = floor($font-size-base * 2.15); // 30px

// h3 标题
$font-size-h3 = ceil($font-size-base * 1.7); // 24px

// h4 标题
$font-size-h4 = ceil($font-size-base * 1.25); // 18px

// h5 标题
$font-size-h5 = $font-size-base;

// h6 标题
$font-size-h6 = ceil($font-size-base * 0.85); // 12px