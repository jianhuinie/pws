thumbnail() {

    display: inline-block;
    line-height: 0;
    text-align: center;

    img& {
        ui-size('thumbnail');
        ui-type($type-hash['thumbnail']);
    }

    ui-size('thumbnail', 'img');
    ui-type($type-hash['thumbnail'], 'img');

    $offset-horizontal = $thumbnail-border-left-width + $thumbnail-border-right-width + 2 * $thumbnail-padding-horizontal;
    $offset-vertical = $thumbnail-border-top-width + $thumbnail-border-bottom-width + 2 * $thumbnail-padding-vertical;

    a& {

        position: relative;

        &:after {

            opacity(0);

            background-color: $thumbnail-bg-hover;
            content: ' ';
            position: absolute;
            left: $thumbnail-border-left-width + $thumbnail-padding-horizontal;
            top: $thumbnail-border-top-width + $thumbnail-padding-vertical;

            width: $size-hash['thumbnail']['base']['width'] - $offset-horizontal;
            height: $size-hash['thumbnail']['base']['height'] - $offset-vertical;

        }
    }

    a&:hover:after {

        opacity($thumbnail-opacity-hover);

        if ($transition-duration > 0) {
            transition: $transition-duration opacity;
        }
    }

    &{$size-tiny-selector} {
        a&:after {
            width: $size-hash['thumbnail']['tiny']['width'] - $offset-horizontal;
            height: $size-hash['thumbnail']['tiny']['height'] - $offset-vertical;
        }
    }

    &{$size-small-selector} {
        a&:after {
            width: $size-hash['thumbnail']['small']['width'] - $offset-horizontal;
            height: $size-hash['thumbnail']['small']['height'] - $offset-vertical;
        }
    }

    &{$size-large-selector} {
        a&:after {
            width: $size-hash['thumbnail']['large']['width'] - $offset-horizontal;
            height: $size-hash['thumbnail']['large']['height'] - $offset-vertical;
        }
    }

    &{$size-huge-selector} {
        a&:after {
            width: $size-hash['thumbnail']['huge']['width'] - $offset-horizontal;
            height: $size-hash['thumbnail']['huge']['height'] - $offset-vertical;
        }
    }

}


thumbnail-round() {

    img,
    img& {
        background-color: transparent;
    }

    img,
    img&,
    a&:hover:after {
        border-radius: $thumbnail-round;
    }
}

thumbnail-circle() {

    img,
    img& {
        background-color: transparent;
    }

    img,
    img&,
    a&:hover:after {
        border-radius: $thumbnail-circle;
    }
}


thumbnail-title() {

    display: block;
    margin-top: $thumbnail-title-gap;

    ui-size('thumbnail-title');
    ui-type($type-hash['thumbnail-title']);

}
