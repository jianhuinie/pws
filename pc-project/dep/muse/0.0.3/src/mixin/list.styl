list() {

    ui-size('list');
    ui-type($type-hash['list']);

}

list-item() {

    display: block;

    ui-size('list-item');
    ui-type($type-hash['list-item']);

    if ($size-hash['list-item']['base']['border-top-width'] > 0) {
        &:first-child {
            border-top: none;
        }
    }

    if ($size-hash['list-item']['base']['border-bottom-width'] > 0) {
        &:last-child {
            border-bottom: none;
        }
    }

}

