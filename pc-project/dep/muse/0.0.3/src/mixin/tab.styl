tab-nav() {
    text-align: left;
    clearfix();
}

nav-item() {

    float: left;
    position: relative;
    vertical-align: top;

    if ($support-mouse == true) {
        cursor: pointer;
        user-select: none;

        &{$active-selector} {
            cursor: text;
        }
    }

}

tab-panel() {
    display: none;
}

tab-nav-default() {
    ui-type($type-hash['tab-nav-default']);
    ui-size('tab-nav-default');
}

tab-item-default() {

    ui-type($type-hash['tab-item-default']);
    ui-size('tab-item-default');

    $size-default = $size-hash['tab-item-default']['base'];
    $border-left-width = $size-default['border-left-width'];

    if ($border-left-width > 0 && $border-left-width == $size-default['border-right-width']) {
        margin-left: -1 * $border-left-width;
    }
}

tab-nav-primary() {
    ui-type($type-hash['tab-nav-primary']);
    ui-size('tab-nav-primary');
}

tab-item-primary() {
    ui-type($type-hash['tab-item-primary']);
    ui-size('tab-item-primary');
}

tab-nav-info() {
    ui-type($type-hash['tab-nav-info']);
    ui-size('tab-nav-info');
}

tab-item-info() {
    ui-type($type-hash['tab-item-info']);
    ui-size('tab-item-info');
}