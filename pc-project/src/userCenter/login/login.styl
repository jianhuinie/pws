@import '../common/layout.styl';
@import './reset.styl';

.login-header,
.login-content {
    width: 100%;
    margin: 0 auto;
    .floated {
        width: 272px;
        position: absolute;
        top: 29%;
        left: 32%;
    }
}
.login-header {
    background-color: #fff;
    height: 120px;
    padding: 22px 500px;
    text-align: center;
    .logo-img {
        width: 200px;
        height: 76px;
    }
}

.login-content {
    position: relative;
    img {
        width: 100%;
    }
    .login-form {
        background-color: #fff;
        position: absolute;
        width: 360px;
        right: 13%;
        top: 10%;
        .login-title {
            font-size: 18px;
            margin-bottom: 20px;
            label {
                width: 50%;
                text-align: center;
                cursor: pointer;
                background-color: #f8f8f8;
                border: 1px solid #ddd;
                font-size: 16px;
                &.active {
                    border: 0;
                    background-color: #fff;
                    cursor: text;
                    color: #f90;
                    width: 50%;
                }
                input {
                    display: none;
                }
            }
        }
        .login-body {
            padding: 30px;
            padding-top: 0;
            .group {
                margin-top: 10px;
                label {
                    width: 100px
                }
            }
            .text-input {
                font-size: 15px;
                width: 300px;
                margin: 0 auto;
                .placeholder {
                    line-height: 34px;
                    font-size: 15px;
                }
                input {
                    height: 50px;
                }
            }
            .login-button {
                width: 300px;
                height: 50px;
                background-color: #ff7f00;
                font-size: 20px;
                margin-top: 30px;
            }
            .forget-password {
                float: right;
            }
        }
    }
}
.im-toggle-bar {
    display: none !important;
}



