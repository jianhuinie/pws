@import './common.styl'

.editor-body {
    .wrapper {
        position: relative;
        .button-switch {
            height: 44px;
            .edit-button {
                background-color: $white;
                padding-left: 45px;
                font-size: 16px;
                border: none;
                text-align: left;
                line-height: 32px;
                color: #CCCCCC;
            }

            .icon,
            .button-remove {
                position: absolute;
                color: $muted;
            }
            .icon {
                font-size: 24px;
                top: 10px;
                left: 12px;
            }
            .button-remove {
                font-size: 22px;
                right: 12px;
                top: 0px;
            }
        }
        .input-group {
            color: $muted;
            .floated {
                top: 8px;
                z-index: 1;
                font-size: 22px;
                &.icon-close {
                    top: 0px;
                }
            }
            .body-input {
                .placeholder {
                    font-size: 16px;
                    color: #ccc !important;
                }
                .placeholder,
                textarea {
                    border: none;
                    padding: 12px 45px;
                    padding-right: 50px;
                }
                textarea {
                    resize: vertical;
                }
            }
        }
    }

    .toolbar {
        background-color: $white;
        .button {
            margin-left: 15px;
        }
        .color-list {
            padding: 12px;
            display: inline-block;
            li {
                width: 16px;
                height: 16px;
                background-color: #000;
            }
        }
        .active {
            background-color: #fff3df;
            border: 1px solid #f90;
        }
    }
}