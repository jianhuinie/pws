@import './common.styl'

.editor-video {
    > .wrapper {
        position: relative;
    }

    .video {
        width: 244px;
        height: 140px;
        font-size: 16px;
        margin-left: 45px;
        border: 1px solid $muted;
    }
    .edit-button {
        background-color: $white;
        padding-left: 45px;
        padding: 20px 0;

        .icon {
            font-size: 22px;
            color: $muted;
            position: absolute;
            top: 20px;
            left: 15px;
        }

        .button-no-video {
            line-height: 120px;
            color: $muted;
        }
        .button-has-video {
            border: 1px solid $muted;
            margin: 45px;
            margin-bottom: 55px;
        }
        .button-ing-video {
            border: none;
            margin: 45px;
            margin-bottom: 55px;
        }

        .button-remove {
            float: right;
            font-size: 22px;
            color: $muted;
            margin-right: 10px;
            margin-top: -10px;
        }

        .view-video {
            display: inline-block;

            .thumbnail-video {
                position: relative;
                img {
                    width: 100%;
                    height: 100%;
                }
                .video-player {
                    cursor: pointer;
                    .play {
                        width: 60px;
                        height: 60px;
                        left: 50%;
                        top: 50%;
                        margin-left: -30px;
                        margin-top: -30px;
                    }
                    &:after {
                        content: '';
                        position: absolute;
                        top: 0;
                        left: 0;
                        right: 0;
                        bottom: 0;
                    }
                }
            }
        }
    }
}