@import '../../offlineCourseEdit/component/common.styl';

.related-setting {
    width: 835px;
    padding: 25px;
    background-color: #fff;
    border: 1px solid $border-color;
    color: $dark-gray;
    margin-top: 20px;
    .header {
        .title {
            font-size: 20px;
            &:before {
                content: ' ';
                background-color: $dark-gray;
                border-radius: 37px;
                display: inline-block;
                width: 5px;
                height: 16px;
                margin-right: 10px;
            }
        }
        .help {
            float: right;
            cursor: pointer;
            font-size: 12px;
        }
    }
    .form {
        .group {
            margin-top: 10px;
            > .label {
                width: 80px;
            }
            .controls {
                width: $input-width;
            }
            .input {
                background-color: $grey;
            }
            input {
                color: $font-color;
                &:focus {
                    background-color: $white;
                }
            }

            .inline {
                display: inline-block;
                > .label {
                    display: inline-block;
                    width: 80px;
                    text-align: right;
                }
                .controls {
                    display: inline-block;
                    .input-group {
                        display: inline-block;
                    }
                }
                .audition-input {
                    width: 75px;
                }
                .small-text {
                    margin-top: 8px;
                }
            }
            .radios {
                .no-allow {
                    margin-right: 15px;
                    line-height: 36px;
                }
                .allow {
                    float: right;
                    width: 590px;
                }
                > .radio {
                    &.disabled {
                        .tooltip {
                            &.error {
                                display: none !important;
                            }
                        }
                        .audition-input {
                            input {
                                border-color: #ccc;
                                color: #ccc;
                            }
                        }
                    }
                }
            }

            .checkboxes {
                .set-playback {
                    margin-left: 35px;
                    input {
                        width: 75px;
                    }
                }
                .checkbox {
                    cursor: pointer;
                    margin-left: 80px;
                    max-width: 200px;
                }
                .hint {
                    font-size: 12px;
                    color: #cbcbcb;
                    margin-left: 80px;
                }
            }
        }
    }
}

