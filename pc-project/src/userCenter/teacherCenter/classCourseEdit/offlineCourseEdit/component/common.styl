.classcourse-help-tooltip {
    width: 785px;
    font-size: 14px;
    line-height: 26px;
    border-radius: 6px;
    &:before,
    &:after {
        left: 96% !important;
        margin-left: -8px !important;
        border-width: 0 8px 8px 8px !important;
    }
    &:before {
        top: -8px !important;
    }
    &:after {
        top: -7px !important;
    }
}