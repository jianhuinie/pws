@import './common.styl';

.cover {
    width: 835px;
    padding: 25px;
    background-color: #fff;
    border: 1px solid $border-color;
    color: $dark-gray;
    margin-top: 20px;
    .header {
        .title {
            font-size: 20px;
            &:before {
                content: ' ';
                background-color: $dark-gray;
                border-radius: 37px;
                display: inline-block;
                width: 5px;
                height: 16px;
                margin-right: 10px;
            }
        }
        .help {
            float: right;
            font-size: 12px;
        }
    }

    .cover-editor {
        margin-top: 30px;
        .upload-wrapper {
            background-color: $grey;
            border: 1px solid $border-color;
            width: 242px;
            height: 136px;
            padding: 25px;
            margin-right: 15px;
            .icon-plus {
                font-size: 30px;
                padding: 10px;
            }
            &:hover {
                background-color: #fff;
                border-color: #f90;
            }
        }
        .cover-item {
            width: 242px;
            height: 136px;
            display: inline-block;
            margin-right: 15px;
            margin-bottom: 15px;
            vertical-align: top;
            img {
                vertical-align: top;
            }
            .cover-wrapper {
                display: inline-block;
                position: relative;
                .delete-icon {
                    display: none;
                    .icon {
                        position: absolute;
                        right: 0;
                        top: 0;
                        padding: 11px;
                        background-color: $grey;
                    }
                }
                &:hover {
                    .delete-icon {
                        display: block;
                    }
                }
            }
            &.active-parent {
                border: 1px dashed $brand-border;
            }
        }
        .cover-handler {
            &.dragging {
                cursor: move;
            }
            &.active {
                z-index: $zindex-large;
            }
            &.brother {
                box-shadow: 0 0 4px rgba(255,153,0,0.92);
            }
        }
    }
}

.classcourse-help-tooltip {
    ul {
        list-style: none;
        padding: 0;
        .image {
            width: 173px;
            height: 98px;
        }
    }
}
.photo-gallery {
    > .header {
        background-color: #fff;
        color: #3d3d3e;
    }
}