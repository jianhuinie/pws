@import '../component/common.styl';

.photo-gallery {
    margin-bottom: -10px;
    .wrapper {
        .pictures {
            background: $grey;
            width: 785px;
            height: 450px;
            overflow-y: auto;
            list-style: none;
            padding: 0;
            margin-top: 0;
            .picture-item {
                float: left;
                position: relative;
                margin-right: 19px;
                .image-box {
                    width: 172px;
                    height: 96px;
                    position: relative;
                    margin-top: 10px;
                    img {
                        position: absolute;
                        top: 0;
                        left: 0;
                    }
                }
                label {
                    position: absolute;
                    bottom: 0;
                    right: 0;
                    width: 100%;
                    height: 100%;
                    input {
                        z-index: -1;
                        position: absolute;
                        bottom: 0;
                        right: 0;
                    }
                    .icon {
                        font-size: 22px;
                        &.icon-circle {
                            color: #fff;
                        }
                    }
                    .choose {
                        position: absolute;
                        bottom: 5px;
                        right: 5px;
                    }
                }
            }
        }
        .buttons {
            text-align: center;
            margin-top: 15px;
            padding-right: 122px;
            .describtion {
                font-size: 12px;
                float: left;
            }
        }
    }
}