@import '../../../common/layout.styl';

#breadcrumb{
  display none
}

#content {
    min-width:1000px;
    .vip-header {
        width 100%
        height 250px
        margin-top 20px
        .header-photo {
          width: 100%;
          height: 250px;
          background: url("img/banner.png");
          padding-top 30px
          text-align center
        }
    }
    .vip-tishi {
        width: 100%;
        height: 30px;
        background: #ffffff;
        margin-top: 20px;
        padding-top: 5px;
        .redpoint{
          display: inline-block;
          width: 5px;
          height: 5px;
          background: red;
          border-radius: 5px;
          margin: 0px 3px 3px 10px;
        }
    }
    .vip-title{
        font-size 20px
        color #000000
        margin-top: 20px;
        .vip-red{
            width: 5px;
            height: 20px;
            background: #f95710;
            display: inline-block;
            position: relative;
            top: 2px;
            margin-right: 10px;
        }
    }
    .vip-center {
        width: 1020px;
        .vip-item {
            display: inline-block;
            width:231px;
            height: 265px;
            background: #FFFFFF;
            margin: 10px 20px 10px 0px;
            position: relative;
            &:hover {
                border-bottom-width:5px;
                margin-top: 5px;
                height: 270px;
            }
            .vip-descript {
                position: absolute;
                left: 0;
                bottom: 0;
                width: 100%;
                height: 70px;
                text-align: center;
                .vip-descript-title{
                    font-size: 16px;
                    color: #222222;
                }
                .vip-descript-content {
                    font-size: 12px;
                    color: #555555;
                }
            }
        }
        .item-page {
            background: url("img/page.png");
            border-bottom: 1px solid #ff5846;
        }
        .item-viplogo {
            background: url("img/viplogo.png");
            border-bottom: 1px solid #c683eb;
        }
        .item-live {
            background: url("img/live.png");
            border-bottom: 1px solid #a8dc84;
        }
        .item-study {
            background: url("img/study.png");
            border-bottom: 1px solid #66d8b9;
        }
        .item-sort {
            background: url("img/sort.png");
            border-bottom: 1px solid #9c7ffc;
        }
        .item-livetool {
            background: url("img/liveTool.png");
            border-bottom: 1px solid #8daef7;
        }
        .item-zhui {
            background: url("img/zhui.png");
            border-bottom: 1px solid #98d36f;
        }
        .item-datamf {
            background: url("img/datamf.png");
            border-bottom: 1px solid #7fb1f3;
        }
        .item-guwen {
            background: url("img/guwen.png") no-repeat;
            border-bottom: 1px solid #B7EBB9;
        }
    }
    .gvip-center{
        .item-live {
            background: url("img/g-live.png") no-repeat;
            border-bottom: 1px solid #a8dc84;
        }
        .item-livetool {
            background: url("img/liveTool.png") no-repeat;
            border-bottom: 1px solid #8daef7;
        }
        .item-zhui {
            background: url("img/g-zhui.png") no-repeat;
            border-bottom: 1px solid #98d36f;
        }
    }
    .cvip-center{
        .item-live {
            background: url("img/c-live.png") no-repeat;
            border-bottom: 1px solid #a8dc84;
        }
        .item-livetool {
            background: url("img/liveTool.png") no-repeat;
            border-bottom: 1px solid #8daef7;
        }
        .item-zhui {
            background: url("img/c-zhui.png") no-repeat;
            border-bottom: 1px solid #98d36f;
        }
    }

    .vip-level{
        width:100%;
        height:104px;
        margin-top: 10px;
        .level-link{
            width: 328px;
            display: inline-block;
            text-align: center;
            background: #ffffff;
            margin-left: 2px;
            height: 104px;
            color: #222222;
            font-size: 14px;
            padding-top: 50px;
            padding-left: 20px;
            cursor:pointer;
            position: relative;
            border-bottom: 2px solid #ffffff;
            &:hover {
                color: #f90;
                border-bottom: 2px solid red;
            }
            .icon{
              display: inline-block;
              position: absolute;
              top: 36px;
            }
            .icon-level3{
              background: url("img/cvip.png") no-repeat;
              width: 40px;
              height: 40px;
              left: 105px;
            }
            .icon-level2{
              background: url("img/gvip.png") no-repeat;
              width: 40px;
              height: 40px;
              left: 105px;
            }
            .icon-level1{
              background: url("img/vip.png") no-repeat;
              width: 40px;
              height: 40px;
              left: 120px;
            }
        }
        .active{
            border-bottom: 2px solid red;
        }
    }
}
