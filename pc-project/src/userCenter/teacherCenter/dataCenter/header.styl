#content {
    padding: 1px 30px;
    min-height: 820px;
    .data-center-header {
        margin-top: 20px;
        height: 37px;
        padding: 0;
        border-bottom: 2px solid #e8e8e8;
        li {
            float :left;
            list-style-type :none;
            width: 119px;
            height: 37px;
            font-weight: bold;
            text-align: center;
            cursor: pointer;
            a {
                color: #000;
                display: block;
                width: 120px;
                font-size: 18px;
                border-right: 1px solid #e8e8e8;
            }
            &:hover {
                border-bottom: 2px solid #f90;
                a {
                    color: #f90;
                }
            }
        }
    }
}