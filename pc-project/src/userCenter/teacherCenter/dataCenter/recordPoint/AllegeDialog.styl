@import '../../../common/layout.styl';

.allege-dialog {
    width: 710px;
    background: #fff;
    .close {
        font-size: 25px;
        position: absolute;
        right: 19px;
        top: 0;
        cursor: pointer;
    }
    .block {
        margin: 10px 0;
        .title {
            float: left;
        }
        .reson {
            margin-left: 83px;
        }
    }
    .body {
        padding: 20px 40px;
        margin-top: 10px;
        .explain {
            background: #ffffff;
            border: 1px solid #e3e3e3;
            width: 505px;
            height: 188px;
            display: inline-block;
            padding: 10px;
            word-break: break-word;
            vertical-align: top;
        }
        .form {
            .input {
                margin-top: 10px;
            }
            div.input > textarea {
                width: 510px;
                height: 157px;
            }
            .block {
                width: 510px;
                text-align: right;
                .reson {
                    margin-left: 10px;
                }
            }
            .upload-pics {
                margin-left: 40px;
                .text {
                    display: inline-block;
                    vertical-align: bottom;
                    font-size: 13px;
                    line-height: 35px;
                    text-align: left;
                }
            }

            .images {
                font-size: 12px;
            }
            .show-images {
                list-style: none;
                margin-top: 20px;
                overflow: hidden;
                margin: 10px 0;
                padding: 0;
                height: 75px;
                li {
                    float: left;
                    background: url(/src/img/bg/picbg.png) no-repeat;
                    background-color: #ccc;
                    position: relative;
                    width: 90px;
                    height: 70px;
                    margin-right: 20px;
                    text-align: center;
                    .mask {
                        display: none;
                        position: absolute;
                        width: 100%;
                        height: 100%;
                        background-color: #000;
                        opacity: 0.2;
                    }

                    &:hover {
                        .mask {
                            display: block;
                        }
                    }

                    .status {
                        display: inline-block;
                        font-size: 12px;
                        font-weight: bold;
                        margin: 15px auto;
                    }

                    .progress {
                        background: none;
                        position: absolute;
                        left: 0;
                        bottom: 0;
                        width: 100%;
                        height: 22px;
                        z-index: 2;
                    }
                    .progress-bar {
                        opacity: 0.5;
                        background-color: #f90;
                        display: block;
                        height: 100%;
                        width: 0;
                    }
                    .action {
                        display: none;
                        color: #fff;
                        cursor: pointer;
                        background-color: #000;
                        position: absolute;
                        right: 0;
                        top: 0;
                        z-index: 999;
                        .rename {
                            display: none;
                            padding:1px 2px;
                            &:hover {
                                background-color: #6287d5;
                            }
                        }
                        .del {
                            padding: 1px 2px;
                            &:hover {
                                background-color: #f95710;
                            }
                        }
                    }
                    .form-group {
                        display: none;
                        position: absolute;
                        top: 66px;
                        line-height: 15px;
                        z-index: 2;
                        .caption {
                            font-size: 12px;
                            display: block;
                            text-align: left;
                            word-wrap: break-word;
                            margin-left: 0px;
                        }
                        .form-text {
                            font-size: 12px;
                            padding:0;
                            padding-left: 7px;
                            width: 90px;
                            height: 22px;
                            line-height: 22px;
                        }
                    }
                }

            }
            .btn-upload {
                position: relative;
                z-index: 999;
                margin-right: 10px;
                form {
                    position: absolute;
                    display: block;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    input {
                        opacity: 0;
                        position: absolute;
                        left: 0;
                        top: 0;
                        width: 100%;
                        height: 100%;
                        z-index: 2;
                    }
                }
            }
        }
    }
    .caption {
        margin-left: 82px;
        padding: 10px 0;
        color: #888;
    }
    .buttons {
        text-align: center;
        .button {
            width: 100px;
        }
    }
    .footer {
        padding-top: 10px;
        padding-bottom: 15px;
        background: #eee;
        .result {
            padding: 10px 35px;
        }
    }
}