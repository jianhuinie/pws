@import '../../../common/layout.styl';

@import '../header.styl';

#content {
    strong {
        display: block;
        margin: 40px 0 20px 0;
    }
    .table > tbody > tr > td {
                    font-size: 14px;
                    font-size: 14px;
                    vertical-align: middle;
                    .btn {
                        border: none;
                        background: none;
                    }
                }
                .grey {
                    color:#9d9e9e;
                }
    .badge {
        font-size: 34px;
        line-height: 1.571428571428571;
        padding: 6px 12px;
        border-radius: 50px;
        background:#fc5c5a;
    }
    .title {
        text-align: center;
        line-height: 50px;
        color: #9d9e9e;
    }
    .data-center-header {
        .RecordPoints{
            border-bottom: 2px solid #f90;
            a {
                color: #f90;
            }
        }
    }
    .tips {
        margin-Left: 20px;
    }
    //去掉表头的边框
    .table.cell-bordered > thead > tr > th {
        border: none;
    }
    .pagination {
        margin-top: 10px;
        text-align: center;
    }
    .points-detail {
        overflow: hidden;
    }
    .no-record {
        height: 150px;
        line-height: 150px;
        color: #ccc;
        text-align: center;
    }
    .end {
        margin-bottom: 46px;
        line-height: 20px;
        div {
            margin: 10px 0;
        }
    }
}