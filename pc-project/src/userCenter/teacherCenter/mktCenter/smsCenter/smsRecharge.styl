.recharge-dialog {
    width: 350px;

    .input-block {
        margin-left: 90px;
    }

    .input > input {
        text-align: center;
        width: 100px;
        height: 40px;
        line-height: 24px;
        font-size: 20px;
    }

    .right-btn,
    .unit {
        display: inline-block;
    }

    .unit {
        vertical-align: bottom;
        color: #9d9d9d;
        margin-left: 40px;
        font-size: 12px;
    }

    .right-btn {
        vertical-align: top;
        text-align: center;
        margin-left: -1px;
        cursor: default;
        .add,
        .minus {
            width: 20px;
            height: 20px;
            text-align: center;
            border: 1px solid #eee;
            curson: default;
        }
        .add {
            border-bottom: none;
        }
    }

    .submit {
        width: 100%;
        margin-top: 30px;
    }

    .tip {
        font-size: 12px;
        color: #9d9d9d;
        margin-top: 10px;
    }

    .tooltip {
        left: -10px!important;
        top: -32px!important;
        padding: 3px 5px;
        text-align :center;
    }
}



