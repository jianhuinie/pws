/*
 * @file 为学生排课弹窗样式
 * @author wangyujie
 */
@import "../../common/variable";
@import "../../common/mixin.styl";

.checkin-dialog {

    .header {
        strong {
            color: #f90;
        }
        span {
            display: inline-block;
            text-align: center;
            width: 345px;
        }
    }

    .no-vip {
        text-align: center;
        p {
            margin-bottom: $horizontal-medium;
        }
    }

    .quick-schedule-class {

        // 人列表
        .person-list {
            clearfix();
            float: left;
            width: 354px;
            margin-bottom: 2 * $horizontal-medium;
            .no-result {
                text-align: center;
                margin-top: 130px;
                .btn-search-all {
                    cursor: pointer;
                    color: @brand-info;
                    &:hover {
                        color: @brand-primary;
                    }
                }
            }
        }

        #search {
            .input-group {
                height: 36px;
                width: 370px;
                .icon-search {
                    color: #ccc;
                    vertical-align: middle;
                    margin-right: $horizontal-tiny;
                }
                .search-input {
                    border: none;
                    font-size: 12px;
                    width: 305px;
                    height: 30px;
                }
            }
            .btn-search {
                vertical-align: bottom;
                border-radius: 0;
            }
        }

        .person-list-inner {
            font-size: 12px;
            .hint {
                span {
                    display: inline-block;
                    padding: 7px 12px;
                }
                .info {
                    float: right;
                    color: $brand-info;
                    padding-top: 7px;
                    &:hover {
                        color: $brand-primary;
                    }
                }
            }
        }

        ul.p-list {
            border: 1px solid $brand-border;
            width: 354px;
            height: 360px;
            overflow-x: hidden;
            overflow-y: auto;
            .no-result {
                text-align: center;
                margin-top: 130px;
                .btn-search-all {
                    color: $brand-info;
                    &:hover {
                        color: $brand-primary;
                    }
                }
            }

            .item {
                cursor: pointer;
                border: 1px solid transparent;
                padding: 0 $horizontal-small;
                &:hover {
                    border: 1px solid $brand-primary;
                    background-color: #fffbef;
                }

                .icon {
                    font-size: 14px;
                    margin: 0 2px;
                }

                .display-name {
                    width: 90px;
                }

                .icon-lightning-o {
                    color: #9D9D9D;
                }
                .icon-lightning-circle {
                    color: $brand-primary;
                }

                .remain-time {
                    strong {
                        color: $brand-primary;
                    }
                }
            }
            .student-item {
                div {
                    display: inline-block;
                    line-height: 32px;
                }
                .student-info {
                    width: 32%;
                    max-width: 105px;
                }
                .subject-name {
                    width: 48%;
                    max-width: 160px;
                    overflow: hidden;
                    white-space: nowrap;
                    vertical-align: middle;
                    text-overflow: ellipsis;
                }
                .remain-time {
                    width: 18%;
                    max-width: 56px;
                }
            }
            .teacher-item {
                clearfix();
                line-height: 25px;
                padding: $horizontal-small;
                .avatar-small {
                    float: left;
                    font-weight: normal;
                    margin-right: $horizontal-small;
                }
                .teacher-info {
                    margin-top: $horizontal-small;
                    .display-name {
                        display: inline-block;
                        width: 7em;
                    }
                }
            }
        }

        .item-header {
            line-height: 24px;
            background-color: #ebf6fe;
            border: 1px solid $brand-border;
            border-bottom: none;
            div {
                display: inline-block;
                height: 24px;
            }
            .student-info {
                width: 28%;
                max-width: 92px;
                padding-left: 26px;
            }
            .subject-name {
                width: 57%;
                max-width: 190px;
                padding-left: 55px;
            }
            .remain-time {
                width: 13%;
                max-width: 45px;
            }
        }

        // 订单列表
        .order-list {
            display: inline-block;
            font-size: 12px;
            width: 360px;
            height: 420px;
            overflow: auto;
            margin-left: $horizontal-medium;

            .not-choice-person {
                text-align: center;
                img {
                    display: inline-block;
                    margin-top: 100px;
                }
            }

            .order-item {
                border: 1px solid $brand-border;
                cursor: pointer;
                margin-bottom: $horizontal-medium;
                .order-header {
                    background-color: #ebf5ff;
                    color: #9D9D9D;
                    padding: $horizontal-tiny $horizontal-medium;
                    .order-id {
                        float: right;
                    }
                }
                table {
                    width: 100%;
                }
                td {
                    padding: $horizontal-small;
                    padding-left: 0;
                    line-height: 22px;
                    .label-default {
                        margin-right: $horizontal-tiny;
                    }
                }
                .course-info {
                    padding-left: $horizontal-medium;
                }
                .order-time {
                    width: 100px;
                }
                .remain-time {
                    padding-left: 12px;
                }
            }

            .no-data {
                width: 280px;
                font-size: 14px;
                margin: 40px auto;
                text-align: center;
                .piezui {
                    width: 90px;
                }
                p {
                    padding-bottom: 3 * $horizontal-medium;
                    border-bottom: 1px solid #F8F8F8;
                }
                .user-contact {
                    font-size: 14px;
                    padding: 1.5 * $horizontal-medium;
                    clearfix();
                    text-align: left;
                    a {
                        color: $brand-info;
                        &:hover {
                            color: $brand-primary;
                        }
                    }
                }
                .avatar-small {
                    float: left;
                    font-weight: normal;
                    margin-right: $horizontal-small;
                }
                .chat-label {
                    margin-left: $horizontal-small;
                }
                .user-mobile {
                    display: block;
                }
            }
        }
    }

}
