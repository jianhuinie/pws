@import 'userCenter/common/variable.styl'
@import 'userCenter/common/mixin.styl'

.course-section-form
    background-color #FFF
    border 1px solid $brand-border
    padding $vertical-medium $horizontal-medium

    .floated
        float right

    > .header
        // 固定高度，避免切换状态时抖动
        height 60px
        clearfix()

    .course-index

        color #FFF
        font-size 12px
        float left
        text-align center
        padding $vertical-tiny $horizontal-medium

        > strong
            display block
            font-size 130%

    &[data-type="free"]
        .course-index
            background-color #57BA31

    &[data-type="trial"]
        .course-index
            background-color #F75F78

    &[data-type="pay"]
        .course-index
            background-color $brand-info

    .course-name
        min-height 60px
        margin-left 44 + $horizontal-medium
        position relative
        line-height 0

        > .input
            height 60px

        .btn-edit
            margin-left $horizontal-small

    .free-course
        color #57BA31

    .trial-course
        color #F75F78

    > .wrapper
        position relative

        > .body
            margin-top $vertical-tiny
            height 17px

            > .video-name
                font-size 12px

            > .btn-del
                margin-top 2px

        > .footer
            margin-top $vertical-large
            height 20px
            clearfix()

            > .button
                vertical-align top

        > .btn-del
            background url(../img/sprite.png) no-repeat -20px -52px
            cursor pointer
            width 23px
            height 23px
            position absolute
            top -23px
            right -20px

    .icon-info-circle
        cursor default
        margin-left $horizontal-tiny
        vertical-align middle

    .progress
        width 260px
        height 16px
        > .meter
            padding 0

    .uploading-video
        margin-top $vertical-tiny
        max-width 16em
        text-overflow()
