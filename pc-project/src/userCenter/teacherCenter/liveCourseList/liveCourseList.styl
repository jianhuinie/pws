@import '../../common/layout.styl';

#breadcrumb {
    display: none;
}
#main {
    margin-top: 20px;
}
#content {
    .card-head {
        background-color: #FBFBFB;
        border-bottom: 1px solid #dddddd;
        font-size: 14px;
        color: #6d6d6d;
        padding: 8px 30px;
        a {
            color: #6287d5;
        }
    }
    .card-body {
        width: 750px;
        margin: 0 auto;
        .tab-nav {
            border-bottom: 1px solid #ccc;
            margin-bottom: 18px;
            a {
                display: inline-block;
                width: 120px;
                line-height: 48px;
                text-align: center;
                &:hover {
                    border-bottom: 4px solid #6287d5;
                    color: #6287d5;
                }
            }
            .active {
                border-bottom: 4px solid #6287d5;
                color: #6287d5;
                cursor: text;
            }
        }
        .add-button {
            padding-bottom: 18px;
            border-bottom: 1px solid #ccc
            a {
                width: 115px;
                line-height: 26px;
                display: inline-block;
                cursor: pointer;
                text-align: center;
                background-color: #6287d5;
                border-color: #567ed2;
                border-radius: 2px;
                padding: 6px 12px;
                color: #fff;
                &:hover {
                    background-color: #567ed2;
                    border-color: #4974ce;
                }
            }
            i {
                margin-right: 5px;
            }
        }
        .search-form {
            padding: 20px 0;
            position: relative;
            font-size: 12px;
            color: #6d6d6d;
            label {
                margin-right: 10px;
            }
            .icon-close {
                position: absolute;
                left: 195px;
                top: 35px; 
                cursor: pointer;
            }
            .course-name {
                width: 168px;
                margin-right: 20px;
                .placeholder {
                    padding: 3px;
                    font-size: 12px;
                }
                input {
                    padding: 3px;
                    height: 26px;
                    font-size: 12px;
                }
            }
            .course-status {
                position: relative;
                text-align: left;
                top: 8px;
                width: 168px;
                .button {
                    font-size: 12px;
                    padding: 3px;
                    height: 26px;
                    .text {
                        margin-left: 10px;
                    }
                }
                .menu {
                    li {
                        font-size: 12px;
                        color: #3c3d3d;
                    }
                }
            }
            .search-btn {
                width: 48px;
                line-height: 30px;
                display: inline-block;
                text-align: center;
                font-size: 12px;
                margin-left: 20px;
                background: #ff9a00;
                border: 1px solid #f49200;
                border-radius: 2px;
                cursor: pointer;
                color: #fff;
                &:hover {
                    background-color: #f29100;
                }
                &:active {
                    background-color: #f27100;
                    border-color: #e68a00;
                    -webkit-box-shadow: inset 0 3px 5px rgba(0, 0, 0, 0.125);
                    box-shadow: inset 0 3px 5px rgba(0, 0, 0, 0.125);
                }
            }
            .clear-all {
                font-size: 12px;
                color: #6085d8;
                line-height: 12px;
                cursor: pointer;
                margin-left: 20px;
            }
        }
        .course-list {
            table {
                font-size: 12px;
                thead {
                    line-height: 38px;
                    background-color: #f7f7f7;
                    border-color: transparent;
                    td {
                        color: #3c3d3d;
                        text-align: center;
                    }
                    .sort {
                        color: #6287d5;
                        cursor: pointer;
                        &:hover {
                            color: #f90;
                        }
                        .icon {
                            margin-left: 5px;
                            color: #9d9d9d;
                            display: inline-block;
                            vertical-align: baseline;
                        }
                    }
                    .sort.active {
                        .icon {
                            color: #f90;
                        }
                    }
                }
                tbody {
                    tr {
                        height: 115px;
                        vertical-align: middle;
                        border-bottom: 1px solid #ccc;
                        td {
                            text-align: center;
                            vertical-align: middle;
                            .info {
                                .photo {
                                    width: 62px;
                                    height: 62px;
                                    float: left;
                                    margin-right: 5px;
                                    position: relative;
                                    img {
                                        width: 60px;
                                        height: 60px;
                                        border: 1px solid #DDD;
                                    }
                                    a:after {
                                        content: ' ';
                                        width: 62px;
                                        height: 62px;
                                        opacity: .4;
                                        position: absolute;
                                        left: 0;
                                        top: 0;
                                    }
                                    a:hover:after {
                                        background-color: #000;
                                        transition: background 0.3s;
                                    }
                                }
                                .name {
                                    margin-top: 20px;
                                    font-size: 14px;
                                    a {
                                        color: #6287d5;
                                        &:hover {
                                            color: #f90;
                                        }
                                    }
                                }
                                .icons {
                                    margin-top: 15px;
                                    font-size: 20px;
                                    a {
                                        &:first-child {
                                            margin-right 10px;
                                        }
                                    }
                                    .icon-anytime-joinclass,
                                    .icon-limit-joinclass {
                                        color: #E75D98;
                                    }
                                    .icon-anytime-quitclass,
                                    .icon-limit-quitclass {
                                        color: #9467D2;
                                    }
                                }
                                .set-position {
                                    position: relative;
                                    top: 37px;
                                }
                                .clearfix {
                                    clear: both;
                                }
                            }
                            .success-pay {
                                font-size: 13px;
                                color: #6d6d6d;
                            }
                            .text-primary {
                                color: #f90;
                                font-size: 13px;
                            }
                            .text-info {
                                color: #6287d5;
                                display: block;
                            }
                            .view-roster {
                                display: block;
                                color: #6287d5;
                                cursor: pointer;
                                a {
                                    color: #6287d5;
                                    &:hover {
                                        color: #f90;
                                    }
                                }
                            }
                            .date-time {
                                font-size: 14px;
                                color: #6d6d6e;
                            }
                            .action {
                                position: relative;
                                color: #6287d5;
                                span {
                                    cursor: pointer;
                                    a {
                                        color: #6287d5;
                                        &:hover {
                                            color: #f90;
                                        }
                                    }
                                    &:hover {
                                        color: #f90;
                                    }
                                }
                                .icon-question-circle {
                                    display: inline-block;
                                    position: absolute;
                                    right: 0;
                                    top: 2px;
                                }
                            }
                        }
                        .basic-info {
                            text-align: left;
                        }
                    }
                }
            }
        }
        .pager,
        .empty,
        .loading,
        .no-result {
            text-align: center;
            padding: 20px 0;
        }
        .pager {
            width: 100%;
        }
    }
}