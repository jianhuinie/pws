@import '../../common/layout.styl';
#content {
    padding: 10px 20px 20px 20px;
    .invite-register {
        margin: 0 auto;
        padding-top: 10px;
        padding-bottom: 10px;
        .detail {
            height: 185px;
            .left {
                float: left;
                width: 520px;
                margin-right: 70px;
                .intro {
                    font-size: 14px;
                }
                .step-list {
                    font-size: 12px;
                    line-height: 25px;
                }
                .link-info {
                    height: 37px;
                    position: relative;
                    left: 13px;
                    #linkDetail {
                        resize: none;
                        width: 250px;
                        height: 35px;
                        padding-top: 5px;
                        text-align: center;
                        border: 1px solid #cccccc;
                        background-color: #ffffff;
                    }
                    .copy-link {
                        width: 100px;
                        height: 35px;
                        border: none;
                        color: #ffffff;
                        background-color: #ff9900;
                        border-radius: 2px;
                        position: absolute;
                        bottom: 2px;
                        right: 160px;
                    }
                    #textClipboard1 {
                        width: 100px;
                        height: 35px;
                        position: relative;
                        left: 260px;
                        bottom: 41px;
                        opacity: 0;
                    }
                }
            }

            .right {
                float: right;
                width: 150px;
                text-align: center;
                font-size: 12px;
                .tip-pic {
                    width: 123px;
                    height: 105px;
                    margin: 0 auto;
                    background-image:
                    url("/src/userCenter/teacherCenter/invitation/img/tip.jpg");
                }
                .invited-friends {
                    span {
                        font-size: 20px;
                    }
                }
            }
        }
        .record {
            margin: 0 auto;
            .tip {
                font-size: 16px;
            }
            table {
                width: 750px;
                margin: 0 auto;
                color: #303030;
                font-size: 12px;
                thead {
                    background-color: #f5f5f5;
                    border: 1px solid #e8e8e8;
                    height: 50px;
                    text-align: center;
                    th {
                        text-align: center;
                        height: 50px;
                        padding-top: 19px;
                        display: inline-block;
                        width: 20%;
                    }
                }
                tr {
                    height: 50px;
                    text-align: center;
                    border-bottom: 1px solid #e8e8e8;
                    td {
                        text-align: center;
                        height: 50px;
                        padding-top: 19px;
                        display: inline-block;
                        width: 20%;
                    }
                }

            }

        }
        .text-state {
            margin-top: 30px;
            font-size: 14px;
            .first-title {
                font-size: 16px;
            }
            .infobox {
                margin-bottom: 20px;
                div {
                    margin-top: 10px;
                }
                .second-title {
                    font-weight: bold;
                    font-size: 12px;
                }
                .setIndent {
                    font-size: 12px;
                    position: relative;
                    left: 24px;
                }
                #setWidth {
                    width: 500px;
                }
            }

        }
    }

    .invite-evalute {
        margin: 0 auto;
        padding-top: 20px;
        .title {
            margin-bottom: 10px;
        }
        #contentDetail {
            width: 735px;
            height: 80px;
            resize: none;
            border: 1px solid #cccccc;
            padding: 5px;
            background-color: #ffffff;
        }
        .copy-content {
            width: 100px;
            height: 35px;
            border: none;
            color: #ffffff;
            background-color: #ff9900;
            border-radius: 2px;
            position: relative;
            left: 635px;
        }
        #textClipboard2 {
            width: 100px;
            height: 35px;
            position: relative;
            left: 635px;
            bottom: 35px;
            opacity: 0;
        }
    }

    .invalid-info,
    .invite-register {
        .bg-picture {
            padding-top: 100px;
            width: 110px;
            height: 110px;
            margin: 100px auto 10px;
            background-image:
            url("/src/userCenter/teacherCenter/invitation/img/nono.jpg");
        }
        .text {
            text-align: center;
            font-size: 14px;
            margin-bottom: 30px;
            color: #909090;
        }
    }

}

