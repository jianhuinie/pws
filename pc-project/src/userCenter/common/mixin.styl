
clearfix()
    &:before,
    &:after
        content " "
        display table

    &:after
        clear both

    zoom 1

opacity(value)
    opacity value
    filter unquote('alpha(opacity=' + 100 * value + ')')

text-overflow()
    overflow hidden
    text-overflow ellipsis
    white-space nowrap

word-break()
    word-break break-all
    word-wrap break-word
    white-space normal