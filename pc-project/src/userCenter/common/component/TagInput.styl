@import '../variable.styl'

.tag-input
    background-color #FFF
    border 1px solid $brand-border
    display inline-block
    position relative

    > .buttons
        padding-left $horizontal-medium
        padding-right $horizontal-medium

        > .button
            margin $vertical-small $horizontal-small 0 0 !important

    .icon-times
        margin-left $horizontal-small

    > .input
        width 100%

    > .input,
    input,
    textarea
        border-width 0
