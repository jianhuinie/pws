<import src="../../components/suggestion/index.wxml" />
<scroll-view scroll-y="true" class="find-teacher-public" bindtap="bindPageTap">
	<form>
		<view class="question">
			<view class="item one-line">
				<label>我想学</label>
				<view class="right">
					<input
						placeholder="学习科目"
						auto-focus
						value="{{saveDataParams.info}}"
						maxlength="10"
						bindinput="bindSubjectInput"
					/>
					<template is="suggestion" data="{{...suggOpt}}" />
					<!--<icon type="warn" wx:if="{{!saveDataParams.info}}" class="warning" size="23"/>-->
				</view>
			</view>
			<view class="item mult-line">
				<label>详细描述</label>
				<view class="right detail-info">
					<textarea
						placeholder="描述一下您的学习需求，介绍一下学生的基本情况，清楚准确的描述会更容易找到老师"
						autofocus
						value="{{saveDataParams.detail_info}}"
						bindinput="bindDetailKeyInput"
						wx:if="{{isShowTextarea}}"
						auto-focus
					/>
					<!--textarea的placeholder遮挡suggesion-->
					<view
						wx:if="{{!isShowTextarea}}"
						class="ta-view {{!saveDataParams.detail_info && 'placeholder'}}"
						bindtap="bindTapTextareaView"
					>
						{{saveDataParams.detail_info || '描述一下您的学习需求，介绍一下学生的基本情况，清楚准确的描述会更容易找到老师'}}
					</view>
				</view>
				<!--<icon type="warn" wx:if="{{!saveDataParams.detail_info}}" class="warning" size="23"/>-->
			</view>
			<view class="item one-line">
				<label>学费</label>
				<view class="right">
					<picker
						range="{{expPrice}}"
						value="{{priceIndex}}"
						bindchange="bindPriceChange"
					>
						<view class="picker {{priceIndex < 0 && 'placeholder'}}">
							{{expPrice[priceIndex] || '愿意支付的课时费'}}
		                </view>
					</picker>
				</view>
				<!--<icon type="warn" wx:if="{{!saveDataParams.exp_price}}" class="warning" size="23"/>-->
			</view>
			<view class="item one-line">
				<label>线上授课</label>
				<view class="right txt-right">
					<switch
					checked="true"
					bindchange="bindOnlineChange"></switch>
				</view>
			</view>
		</view>
		<view class="user-info">
			<view class="item one-line">
				<label>姓名</label>
				<view class="right">
					<input
						placeholder="真实姓名"
						value="{{saveDataParams.user_name}}"
						maxlength="10"
						bindinput="bindNameKeyInput"
					/>
				</view>
				<!--<icon type="warn" wx:if="{{!saveDataParams.user_name}}" class="warning" size="23"/>-->
			</view>
			<view class="item one-line">
				<label>手机号</label>
				<view class="right phone-container">
					<view class="phone">
						<input
							type="number"
							placeholder="输入手机号" value="{{saveDataParams.mobile}}"
							maxlength="14"
							bindinput="bindPhoneKeyInput"
						/>
					</view>
					<view class="smsCode {{isGetSMSCode ? 'timer' : ''}}" bindtap="bindSMSCodeTap">
						{{sendSMSCodeTip}}
					</view>
				</view>
			</view>
			<view class="item one-line img-code" wx:if="{{isShowPicCaptcha}}">
				<label>图片验证码</label>
				<view class="right">
					<input
						placeholder="图片验证码"
						maxlength="10"
						bindinput="bindCaptchaKeyInput"
					/>
					<view class="img" bindtap="showPicCaptcha">
						<image mode="widthFix" src="{{captchaUrl}}"></image>
					</view>
				</view>
			</view>
			<view class="item one-line">
				<label>验证码</label>
				<view class="right">
					<input
						placeholder="输入验证码"
						value="{{saveDataParams.sms_code}}"
						bindinput="bindSMSCodeKeyInput"
					/>
				</view>
				<!--<icon type="warn" wx:if="{{!saveDataParams.sms_code}}" class="warning" size="23"/>-->
			</view>
		</view>
		<view class="btn">
			<button
				type="primary"
				bindtap="bindSaveTap"
				disabled="{{!saveDataParams.user_name || !saveDataParams.mobile || !saveDataParams.info || !saveDataParams.sms_code || !saveDataParams.exp_price || !saveDataParams.detail_info}}"
			>
				确定
			</button>
		</view>
	</form>
	
</scroll-view>