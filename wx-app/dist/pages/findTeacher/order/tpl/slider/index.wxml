<template name="slider">
  	<view class="order-slider-item">
		<swiper
            indicator-dots="true"
            autoplay="true"
            interval="2000"
            circular="true"
        >
            <block wx:for="{{item.imgs}}">
                <swiper-item>
                <image src="{{item.img}}" mode="scaleToFill" class="slide-image" style="width:100%;height:497rpx"/>
                </swiper-item>
            </block>
        </swiper>
	</view>
</template>
